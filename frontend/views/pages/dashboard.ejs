      </div>

      <!-- Risk Metrics -->
      <div class="stat-card">
        <div class="flex items-start justify-between">
          <div>
            <p class="text-gray-400 text-xs font-medium uppercase tracking-wider mb-1">Risk Metrics</p>
            <p class="text-2xl font-bold text-white font-mono"><%= (safeRisk.sharpe || 0).toFixed(2) %></p>
            <div class="flex items-center gap-3 mt-2 text-xs text-gray-400">
              <span>Beta: <span class="text-white font-medium"><%= (safeRisk.beta || 1.0).toFixed(2) %></span></span>
              <span>Vol: <span class="text-white font-medium"><%= (safeRisk.volatility || 0).toFixed(1) %>%</span></span>
            </div>
          </div>
          <div class="w-10 h-10 rounded-xl bg-purple-500/20 flex items-center justify-center">
            <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
