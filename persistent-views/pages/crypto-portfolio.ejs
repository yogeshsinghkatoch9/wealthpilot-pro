<%
// Safe defaults for potentially undefined variables
const safeTheme = typeof theme !== 'undefined' ? theme : 'dark';
const safeUser = typeof user !== 'undefined' ? user : { name: 'User' };
const safeHoldings = typeof holdings !== 'undefined' ? holdings : [];
const safeTotals = typeof totals !== 'undefined' ? totals : { totalValue: 0, totalCost: 0, totalGain: 0, dayChange: 0 };
const safeFmt = typeof fmt !== 'undefined' ? fmt : { money: (v) => '$' + (v || 0).toLocaleString() };

// Calculate derived values
const totalCryptoValue = safeTotals.totalValue || 0;
const dayChange = safeTotals.dayChange || 0;
const dayChangePercent = totalCryptoValue > 0 ? (dayChange / (totalCryptoValue - dayChange) * 100) : 0;
const totalGain = safeTotals.totalGain || 0;
const totalCost = safeTotals.totalCost || 0;
const allTimeGainPercent = totalCost > 0 ? (totalGain / totalCost * 100) : 0;
const holdingsCount = safeHoldings.length;

// Find top performer
const topPerformer = safeHoldings.length > 0
  ? safeHoldings.reduce((a, b) => (a.change_24h || 0) > (b.change_24h || 0) ? a : b, safeHoldings[0])
  : null;

// Portfolio allocation percentage (mock - would come from total portfolio)
const portfolioPercent = 18.5;
%>
<%- include('../partials/header', { pageTitle: 'Cryptocurrency Portfolio' }) %>

<!-- Main Content Container -->
<main class="flex-1 flex flex-col bg-background-dark">
  <div class="w-full max-w-[1400px] mx-auto px-4 sm:px-6 py-6 sm:py-8 flex flex-col gap-6 sm:gap-8">

    <!-- Breadcrumbs -->
    <div class="flex flex-wrap gap-2 text-sm">
      <a class="text-text-secondary hover:text-white transition-colors font-medium" href="/dashboard">Home</a>
      <span class="text-text-secondary font-medium">/</span>
      <a class="text-text-secondary hover:text-white transition-colors font-medium" href="/portfolio">Portfolio</a>
      <span class="text-text-secondary font-medium">/</span>
      <span class="text-white font-medium">Cryptocurrency</span>
    </div>

    <!-- Page Header -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
      <div class="flex flex-col gap-1">
        <h2 class="text-white text-2xl sm:text-3xl md:text-4xl font-extrabold leading-tight tracking-tight">Cryptocurrency Portfolio</h2>
        <p class="text-text-secondary text-sm sm:text-base font-normal">Manage your digital asset holdings and real-time performance.</p>
      </div>
      <div class="flex gap-3 w-full sm:w-auto">
        <button onclick="refreshPrices()" class="flex items-center justify-center gap-2 rounded-lg h-10 px-4 bg-card-dark hover:bg-[#292a38] text-white text-sm font-bold transition-colors border border-border-dark">
          <span class="material-symbols-outlined text-[20px]" id="syncIcon">sync</span>
          <span class="hidden sm:inline">Sync Wallets</span>
        </button>
        <button onclick="openAddModal()" class="flex items-center justify-center gap-2 rounded-lg h-10 px-4 bg-primary hover:bg-primary-hover text-white text-sm font-bold shadow-lg shadow-primary/20 transition-colors flex-1 sm:flex-initial">
          <span class="material-symbols-outlined text-[20px]">add</span>
          <span>Add Transaction</span>
        </button>
      </div>
    </div>

    <!-- KPI Stats Section -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-4">
      <!-- Total Crypto Value -->
      <div class="flex flex-col gap-2 rounded-xl p-4 sm:p-6 bg-card-dark border border-border-dark">
        <div class="flex items-center justify-between">
          <p class="text-text-secondary text-xs sm:text-sm font-medium uppercase tracking-wider">Total Value</p>
          <span class="material-symbols-outlined text-text-secondary text-[20px]">account_balance_wallet</span>
        </div>
        <p class="text-white text-xl sm:text-2xl md:text-3xl font-bold leading-tight mt-1 font-mono"><%= safeFmt.money(totalCryptoValue) %></p>
        <div class="flex items-center gap-1 mt-1 flex-wrap">
          <span class="material-symbols-outlined <%= dayChange >= 0 ? 'text-accent-green' : 'text-accent-red' %> text-sm">
            <%= dayChange >= 0 ? 'trending_up' : 'trending_down' %>
          </span>
          <p class="<%= dayChange >= 0 ? 'text-accent-green' : 'text-accent-red' %> text-xs sm:text-sm font-bold font-mono">
            <%= dayChange >= 0 ? '+' : '' %><%= dayChangePercent.toFixed(2) %>%
          </p>
          <p class="text-text-secondary text-xs sm:text-sm ml-1">24h</p>
        </div>
      </div>

      <!-- 24h Change -->
      <div class="flex flex-col gap-2 rounded-xl p-4 sm:p-6 bg-card-dark border border-border-dark">
        <div class="flex items-center justify-between">
          <p class="text-text-secondary text-xs sm:text-sm font-medium uppercase tracking-wider">24h P/L</p>
          <span class="material-symbols-outlined text-text-secondary text-[20px]">calendar_today</span>
        </div>
        <p class="text-white text-xl sm:text-2xl md:text-3xl font-bold leading-tight mt-1 font-mono">
          <%= dayChange >= 0 ? '+' : '' %><%= safeFmt.money(dayChange) %>
        </p>
        <div class="flex items-center gap-1 mt-1 flex-wrap">
          <span class="material-symbols-outlined <%= dayChange >= 0 ? 'text-accent-green' : 'text-accent-red' %> text-sm">
            <%= dayChange >= 0 ? 'arrow_upward' : 'arrow_downward' %>
          </span>
          <p class="<%= dayChange >= 0 ? 'text-accent-green' : 'text-accent-red' %> text-xs sm:text-sm font-bold font-mono">
            <%= dayChange >= 0 ? '+' : '' %><%= dayChangePercent.toFixed(2) %>%
          </p>
          <p class="text-text-secondary text-xs sm:text-sm ml-1">today</p>
        </div>
      </div>

      <!-- Portfolio % -->
      <div class="flex flex-col gap-2 rounded-xl p-4 sm:p-6 bg-card-dark border border-border-dark">
        <div class="flex items-center justify-between">
          <p class="text-text-secondary text-xs sm:text-sm font-medium uppercase tracking-wider">Portfolio %</p>
          <span class="material-symbols-outlined text-text-secondary text-[20px]">pie_chart</span>
        </div>
        <p class="text-white text-xl sm:text-2xl md:text-3xl font-bold leading-tight mt-1 font-mono"><%= portfolioPercent.toFixed(1) %>%</p>
        <div class="flex items-center gap-1 mt-1">
          <div class="flex-1 h-1.5 bg-[#292a38] rounded-full overflow-hidden">
            <div class="h-full bg-primary rounded-full transition-all duration-500" style="width: <%= portfolioPercent %>%"></div>
          </div>
        </div>
      </div>

      <!-- Holdings Count / Top Performer -->
      <div class="flex flex-col gap-2 rounded-xl p-4 sm:p-6 bg-card-dark border border-border-dark">
        <div class="flex items-center justify-between">
          <p class="text-text-secondary text-xs sm:text-sm font-medium uppercase tracking-wider">Top Performer</p>
          <span class="material-symbols-outlined text-text-secondary text-[20px]">emoji_events</span>
        </div>
        <% if (topPerformer) { %>
        <div class="flex items-center gap-2 mt-1">
          <div class="size-7 sm:size-8 rounded-full bg-orange-500/20 flex items-center justify-center text-orange-400 font-bold text-xs">
            <%= topPerformer.symbol.substring(0, 3) %>
          </div>
          <p class="text-white text-lg sm:text-xl md:text-2xl font-bold leading-tight"><%= topPerformer.name || topPerformer.symbol %></p>
        </div>
        <div class="flex items-center gap-1 mt-1">
          <span class="material-symbols-outlined text-accent-green text-sm">arrow_upward</span>
          <p class="text-accent-green text-xs sm:text-sm font-bold font-mono">+<%= (topPerformer.change_24h || 0).toFixed(2) %>%</p>
          <p class="text-text-secondary text-xs sm:text-sm ml-1">24h</p>
        </div>
        <% } else { %>
        <p class="text-white text-xl sm:text-2xl md:text-3xl font-bold leading-tight mt-1 font-mono"><%= holdingsCount %></p>
        <p class="text-text-secondary text-xs sm:text-sm mt-1">assets tracked</p>
        <% } %>
      </div>
    </div>

    <!-- Chart Section -->
    <div class="flex flex-col rounded-xl bg-card-dark border border-border-dark p-4 sm:p-6 gap-4 sm:gap-6">
      <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
        <div>
          <h3 class="text-white text-base sm:text-lg font-bold">Portfolio Performance</h3>
          <p class="text-text-secondary text-xs sm:text-sm">Net asset value over time</p>
        </div>
        <div class="flex bg-[#0f1115] rounded-lg p-1 gap-1">
          <button onclick="setChartRange('1D')" class="chart-range-btn px-3 py-1 text-xs font-medium text-text-secondary hover:text-white rounded hover:bg-[#292a38] transition-colors" data-range="1D">1D</button>
          <button onclick="setChartRange('1W')" class="chart-range-btn px-3 py-1 text-xs font-medium text-text-secondary hover:text-white rounded hover:bg-[#292a38] transition-colors" data-range="1W">1W</button>
          <button onclick="setChartRange('1M')" class="chart-range-btn px-3 py-1 text-xs font-medium text-white bg-[#292a38] rounded shadow-sm active" data-range="1M">1M</button>
          <button onclick="setChartRange('1Y')" class="chart-range-btn px-3 py-1 text-xs font-medium text-text-secondary hover:text-white rounded hover:bg-[#292a38] transition-colors" data-range="1Y">1Y</button>
          <button onclick="setChartRange('All')" class="chart-range-btn px-3 py-1 text-xs font-medium text-text-secondary hover:text-white rounded hover:bg-[#292a38] transition-colors" data-range="All">All</button>
        </div>
      </div>
      <div class="w-full h-[200px] sm:h-[280px] relative">
        <canvas id="portfolioChart"></canvas>
      </div>
      <div class="flex justify-between text-xs text-text-secondary px-2" id="chartLabels">
        <!-- Labels populated by JS -->
      </div>
    </div>

    <!-- Holdings Table -->
    <div class="flex flex-col gap-4">
      <div class="flex flex-col sm:flex-row justify-between items-start sm:items-end gap-3">
        <h3 class="text-white text-lg sm:text-xl font-bold">Crypto Holdings (<%= holdingsCount %>)</h3>
        <div class="flex gap-2 w-full sm:w-auto">
          <div class="relative flex-1 sm:flex-initial">
            <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-text-secondary text-[20px]">search</span>
            <input id="searchHoldings" onkeyup="filterHoldings()" class="bg-card-dark border border-border-dark rounded-lg py-2 pl-10 pr-4 text-sm text-white placeholder-text-secondary focus:outline-none focus:ring-1 focus:ring-primary w-full sm:w-64" placeholder="Search assets..." type="text"/>
          </div>
          <select id="sortBy" onchange="sortHoldings()" class="bg-card-dark border border-border-dark rounded-lg py-2 px-3 text-sm text-white focus:outline-none focus:ring-1 focus:ring-primary">
            <option value="value">Sort: Value</option>
            <option value="change">Sort: 24h</option>
            <option value="gain">Sort: P/L</option>
            <option value="name">Sort: Name</option>
          </select>
        </div>
      </div>

      <% if (safeHoldings.length === 0) { %>
      <!-- Empty State -->
      <div class="w-full rounded-xl border border-border-dark bg-card-dark p-12 text-center">
        <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-gradient-to-br from-primary/20 to-primary/10 flex items-center justify-center">
          <span class="material-symbols-outlined text-primary text-4xl">currency_bitcoin</span>
        </div>
        <h4 class="text-lg font-semibold text-white mb-2">No crypto holdings yet</h4>
        <p class="text-text-secondary mb-4">Start building your cryptocurrency portfolio today!</p>
        <button onclick="openAddModal()" class="inline-flex items-center justify-center gap-2 rounded-lg h-10 px-6 bg-primary hover:bg-primary-hover text-white text-sm font-bold transition-colors">
          <span class="material-symbols-outlined text-[18px]">add</span>
          Add First Asset
        </button>
      </div>
      <% } else { %>
      <!-- Holdings Table -->
      <div class="w-full overflow-x-auto rounded-xl border border-border-dark bg-card-dark">
        <table class="w-full text-left border-collapse min-w-[800px]">
          <thead>
            <tr class="border-b border-border-dark text-xs uppercase text-text-secondary">
              <th class="px-4 sm:px-6 py-4 font-semibold tracking-wider">Asset</th>
              <th class="px-4 sm:px-6 py-4 font-semibold tracking-wider text-right">Price</th>
              <th class="px-4 sm:px-6 py-4 font-semibold tracking-wider text-right">Balance</th>
              <th class="px-4 sm:px-6 py-4 font-semibold tracking-wider text-right">Value</th>
              <th class="px-4 sm:px-6 py-4 font-semibold tracking-wider text-right">24h Change</th>
              <th class="px-4 sm:px-6 py-4 font-semibold tracking-wider text-right">Allocation</th>
              <th class="px-4 sm:px-6 py-4 font-semibold tracking-wider text-right">Actions</th>
            </tr>
          </thead>
          <tbody id="holdingsBody" class="divide-y divide-border-dark text-sm">
            <% safeHoldings.forEach((h, idx) => {
              const change24h = h.change_24h || 0;
              const gain = (h.market_value || 0) - (h.cost_basis || 0);
              const gainPct = h.cost_basis > 0 ? (gain / h.cost_basis * 100) : 0;
              const alloc = totalCryptoValue > 0 ? ((h.market_value || 0) / totalCryptoValue * 100) : 0;
              const avgCost = h.quantity > 0 ? (h.cost_basis / h.quantity) : 0;

              // Crypto color mapping
              const colorMap = {
                'BTC': 'orange', 'ETH': 'blue', 'SOL': 'purple', 'USDT': 'green', 'USDC': 'blue',
                'BNB': 'yellow', 'XRP': 'slate', 'ADA': 'sky', 'DOGE': 'amber', 'DOT': 'pink',
                'AVAX': 'red', 'MATIC': 'purple', 'LINK': 'blue', 'UNI': 'pink', 'ATOM': 'indigo'
              };
              const color = colorMap[h.symbol] || 'slate';
            %>
            <tr class="holding-row group hover:bg-[#1f2128] transition-colors cursor-pointer"
                data-symbol="<%= h.symbol %>"
                data-value="<%= h.market_value || 0 %>"
                data-change="<%= change24h %>"
                data-gain="<%= gainPct %>"
                data-name="<%= h.name || h.symbol %>"
                onclick="showAssetDetails('<%= h.symbol %>')">
              <td class="px-4 sm:px-6 py-4">
                <div class="flex items-center gap-3">
                  <div class="size-8 sm:size-10 rounded-full bg-<%= color %>-500/10 flex items-center justify-center p-1 flex-shrink-0">
                    <% if (h.logo_url) { %>
                    <img class="w-full h-full object-contain rounded-full" src="<%= h.logo_url %>" alt="<%= h.symbol %> logo" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                    <span class="text-<%= color %>-400 font-bold text-xs hidden items-center justify-center w-full h-full"><%= h.symbol.substring(0, 3) %></span>
                    <% } else { %>
                    <span class="text-<%= color %>-400 font-bold text-xs"><%= h.symbol.substring(0, 3) %></span>
                    <% } %>
                  </div>
                  <div class="flex flex-col min-w-0">
                    <span class="font-bold text-white truncate"><%= h.name || h.symbol %></span>
                    <span class="text-text-secondary text-xs"><%= h.symbol %></span>
                  </div>
                </div>
              </td>
              <td class="px-4 sm:px-6 py-4 text-right font-medium text-white font-mono">
                <%= safeFmt.money(h.current_price || 0) %>
              </td>
              <td class="px-4 sm:px-6 py-4 text-right">
                <div class="flex flex-col items-end">
                  <span class="text-white font-medium font-mono"><%= (h.quantity || 0).toFixed(4) %> <%= h.symbol %></span>
                  <span class="text-text-secondary text-xs">Avg: <%= safeFmt.money(avgCost) %></span>
                </div>
              </td>
              <td class="px-4 sm:px-6 py-4 text-right font-bold text-white font-mono">
                <%= safeFmt.money(h.market_value || 0) %>
              </td>
              <td class="px-4 sm:px-6 py-4 text-right">
                <span class="<%= change24h >= 0 ? 'text-accent-green' : 'text-accent-red' %> font-medium flex items-center justify-end gap-1 font-mono">
                  <span class="material-symbols-outlined text-[16px]"><%= change24h >= 0 ? 'arrow_upward' : 'arrow_downward' %></span>
                  <%= Math.abs(change24h).toFixed(2) %>%
                </span>
              </td>
              <td class="px-4 sm:px-6 py-4 text-right">
                <div class="flex flex-col items-end gap-1">
                  <span class="text-white font-medium font-mono"><%= alloc.toFixed(1) %>%</span>
                  <div class="w-16 h-1.5 bg-[#292a38] rounded-full overflow-hidden">
                    <div class="h-full bg-primary rounded-full" style="width: <%= Math.min(alloc, 100) %>%"></div>
                  </div>
                </div>
              </td>
              <td class="px-4 sm:px-6 py-4 text-right">
                <div class="flex justify-end gap-1 opacity-0 group-hover:opacity-100 transition-opacity">
                  <button onclick="event.stopPropagation(); openEditModal('<%= h.id %>')" class="p-1.5 rounded hover:bg-white/10 text-text-secondary hover:text-white transition-colors" title="Edit Holding">
                    <span class="material-symbols-outlined text-[18px]">edit</span>
                  </button>
                  <button onclick="event.stopPropagation(); openAlertModal('<%= h.symbol %>', <%= h.current_price || 0 %>)" class="p-1.5 rounded hover:bg-white/10 text-text-secondary hover:text-white transition-colors" title="Set Alert">
                    <span class="material-symbols-outlined text-[18px]">notifications</span>
                  </button>
                  <button onclick="event.stopPropagation(); deleteCrypto('<%= h.id %>')" class="p-1.5 rounded hover:bg-accent-red/20 text-text-secondary hover:text-accent-red transition-colors" title="Delete">
                    <span class="material-symbols-outlined text-[18px]">delete</span>
                  </button>
                </div>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <% if (safeHoldings.length > 5) { %>
      <div class="w-full flex justify-center py-2">
        <button onclick="toggleAllHoldings()" class="text-sm text-text-secondary hover:text-white font-medium flex items-center gap-1 transition-colors">
          <span id="viewAllText">View all holdings</span>
          <span class="material-symbols-outlined text-[16px]" id="viewAllIcon">expand_more</span>
        </button>
      </div>
      <% } %>
      <% } %>
    </div>

    <!-- Bottom Grid: Allocation Chart + News/Alerts -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Allocation Chart -->
      <div class="lg:col-span-1 rounded-xl bg-card-dark border border-border-dark p-4 sm:p-6">
        <h3 class="text-white text-base sm:text-lg font-bold mb-4">Portfolio Allocation</h3>
        <div class="h-48 sm:h-56">
          <canvas id="allocationChart"></canvas>
        </div>
        <div class="space-y-2 mt-4" id="allocationLegend">
          <!-- Legend populated by JS -->
        </div>
      </div>

      <!-- News & Research Section -->
      <div class="lg:col-span-2 rounded-xl bg-card-dark border border-border-dark p-4 sm:p-6">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-white text-base sm:text-lg font-bold">Crypto News & Alerts</h3>
          <button class="text-primary hover:text-primary-hover text-sm font-medium transition-colors flex items-center gap-1">
            <span>View All</span>
            <span class="material-symbols-outlined text-[16px]">arrow_forward</span>
          </button>
        </div>
        <div class="space-y-3" id="cryptoNews">
          <!-- Bitcoin Update -->
          <div class="flex gap-4 p-3 rounded-lg hover:bg-[#1f2128] transition-colors cursor-pointer border border-transparent hover:border-border-dark">
            <div class="size-10 rounded-lg bg-orange-500/10 flex items-center justify-center flex-shrink-0">
              <span class="material-symbols-outlined text-orange-400">currency_bitcoin</span>
            </div>
            <div class="flex-1 min-w-0">
              <div class="flex items-start justify-between gap-2">
                <h4 class="text-white font-medium text-sm truncate">Bitcoin ETF sees record inflows</h4>
                <span class="text-text-secondary text-xs flex-shrink-0">2h ago</span>
              </div>
              <p class="text-text-secondary text-xs mt-1 line-clamp-2">Spot Bitcoin ETFs recorded over $500M in daily inflows as institutional demand continues to grow.</p>
              <div class="flex items-center gap-2 mt-2">
                <span class="px-2 py-0.5 text-xs rounded-full bg-accent-green/10 text-accent-green">Bullish</span>
                <span class="text-text-secondary text-xs">CoinDesk</span>
              </div>
            </div>
          </div>

          <!-- Ethereum Update -->
          <div class="flex gap-4 p-3 rounded-lg hover:bg-[#1f2128] transition-colors cursor-pointer border border-transparent hover:border-border-dark">
            <div class="size-10 rounded-lg bg-blue-500/10 flex items-center justify-center flex-shrink-0">
              <span class="material-symbols-outlined text-blue-400">diamond</span>
            </div>
            <div class="flex-1 min-w-0">
              <div class="flex items-start justify-between gap-2">
                <h4 class="text-white font-medium text-sm truncate">Ethereum layer-2 TVL hits new ATH</h4>
                <span class="text-text-secondary text-xs flex-shrink-0">5h ago</span>
              </div>
              <p class="text-text-secondary text-xs mt-1 line-clamp-2">Total value locked in Ethereum L2 solutions surpasses $40B as scaling solutions gain adoption.</p>
              <div class="flex items-center gap-2 mt-2">
                <span class="px-2 py-0.5 text-xs rounded-full bg-primary/10 text-primary">Network</span>
                <span class="text-text-secondary text-xs">The Block</span>
              </div>
            </div>
          </div>

          <!-- Price Alert -->
          <div class="flex gap-4 p-3 rounded-lg bg-accent-green/5 border border-accent-green/20">
            <div class="size-10 rounded-lg bg-accent-green/10 flex items-center justify-center flex-shrink-0">
              <span class="material-symbols-outlined text-accent-green">notifications_active</span>
            </div>
            <div class="flex-1 min-w-0">
              <div class="flex items-start justify-between gap-2">
                <h4 class="text-white font-medium text-sm">Price Alert Triggered</h4>
                <span class="text-text-secondary text-xs flex-shrink-0">Just now</span>
              </div>
              <p class="text-text-secondary text-xs mt-1">SOL crossed above $150.00 - Your target price was hit!</p>
              <div class="flex items-center gap-2 mt-2">
                <button class="text-primary text-xs font-medium hover:underline">View Details</button>
                <span class="text-text-secondary text-xs">|</span>
                <button class="text-text-secondary text-xs hover:text-white">Dismiss</button>
              </div>
            </div>
          </div>

          <!-- Market Update -->
          <div class="flex gap-4 p-3 rounded-lg hover:bg-[#1f2128] transition-colors cursor-pointer border border-transparent hover:border-border-dark">
            <div class="size-10 rounded-lg bg-purple-500/10 flex items-center justify-center flex-shrink-0">
              <span class="material-symbols-outlined text-purple-400">analytics</span>
            </div>
            <div class="flex-1 min-w-0">
              <div class="flex items-start justify-between gap-2">
                <h4 class="text-white font-medium text-sm truncate">Weekly Market Analysis</h4>
                <span class="text-text-secondary text-xs flex-shrink-0">1d ago</span>
              </div>
              <p class="text-text-secondary text-xs mt-1 line-clamp-2">Crypto market shows strength with BTC dominance rising. Key support levels holding well.</p>
              <div class="flex items-center gap-2 mt-2">
                <span class="px-2 py-0.5 text-xs rounded-full bg-purple-500/10 text-purple-400">Analysis</span>
                <span class="text-text-secondary text-xs">WealthPilot Research</span>
              </div>
            </div>
          </div>
        </div>
      </div>
