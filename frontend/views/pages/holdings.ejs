<%- include('../partials/header', { pageTitle: 'All Holdings' }) %>
<%
  // Safe defaults
  const safeHoldings = typeof holdings !== 'undefined' && holdings ? holdings : [];
  const safeTotals = typeof totals !== 'undefined' && totals ? totals : { marketValue: 0, costTotal: 0, gain: 0 };
  const safePortfolios = typeof portfolios !== 'undefined' && portfolios ? portfolios : [];
%>
<main class="p-4 lg:p-6 min-h-screen">
  <div class="max-w-full mx-auto space-y-4">

    <!-- Hero Header with Glassmorphism -->
    <div class="relative overflow-hidden glass-card p-5">
      <!-- Background Gradient Orbs -->
      <div class="absolute -top-16 -right-16 w-48 h-48 bg-gradient-to-br from-emerald-500/20 to-green-500/20 rounded-full blur-3xl"></div>
      <div class="absolute -bottom-16 -left-16 w-40 h-40 bg-gradient-to-br from-blue-500/10 to-cyan-500/10 rounded-full blur-3xl"></div>

      <div class="relative flex flex-col lg:flex-row items-start lg:items-center justify-between gap-4">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-emerald-500 to-green-600 flex items-center justify-center shadow-lg shadow-emerald-500/25">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
            </svg>
          </div>
          <div>
            <div class="flex items-center gap-3">
              <h1 class="text-2xl lg:text-3xl font-bold text-white">All Holdings</h1>
              <span class="badge badge-live" id="liveIndicator">LIVE</span>
            </div>
            <p class="text-slate-400 text-sm mt-1">Manage your portfolio positions in real-time</p>
          </div>
        </div>
        <div class="flex flex-wrap items-center gap-3">
          <button onclick="location.reload()" class="btn-glass flex items-center gap-2 px-4 py-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
            </svg>
            Refresh
          </button>
          <button onclick="openUploadModal()" class="btn-glass flex items-center gap-2 px-4 py-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
            </svg>
            Upload
          </button>
          <button onclick="openAddHoldingModal()" class="btn-gradient flex items-center gap-2 px-5 py-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Add Holding
          </button>
        </div>
      </div>
    </div>

    <!-- KPI Stats Grid - Tufte Style -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
      <div class="tufte-stat-card">
        <div class="stat-label">Market Value</div>
        <div class="stat-value-row">
          <span class="stat-value tabular-nums" id="totalMarketValue"><%= fmt.money(safeTotals.marketValue || safeTotals.value || 0) %></span>
        </div>
      </div>
      <div class="tufte-stat-card">
        <div class="stat-label">Cost Basis</div>
        <div class="stat-value-row">
          <span class="stat-value tabular-nums" id="totalCostBasis"><%= fmt.money(safeTotals.costTotal || safeTotals.cost || 0) %></span>
        </div>
      </div>
      <div class="tufte-stat-card">
        <div class="stat-label">Total P&L</div>
        <div class="stat-value-row">
          <span class="stat-value tabular-nums <%= safeTotals.gain >= 0 ? 'positive' : 'negative' %>" id="totalGain">
            <%= safeTotals.gain >= 0 ? '+' : '' %><%= fmt.money(safeTotals.gain || 0) %>
          </span>
        </div>
      </div>
      <div class="tufte-stat-card">
        <% const totalReturn = (safeTotals.costTotal > 0) ? ((safeTotals.gain / safeTotals.costTotal) * 100) : 0; %>
        <div class="stat-label">Return</div>
        <div class="stat-value-row">
          <span class="stat-value tabular-nums <%= totalReturn >= 0 ? 'positive' : 'negative' %>" id="totalReturn">
            <%= totalReturn >= 0 ? '+' : '' %><%= totalReturn.toFixed(2) %>%
          </span>
        </div>
      </div>
      <div class="tufte-stat-card">
        <div class="stat-label">Holdings</div>
        <div class="stat-value-row">
          <span class="stat-value tabular-nums" id="holdingsCount"><%= safeHoldings.length %></span>
        </div>
      </div>
      <div class="tufte-stat-card">
        <div class="stat-label">Portfolios</div>
        <div class="stat-value-row">
          <span class="stat-value tabular-nums"><%= safePortfolios.length %></span>
        </div>
      </div>
    </div>

    <!-- Portfolio Filter - Glassmorphism -->
    <div class="glass-card p-4">
      <div class="flex flex-col md:flex-row items-start md:items-center gap-4">
        <div class="flex items-center gap-3">
          <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-purple-500/20 to-pink-500/20 flex items-center justify-center">
            <svg class="w-4 h-4 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"/>
            </svg>
          </div>
          <label class="text-slate-400 text-sm font-medium">Filter by Portfolio:</label>
        </div>
        <select id="portfolioFilter" onchange="filterByPortfolio(this.value)" class="form-input bg-slate-800/50 border border-white/10 text-white rounded-lg px-4 py-2 text-sm focus:border-sky-500/50 focus:outline-none focus:ring-2 focus:ring-sky-500/20 backdrop-blur-sm transition-all">
          <option value="all">All Portfolios</option>
          <% safePortfolios.forEach(p => { %>
          <option value="<%= p.id %>"><%= p.name %></option>
          <% }) %>
        </select>
        <div class="ml-auto flex items-center gap-3">
          <div class="relative">
            <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
            <input type="text" id="searchInput" placeholder="Search symbol or name..." onkeyup="searchHoldings(this.value)"
                   class="form-input bg-slate-800/50 border border-white/10 text-white rounded-lg pl-10 pr-4 py-2 text-sm w-64 focus:border-sky-500/50 focus:outline-none focus:ring-2 focus:ring-sky-500/20 backdrop-blur-sm transition-all">
          </div>
        </div>
      </div>
    </div>

    <!-- Holdings Table - Glassmorphism -->
    <div class="glass-card overflow-hidden">
      <div class="flex items-center justify-between p-4 border-b border-white/10">
        <div class="flex items-center gap-3">
          <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-emerald-500/20 to-cyan-500/20 flex items-center justify-center">
            <svg class="w-4 h-4 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17V7m0 10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h2a2 2 0 012 2m0 10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 10V7m0 10a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2h-2a2 2 0 00-2 2"/>
            </svg>
          </div>
          <span class="text-white font-semibold">Portfolio Holdings</span>
        </div>
        <span class="text-xs text-slate-400 font-mono px-3 py-1 rounded-full bg-white/5 border border-white/10" id="positionsCount"><%= safeHoldings.length %> positions</span>
      </div>

      <% if (safeHoldings.length === 0) { %>
        <div class="p-12 text-center">
          <div class="w-20 h-20 mx-auto mb-6 rounded-2xl bg-gradient-to-br from-slate-700/50 to-slate-800/50 flex items-center justify-center border border-white/10">
            <svg class="w-10 h-10 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white mb-2">No Holdings Yet</h3>
          <p class="text-slate-400 mb-8 max-w-md mx-auto">Get started by adding stocks manually or uploading a portfolio file from your broker</p>
          <div class="flex justify-center gap-4">
            <button onclick="openAddHoldingModal()" class="btn-gradient flex items-center gap-2 px-5 py-2.5">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
              </svg>
              Add Holding
            </button>
            <button onclick="openUploadModal()" class="btn-glass flex items-center gap-2 px-5 py-2.5">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
              </svg>
              Upload Portfolio
            </button>
          </div>
        </div>
      <% } else { %>
        <div class="overflow-x-auto">
          <table class="w-full" id="holdingsTable">
            <thead>
              <tr class="text-left text-xs font-medium text-slate-400 uppercase tracking-wider border-b border-white/10">
                <th class="px-4 py-3 cursor-pointer hover:text-sky-400 transition-colors" onclick="sortTable('symbol')">Symbol <span class="sort-icon"></span></th>
                <th class="px-4 py-3">Name</th>
                <th class="px-4 py-3 cursor-pointer hover:text-sky-400 transition-colors" onclick="sortTable('portfolio')">Portfolio <span class="sort-icon"></span></th>
                <th class="px-4 py-3 text-right cursor-pointer hover:text-sky-400 transition-colors" onclick="sortTable('shares')">Shares <span class="sort-icon"></span></th>
                <th class="px-4 py-3 text-right cursor-pointer hover:text-sky-400 transition-colors" onclick="sortTable('avgCost')">Avg Cost <span class="sort-icon"></span></th>
                <th class="px-4 py-3 text-right cursor-pointer hover:text-sky-400 transition-colors" onclick="sortTable('price')">Price <span class="sort-icon"></span></th>
                <th class="px-4 py-3 text-right cursor-pointer hover:text-sky-400 transition-colors" onclick="sortTable('dayChange')">Day Chg <span class="sort-icon"></span></th>
                <th class="px-4 py-3 text-right cursor-pointer hover:text-sky-400 transition-colors" onclick="sortTable('marketValue')">Mkt Value <span class="sort-icon"></span></th>
                <th class="px-4 py-3 text-right cursor-pointer hover:text-sky-400 transition-colors" onclick="sortTable('gain')">P&L <span class="sort-icon"></span></th>
                <th class="px-4 py-3 text-right cursor-pointer hover:text-sky-400 transition-colors" onclick="sortTable('return')">Return <span class="sort-icon"></span></th>
                <th class="px-4 py-3 text-center">Actions</th>
              </tr>
            </thead>
            <tbody id="holdingsBody" class="divide-y divide-white/5">
              <% safeHoldings.forEach(h => { %>
              <tr data-symbol="<%= h.symbol %>" data-portfolio="<%= h.portfolioId %>" class="holding-row hover:bg-white/5 transition-colors">
                <td class="px-4 py-3">
                  <div class="flex items-center gap-3">
                    <div class="w-9 h-9 rounded-lg bg-gradient-to-br from-sky-500 to-purple-500 flex items-center justify-center text-white text-xs font-bold shadow-lg shadow-sky-500/20">
                      <%= h.symbol ? h.symbol.slice(0,2) : '??' %>
                    </div>
                    <a href="/stock/<%= h.symbol %>" class="text-white font-semibold hover:text-sky-400 transition-colors"><%= h.symbol %></a>
                  </div>
                </td>
                <td class="px-4 py-3 text-slate-400 truncate max-w-[150px]" title="<%= h.name || '' %>"><%= h.name || '' %></td>
                <td class="px-4 py-3">
                  <span class="px-2 py-1 text-xs rounded-md bg-purple-500/10 text-purple-400 border border-purple-500/20"><%= h.portfolioName || 'Main' %></span>
                </td>
                <td class="px-4 py-3 text-right text-slate-300 font-mono tabular-nums"><%= fmt.number(h.shares) %></td>
                <td class="px-4 py-3 text-right text-slate-400 font-mono tabular-nums"><%= fmt.money(h.avgCostBasis || h.avg_cost_basis || 0) %></td>
                <td class="px-4 py-3 text-right text-white font-semibold font-mono tabular-nums price">$<%= (h.currentPrice || h.price || 0).toFixed(2) %></td>
                <td class="px-4 py-3 text-right">
                  <span class="change inline-flex items-center gap-1 px-2 py-0.5 rounded-md text-sm font-medium tabular-nums <%= (h.changePct || h.change_percent || 0) >= 0 ? 'positive bg-emerald-500/10' : 'negative bg-red-500/10' %>">
                    <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="<%= (h.changePct || h.change_percent || 0) >= 0 ? 'M5.293 7.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 5.414V17a1 1 0 11-2 0V5.414L6.707 7.707a1 1 0 01-1.414 0z' : 'M14.707 12.293a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 111.414-1.414L9 14.586V3a1 1 0 012 0v11.586l2.293-2.293a1 1 0 011.414 0z' %>" clip-rule="evenodd"/>
                    </svg>
                    <%= (h.changePct || h.change_percent || 0) >= 0 ? '+' : '' %><%= (h.changePct || h.change_percent || 0).toFixed(2) %>%
                  </span>
                </td>
                <td class="px-4 py-3 text-right text-white font-semibold font-mono tabular-nums"><%= fmt.money(h.marketValue || 0) %></td>
                <td class="px-4 py-3 text-right font-semibold font-mono tabular-nums <%= (h.gain || 0) >= 0 ? 'positive' : 'negative' %>">
                  <%= (h.gain || 0) >= 0 ? '+' : '' %><%= fmt.money(h.gain || 0) %>
                </td>
                <td class="px-4 py-3 text-right">
                  <div class="flex items-center justify-end gap-2">
                    <span class="font-bold font-mono tabular-nums <%= (h.gainPct || 0) >= 0 ? 'positive' : 'negative' %>">
                      <%= (h.gainPct || 0) >= 0 ? '+' : '' %><%= (h.gainPct || 0).toFixed(2) %>%
                    </span>
                    <div class="w-14 h-2 bg-slate-700/50 rounded-full overflow-hidden">
                      <div class="h-full rounded-full <%= (h.gainPct || 0) >= 0 ? 'bg-gradient-to-r from-emerald-500 to-green-400' : 'bg-gradient-to-r from-red-500 to-rose-400' %>" style="width: <%= Math.min(100, Math.abs(h.gainPct || 0) * 2) %>%"></div>
                    </div>
                  </div>
                </td>
                <td class="px-4 py-3 text-center">
                  <div class="flex items-center justify-center gap-1">
                    <button onclick="editHolding('<%= h.id %>')" class="p-2 text-slate-400 hover:text-sky-400 hover:bg-sky-500/10 rounded-lg transition-all" title="Edit">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                      </svg>
                    </button>
                    <button onclick="sellHolding('<%= h.id %>', '<%= h.symbol %>', <%= h.shares %>)" class="p-2 text-slate-400 hover:text-amber-400 hover:bg-amber-500/10 rounded-lg transition-all" title="Sell">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                    </button>
                    <button onclick="deleteHolding('<%= h.id %>', '<%= h.symbol %>')" class="p-2 text-slate-400 hover:text-red-400 hover:bg-red-500/10 rounded-lg transition-all" title="Delete">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                      </svg>
                    </button>
                  </div>
                </td>
              </tr>
              <% }) %>
            </tbody>
            <tfoot class="bg-gradient-to-r from-slate-800/80 to-slate-900/80 border-t border-white/10">
              <tr>
                <td colspan="7" class="text-right font-semibold text-slate-300 py-4 px-4 uppercase text-sm tracking-wider">Portfolio Totals</td>
                <td class="text-right font-bold text-white text-lg py-4 px-4 font-mono tabular-nums" id="footerMarketValue"><%= fmt.money(safeTotals.marketValue || 0) %></td>
                <td class="text-right font-bold text-lg py-4 px-4 font-mono tabular-nums <%= (safeTotals.gain || 0) >= 0 ? 'positive' : 'negative' %>" id="footerGain">
                  <%= (safeTotals.gain || 0) >= 0 ? '+' : '' %><%= fmt.money(safeTotals.gain || 0) %>
                </td>
                <td class="text-right py-4 px-4" id="footerReturn">
                  <span class="inline-flex items-center gap-1 px-3 py-1 rounded-lg text-lg font-bold font-mono tabular-nums <%= totalReturn >= 0 ? 'positive bg-emerald-500/10 border border-emerald-500/20' : 'negative bg-red-500/10 border border-red-500/20' %>">
                    <%= totalReturn >= 0 ? '+' : '' %><%= totalReturn.toFixed(2) %>%
                  </span>
                </td>
                <td></td>
              </tr>
            </tfoot>
          </table>
        </div>
      <% } %>
    </div>
  </div>
</main>

<!-- Upload Portfolio Modal - Glassmorphism -->
<div id="uploadModal" class="fixed inset-0 bg-black/80 backdrop-blur-sm hidden z-50 flex items-center justify-center p-4">
  <div class="glass-card-elevated w-full max-w-xl animate-fade-in">
    <div class="flex items-center justify-between px-6 py-4 border-b border-white/10">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-sky-500 to-blue-600 flex items-center justify-center">
          <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-white">Upload Portfolio</h3>
      </div>
      <button onclick="closeUploadModal()" class="p-2 text-slate-400 hover:text-white hover:bg-white/10 rounded-lg transition-all">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>
    <form id="uploadForm" enctype="multipart/form-data" class="p-6 space-y-5">
      <div>
        <label class="block text-sm font-medium text-slate-300 mb-2">Portfolio Name</label>
        <input type="text" name="portfolioName" id="uploadPortfolioName" placeholder="My Imported Portfolio"
               class="form-input w-full bg-slate-800/50 border border-white/10 text-white rounded-xl px-4 py-3 focus:border-sky-500/50 focus:outline-none focus:ring-2 focus:ring-sky-500/20 backdrop-blur-sm transition-all placeholder-slate-500">
      </div>
      <div>
        <label class="block text-sm font-medium text-slate-300 mb-2">Portfolio File (CSV, Excel)</label>
        <div class="border-2 border-dashed border-white/10 rounded-xl p-8 text-center hover:border-sky-500/50 hover:bg-sky-500/5 transition-all cursor-pointer group"
             onclick="document.getElementById('portfolioFile').click()" id="dropZone">
          <div class="w-16 h-16 mx-auto mb-4 rounded-2xl bg-gradient-to-br from-sky-500/20 to-blue-500/20 flex items-center justify-center group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8 text-sky-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
            </svg>
          </div>
          <p class="text-slate-300 mb-2 font-medium">Drag and drop your file here, or click to browse</p>
          <p class="text-xs text-slate-500">Supports: CSV, XLSX (Fidelity, Schwab, TD Ameritrade exports)</p>
          <input type="file" name="portfolio" id="portfolioFile" accept=".csv,.xlsx,.xls" class="hidden" onchange="handleFileSelect(this)">
        </div>
        <div id="selectedFile" class="hidden mt-3 p-4 bg-emerald-500/10 border border-emerald-500/20 rounded-xl flex items-center justify-between">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-lg bg-emerald-500/20 flex items-center justify-center">
              <svg class="w-5 h-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
