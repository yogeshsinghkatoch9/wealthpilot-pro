  try {
    const res = await fetch('/api/crypto/' + id, { method: 'DELETE' });
    if (res.ok) {
      showToast('Asset removed successfully!', 'success');
      setTimeout(() => location.reload(), 500);
    }
  } catch (e) {
    showToast('Error removing asset', 'error');
  }
