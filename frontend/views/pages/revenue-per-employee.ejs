    <div class="summary-card green">
      <div class="icon">
        <svg class="w-5 h-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      <div class="label">Above Average</div>
      <div class="value text-emerald-400" id="aboveAvg">--</div>
      <div class="context">of your holdings</div>
    </div>
  </div>

  <!-- Warning Banner for Partial Data -->
  <div id="dataWarning" class="hidden mb-4">
    <div class="bg-green-500/10 border border-green-500/20 rounded-xl p-4 flex items-center gap-3">
      <svg class="w-5 h-5 text-green-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
