  }

  .dashboard-tab:hover {
    color: #e5e7eb;
    background: rgba(255, 255, 255, 0.05);
  }

  .dashboard-tab.active {
    color: #f59e0b;
    border-bottom-color: #f59e0b;
  }

  .tab-count {
    background: #30363d;
    padding: 0.125rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.75rem;
    font-family: 'JetBrains Mono', monospace;
