<div class="bloomberg-card">
  <div class="border-b border-slate-700 pb-3 mb-6">
    <h3 class="text-lg font-mono font-semibold text-amber-400">NOTIFICATION SETTINGS</h3>
    <p class="text-slate-400 text-sm mt-1">Manage how you receive notifications</p>
  </div>

  <form id="notifications-form" class="space-y-8">
    <!-- Email Notifications -->
    <div>
      <h4 class="text-sm font-mono font-semibold text-slate-300 mb-4 uppercase tracking-wide flex items-center gap-2">
        <svg class="w-5 h-5 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
        </svg>
        Email Notifications
      </h4>
      <div class="space-y-3 pl-7">
        <label class="flex items-center justify-between p-3 bg-slate-900/30 rounded-lg border border-slate-700 hover:border-slate-600 transition-colors cursor-pointer">
          <span class="text-white font-mono">Email notifications</span>
          <input
            type="checkbox"
            name="emailNotifications"
            <%= settings.emailNotifications ? 'checked' : '' %>
            class="toggle-checkbox">
        </label>
        <label class="flex items-center justify-between p-3 bg-slate-900/30 rounded-lg border border-slate-700 hover:border-slate-600 transition-colors cursor-pointer">
          <div>
            <span class="text-white font-mono block">Weekly report</span>
            <span class="text-xs text-slate-500 font-mono">Portfolio performance summary</span>
          </div>
          <input
            type="checkbox"
            name="weeklyReport"
            <%= settings.weeklyReport ? 'checked' : '' %>
            class="toggle-checkbox">
        </label>
        <label class="flex items-center justify-between p-3 bg-slate-900/30 rounded-lg border border-slate-700 hover:border-slate-600 transition-colors cursor-pointer">
          <div>
            <span class="text-white font-mono block">Monthly report</span>
            <span class="text-xs text-slate-500 font-mono">Detailed monthly analysis</span>
          </div>
          <input
            type="checkbox"
            name="monthlyReport"
            <%= settings.monthlyReport ? 'checked' : '' %>
            class="toggle-checkbox">
        </label>
      </div>
    </div>

    <!-- Push Notifications -->
    <div>
      <h4 class="text-sm font-mono font-semibold text-slate-300 mb-4 uppercase tracking-wide flex items-center gap-2">
        <svg class="w-5 h-5 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
        </svg>
        Push Notifications
      </h4>
      <div class="space-y-3 pl-7">
        <label class="flex items-center justify-between p-3 bg-slate-900/30 rounded-lg border border-slate-700 hover:border-slate-600 transition-colors cursor-pointer">
          <div>
            <span class="text-white font-mono block">Push notifications</span>
            <span class="text-xs text-slate-500 font-mono">Receive push notifications on this device</span>
          </div>
          <input
            type="checkbox"
            name="pushNotifications"
            <%= settings.pushNotifications ? 'checked' : '' %>
            class="toggle-checkbox">
        </label>
      </div>
    </div>

    <!-- Alert Preferences -->
    <div>
      <h4 class="text-sm font-mono font-semibold text-slate-300 mb-4 uppercase tracking-wide flex items-center gap-2">
        <svg class="w-5 h-5 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
        </svg>
        Alert Types
      </h4>
      <div class="space-y-3 pl-7">
        <label class="flex items-center justify-between p-3 bg-slate-900/30 rounded-lg border border-slate-700 hover:border-slate-600 transition-colors cursor-pointer">
          <div>
            <span class="text-white font-mono block">Price alerts</span>
            <span class="text-xs text-slate-500 font-mono">Stock price movements</span>
          </div>
          <input
            type="checkbox"
            name="priceAlerts"
            <%= settings.priceAlerts ? 'checked' : '' %>
            class="toggle-checkbox">
        </label>
        <label class="flex items-center justify-between p-3 bg-slate-900/30 rounded-lg border border-slate-700 hover:border-slate-600 transition-colors cursor-pointer">
          <div>
            <span class="text-white font-mono block">Dividend alerts</span>
            <span class="text-xs text-slate-500 font-mono">Upcoming ex-dates and payments</span>
          </div>
          <input
            type="checkbox"
            name="dividendAlerts"
            <%= settings.dividendAlerts ? 'checked' : '' %>
            class="toggle-checkbox">
        </label>
        <label class="flex items-center justify-between p-3 bg-slate-900/30 rounded-lg border border-slate-700 hover:border-slate-600 transition-colors cursor-pointer">
          <div>
            <span class="text-white font-mono block">Earnings alerts</span>
            <span class="text-xs text-slate-500 font-mono">Earnings announcements</span>
          </div>
          <input
            type="checkbox"
            name="earningsAlerts"
            <%= settings.earningsAlerts ? 'checked' : '' %>
            class="toggle-checkbox">
        </label>
      </div>
    </div>

    <!-- Save Button -->
    <div class="flex gap-3 pt-4 border-t border-slate-700">
      <button type="submit" class="bloomberg-btn bloomberg-btn-primary">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
        SAVE NOTIFICATION SETTINGS
      </button>
      <button type="button" onclick="resetNotificationsForm()" class="bloomberg-btn bloomberg-btn-secondary">
        CANCEL
      </button>
    </div>
  </form>
</div>

<style>
.toggle-checkbox {
  appearance: none;
  width: 44px;
  height: 24px;
  background: #1e293b;
  border: 2px solid #475569;
  border-radius: 12px;
  position: relative;
  cursor: pointer;
  transition: all 0.3s;
}

.toggle-checkbox:checked {
  background: #f59e0b;
  border-color: #f59e0b;
}

.toggle-checkbox::after {
  content: '';
  position: absolute;
  width: 16px;
  height: 16px;
  background: white;
  border-radius: 50%;
  top: 2px;
  left: 2px;
  transition: all 0.3s;
}

.toggle-checkbox:checked::after {
  left: 22px;
}
</style>
