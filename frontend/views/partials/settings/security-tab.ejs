<div class="space-y-6">
  <!-- Change Password -->
  <div class="bloomberg-card">
    <div class="border-b border-slate-700 pb-3 mb-6">
      <h3 class="text-lg font-mono font-semibold text-amber-400">CHANGE PASSWORD</h3>
      <p class="text-slate-400 text-sm mt-1">Update your account password</p>
    </div>

    <form id="password-form" class="space-y-4">
      <div>
        <label class="block text-sm font-medium text-slate-300 font-mono mb-2 uppercase tracking-wide">
          Current Password
        </label>
        <input
          type="password"
          name="currentPassword"
          required
          class="w-full px-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white font-mono focus:outline-none focus:border-amber-400 focus:ring-1 focus:ring-amber-400 transition-colors">
      </div>

      <div>
        <label class="block text-sm font-medium text-slate-300 font-mono mb-2 uppercase tracking-wide">
          New Password
        </label>
        <input
          type="password"
          name="newPassword"
          required
          minlength="8"
          class="w-full px-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white font-mono focus:outline-none focus:border-amber-400 focus:ring-1 focus:ring-amber-400 transition-colors">
        <p class="text-xs text-slate-500 mt-1 font-mono">Minimum 8 characters</p>
      </div>

      <div>
        <label class="block text-sm font-medium text-slate-300 font-mono mb-2 uppercase tracking-wide">
          Confirm New Password
        </label>
        <input
          type="password"
          name="confirmPassword"
          required
          minlength="8"
          class="w-full px-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white font-mono focus:outline-none focus:border-amber-400 focus:ring-1 focus:ring-amber-400 transition-colors">
      </div>

      <div class="flex gap-3 pt-2">
        <button type="submit" class="bloomberg-btn bloomberg-btn-primary">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
          </svg>
          CHANGE PASSWORD
        </button>
        <button type="button" onclick="resetPasswordForm()" class="bloomberg-btn bloomberg-btn-secondary">
          CANCEL
        </button>
      </div>
    </form>
  </div>

  <!-- Two-Factor Authentication -->
  <div class="bloomberg-card">
    <div class="border-b border-slate-700 pb-3 mb-6">
      <h3 class="text-lg font-mono font-semibold text-amber-400">TWO-FACTOR AUTHENTICATION</h3>
      <p class="text-slate-400 text-sm mt-1">Add an extra layer of security to your account</p>
    </div>

    <div class="p-4 bg-slate-900/30 rounded-lg border border-slate-700">
      <div class="flex items-start gap-4">
        <div class="flex-1">
          <p class="text-white font-mono font-semibold mb-1">2FA Status: <span class="text-slate-400">Disabled</span></p>
          <p class="text-sm text-slate-400 font-mono">Protect your account with two-factor authentication using an authenticator app</p>
        </div>
        <button onclick="showToast('2FA setup coming soon', 'info')" class="bloomberg-btn bloomberg-btn-primary text-sm whitespace-nowrap">
          ENABLE 2FA
        </button>
      </div>
    </div>
  </div>

  <!-- Active Sessions -->
  <div class="bloomberg-card">
    <div class="border-b border-slate-700 pb-3 mb-6 flex items-center justify-between">
      <div>
        <h3 class="text-lg font-mono font-semibold text-amber-400">ACTIVE SESSIONS</h3>
        <p class="text-slate-400 text-sm mt-1">Manage your active login sessions</p>
      </div>
      <button onclick="revokeAllSessions()" class="bloomberg-btn bloomberg-btn-danger text-sm">
        REVOKE ALL
      </button>
    </div>

    <% if (sessions.length === 0) { %>
      <div class="text-center py-8">
        <p class="text-slate-400 font-mono">No other active sessions</p>
      </div>
    <% } else { %>
      <div class="space-y-3">
        <% sessions.forEach(session => { %>
          <div class="p-4 bg-slate-900/30 rounded-lg border border-slate-700">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <div class="flex items-center gap-2 mb-2">
                  <svg class="w-5 h-5 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                  </svg>
                  <h4 class="text-white font-mono font-semibold">
                    <%= session.userAgent ? session.userAgent.substring(0, 50) : 'Unknown Device' %>
                  </h4>
                </div>
                <div class="text-sm font-mono text-slate-400 space-y-1">
                  <p>IP Address: <%= session.ipAddress || 'Unknown' %></p>
                  <p>Created: <%= new Date(session.createdAt).toLocaleString() %></p>
                  <p>Expires: <%= new Date(session.expiresAt).toLocaleString() %></p>
                </div>
              </div>
              <button
                onclick="revokeSession('<%= session.id %>')"
                class="bloomberg-btn bloomberg-btn-danger text-sm">
                REVOKE
              </button>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>

  <!-- Security Tips -->
  <div class="bloomberg-card">
    <div class="border-b border-slate-700 pb-3 mb-6">
      <h3 class="text-lg font-mono font-semibold text-amber-400">SECURITY TIPS</h3>
    </div>

    <div class="space-y-3">
      <div class="flex items-start gap-3">
        <svg class="w-5 h-5 text-emerald-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
        <p class="text-slate-400 font-mono text-sm">Use a strong, unique password for your account</p>
      </div>
      <div class="flex items-start gap-3">
        <svg class="w-5 h-5 text-emerald-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
        <p class="text-slate-400 font-mono text-sm">Enable two-factor authentication for extra security</p>
      </div>
      <div class="flex items-start gap-3">
        <svg class="w-5 h-5 text-emerald-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
        <p class="text-slate-400 font-mono text-sm">Review active sessions regularly and revoke unfamiliar ones</p>
      </div>
      <div class="flex items-start gap-3">
        <svg class="w-5 h-5 text-emerald-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
        <p class="text-slate-400 font-mono text-sm">Never share your API keys or password with anyone</p>
      </div>
    </div>
  </div>
</div>
