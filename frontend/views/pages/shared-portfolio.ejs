<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= pageTitle || 'Shared Portfolio' %> | WealthPilot Pro</title>

  <!-- Preload fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">

  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <style>
    :root {
      --bg-primary: #0d1117;
      --bg-secondary: #161b22;
      --bg-tertiary: #21262d;
      --text-primary: #f0f6fc;
      --text-secondary: #8b949e;
      --border-primary: #30363d;
      --accent-primary: #1a8cff;
      --success: #3fb950;
      --danger: #f85149;
    }

    body {
      background: var(--bg-primary);
      color: var(--text-primary);
      font-family: 'Inter', sans-serif;
      min-height: 100vh;
    }

    .card {
      background: var(--bg-secondary);
      border: 1px solid var(--border-primary);
      border-radius: 8px;
    }

    .mono {
      font-family: 'JetBrains Mono', monospace;
    }

    .positive { color: var(--success); }
    .negative { color: var(--danger); }

    .share-badge {
      display: inline-flex;
      align-items: center;
      gap: 6px;
      padding: 4px 12px;
      background: rgba(26, 140, 255, 0.1);
      border: 1px solid rgba(26, 140, 255, 0.3);
      border-radius: 20px;
      font-size: 12px;
      color: var(--accent-primary);
    }

    .social-share-btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 40px;
      height: 40px;
      border-radius: 50%;
      border: 1px solid var(--border-primary);
      background: var(--bg-tertiary);
      color: var(--text-secondary);
      transition: all 0.2s ease;
    }

    .social-share-btn:hover {
      background: var(--accent-primary);
      border-color: var(--accent-primary);
      color: white;
    }
  </style>
</head>
<body>
  <!-- Header -->
  <header class="border-b border-gray-800 bg-gray-900/80 backdrop-blur sticky top-0 z-50">
    <div class="max-w-6xl mx-auto px-4 py-4">
      <div class="flex items-center justify-between">
        <a href="/" class="flex items-center gap-3">
          <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center">
            <span class="text-white font-bold text-lg">W</span>
          </div>
          <span class="text-xl font-bold text-white">WealthPilot</span>
        </a>
        <div class="share-badge">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="18" cy="5" r="3"/>
            <circle cx="6" cy="12" r="3"/>
            <circle cx="18" cy="19" r="3"/>
            <line x1="8.59" y1="13.51" x2="15.42" y2="17.49"/>
            <line x1="15.41" y1="6.51" x2="8.59" y2="10.49"/>
          </svg>
          Shared Portfolio
        </div>
      </div>
    </div>
  </header>

  <main class="max-w-6xl mx-auto px-4 py-8">
    <% if (error) { %>
      <!-- Error State -->
      <div class="card p-12 text-center">
        <svg class="w-16 h-16 mx-auto mb-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
        </svg>
        <h2 class="text-xl font-semibold mb-2"><%= pageTitle || 'Portfolio Not Found' %></h2>
        <p class="text-gray-500 mb-6"><%= error %></p>
        <a href="/" class="inline-flex items-center gap-2 px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
          Create Your Own Portfolio
        </a>
      </div>
    <% } else { %>
      <!-- Portfolio Header -->
      <div class="card p-6 mb-6">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
          <div>
            <h1 class="text-2xl font-bold mb-1"><%= portfolio.name %></h1>
            <% if (portfolio.description) { %>
              <p class="text-gray-500"><%= portfolio.description %></p>
            <% } %>
          </div>
          <div class="flex items-center gap-3">
            <span class="text-xs text-gray-500">
              <svg class="inline w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
              </svg>
              <%= portfolio.viewCount || 0 %> views
            </span>
            <!-- Share buttons -->
            <button onclick="shareToTwitter()" class="social-share-btn" title="Share on Twitter">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </button>
            <button onclick="shareToLinkedIn()" class="social-share-btn" title="Share on LinkedIn">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </button>
            <button onclick="copyLink()" class="social-share-btn" title="Copy link">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="9" y="9" width="13" height="13" rx="2" ry="2"/>
                <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/>
              </svg>
            </button>
          </div>
        </div>
      </div>

      <% if (portfolio.totalValue !== undefined) { %>
        <!-- Value Summary -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
          <div class="card p-4">
            <div class="text-xs text-gray-500 uppercase mb-1">Total Value</div>
            <div class="text-xl font-bold mono"><%= portfolio.currency || '$' %><%= portfolio.totalValue.toLocaleString('en-US', {minimumFractionDigits: 2}) %></div>
          </div>
          <div class="card p-4">
            <div class="text-xs text-gray-500 uppercase mb-1">Total Cost</div>
            <div class="text-xl font-bold mono"><%= portfolio.currency || '$' %><%= portfolio.totalCost.toLocaleString('en-US', {minimumFractionDigits: 2}) %></div>
          </div>
          <div class="card p-4">
            <div class="text-xs text-gray-500 uppercase mb-1">Total Gain</div>
            <div class="text-xl font-bold mono <%= portfolio.totalGain >= 0 ? 'positive' : 'negative' %>">
              <%= portfolio.totalGain >= 0 ? '+' : '' %><%= portfolio.currency || '$' %><%= portfolio.totalGain.toLocaleString('en-US', {minimumFractionDigits: 2}) %>
            </div>
          </div>
          <div class="card p-4">
            <div class="text-xs text-gray-500 uppercase mb-1">Return</div>
            <div class="text-xl font-bold mono <%= portfolio.totalGainPercent >= 0 ? 'positive' : 'negative' %>">
              <%= portfolio.totalGainPercent >= 0 ? '+' : '' %><%= portfolio.totalGainPercent.toFixed(2) %>%
            </div>
          </div>
        </div>
      <% } %>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Holdings Table -->
        <% if (portfolio.holdings && portfolio.holdings.length > 0) { %>
          <div class="lg:col-span-2 card">
            <div class="p-4 border-b border-gray-800">
              <h2 class="font-semibold">Holdings (<%= portfolio.holdings.length %>)</h2>
            </div>
            <div class="overflow-x-auto">
              <table class="w-full">
                <thead class="bg-gray-800/50">
                  <tr>
                    <th class="text-left p-4 text-xs text-gray-500 uppercase">Symbol</th>
                    <% if (portfolio.holdings[0].shares !== undefined) { %>
                      <th class="text-right p-4 text-xs text-gray-500 uppercase">Shares</th>
                    <% } %>
                    <% if (portfolio.holdings[0].currentPrice !== undefined) { %>
                      <th class="text-right p-4 text-xs text-gray-500 uppercase">Price</th>
                      <th class="text-right p-4 text-xs text-gray-500 uppercase">Value</th>
                      <th class="text-right p-4 text-xs text-gray-500 uppercase">Gain</th>
                    <% } %>
                  </tr>
                </thead>
                <tbody>
                  <% portfolio.holdings.forEach(h => { %>
                    <tr class="border-b border-gray-800 hover:bg-gray-800/30">
                      <td class="p-4">
                        <div class="font-medium"><%= h.symbol %></div>
                        <div class="text-sm text-gray-500"><%= h.name || h.sector || '' %></div>
                      </td>
                      <% if (h.shares !== undefined) { %>
                        <td class="p-4 text-right mono"><%= h.shares.toLocaleString() %></td>
                      <% } %>
                      <% if (h.currentPrice !== undefined) { %>
                        <td class="p-4 text-right mono">$<%= h.currentPrice.toFixed(2) %></td>
                        <td class="p-4 text-right mono">$<%= h.marketValue.toLocaleString('en-US', {minimumFractionDigits: 2}) %></td>
                        <td class="p-4 text-right mono <%= h.gainPercent >= 0 ? 'positive' : 'negative' %>">
                          <%= h.gainPercent >= 0 ? '+' : '' %><%= h.gainPercent.toFixed(2) %>%
                        </td>
                      <% } %>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        <% } %>

        <!-- Sector Allocation -->
        <% if (portfolio.sectorAllocation && portfolio.sectorAllocation.length > 0) { %>
          <div class="card">
            <div class="p-4 border-b border-gray-800">
              <h2 class="font-semibold">Sector Allocation</h2>
            </div>
            <div class="p-4">
              <canvas id="sectorChart" height="200"></canvas>
              <div class="mt-4 space-y-2">
                <% portfolio.sectorAllocation.forEach(s => { %>
                  <div class="flex items-center justify-between text-sm">
                    <span class="text-gray-400"><%= s.sector %></span>
                    <span class="mono"><%= s.percentage.toFixed(1) %>%</span>
                  </div>
                <% }) %>
              </div>
            </div>
          </div>
        <% } %>
      </div>

      <!-- CTA -->
      <div class="card p-8 mt-8 text-center bg-gradient-to-r from-blue-900/30 to-purple-900/30">
        <h3 class="text-xl font-bold mb-2">Want to track your own portfolio?</h3>
        <p class="text-gray-400 mb-4">Create a free WealthPilot account to track your investments, get alerts, and more.</p>
        <a href="/register" class="inline-flex items-center gap-2 px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
          Get Started Free
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    <% } %>
  </main>

  <!-- Footer -->
  <footer class="border-t border-gray-800 py-8 mt-12">
    <div class="max-w-6xl mx-auto px-4 text-center text-gray-500 text-sm">
      <p>Powered by <a href="/" class="text-blue-400 hover:underline">WealthPilot Pro</a></p>
    </div>
  </footer>

  <script>
    // Share functions
    function shareToTwitter() {
      const url = encodeURIComponent(window.location.href);
      const text = encodeURIComponent('Check out this investment portfolio on WealthPilot!');
      window.open(`https://twitter.com/intent/tweet?url=${url}&text=${text}`, '_blank');
    }

    function shareToLinkedIn() {
      const url = encodeURIComponent(window.location.href);
      window.open(`https://www.linkedin.com/sharing/share-offsite/?url=${url}`, '_blank');
    }

    function copyLink() {
      navigator.clipboard.writeText(window.location.href).then(() => {
        alert('Link copied to clipboard!');
      });
    }

    // Sector allocation chart
    <% if (portfolio && portfolio.sectorAllocation && portfolio.sectorAllocation.length > 0) { %>
    const sectorData = <%- JSON.stringify(portfolio.sectorAllocation) %>;
    new Chart(document.getElementById('sectorChart'), {
      type: 'doughnut',
      data: {
        labels: sectorData.map(s => s.sector),
        datasets: [{
          data: sectorData.map(s => s.percentage),
          backgroundColor: [
            '#3b82f6', '#10b981', '#f59e0b', '#ef4444',
            '#8b5cf6', '#ec4899', '#06b6d4', '#84cc16'
          ],
          borderWidth: 0
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: { display: false }
        },
        cutout: '70%'
      }
    });
    <% } %>
  </script>
</body>
</html>
