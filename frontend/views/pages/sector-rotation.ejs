<!-- Tab Switching Script -->
<script>
function switchTab(tabName) {
  // Hide all tabs
  document.querySelectorAll('.tab-content').forEach(tab => {
    tab.classList.remove('active');
  });

  // Remove active class from all buttons
  document.querySelectorAll('.tab-button').forEach(btn => {
    btn.classList.remove('active');
  });

  // Show selected tab
  document.getElementById('tab-' + tabName).classList.add('active');

  // Mark button as active
  event.target.closest('.tab-button').classList.add('active');

  // Re-render charts if switching to charts tab
  if (tabName === 'charts' && window.chartsInitialized) {
    setTimeout(() => {
      window.chartsInitialized();
    }, 100);
  }
}
</script>

<!-- Chart Initialization -->
<% if (sectors.length > 0) { %>
<script>
document.addEventListener('DOMContentLoaded', function() {
  const sectors = <%- JSON.stringify(sectors) %>;
  const sectorNames = sectors.map(s => s.sectorCode);
  const sectorFullNames = sectors.map(s => s.sectorName);

  Chart.defaults.color = '#94a3b8';
  Chart.defaults.borderColor = 'rgba(148, 163, 184, 0.1)';
  Chart.defaults.font.family = "'Inter', sans-serif";

  function initCharts() {
    // Relative Strength Chart
    const rsCtx = document.getElementById('relativeStrengthChart');
    if (rsCtx && !rsCtx.chart) {
      const rsData = sectors.map(s => s.relativeStrength || 0);
      const rsColors = rsData.map(val => val >= 0 ? 'rgba(16, 185, 129, 0.8)' : 'rgba(239, 68, 68, 0.8)');

      rsCtx.chart = new Chart(rsCtx, {
        type: 'bar',
        data: {
          labels: sectorNames,
          datasets: [{
            label: 'Relative Strength (%)',
            data: rsData,
            backgroundColor: rsColors,
            borderRadius: 4,
          }]
        },
        options: {
          indexAxis: 'y',
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: { display: false },
            tooltip: {
              backgroundColor: 'rgba(15, 23, 42, 0.95)',
              padding: 8,
              callbacks: {
                title: ctx => sectorFullNames[ctx[0].dataIndex],
                label: ctx => 'vs S&P 500: ' + ctx.parsed.x.toFixed(2) + '%'
              }
            }
          },
          scales: {
            x: { grid: { color: 'rgba(148, 163, 184, 0.1)' }, ticks: { callback: v => v + '%' } },
            y: { grid: { display: false } }
          }
        }
      });
    }

    // RSI Chart
    const rsiCtx = document.getElementById('rsiChart');
    if (rsiCtx && !rsiCtx.chart) {
      const rsiData = sectors.map(s => s.rsi || 50);
      const rsiColors = rsiData.map(val => val > 70 ? 'rgba(239, 68, 68, 0.8)' : val < 30 ? 'rgba(16, 185, 129, 0.8)' : 'rgba(148, 163, 184, 0.6)');

      rsiCtx.chart = new Chart(rsiCtx, {
        type: 'bar',
        data: {
          labels: sectorNames,
          datasets: [{ data: rsiData, backgroundColor: rsiColors, borderRadius: 4 }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: { display: false },
            tooltip: {
              backgroundColor: 'rgba(15, 23, 42, 0.95)',
              padding: 8,
              callbacks: {
                title: ctx => sectorFullNames[ctx[0].dataIndex],
                label: ctx => 'RSI: ' + ctx.parsed.y.toFixed(1)
              }
            }
          },
          scales: {
            y: { min: 0, max: 100, grid: { color: 'rgba(148, 163, 184, 0.1)' } },
            x: { grid: { display: false } }
          }
        }
      });
    }

    // Money Flow Chart
    const mfCtx = document.getElementById('moneyFlowChart');
    if (mfCtx && !mfCtx.chart) {
      const mfData = sectors.map(s => s.moneyFlow || 0);
      const mfColors = mfData.map(val => val >= 0 ? 'rgba(16, 185, 129, 0.8)' : 'rgba(239, 68, 68, 0.8)');

      mfCtx.chart = new Chart(mfCtx, {
        type: 'bar',
        data: {
          labels: sectorNames,
          datasets: [{ data: mfData, backgroundColor: mfColors, borderRadius: 4 }]
        },
        options: {
          indexAxis: 'y',
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: { display: false },
            tooltip: {
              backgroundColor: 'rgba(15, 23, 42, 0.95)',
              padding: 8,
              callbacks: {
                title: ctx => sectorFullNames[ctx[0].dataIndex],
                label: ctx => 'Money Flow: ' + ctx.parsed.x.toFixed(2)
              }
            }
          },
          scales: {
            x: { grid: { color: 'rgba(148, 163, 184, 0.1)' } },
            y: { grid: { display: false } }
          }
        }
      });
    }

    // Momentum Chart
    const momCtx = document.getElementById('momentumChart');
    if (momCtx && !momCtx.chart) {
      const momData = sectors.map(s => s.roc20 || 0);
      const momColors = momData.map(val => val >= 0 ? 'rgba(251, 191, 36, 0.8)' : 'rgba(239, 68, 68, 0.8)');

      momCtx.chart = new Chart(momCtx, {
        type: 'bar',
        data: {
          labels: sectorNames,
          datasets: [{ data: momData, backgroundColor: momColors, borderRadius: 4 }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: { display: false },
            tooltip: {
              backgroundColor: 'rgba(15, 23, 42, 0.95)',
              padding: 8,
              callbacks: {
                title: ctx => sectorFullNames[ctx[0].dataIndex],
                label: ctx => '20-Day ROC: ' + ctx.parsed.y.toFixed(2) + '%'
              }
            }
          },
          scales: {
            y: { grid: { color: 'rgba(148, 163, 184, 0.1)' }, ticks: { callback: v => v + '%' } },
            x: { grid: { display: false } }
          }
        }
      });
    }
  }

  window.chartsInitialized = initCharts;
  initCharts();
});
</script>
