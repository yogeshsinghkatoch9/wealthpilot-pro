      <!-- Navigation -->
      <div class="flex gap-4 mt-8">
        <button onclick="goToStep(3)" class="flex-1 px-6 py-3 rounded-xl border border-slate-600 text-slate-300 font-medium hover:bg-slate-700/50 transition-colors">
          Back
        </button>
        <button onclick="completeImport()" id="importBtn" class="flex-1 px-6 py-3 rounded-xl bg-gradient-to-r from-emerald-500 to-green-500 text-white font-semibold hover:from-emerald-600 hover:to-green-600 transition-all shadow-lg shadow-emerald-500/25 flex items-center justify-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
