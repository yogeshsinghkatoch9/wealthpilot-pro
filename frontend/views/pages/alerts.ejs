<script src="/js/alerts.js"></script>
<script>
// Stock search enhancement for alerts
const FINNHUB_TOKEN = 'd4tm751r01qnn6llpesgd4tm751r01qnn6llpet0';
let alertSearchTimeout = null;

// Add search input listener after DOM loads
document.addEventListener('DOMContentLoaded', function() {
  const searchInput = document.getElementById('alert-search');
  const resultsDiv = document.getElementById('alert-search-results');

  if (searchInput) {
    searchInput.addEventListener('input', function(e) {
      const query = e.target.value;
      clearTimeout(alertSearchTimeout);

      if (!query || query.length < 1) {
        resultsDiv.classList.add('hidden');
        return;
      }

      alertSearchTimeout = setTimeout(() => searchAlertStocks(query), 300);
    });
  }

  // Close search results when clicking outside
  document.addEventListener('click', function(e) {
    if (resultsDiv && !resultsDiv.contains(e.target) && e.target !== searchInput) {
      resultsDiv.classList.add('hidden');
    }
  });

  // Edit modal controls
  const closeEditBtn = document.getElementById('close-edit-modal');
  const cancelEditBtn = document.getElementById('cancel-edit-alert');
  const editForm = document.getElementById('edit-alert-form');

  if (closeEditBtn) closeEditBtn.addEventListener('click', closeEditModal);
  if (cancelEditBtn) cancelEditBtn.addEventListener('click', closeEditModal);
  if (editForm) editForm.addEventListener('submit', handleEditAlert);
});

async function searchAlertStocks(query) {
  const resultsDiv = document.getElementById('alert-search-results');

  try {
    resultsDiv.innerHTML = '<div class="p-3 text-gray-400 text-sm">Searching...</div>';
    resultsDiv.classList.remove('hidden');

    const response = await fetch(`https://finnhub.io/api/v1/search?q=${encodeURIComponent(query)}&token=${FINNHUB_TOKEN}`);
    const data = await response.json();

    if (!data.result || data.result.length === 0) {
      resultsDiv.innerHTML = '<div class="p-3 text-gray-400 text-sm">No results found</div>';
      return;
    }

    const stocks = data.result.filter(item =>
      item.type === 'Common Stock' || item.type === 'ETF' || item.type === 'ADR'
    ).slice(0, 8);

    if (stocks.length === 0) {
      resultsDiv.innerHTML = '<div class="p-3 text-gray-400 text-sm">No stocks found</div>';
      return;
    }

    resultsDiv.innerHTML = stocks.map(stock => `
      <div class="p-3 hover:bg-gray-700 cursor-pointer border-b border-gray-700 last:border-0 transition-colors"
           onclick="selectAlertStock('${stock.symbol}', '${stock.description.replace(/'/g, "\\'")}')">
        <div class="flex items-center justify-between">
          <div>
            <span class="text-green-500 font-bold">${stock.symbol}</span>
            <span class="text-gray-500 text-xs ml-2">${stock.type}</span>
          </div>
        </div>
        <p class="text-gray-300 text-sm truncate">${stock.description}</p>
      </div>
    `).join('');

  } catch (error) {
    console.error('Search error:', error);
    resultsDiv.innerHTML = '<div class="p-3 text-red-400 text-sm">Search failed. Try again.</div>';
  }
}

async function selectAlertStock(symbol, name) {
  document.getElementById('alert-symbol').value = symbol;
  document.getElementById('alert-search').value = `${symbol} - ${name}`;
  document.getElementById('alert-search-results').classList.add('hidden');

  // Fetch and show current price
  try {
    const response = await fetch(`https://finnhub.io/api/v1/quote?symbol=${symbol}&token=${FINNHUB_TOKEN}`);
    const data = await response.json();

    if (data.c && data.c > 0) {
      const priceDisplay = document.getElementById('current-price-display');
      priceDisplay.classList.remove('hidden');
      document.getElementById('current-price-value').textContent = `$${data.c.toFixed(2)}`;
    }
  } catch (error) {
    console.error('Failed to fetch price:', error);
  }
}

// Edit alert functions
function openEditAlertModal(id, symbol, condition, targetPrice, message, currentPrice) {
  document.getElementById('edit-alert-id').value = id;
  document.getElementById('edit-alert-icon').textContent = symbol.slice(0, 2);
  document.getElementById('edit-alert-symbol-display').textContent = symbol;
  document.getElementById('edit-alert-current-price').textContent = currentPrice > 0 ? `$${currentPrice.toFixed(2)}` : '--';
  document.getElementById('edit-alert-condition').value = condition;
  document.getElementById('edit-alert-price').value = targetPrice;
  document.getElementById('edit-alert-message').value = message || '';

  document.getElementById('edit-alert-modal').classList.remove('hidden');
  document.getElementById('edit-alert-modal').classList.add('flex');
}

function closeEditModal() {
  document.getElementById('edit-alert-modal').classList.add('hidden');
  document.getElementById('edit-alert-modal').classList.remove('flex');
}

async function handleEditAlert(e) {
  e.preventDefault();

  const id = document.getElementById('edit-alert-id').value;
  const condition = document.getElementById('edit-alert-condition').value;
  const targetPrice = parseFloat(document.getElementById('edit-alert-price').value);
  const message = document.getElementById('edit-alert-message').value;

  try {
    const token = localStorage.getItem('wealthpilot_token') || '';
    const response = await fetch(`/api/alerts/${id}`, {
      method: 'PUT',
      headers: {
        'Content-Type': 'application/json',
        'Authorization': `Bearer ${token}`
      },
      body: JSON.stringify({ condition, targetPrice, message })
    });

    if (response.ok) {
      if (typeof showToast === 'function') {
        showToast('Alert updated successfully', 'success');
      }
      closeEditModal();
      if (window.alertsManager) {
        window.alertsManager.loadAlerts();
      }
    } else {
      const error = await response.json();
      alert('Error: ' + (error.error || 'Failed to update alert'));
    }
  } catch (err) {
    console.error('Edit alert error:', err);
    alert('Failed to update alert');
  }

  return false;
}
</script>

