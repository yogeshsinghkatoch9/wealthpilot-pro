    padding: 3rem 1.5rem;
    text-align: center;
    color: #9ca3af;
  }

  .empty-state svg {
    width: 4rem;
    height: 4rem;
    margin: 0 auto 1rem;
    opacity: 0.5;
  }

  /* Calendar Widget Styles */
  .custom-scrollbar::-webkit-scrollbar {
    width: 6px;
  }

  .custom-scrollbar::-webkit-scrollbar-track {
    background: rgba(30, 41, 59, 0.5);
    border-radius: 3px;
  }

  .custom-scrollbar::-webkit-scrollbar-thumb {
    background: #f59e0b;
    border-radius: 3px;
  }

  .custom-scrollbar::-webkit-scrollbar-thumb:hover {
    background: #d97706;
  }
</style>

<script src="/js/advanced-charts.js"></script>
<script src="/js/advanced-dashboard.js"></script>
<script src="/js/dashboard-customization.js"></script>

<script>
  // Quick Add Event Function
  function openQuickAddEvent() {
    window.location.href = '/calendar';
  }

  // Auto-refresh upcoming events every 5 minutes
  setInterval(() => {
    // Silently refresh calendar data without full page reload
    fetch('/api/calendar/upcoming/list?limit=5', {
      credentials: 'include'
    })
    .then(res => res.json())
    .then(data => {
      if (data.success && data.data.length > 0) {
        console.log('Calendar events refreshed:', data.data.length, 'upcoming events');
      }
    })
    .catch(err => console.error('Failed to refresh calendar:', err));
  }, 5 * 60 * 1000); // 5 minutes

  // Load dividend calendar widget data
  async function loadDividendWidget() {
    try {
      // Fetch stats
      const statsRes = await fetch('/api/dividend-calendar/stats', { credentials: 'include' });
      const stats = await statsRes.json();

      if (stats.success) {
        document.getElementById('dividend-today').textContent = stats.data.today || 0;
        document.getElementById('dividend-week').textContent = stats.data.thisWeek || 0;
      }

      // Fetch upcoming dividends
      const upcomingRes = await fetch('/api/dividend-calendar/upcoming?limit=6', { credentials: 'include' });
      const upcoming = await upcomingRes.json();

      if (upcoming.success && upcoming.data.length > 0) {
        const container = document.getElementById('upcoming-dividends');
        container.innerHTML = upcoming.data.map(div => {
          const exDate = new Date(div.ex_dividend_date);
          const daysUntil = Math.ceil((exDate - new Date()) / (1000 * 60 * 60 * 24));

          return `
            <div class="flex items-center gap-2 p-2 bg-slate-700/50 rounded hover:bg-slate-700 transition-all cursor-pointer"
                 onclick="window.location.href='/dividend-calendar'">
              <div class="w-8 h-8 rounded bg-gradient-to-br from-emerald-500 to-emerald-600 flex items-center justify-center text-white text-xs font-bold">
                ${div.symbol}
              </div>
              <div class="flex-1 min-w-0">
                <div class="text-xs text-white truncate">${div.company_name}</div>
                <div class="text-xs text-gray-400">$${div.dividend_amount.toFixed(4)} • ${daysUntil}d</div>
              </div>
              <div class="text-xs text-emerald-400 font-semibold">
                ${exDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}
              </div>
            </div>
          `;
        }).join('');
      } else {
        document.getElementById('upcoming-dividends').innerHTML = `
          <div class="col-span-full text-center py-4">
            <div class="text-xs text-gray-400">No upcoming dividends</div>
          </div>
        `;
      }
    } catch (error) {
      console.error('Error loading dividend widget:', error);
    }
  }

  // Load dividend widget on page load
  loadDividendWidget();

  // Auto-refresh dividend data every 5 minutes
  setInterval(loadDividendWidget, 5 * 60 * 1000);
</script>

