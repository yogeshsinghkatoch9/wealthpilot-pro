<!-- Live Market Ticker Bar -->
<style>
/* Live Ticker Styles */
.live-ticker-container {
  background: linear-gradient(180deg, #0a0e14 0%, #0d1117 100%);
  border-bottom: 1px solid rgba(41, 42, 56, 0.5);
  overflow: hidden;
  position: fixed;
  top: 56px;
  left: 0;
  right: 0;
  z-index: 40;
}

.live-ticker-row {
  display: flex;
  align-items: center;
  height: 32px;
  overflow: hidden;
}

/* News Ticker Row */
.news-ticker-row {
  background: rgba(15, 17, 21, 0.95);
  border-bottom: 1px solid rgba(41, 42, 56, 0.3);
}

.news-ticker-label {
  display: flex;
  align-items: center;
  gap: 6px;
  padding: 0 12px;
  background: linear-gradient(90deg, #dc2626, #b91c1c);
  color: white;
  font-size: 10px;
  font-weight: 700;
  letter-spacing: 0.5px;
  text-transform: uppercase;
  height: 100%;
  flex-shrink: 0;
}

.news-ticker-label .pulse-dot {
  width: 6px;
  height: 6px;
  background: #fff;
  border-radius: 50%;
  animation: pulse-live 1.5s ease-in-out infinite;
}

@keyframes pulse-live {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.5; transform: scale(0.8); }
}

.news-ticker-content {
  flex: 1;
  overflow: hidden;
  position: relative;
}

.news-ticker-scroll {
  display: flex;
  align-items: center;
  animation: scroll-news 60s linear infinite;
  white-space: nowrap;
}

.news-ticker-scroll:hover {
  animation-play-state: paused;
}

@keyframes scroll-news {
  0% { transform: translateX(0); }
  100% { transform: translateX(-50%); }
}

.news-ticker-item {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 0 24px;
  font-size: 12px;
  color: #9e9fb7;
}

.news-ticker-item a {
  color: #e5e7eb;
  text-decoration: none;
  transition: color 0.2s;
}

.news-ticker-item a:hover {
  color: #4850e5;
}

.news-ticker-source {
  display: inline-flex;
  align-items: center;
  gap: 4px;
  padding: 2px 8px;
  background: rgba(72, 80, 229, 0.15);
  border-radius: 4px;
  font-size: 10px;
  font-weight: 600;
  color: #4850e5;
  text-transform: uppercase;
}

.news-ticker-separator {
  color: #3d3e52;
  margin: 0 8px;
}

/* Stock Ticker Row */
.stock-ticker-row {
  background: rgba(10, 14, 20, 0.98);
}

.stock-ticker-content {
  flex: 1;
  overflow: hidden;
}

.stock-ticker-scroll {
  display: flex;
  align-items: center;
  animation: scroll-stocks 45s linear infinite;
  white-space: nowrap;
}

.stock-ticker-scroll:hover {
  animation-play-state: paused;
}

@keyframes scroll-stocks {
  0% { transform: translateX(0); }
  100% { transform: translateX(-50%); }
}

.stock-ticker-item {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  padding: 0 16px;
  border-right: 1px solid rgba(41, 42, 56, 0.3);
}

.stock-ticker-item:last-child {
  border-right: none;
}

.stock-ticker-symbol {
  font-size: 12px;
  font-weight: 600;
  color: #e5e7eb;
  font-family: 'Inter', sans-serif;
}

.stock-ticker-price {
  font-size: 12px;
  font-weight: 500;
  color: #9e9fb7;
  font-family: 'JetBrains Mono', monospace;
}

.stock-ticker-change {
  font-size: 11px;
  font-weight: 600;
  font-family: 'JetBrains Mono', monospace;
  padding: 1px 6px;
  border-radius: 3px;
}

.stock-ticker-change.up {
  color: #10b981;
  background: rgba(16, 185, 129, 0.1);
}

.stock-ticker-change.down {
  color: #ef4444;
  background: rgba(239, 68, 68, 0.1);
}

.stock-ticker-change .arrow {
  font-size: 10px;
}

/* Mobile responsive */
@media (max-width: 768px) {
  .live-ticker-container {
    display: none;
  }
}
</style>

<div class="live-ticker-container" id="liveTickerContainer">
  <!-- News Ticker Row -->
  <div class="live-ticker-row news-ticker-row">
    <div class="news-ticker-label">
      <span class="pulse-dot"></span>
      <span>LIVE</span>
    </div>
    <div class="news-ticker-content">
      <div class="news-ticker-scroll" id="newsTickerScroll">
        <!-- News items will be populated by JavaScript -->
        <div class="news-ticker-item">
          <span class="news-ticker-source">Loading</span>
          <a href="#">Fetching latest market news...</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Stock Ticker Row -->
  <div class="live-ticker-row stock-ticker-row">
    <div class="stock-ticker-content">
      <div class="stock-ticker-scroll" id="stockTickerScroll">
        <!-- Stock items will be populated by JavaScript -->
        <div class="stock-ticker-item">
          <span class="stock-ticker-symbol">Loading...</span>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
(function() {
  // Ticker configuration
  const TICKER_SYMBOLS = [
    'AAPL', 'MSFT', 'GOOGL', 'AMZN', 'NVDA', 'META', 'TSLA', 'AMD',
    'BTC-USD', 'ETH-USD', 'SPY', 'QQQ', 'NFLX', 'CRM', 'AVGO', 'ORCL'
  ];

  const REFRESH_INTERVAL = 30000; // 30 seconds

  // Format price
  function formatPrice(price) {
    if (price >= 1000) return price.toLocaleString('en-US', { minimumFractionDigits: 0, maximumFractionDigits: 0 });
    if (price >= 100) return price.toFixed(2);
    return price.toFixed(2);
  }

  // Format percentage
  function formatPercent(pct) {
    const sign = pct >= 0 ? '▲' : '▼';
    return `${sign}${Math.abs(pct).toFixed(2)}%`;
  }

  // Render stock ticker
  function renderStockTicker(quotes) {
    const container = document.getElementById('stockTickerScroll');
    if (!container || !quotes || quotes.length === 0) return;

    // Create items HTML - duplicate for seamless scroll
    const itemsHtml = quotes.map(q => {
      const isUp = q.changePercent >= 0;
      const symbol = q.symbol.replace('-USD', '');
      return `
        <div class="stock-ticker-item">
          <span class="stock-ticker-symbol">${symbol}</span>
          <span class="stock-ticker-price">$${formatPrice(q.price)}</span>
          <span class="stock-ticker-change ${isUp ? 'up' : 'down'}">
            ${formatPercent(q.changePercent)}
          </span>
        </div>
      `;
    }).join('');

    // Duplicate content for seamless scrolling
    container.innerHTML = itemsHtml + itemsHtml;
  }

  // Render news ticker
  function renderNewsTicker(news) {
    const container = document.getElementById('newsTickerScroll');
    if (!container || !news || news.length === 0) return;

    const itemsHtml = news.slice(0, 15).map(n => `
      <div class="news-ticker-item">
        <span class="news-ticker-source">${n.source || 'News'}</span>
        <a href="${n.link || '#'}" target="_blank" rel="noopener">${n.title}</a>
        <span class="news-ticker-separator">•</span>
      </div>
    `).join('');

    // Duplicate for seamless scroll
    container.innerHTML = itemsHtml + itemsHtml;
  }

  // Fetch stock data
  async function fetchStockData() {
    try {
      const token = localStorage.getItem('wealthpilot_token');
      const headers = token ? { 'Authorization': `Bearer ${token}` } : {};

      const response = await fetch(`/api/market/quotes?symbols=${TICKER_SYMBOLS.join(',')}`, { headers });
      if (!response.ok) throw new Error('Failed to fetch quotes');

      const data = await response.json();
      if (Array.isArray(data) && data.length > 0) {
        renderStockTicker(data);
      }
    } catch (error) {
      console.warn('[Ticker] Stock fetch error:', error.message);
    }
  }

  // Fetch news data
  async function fetchNewsData() {
    try {
      const token = localStorage.getItem('wealthpilot_token');
      const headers = token ? { 'Authorization': `Bearer ${token}` } : {};

      const response = await fetch('/api/news/rss?limit=15', { headers });
      if (!response.ok) throw new Error('Failed to fetch news');

      const data = await response.json();
      if (data.success && data.news && data.news.length > 0) {
        renderNewsTicker(data.news);
      }
    } catch (error) {
      console.warn('[Ticker] News fetch error:', error.message);
      // Try alternative endpoint
      try {
        const altResponse = await fetch('/api/news/all-trending?limit=15');
        if (altResponse.ok) {
          const altData = await altResponse.json();
          if (altData.news && altData.news.length > 0) {
            renderNewsTicker(altData.news);
          }
        }
      } catch (e) {}
    }
  }

  // Initialize ticker
  function initTicker() {
    // Initial fetch
    fetchStockData();
    fetchNewsData();

    // Set up refresh intervals
    setInterval(fetchStockData, REFRESH_INTERVAL);
    setInterval(fetchNewsData, REFRESH_INTERVAL * 2); // News refreshes less frequently
  }

  // Start when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initTicker);
  } else {
    initTicker();
  }
})();
</script>
