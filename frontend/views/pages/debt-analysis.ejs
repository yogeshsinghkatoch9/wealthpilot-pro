            <span class="material-symbols-outlined text-text-secondary group-hover:text-primary text-[20px]">pie_chart</span>
          </div>
          <div>
            <p class="text-white text-2xl font-bold tracking-tight"><%= safeDebtAsset %></p>
            <p class="text-success text-xs font-medium mt-1 flex items-center gap-1">
              <span class="material-symbols-outlined text-[14px]">check_circle</span>
              Healthy Level
            </p>
          </div>
        </div>
        <!-- Card 4: Current Ratio -->
