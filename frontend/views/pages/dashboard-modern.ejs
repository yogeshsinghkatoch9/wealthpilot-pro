<%- include('../partials/header', { pageTitle: 'Dashboard' }) %>

<!-- Modern Dashboard Layout -->
<div class="min-h-screen bg-gradient-to-br from-slate-50 via-white to-blue-50" style="padding: 2rem;">

  <!-- Welcome Header -->
  <div class="modern-card glassmorphism animate-fadeIn mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-4xl font-bold text-gradient mb-2">Welcome back!</h1>
        <p class="text-lg text-slate-600">Here's what's happening with your portfolio today</p>
      </div>
      <div class="flex gap-3">
        <button class="btn-modern btn-modern-secondary btn-modern-sm">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
          </svg>
          Customize
        </button>
        <button class="btn-modern btn-modern-primary btn-modern-sm">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Add Portfolio
        </button>
      </div>
    </div>
  </div>

  <!-- Key Metrics Grid -->
  <div class="grid-modern grid-modern-4 mb-8">
    <!-- Total Value Card -->
    <div class="stat-card-modern animate-fadeIn" style="animation-delay: 0.1s;">
      <div class="stat-card-icon">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <div class="stat-card-label">Total Portfolio Value</div>
      <div class="stat-card-value"><%= fmt.money(totals.value || 0) %></div>
      <div class="stat-card-change <%= (totals.gain || 0) >= 0 ? 'positive' : 'negative' %>">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= (totals.gain || 0) >= 0 ? 'M13 7h8m0 0v8m0-8l-8 8-4-4-6 6' : 'M13 17h8m0 0V9m0 8l-8-8-4 4-6-6' %>" />
        </svg>
        <%= fmt.pct((totals.gain || 0) / (totals.cost || 1) * 100) %>
      </div>
    </div>

    <!-- Total Gain/Loss Card -->
    <div class="stat-card-modern animate-fadeIn" style="animation-delay: 0.2s;">
      <div class="stat-card-icon">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
        </svg>
      </div>
      <div class="stat-card-label">Total Gain/Loss</div>
      <div class="stat-card-value <%= (totals.gain || 0) >= 0 ? 'text-emerald-600' : 'text-rose-600' %>"><%= fmt.money(totals.gain || 0) %></div>
      <div class="stat-card-change <%= (totals.gain || 0) >= 0 ? 'positive' : 'negative' %>">
        Today: <%= fmt.pct(Math.random() * 5 - 2.5) %>
      </div>
    </div>

    <!-- Active Holdings Card -->
    <div class="stat-card-modern animate-fadeIn" style="animation-delay: 0.3s;">
      <div class="stat-card-icon">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
        </svg>
      </div>
      <div class="stat-card-label">Active Holdings</div>
      <div class="stat-card-value"><%= totals.holdings || 0 %></div>
      <div class="stat-card-change positive">
        Across <%= portfolios.length %> portfolios
      </div>
    </div>

    <!-- Annual Income Card -->
    <div class="stat-card-modern animate-fadeIn" style="animation-delay: 0.4s;">
      <div class="stat-card-icon">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <div class="stat-card-label">Annual Dividend Income</div>
      <div class="stat-card-value"><%= fmt.money(totals.income || 0) %></div>
      <div class="stat-card-change positive">
        <%= fmt.pct((totals.income || 0) / (totals.value || 1) * 100) %> Yield
      </div>
    </div>
  </div>

  <!-- Main Content Grid -->
  <div class="grid-modern grid-modern-3 gap-6">

    <!-- Portfolio Performance Chart (takes 2 columns) -->
    <div class="lg:col-span-2">
      <div class="chart-container-modern animate-fadeIn" style="animation-delay: 0.5s;">
        <div class="chart-header-modern">
          <div>
            <h3 class="chart-title-modern">Portfolio Performance</h3>
            <p class="text-sm text-slate-600 mt-1">Your portfolio value over time</p>
          </div>
          <div class="chart-controls-modern">
            <button class="btn-modern btn-modern-secondary btn-modern-sm">1D</button>
            <button class="btn-modern btn-modern-secondary btn-modern-sm">1W</button>
            <button class="btn-modern btn-modern-secondary btn-modern-sm">1M</button>
            <button class="btn-modern btn-modern-primary btn-modern-sm">1Y</button>
            <button class="btn-modern btn-modern-secondary btn-modern-sm">ALL</button>
          </div>
        </div>
        <div class="h-80">
          <canvas id="performanceChart"></canvas>
        </div>
      </div>
    </div>

    <!-- Asset Allocation Chart -->
    <div>
      <div class="chart-container-modern animate-fadeIn" style="animation-delay: 0.6s;">
        <div class="chart-header-modern">
          <div>
            <h3 class="chart-title-modern">Asset Allocation</h3>
            <p class="text-sm text-slate-600 mt-1">Distribution by type</p>
          </div>
        </div>
        <div class="h-80">
          <canvas id="allocationChart"></canvas>
        </div>
      </div>
    </div>

    <!-- Top Holdings -->
    <div class="lg:col-span-2">
      <div class="modern-card animate-fadeIn" style="animation-delay: 0.7s;">
        <div class="modern-card-header">
          <div>
            <h3 class="modern-card-title">Top Holdings</h3>
            <p class="modern-card-subtitle">Your best performing assets</p>
          </div>
          <a href="/holdings" class="btn-modern btn-modern-secondary btn-modern-sm">View All</a>
        </div>
        <div class="modern-card-body">
          <table class="table-modern">
            <thead>
              <tr>
                <th>Symbol</th>
                <th>Name</th>
                <th class="text-right">Shares</th>
                <th class="text-right">Value</th>
                <th class="text-right">Change</th>
                <th class="text-right">Weight</th>
              </tr>
            </thead>
            <tbody>
              <% if (portfolios && portfolios.length > 0 && portfolios[0].holdings) { %>
                <% portfolios[0].holdings.slice(0, 5).forEach(holding => { %>
                  <tr>
                    <td>
                      <span class="font-semibold text-primary-600"><%= holding.symbol %></span>
                    </td>
                    <td class="text-slate-600"><%= holding.name || holding.symbol %></td>
                    <td class="text-right font-mono"><%= (holding.shares || 0).toFixed(2) %></td>
                    <td class="text-right font-mono"><%= fmt.money((holding.shares || 0) * (holding.currentPrice || holding.avgCostBasis || 0)) %></td>
                    <td class="text-right">
                      <span class="badge-modern <%= Math.random() > 0.5 ? 'badge-modern-success' : 'badge-modern-danger' %>">
                        <%= fmt.pct(Math.random() * 10 - 5) %>
                      </span>
                    </td>
                    <td class="text-right font-mono"><%= ((holding.shares || 0) * (holding.currentPrice || holding.avgCostBasis || 0) / (totals.value || 1) * 100).toFixed(1) %>%</td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="6" class="text-center text-slate-500 py-8">
                    No holdings yet. Add your first portfolio to get started!
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Market Overview -->
    <div>
      <div class="modern-card animate-fadeIn" style="animation-delay: 0.8s;">
        <div class="modern-card-header">
          <div>
            <h3 class="modern-card-title">Market Overview</h3>
            <p class="modern-card-subtitle">Major indices today</p>
          </div>
        </div>
        <div class="modern-card-body space-y-4">
          <% if (indices && indices.length > 0) { %>
            <% indices.forEach(index => { %>
              <div class="flex items-center justify-between p-3 rounded-lg bg-slate-50 hover:bg-slate-100 transition">
                <div>
                  <div class="font-semibold text-slate-900"><%= index.symbol %></div>
                  <div class="text-sm text-slate-500"><%= index.name || index.symbol %></div>
                </div>
                <div class="text-right">
                  <div class="font-mono font-semibold"><%= fmt.money(index.price || 0) %></div>
                  <div class="text-sm <%= (index.change || 0) >= 0 ? 'text-emerald-600' : 'text-rose-600' %>">
                    <%= fmt.pct(index.changePercent || 0) %>
                  </div>
                </div>
              </div>
            <% }) %>
          <% } else { %>
            <p class="text-center text-slate-500 py-4">Market data unavailable</p>
          <% } %>
        </div>
      </div>
    </div>

  </div>

  <!-- Recent Activity -->
  <div class="mt-8">
    <div class="modern-card animate-fadeIn" style="animation-delay: 0.9s;">
      <div class="modern-card-header">
        <div>
          <h3 class="modern-card-title">Recent Activity</h3>
          <p class="modern-card-subtitle">Latest portfolio transactions</p>
        </div>
        <a href="/portfolio?view=transactions" class="btn-modern btn-modern-secondary btn-modern-sm">View All</a>
      </div>
      <div class="modern-card-body">
        <div class="space-y-3">
          <div class="flex items-center justify-between p-4 rounded-lg bg-slate-50 hover:bg-slate-100 transition">
            <div class="flex items-center gap-4">
              <div class="w-10 h-10 rounded-full bg-emerald-100 text-emerald-600 flex items-center justify-center font-bold">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
              </div>
              <div>
                <div class="font-semibold text-slate-900">Added 50 shares of AAPL</div>
                <div class="text-sm text-slate-500">2 hours ago</div>
              </div>
            </div>
            <div class="text-right">
              <div class="font-mono font-semibold"><%= fmt.money(7500) %></div>
              <div class="text-sm text-slate-500">@$150.00/share</div>
            </div>
          </div>

          <div class="flex items-center justify-between p-4 rounded-lg bg-slate-50 hover:bg-slate-100 transition">
            <div class="flex items-center gap-4">
              <div class="w-10 h-10 rounded-full bg-blue-100 text-blue-600 flex items-center justify-center font-bold">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <div class="font-semibold text-slate-900">Received dividend from MSFT</div>
                <div class="text-sm text-slate-500">1 day ago</div>
              </div>
            </div>
            <div class="text-right">
              <div class="font-mono font-semibold text-emerald-600">+<%= fmt.money(125.50) %></div>
              <div class="text-sm text-slate-500">Quarterly dividend</div>
            </div>
          </div>

          <div class="flex items-center justify-between p-4 rounded-lg bg-slate-50 hover:bg-slate-100 transition">
            <div class="flex items-center gap-4">
              <div class="w-10 h-10 rounded-full bg-rose-100 text-rose-600 flex items-center justify-center font-bold">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              </div>
              <div>
                <div class="font-semibold text-slate-900">Sold 100 shares of TSLA</div>
                <div class="text-sm text-slate-500">3 days ago</div>
              </div>
            </div>
            <div class="text-right">
              <div class="font-mono font-semibold"><%= fmt.money(25000) %></div>
              <div class="text-sm text-emerald-600">+15.5% gain</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>

<script>
// Initialize Performance Chart
const performanceCtx = document.getElementById('performanceChart');
if (performanceCtx) {
  new Chart(performanceCtx, {
    type: 'line',
    data: {
      labels: Array.from({length: 12}, (_, i) => {
        const d = new Date();
        d.setMonth(d.getMonth() - (11 - i));
        return d.toLocaleDateString('en-US', { month: 'short' });
      }),
      datasets: [{
        label: 'Portfolio Value',
        data: Array.from({length: 12}, () => Math.random() * 100000 + 400000),
        borderColor: 'rgb(99, 102, 241)',
        backgroundColor: 'rgba(99, 102, 241, 0.1)',
        borderWidth: 3,
        fill: true,
        tension: 0.4,
        pointRadius: 0,
        pointHoverRadius: 6,
        pointHoverBackgroundColor: 'rgb(99, 102, 241)',
        pointHoverBorderColor: '#fff',
        pointHoverBorderWidth: 3
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: {
          display: false
        },
        tooltip: {
          backgroundColor: '#1e293b',
          padding: 12,
          borderColor: '#334155',
          borderWidth: 1,
          titleFont: { size: 14, weight: '600' },
          bodyFont: { size: 13 },
          callbacks: {
            label: (context) => ` $${context.parsed.y.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2})}`
          }
        }
      },
      scales: {
        y: {
          beginAtZero: false,
          grid: {
            color: '#e2e8f0',
            drawBorder: false
          },
          ticks: {
            callback: (value) => '$' + (value / 1000).toFixed(0) + 'K',
            font: { family: 'JetBrains Mono' }
          }
        },
        x: {
          grid: {
            display: false,
            drawBorder: false
          }
        }
      }
    }
  });
}

// Initialize Allocation Chart
const allocationCtx = document.getElementById('allocationChart');
if (allocationCtx) {
  new Chart(allocationCtx, {
    type: 'doughnut',
    data: {
      labels: ['Stocks', 'ETFs', 'Bonds', 'Cash', 'Other'],
      datasets: [{
        data: [60, 25, 10, 3, 2],
        backgroundColor: [
          'rgb(99, 102, 241)',
          'rgb(16, 185, 129)',
          'rgb(239, 68, 68)',
          'rgb(245, 158, 11)',
          'rgb(6, 182, 212)'
        ],
        borderWidth: 0,
        hoverOffset: 8
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: {
          position: 'bottom',
          labels: {
            padding: 16,
            font: { size: 13, family: 'Inter' },
            usePointStyle: true,
            pointStyle: 'circle'
          }
        },
        tooltip: {
          backgroundColor: '#1e293b',
          padding: 12,
          borderColor: '#334155',
          borderWidth: 1,
          callbacks: {
            label: (context) => ` ${context.label}: ${context.parsed}%`
          }
        }
      }
    }
  });
}
</script>

<%- include('../partials/footer') %>
