  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    tailwind.config = {
      darkMode: "class",
      theme: {
        extend: {
          colors: {
            "primary": "#4850e5",
            "background-light": "#f6f6f8",
            "background-dark": "#0f1115",
            "card-dark": "#181b21",
            "border-dark": "#292a38",
            "text-secondary": "#9e9fb7",
            "accent-green": "#0bda65",
            "accent-red": "#fa6538",
          },
          fontFamily: {
            "display": ["Manrope", "sans-serif"]
          },
        },
      },
    }
