  function updateQuickMetrics() {
    if (portfolio.length === 0) {
      document.getElementById('quickBeta').textContent = '--';
      document.getElementById('quickYield').textContent = '--';
      document.getElementById('quickIncome').textContent = '$-- annual income';
      return;
    }

    const totalInvestment = parseFloat(document.getElementById('totalInvestment').value) || 100000;

    // Calculate weighted beta
    let weightedBeta = 0;
    let weightedYield = 0;
    let totalWeight = 0;

    portfolio.forEach(p => {
      const weight = p.allocation / 100;
      weightedBeta += (p.beta || 1) * weight;
      weightedYield += (p.dividendYield || 0) * weight;
      totalWeight += weight;
    });

    if (totalWeight > 0) {
      weightedBeta = weightedBeta / totalWeight * totalWeight; // Normalize
      weightedYield = weightedYield / totalWeight * totalWeight;
    }

    const annualIncome = (weightedYield / 100) * totalInvestment;

    document.getElementById('quickBeta').textContent = weightedBeta.toFixed(2);
    document.getElementById('quickYield').textContent = weightedYield.toFixed(2) + '%';
    document.getElementById('quickIncome').textContent = formatMoney(annualIncome, 0) + ' annual income';
  }

