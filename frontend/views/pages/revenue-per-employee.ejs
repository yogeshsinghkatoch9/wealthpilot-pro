// Sparkline
function drawSparkline(canvasId, holding) {
  const canvas = document.getElementById(canvasId);
  if (!canvas) return;

  const ctx = canvas.getContext('2d');
  const width = canvas.width;
  const height = canvas.height;
  ctx.clearRect(0, 0, width, height);

  const isUp = holding.yoyChange >= 0;
  const points = [];
  const base = holding.revPerEmployee || 1e6;

  for (let i = 0; i < 12; i++) {
    const trend = isUp ? (i / 11) * 0.3 : -(i / 11) * 0.2;
    points.push(base * (0.7 + trend + (Math.random() - 0.5) * 0.15));
  }

  const min = Math.min(...points), max = Math.max(...points), range = max - min || 1;

  const gradient = ctx.createLinearGradient(0, 0, 0, height);
  gradient.addColorStop(0, isUp ? 'rgba(16, 185, 129, 0.4)' : 'rgba(239, 68, 68, 0.4)');
  gradient.addColorStop(1, 'transparent');

  ctx.beginPath();
  ctx.moveTo(0, height);
  points.forEach((p, i) => ctx.lineTo((i / 11) * width, height - ((p - min) / range) * (height - 6) - 3));
  ctx.lineTo(width, height);
  ctx.closePath();
  ctx.fillStyle = gradient;
  ctx.fill();

  ctx.beginPath();
  points.forEach((p, i) => {
    const x = (i / 11) * width, y = height - ((p - min) / range) * (height - 6) - 3;
    i === 0 ? ctx.moveTo(x, y) : ctx.lineTo(x, y);
  });
  ctx.strokeStyle = isUp ? '#10b981' : '#ef4444';
  ctx.lineWidth = 2;
  ctx.stroke();
}

