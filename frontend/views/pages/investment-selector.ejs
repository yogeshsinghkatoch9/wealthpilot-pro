<script>
  // State
  let portfolio = [];
  let selectedInvestment = null;
  let searchTimeout = null;
  let allocationChart = null;
  let holdingsChart = null;
  let returnsChart = null;
  let currentAnalysisData = null;
  let currentSavedPortfolioId = null;

  const serverToken = `<%= token || "" %>`;

  function getToken() {
    return serverToken || '';
  }

  async function authFetch(url, options = {}) {
    const token = getToken();
    const headers = {
      'Content-Type': 'application/json',
      ...options.headers
    };
    if (token) {
      headers['Authorization'] = `Bearer ${token}`;
    }
    return fetch(url, { ...options, headers });
  }

  // Format helpers
  function formatMoney(value, decimals = 0) {
    if (value === null || value === undefined) return '--';
    return '$' + Number(value).toLocaleString('en-US', { minimumFractionDigits: decimals, maximumFractionDigits: decimals });
  }

  function formatPercent(value, decimals = 2) {
    if (value === null || value === undefined) return '--';
    const num = Number(value);
    const sign = num >= 0 ? '+' : '';
    return sign + num.toFixed(decimals) + '%';
  }

  function formatMarketCap(value) {
    if (!value) return '--';
    if (value >= 1e12) return '$' + (value / 1e12).toFixed(2) + 'T';
    if (value >= 1e9) return '$' + (value / 1e9).toFixed(2) + 'B';
    if (value >= 1e6) return '$' + (value / 1e6).toFixed(2) + 'M';
    return '$' + value.toLocaleString();
  }

  // Chart initialization
  function initAllocationChart() {
    const ctx = document.getElementById('allocationChart').getContext('2d');
    allocationChart = new Chart(ctx, {
      type: 'doughnut',
      data: {
        labels: ['Equity', 'Fixed Income', 'Other'],
        datasets: [{
          data: [0, 0, 0],
          backgroundColor: ['#10b981', '#3b82f6', '#8b5cf6'],
          borderColor: '#1e293b',
          borderWidth: 2
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            position: 'bottom',
            labels: {
              color: '#94a3b8',
              font: { size: 11 }
            }
          }
        }
      }
    });
  }

  // Search functionality
  function debounceSearch(query) {
    clearTimeout(searchTimeout);
    if (query.length < 1) {
      document.getElementById('searchResults').classList.add('hidden');
      return;
    }
    searchTimeout = setTimeout(() => searchInvestments(query), 300);
  }

  async function searchInvestments(query) {
    try {
      const response = await authFetch(`/api/investment-selector/search?q=${encodeURIComponent(query)}`);
      const data = await response.json();

      const resultsDiv = document.getElementById('searchResults');
      if (!data.success || !data.results || data.results.length === 0) {
        resultsDiv.innerHTML = '<div class="p-4 text-slate-400 text-center">No results found</div>';
        resultsDiv.classList.remove('hidden');
        return;
      }

      resultsDiv.innerHTML = data.results.map(r => `
        <div class="p-3 hover:bg-slate-700 cursor-pointer border-b border-slate-700 last:border-0"
             onclick="selectInvestment('${r.symbol}')">
          <div class="flex items-center justify-between">
            <div>
              <span class="font-bold text-amber-400">${r.symbol}</span>
              <span class="text-slate-400 ml-2">${r.name || r.description || ''}</span>
            </div>
            <span class="text-xs text-slate-500">${r.type || 'Stock'}</span>
          </div>
        </div>
      `).join('');
      resultsDiv.classList.remove('hidden');
    } catch (err) {
      console.error('Search error:', err);
    }
  }

  async function selectInvestment(symbol) {
    document.getElementById('searchResults').classList.add('hidden');
    document.getElementById('searchInput').value = symbol;

    try {
      const response = await authFetch(`/api/investment-selector/details/${symbol}`);
      const data = await response.json();

      if (!data.success) {
        alert('Failed to get investment details: ' + (data.error || 'Unknown error'));
        return;
      }

      selectedInvestment = data.data;
      displayInvestmentDetails(data.data);
    } catch (err) {
      console.error('Error getting details:', err);
      alert('Failed to get investment details');
    }
  }

  function displayInvestmentDetails(inv) {
    document.getElementById('detailSymbol').textContent = inv.symbol;
    document.getElementById('detailName').textContent = inv.name || inv.symbol;
    document.getElementById('detailCategory').textContent = inv.category || 'Stock';
    document.getElementById('detailAssetClass').textContent = inv.assetClass || 'Stocks';
    document.getElementById('detailSector').textContent = inv.sector || inv.industry || '--';
    document.getElementById('detailPrice').textContent = formatMoney(inv.price, 2);

    const changeEl = document.getElementById('detailChange');
    const changeVal = inv.change || 0;
    const changePct = inv.changePercent || 0;
    changeEl.textContent = `${changeVal >= 0 ? '+' : ''}${changeVal.toFixed(2)} (${changePct >= 0 ? '+' : ''}${changePct.toFixed(2)}%)`;
    changeEl.className = `text-sm font-mono ${changeVal >= 0 ? 'text-emerald-400' : 'text-red-400'}`;

    document.getElementById('detailPE').textContent = inv.pe ? inv.pe.toFixed(2) : '--';
    document.getElementById('detailDividend').textContent = inv.dividendYield ? inv.dividendYield.toFixed(2) + '%' : '0%';
    document.getElementById('detailMarketCap').textContent = formatMarketCap(inv.marketCap);
    document.getElementById('detailBeta').textContent = inv.beta ? inv.beta.toFixed(2) : '--';
    document.getElementById('detail52High').textContent = inv.week52High ? formatMoney(inv.week52High, 2) : '--';
    document.getElementById('detail52Low').textContent = inv.week52Low ? formatMoney(inv.week52Low, 2) : '--';

    if (inv.description) {
      document.getElementById('detailDescription').textContent = inv.description;
      document.getElementById('detailDescriptionBox').classList.remove('hidden');
    } else {
      document.getElementById('detailDescriptionBox').classList.add('hidden');
    }

    document.getElementById('investmentDetails').classList.remove('hidden');
  }

  function addToPortfolio() {
    if (!selectedInvestment) {
      alert('Please select an investment first');
      return;
    }

    const allocation = parseFloat(document.getElementById('allocationInput').value) || 0;
    if (allocation <= 0 || allocation > 100) {
      alert('Allocation must be between 0.1% and 100%');
      return;
    }

    // Check if already in portfolio
    const existingIdx = portfolio.findIndex(p => p.symbol === selectedInvestment.symbol);
    if (existingIdx >= 0) {
      if (confirm(`${selectedInvestment.symbol} is already in portfolio. Update allocation?`)) {
        portfolio[existingIdx].allocation = allocation;
      } else {
        return;
      }
    } else {
      // Check total allocation
      const currentTotal = portfolio.reduce((sum, p) => sum + p.allocation, 0);
      if (currentTotal + allocation > 100) {
        alert(`Cannot add ${allocation}% - would exceed 100% total allocation. Current: ${currentTotal.toFixed(2)}%`);
        return;
      }

      portfolio.push({
        symbol: selectedInvestment.symbol,
        name: selectedInvestment.name,
        category: selectedInvestment.category,
        assetClass: selectedInvestment.assetClass,
        allocation: allocation,
        price: selectedInvestment.price,
        dividendYield: selectedInvestment.dividendYield || 0,
        beta: selectedInvestment.beta || 1
      });
    }

    updatePortfolioTable();
    updateAllocationBars();
    updateAllocationChart();
    document.getElementById('analyzeBtn').disabled = portfolio.length === 0;
    document.getElementById('saveBtn').disabled = portfolio.length === 0;

    // Clear selection
    document.getElementById('investmentDetails').classList.add('hidden');
    document.getElementById('searchInput').value = '';
    selectedInvestment = null;
  }

  function removeFromPortfolio(symbol) {
    portfolio = portfolio.filter(p => p.symbol !== symbol);
    updatePortfolioTable();
    updateAllocationBars();
    updateAllocationChart();
    document.getElementById('analyzeBtn').disabled = portfolio.length === 0;
    document.getElementById('saveBtn').disabled = portfolio.length === 0;
    document.getElementById('metricsSection').classList.add('hidden');
  }

  function updatePortfolioTable() {
    const tbody = document.getElementById('portfolioTableBody');
    const footer = document.getElementById('portfolioFooter');
    const emptyRow = document.getElementById('emptyPortfolioRow');
    const totalInvestment = parseFloat(document.getElementById('totalInvestment').value) || 100000;

    if (portfolio.length === 0) {
      emptyRow.classList.remove('hidden');
      footer.classList.add('hidden');
      document.getElementById('chartPlaceholder').classList.remove('hidden');
      return;
    }

    emptyRow.classList.add('hidden');
    footer.classList.remove('hidden');
    document.getElementById('chartPlaceholder').classList.add('hidden');

    let totalAlloc = 0;
    let totalInvested = 0;
    let totalIncome = 0;

    tbody.innerHTML = portfolio.map(p => {
      const invested = (p.allocation / 100) * totalInvestment;
      const income = (p.dividendYield / 100) * invested;
      totalAlloc += p.allocation;
      totalInvested += invested;
      totalIncome += income;

      return `
        <tr class="border-b border-slate-700/50 hover:bg-slate-800/30">
          <td class="py-3">
            <div class="flex items-center gap-2">
              <span class="text-white font-medium">${p.name}</span>
              <span class="text-xs text-slate-500">${p.category}</span>
            </div>
          </td>
          <td class="py-3 font-mono text-amber-400">${p.symbol}</td>
          <td class="py-3 text-right">
            <input type="number" value="${p.allocation}" min="0.1" max="100" step="0.1"
                   class="w-20 bg-slate-800 border border-slate-600 rounded px-2 py-1 text-right font-mono text-white"
                   onchange="updateAllocation('${p.symbol}', this.value)">
            <span class="text-slate-400">%</span>
          </td>
          <td class="py-3 text-right font-mono text-white">${formatMoney(invested)}</td>
          <td class="py-3 text-right font-mono text-purple-400">${formatMoney(income, 2)}</td>
          <td class="py-3 text-center">
            <button onclick="removeFromPortfolio('${p.symbol}')" class="text-red-400 hover:text-red-300">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
              </svg>
            </button>
          </td>
        </tr>
      `;
    }).join('');

    // Update footer
    document.getElementById('footerAllocation').textContent = totalAlloc.toFixed(2) + '%';
    document.getElementById('footerAllocation').className = `py-3 text-right font-mono ${Math.abs(totalAlloc - 100) < 0.01 ? 'text-emerald-400' : 'text-amber-400'}`;
    document.getElementById('footerInvested').textContent = formatMoney(totalInvested);
    document.getElementById('footerIncome').textContent = formatMoney(totalIncome, 2);
  }

  function updateAllocation(symbol, newValue) {
    const idx = portfolio.findIndex(p => p.symbol === symbol);
    if (idx >= 0) {
      const newAlloc = parseFloat(newValue) || 0;
      const otherTotal = portfolio.reduce((sum, p, i) => i === idx ? sum : sum + p.allocation, 0);

      if (otherTotal + newAlloc > 100) {
        alert(`Cannot set to ${newAlloc}% - would exceed 100% total`);
        updatePortfolioTable();
        return;
      }

      portfolio[idx].allocation = newAlloc;
      updatePortfolioTable();
      updateAllocationBars();
      updateAllocationChart();
      document.getElementById('metricsSection').classList.add('hidden');
    }
  }

  function updatePortfolioValues() {
    updatePortfolioTable();
  }

  function updateAllocationBars() {
    let equity = 0, fixedIncome = 0, other = 0;

    portfolio.forEach(p => {
      const asset = (p.assetClass || '').toLowerCase();
      if (asset.includes('bond') || asset.includes('fixed')) {
        fixedIncome += p.allocation;
      } else if (asset.includes('alt') || asset.includes('other') ||
                 p.symbol.includes('GLD') || p.symbol.includes('SLV') || p.symbol.includes('REIT')) {
        other += p.allocation;
      } else {
        equity += p.allocation;
      }
    });

    const total = equity + fixedIncome + other;

    document.getElementById('equityBar').style.width = equity + '%';
    document.getElementById('equityPct').textContent = equity.toFixed(1) + '%';
    document.getElementById('fixedIncomeBar').style.width = fixedIncome + '%';
    document.getElementById('fixedIncomePct').textContent = fixedIncome.toFixed(1) + '%';
    document.getElementById('otherBar').style.width = other + '%';
    document.getElementById('otherPct').textContent = other.toFixed(1) + '%';
    document.getElementById('totalPct').textContent = total.toFixed(1) + '%';
    document.getElementById('totalPct').className = `font-mono font-bold ${Math.abs(total - 100) < 0.01 ? 'text-emerald-400' : 'text-amber-400'}`;
  }

  function updateAllocationChart() {
    if (!allocationChart) return;

    let equity = 0, fixedIncome = 0, other = 0;
    portfolio.forEach(p => {
      const asset = (p.assetClass || '').toLowerCase();
      if (asset.includes('bond') || asset.includes('fixed')) {
        fixedIncome += p.allocation;
      } else if (asset.includes('alt') || asset.includes('other') ||
                 p.symbol.includes('GLD') || p.symbol.includes('SLV') || p.symbol.includes('REIT')) {
        other += p.allocation;
      } else {
        equity += p.allocation;
      }
    });

    allocationChart.data.datasets[0].data = [equity, fixedIncome, other];
    allocationChart.update();
  }

  function clearAll() {
    if (portfolio.length > 0 && !confirm('Clear all investments from portfolio?')) {
      return;
    }
    portfolio = [];
    selectedInvestment = null;
    currentAnalysisData = null;
    currentSavedPortfolioId = null;
    document.getElementById('investmentDetails').classList.add('hidden');
    document.getElementById('searchInput').value = '';
    document.getElementById('metricsSection').classList.add('hidden');
    document.getElementById('analyzeBtn').disabled = true;
    document.getElementById('saveBtn').disabled = true;
    updatePortfolioTable();
    updateAllocationBars();
    updateAllocationChart();
  }

  async function analyzePortfolio() {
    if (portfolio.length === 0) {
      alert('Please add investments to your portfolio first');
      return;
    }

    const totalAlloc = portfolio.reduce((sum, p) => sum + p.allocation, 0);
    if (Math.abs(totalAlloc - 100) > 0.5) {
      if (!confirm(`Total allocation is ${totalAlloc.toFixed(2)}%. Continue anyway?`)) {
        return;
      }
    }

    const totalInvestment = parseFloat(document.getElementById('totalInvestment').value) || 100000;

    const btn = document.getElementById('analyzeBtn');
    btn.disabled = true;
    btn.innerHTML = '<svg class="w-4 h-4 animate-spin" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg> ANALYZING...';

    try {
      const response = await authFetch('/api/investment-selector/analyze-portfolio', {
        method: 'POST',
        body: JSON.stringify({
          investments: portfolio.map(p => ({ symbol: p.symbol, allocation: p.allocation })),
          totalInvestment
        })
      });

      const data = await response.json();

      if (!data.success) {
        alert('Analysis failed: ' + (data.error || 'Unknown error'));
        return;
      }

      currentAnalysisData = data.data;
      displayMetrics(data.data);
    } catch (err) {
      console.error('Analysis error:', err);
      alert('Failed to analyze portfolio');
    } finally {
      btn.disabled = false;
      btn.innerHTML = '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/></svg> ANALYZE PORTFOLIO';
    }
  }

  function displayMetrics(data) {
    const returns = data.returns || {};
    const metrics = data.metrics || {};

    // Historical returns
    const setReturn = (id, value) => {
      const el = document.getElementById(id);
      if (value !== null && value !== undefined) {
        el.textContent = formatPercent(value);
        el.className = `font-mono font-bold text-lg ${Number(value) >= 0 ? 'text-emerald-400' : 'text-red-400'}`;
      } else {
        el.textContent = '--';
        el.className = 'font-mono font-bold text-lg text-slate-400';
      }
    };

    setReturn('return1yr', returns.year1);
    setReturn('return3yr', returns.year3);
    setReturn('return5yr', returns.year5);
    setReturn('return10yr', returns.year10);

    // Beta
    document.getElementById('portfolioBeta').textContent = metrics.beta || '--';

    // Yield
    document.getElementById('portfolioYield').textContent = metrics.yield ? metrics.yield + '%' : '--';
    document.getElementById('projectedAnnualIncome').textContent = formatMoney(metrics.totalProjectedIncome, 2);

    // Update allocation bars with analyzed data
    if (data.allocation) {
      document.getElementById('equityBar').style.width = data.allocation.equity + '%';
      document.getElementById('equityPct').textContent = data.allocation.equity + '%';
      document.getElementById('fixedIncomeBar').style.width = data.allocation.fixedIncome + '%';
      document.getElementById('fixedIncomePct').textContent = data.allocation.fixedIncome + '%';
      document.getElementById('otherBar').style.width = data.allocation.other + '%';
      document.getElementById('otherPct').textContent = data.allocation.other + '%';

      // Update allocation chart
      if (allocationChart) {
        allocationChart.data.datasets[0].data = [
          parseFloat(data.allocation.equity) || 0,
          parseFloat(data.allocation.fixedIncome) || 0,
          parseFloat(data.allocation.other) || 0
        ];
        allocationChart.update();
      }
    }

    // Create/update holdings chart
    createHoldingsChart(data.investments || []);

    // Create/update returns chart
    createReturnsChart(returns);

    document.getElementById('metricsSection').classList.remove('hidden');
    document.getElementById('metricsSection').scrollIntoView({ behavior: 'smooth' });
  }

  function createHoldingsChart(investments) {
    const ctx = document.getElementById('holdingsChart').getContext('2d');

    if (holdingsChart) {
      holdingsChart.destroy();
    }

    const colors = [
      '#f59e0b', '#10b981', '#3b82f6', '#8b5cf6', '#ef4444',
      '#14b8a6', '#f97316', '#6366f1', '#ec4899', '#84cc16'
    ];

    holdingsChart = new Chart(ctx, {
      type: 'pie',
      data: {
        labels: investments.map(inv => inv.symbol),
        datasets: [{
          data: investments.map(inv => inv.allocation),
          backgroundColor: colors.slice(0, investments.length),
          borderColor: '#1e293b',
          borderWidth: 2
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            position: 'right',
            labels: {
              color: '#94a3b8',
              font: { size: 11 },
              boxWidth: 12
            }
          },
          tooltip: {
            callbacks: {
              label: (ctx) => `${ctx.label}: ${ctx.parsed.toFixed(1)}%`
            }
          }
        }
      }
    });
  }

  function createReturnsChart(returns) {
    const ctx = document.getElementById('returnsChart').getContext('2d');

    if (returnsChart) {
      returnsChart.destroy();
    }

    const labels = ['1 Year', '3 Year', '5 Year', '10 Year'];
    const values = [
      parseFloat(returns.year1) || 0,
      parseFloat(returns.year3) || 0,
      parseFloat(returns.year5) || 0,
      parseFloat(returns.year10) || 0
    ];

    returnsChart = new Chart(ctx, {
      type: 'bar',
      data: {
        labels: labels,
        datasets: [{
          label: 'Return %',
          data: values,
          backgroundColor: values.map(v => v >= 0 ? '#10b981' : '#ef4444'),
          borderRadius: 4
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        scales: {
          y: {
            beginAtZero: true,
            grid: { color: '#334155' },
            ticks: {
              color: '#94a3b8',
              callback: (v) => v + '%'
            }
          },
          x: {
            grid: { display: false },
            ticks: { color: '#94a3b8' }
          }
        },
        plugins: {
          legend: { display: false },
          tooltip: {
            callbacks: {
              label: (ctx) => `${ctx.parsed.y >= 0 ? '+' : ''}${ctx.parsed.y.toFixed(2)}%`
            }
          }
        }
      }
    });
  }

  // Save/Load Portfolio Functions
  function savePortfolio() {
    if (portfolio.length === 0) {
      alert('Please add investments to your portfolio first');
      return;
    }
    document.getElementById('savePortfolioModal').classList.remove('hidden');
  }

  function closeSaveModal() {
    document.getElementById('savePortfolioModal').classList.add('hidden');
  }

  async function confirmSavePortfolio() {
    const name = document.getElementById('savePortfolioName').value.trim();
    const description = document.getElementById('savePortfolioDesc').value.trim();

    if (!name) {
      alert('Please enter a portfolio name');
      return;
    }

    const totalInvestment = parseFloat(document.getElementById('totalInvestment').value) || 100000;

    let equity = 0, fixedIncome = 0, other = 0;
    portfolio.forEach(p => {
      const asset = (p.assetClass || '').toLowerCase();
      if (asset.includes('bond') || asset.includes('fixed')) {
        fixedIncome += p.allocation;
      } else if (asset.includes('alt') || asset.includes('other') ||
                 p.symbol.includes('GLD') || p.symbol.includes('SLV') || p.symbol.includes('REIT')) {
        other += p.allocation;
      } else {
        equity += p.allocation;
      }
    });

    const payload = {
      name,
      description,
      totalInvestment,
      investments: portfolio.map(p => ({
        symbol: p.symbol,
        name: p.name,
        allocation: p.allocation,
        currentPrice: p.price,
        dividendYield: p.dividendYield,
        beta: p.beta,
        sector: p.sector || 'Unknown'
      })),
      allocation: { equity, fixedIncome, other },
      metrics: currentAnalysisData?.metrics || {},
      returns: currentAnalysisData?.returns || {}
    };

    try {
      const response = await authFetch('/api/investment-selector/save', {
        method: 'POST',
        body: JSON.stringify(payload)
      });

      const data = await response.json();

      if (!data.success) {
        alert('Failed to save: ' + (data.error || 'Unknown error'));
        return;
      }

      currentSavedPortfolioId = data.data.id;
      alert('Portfolio saved successfully!');
      closeSaveModal();
    } catch (err) {
      console.error('Save error:', err);
      alert('Failed to save portfolio');
    }
  }

  async function loadSavedPortfolios() {
    document.getElementById('savedPortfoliosModal').classList.remove('hidden');
    const listDiv = document.getElementById('savedPortfoliosList');
    listDiv.innerHTML = '<p class="text-center text-slate-400">Loading...</p>';

    try {
      const response = await authFetch('/api/investment-selector/saved');
      const data = await response.json();

      if (!data.success || data.count === 0) {
        listDiv.innerHTML = '<p class="text-center text-slate-400">No saved portfolios found</p>';
        return;
      }

      listDiv.innerHTML = data.data.map(p => `
        <div class="p-4 border border-slate-700 rounded-lg mb-3 hover:border-amber-400/50 transition-colors">
          <div class="flex justify-between items-start">
            <div>
              <h4 class="font-bold text-white">${p.name}</h4>
              <p class="text-sm text-slate-400">${p.description || 'No description'}</p>
              <div class="flex gap-4 mt-2 text-xs">
                <span class="text-emerald-400">Equity: ${p.allocation?.equity || 0}%</span>
                <span class="text-blue-400">Fixed: ${p.allocation?.fixedIncome || 0}%</span>
                <span class="text-purple-400">Other: ${p.allocation?.other || 0}%</span>
              </div>
              <p class="text-xs text-slate-500 mt-1">Investment: ${formatMoney(p.totalInvestment)}</p>
            </div>
            <div class="flex gap-2">
              <button onclick="loadPortfolio('${p.id}')" class="bloomberg-btn bloomberg-btn-primary text-xs">LOAD</button>
              <button onclick="deletePortfolio('${p.id}')" class="bloomberg-btn bloomberg-btn-secondary text-xs text-red-400">DELETE</button>
            </div>
          </div>
        </div>
      `).join('');
    } catch (err) {
      console.error('Load error:', err);
      listDiv.innerHTML = '<p class="text-center text-red-400">Failed to load portfolios</p>';
    }
  }

  function closeSavedModal() {
    document.getElementById('savedPortfoliosModal').classList.add('hidden');
  }

  async function loadPortfolio(id) {
    try {
      const response = await authFetch(`/api/investment-selector/saved/${id}`);
      const data = await response.json();

      if (!data.success) {
        alert('Failed to load: ' + (data.error || 'Unknown error'));
        return;
      }

      const saved = data.data;

      // Set investment amount
      document.getElementById('totalInvestment').value = saved.totalInvestment;

      // Load investments into portfolio
      portfolio = saved.investments.map(inv => ({
        symbol: inv.symbol,
        name: inv.name,
        category: 'Stock',
        assetClass: 'Stocks',
        allocation: inv.allocation,
        price: inv.currentPrice || 0,
        dividendYield: inv.dividendYield || 0,
        beta: inv.beta || 1
      }));

      currentSavedPortfolioId = id;

      updatePortfolioTable();
      updateAllocationBars();
      updateAllocationChart();
      document.getElementById('analyzeBtn').disabled = false;
      document.getElementById('saveBtn').disabled = false;

      closeSavedModal();

      // Auto-analyze if we have previous analysis data
      if (saved.returns && saved.metrics) {
        currentAnalysisData = {
          returns: saved.returns,
          metrics: saved.metrics,
          allocation: saved.allocation,
          investments: saved.investments
        };
        displayMetrics(currentAnalysisData);
      }
    } catch (err) {
      console.error('Load error:', err);
      alert('Failed to load portfolio');
    }
  }

  async function deletePortfolio(id) {
    if (!confirm('Are you sure you want to delete this portfolio?')) {
      return;
    }

    try {
      const response = await authFetch(`/api/investment-selector/saved/${id}`, {
        method: 'DELETE'
      });

      const data = await response.json();

      if (!data.success) {
        alert('Failed to delete: ' + (data.error || 'Unknown error'));
        return;
      }

      loadSavedPortfolios(); // Refresh list
    } catch (err) {
      console.error('Delete error:', err);
      alert('Failed to delete portfolio');
    }
  }

  async function convertToRealPortfolio() {
    if (!currentSavedPortfolioId) {
      alert('Please save the portfolio first before converting');
      return;
    }

    if (!confirm('This will create a real portfolio with holdings based on your analysis. Continue?')) {
      return;
    }

    try {
      const response = await authFetch(`/api/investment-selector/saved/${currentSavedPortfolioId}/convert`, {
        method: 'POST'
      });

      const data = await response.json();

      if (!data.success) {
        alert('Failed to convert: ' + (data.error || 'Unknown error'));
        return;
      }

      alert(`Portfolio "${data.data.portfolioName}" created with ${data.data.holdingsCount} holdings!`);
      window.location.href = `/portfolios/${data.data.portfolioId}`;
    } catch (err) {
      console.error('Convert error:', err);
      alert('Failed to convert portfolio');
    }
  }

  // Close search results when clicking outside
  document.addEventListener('click', (e) => {
    const searchResults = document.getElementById('searchResults');
    const searchInput = document.getElementById('searchInput');
    if (!searchResults.contains(e.target) && e.target !== searchInput) {
      searchResults.classList.add('hidden');
    }
  });

  // Initialize on load
  document.addEventListener('DOMContentLoaded', () => {
    initAllocationChart();
  });
</script>
