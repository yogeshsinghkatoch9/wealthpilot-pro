<%- include('../partials/header', { pageTitle: 'Add Holding' }) %>
<%
  const safePortfolios = typeof portfolios !== 'undefined' && portfolios ? portfolios : [];
  const safeSelectedPortfolio = typeof selectedPortfolio !== 'undefined' ? selectedPortfolio : null;
%>

<!-- Bloomberg Header Bar -->
<div class="bloomberg-header-bar">
  <div class="max-w-7xl mx-auto flex items-center justify-between">
    <div class="flex items-center gap-4">
      <a href="/portfolios" class="text-slate-400 hover:text-white transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
      </a>
      <h1 class="text-green-400 text-lg font-bold tracking-wide">ADD NEW HOLDING</h1>
    </div>
  </div>
</div>

<div class="max-w-3xl mx-auto p-6 space-y-6">

  <!-- Form Card -->
  <div class="bloomberg-card">
    <div class="border-b border-slate-700 px-6 py-4">
      <h2 class="text-white font-bold text-lg">Transaction Details</h2>
      <p class="text-slate-400 text-sm mt-1">Add a new position to your portfolio</p>
    </div>

    <form id="addHoldingForm" class="p-6 space-y-6">
      <!-- Portfolio & Symbol Row -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Portfolio Select -->
        <div class="space-y-2">
          <label class="block text-sm font-medium text-slate-400">Portfolio</label>
          <select id="portfolioSelect" name="portfolio_id" required
            class="w-full bg-slate-800 border border-slate-600 rounded-lg px-4 py-3 text-white focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors">
            <% if (safePortfolios.length === 0) { %>
              <option value="">No portfolios available</option>
            <% } else { %>
              <option value="">Select a portfolio...</option>
              <% safePortfolios.forEach(p => { %>
                <option value="<%= p.id %>" <%= safeSelectedPortfolio && safeSelectedPortfolio.id === p.id ? 'selected' : '' %>>
                  <%= p.name %>
                </option>
              <% }) %>
            <% } %>
          </select>
        </div>

        <!-- Symbol Search -->
        <div class="space-y-2 relative">
          <label class="block text-sm font-medium text-slate-400">Symbol</label>
          <div class="relative">
            <input type="text" id="symbolInput" name="symbol" required autocomplete="off"
              class="w-full bg-slate-800 border border-slate-600 rounded-lg pl-10 pr-4 py-3 text-white uppercase placeholder-slate-500 focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors"
              placeholder="AAPL, MSFT, BTC...">
            <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
              <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
            </div>
            <div id="searchLoading" class="absolute inset-y-0 right-0 hidden items-center pr-3">
              <svg class="w-5 h-5 text-green-400 animate-spin" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
            </div>
          </div>
          <!-- Search Results Dropdown -->
          <div id="searchDropdown" class="absolute z-50 w-full mt-1 bg-slate-800 border border-slate-600 rounded-lg shadow-xl hidden max-h-64 overflow-y-auto">
            <div id="searchResults"></div>
          </div>
          <input type="hidden" id="assetName" name="name">
          <input type="hidden" id="assetType" name="asset_type" value="stock">
        </div>
      </div>

      <!-- Asset Info Banner (shown when symbol selected) -->
      <div id="assetInfo" class="hidden bg-gradient-to-r from-green-500/10 to-purple-500/10 border border-green-500/20 rounded-lg p-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-3">
            <div id="assetLogo" class="w-10 h-10 rounded-full bg-gradient-to-br from-green-500 to-purple-600 flex items-center justify-center text-white font-bold text-sm">
              --
            </div>
            <div>
              <p id="assetSymbol" class="text-white font-bold">--</p>
              <p id="assetFullName" class="text-slate-400 text-sm">--</p>
            </div>
          </div>
          <div class="text-right">
            <p id="assetPrice" class="text-white font-bold font-mono text-lg">$--</p>
            <p id="assetChange" class="text-sm font-mono">--</p>
          </div>
        </div>
      </div>

      <!-- Quantity, Price, Date Row -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Quantity -->
        <div class="space-y-2">
          <label class="block text-sm font-medium text-slate-400">Quantity (Shares)</label>
          <input type="number" id="quantity" name="quantity" required step="0.000001" min="0.000001"
            class="w-full bg-slate-800 border border-slate-600 rounded-lg px-4 py-3 text-white font-mono placeholder-slate-500 focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors"
            placeholder="0.00">
        </div>

        <!-- Purchase Price -->
        <div class="space-y-2">
          <label class="block text-sm font-medium text-slate-400">Purchase Price</label>
          <div class="relative">
            <span class="absolute inset-y-0 left-0 flex items-center pl-4 text-slate-400 font-medium">$</span>
            <input type="number" id="purchasePrice" name="purchase_price" required step="0.01" min="0.01"
              class="w-full bg-slate-800 border border-slate-600 rounded-lg pl-8 pr-4 py-3 text-white font-mono placeholder-slate-500 focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors"
              placeholder="0.00">
          </div>
        </div>

        <!-- Purchase Date -->
        <div class="space-y-2">
          <label class="block text-sm font-medium text-slate-400">Purchase Date</label>
          <input type="date" id="purchaseDate" name="purchase_date" required
            class="w-full bg-slate-800 border border-slate-600 rounded-lg px-4 py-3 text-white focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors [color-scheme:dark]">
        </div>
      </div>

      <!-- Total Cost Display -->
      <div class="bg-slate-800/50 border border-slate-700 rounded-lg p-4">
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-green-500/20 flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
              </svg>
            </div>
            <div class="min-w-0">
              <p class="text-slate-400 text-xs font-medium uppercase tracking-wider">Total Cost</p>
              <p id="totalCost" class="text-white text-xl font-bold font-mono truncate">$0.00</p>
            </div>
          </div>
          <div class="hidden sm:flex items-center gap-3 justify-end" id="marketValueSection">
            <div class="text-right min-w-0">
              <p class="text-slate-400 text-xs font-medium uppercase tracking-wider">Current Value</p>
              <p id="currentValue" class="text-emerald-400 text-xl font-bold font-mono truncate">$0.00</p>
            </div>
            <div class="w-10 h-10 rounded-full bg-emerald-500/20 flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
              </svg>
            </div>
          </div>
        </div>
      </div>

      <!-- Notes -->
      <div class="space-y-2">
        <label class="block text-sm font-medium text-slate-400">Notes <span class="text-slate-500">(optional)</span></label>
        <textarea id="notes" name="notes" rows="3"
          class="w-full bg-slate-800 border border-slate-600 rounded-lg px-4 py-3 text-white placeholder-slate-500 focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors resize-none"
          placeholder="Add notes about this purchase..."></textarea>
      </div>

      <!-- Action Buttons -->
      <div class="flex items-center justify-end gap-4 pt-4 border-t border-slate-700">
        <a href="/portfolios" class="px-6 py-3 text-slate-400 hover:text-white font-medium transition-colors">
          Cancel
        </a>
        <button type="submit" id="submitBtn"
          class="px-8 py-3 bg-green-600 hover:bg-green-500 text-white font-bold rounded-lg transition-all transform active:scale-95 flex items-center gap-2 disabled:opacity-50 disabled:cursor-not-allowed">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Add Holding
        </button>
      </div>
    </form>
  </div>

  <!-- Info Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div class="bloomberg-card p-4 flex items-start gap-3">
      <div class="w-8 h-8 rounded-lg bg-green-500/10 flex items-center justify-center flex-shrink-0">
        <svg class="w-4 h-4 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      <div>
        <h4 class="text-white font-bold text-sm">Tax Lot Tracking</h4>
        <p class="text-slate-400 text-xs mt-1">Each purchase is tracked as a separate tax lot for accurate cost basis calculations.</p>
      </div>
    </div>
    <div class="bloomberg-card p-4 flex items-start gap-3">
      <div class="w-8 h-8 rounded-lg bg-emerald-500/10 flex items-center justify-center flex-shrink-0">
        <svg class="w-4 h-4 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
        </svg>
      </div>
      <div>
        <h4 class="text-white font-bold text-sm">Auto Price Updates</h4>
        <p class="text-slate-400 text-xs mt-1">Prices update automatically during market hours for real-time portfolio tracking.</p>
      </div>
    </div>
  </div>
</div>

<script>
  // State
  let selectedAsset = null;
  let currentPrice = 0;
  let searchTimeout = null;

  // Elements
  const form = document.getElementById('addHoldingForm');
  const symbolInput = document.getElementById('symbolInput');
  const searchDropdown = document.getElementById('searchDropdown');
  const searchResults = document.getElementById('searchResults');
  const searchLoading = document.getElementById('searchLoading');
  const assetInfo = document.getElementById('assetInfo');
  const quantityInput = document.getElementById('quantity');
  const priceInput = document.getElementById('purchasePrice');
  const dateInput = document.getElementById('purchaseDate');
  const submitBtn = document.getElementById('submitBtn');

  // Set default date to today
  dateInput.valueAsDate = new Date();

  // Format currency
  function formatCurrency(value) {
    return new Intl.NumberFormat('en-US', {
      style: 'currency',
      currency: 'USD',
      minimumFractionDigits: 2
    }).format(value);
  }

  // Update total cost
  function updateTotalCost() {
    const qty = parseFloat(quantityInput.value) || 0;
    const price = parseFloat(priceInput.value) || 0;
    const total = qty * price;
    document.getElementById('totalCost').textContent = formatCurrency(total);

    // Update current market value if we have a current price
    const marketSection = document.getElementById('marketValueSection');
    if (currentPrice > 0 && qty > 0) {
      const marketValue = qty * currentPrice;
      document.getElementById('currentValue').textContent = formatCurrency(marketValue);
      marketSection.classList.remove('hidden');
      marketSection.classList.add('sm:flex');
    } else {
      marketSection.classList.add('hidden');
      marketSection.classList.remove('sm:flex');
    }
  }

  // Search for stocks
  async function searchStocks(query) {
    if (!query || query.length < 1) {
      searchDropdown.classList.add('hidden');
      return;
    }

    searchLoading.classList.remove('hidden');
    searchLoading.classList.add('flex');

    try {
      const response = await fetch(`/api/market/search?q=${encodeURIComponent(query)}`, {
        credentials: 'include'
      });

      if (response.ok) {
        const data = await response.json();
        displaySearchResults(data.results || [], query);
      }
    } catch (error) {
      console.error('Search error:', error);
      // Show manual entry option
      displaySearchResults([], query);
    } finally {
      searchLoading.classList.add('hidden');
      searchLoading.classList.remove('flex');
    }
  }

  // Display search results
  function displaySearchResults(results, query) {
    searchResults.innerHTML = '';

    if (results.length > 0) {
      results.forEach(result => {
        const item = document.createElement('button');
        item.type = 'button';
        item.className = 'w-full px-4 py-3 flex items-center justify-between hover:bg-slate-700 transition-colors text-left';
        item.innerHTML = `
          <div>
            <p class="text-white font-bold">${result.symbol}</p>
            <p class="text-slate-400 text-sm">${result.name || result.symbol}</p>
          </div>
          <div class="text-right">
            <p class="text-white font-mono">${formatCurrency(result.price || 0)}</p>
            <p class="${(result.changePercent || 0) >= 0 ? 'text-emerald-400' : 'text-red-400'} text-sm font-mono">
              ${(result.changePercent || 0) >= 0 ? '+' : ''}${(result.changePercent || 0).toFixed(2)}%
            </p>
          </div>
        `;
        item.addEventListener('click', () => selectAsset(result));
        searchResults.appendChild(item);
      });
    }

    // Always show manual entry option
    const manualItem = document.createElement('button');
    manualItem.type = 'button';
    manualItem.className = 'w-full px-4 py-3 flex items-center gap-3 hover:bg-slate-700 transition-colors text-left border-t border-slate-700';
    manualItem.innerHTML = `
      <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      <div>
        <p class="text-white font-medium">Add "${query.toUpperCase()}" manually</p>
        <p class="text-slate-400 text-xs">Enter price and quantity yourself</p>
      </div>
    `;
    manualItem.addEventListener('click', () => {
      selectManualAsset(query.toUpperCase());
    });
    searchResults.appendChild(manualItem);

    searchDropdown.classList.remove('hidden');
  }

  // Select asset from search
  function selectAsset(asset) {
    selectedAsset = asset;
    currentPrice = asset.price || 0;

    symbolInput.value = asset.symbol;
    document.getElementById('assetName').value = asset.name || asset.symbol;

    // Update asset info display
    document.getElementById('assetLogo').textContent = asset.symbol.substring(0, 2);
    document.getElementById('assetSymbol').textContent = asset.symbol;
    document.getElementById('assetFullName').textContent = asset.name || asset.symbol;
    document.getElementById('assetPrice').textContent = formatCurrency(asset.price || 0);

    const changeEl = document.getElementById('assetChange');
    const change = asset.changePercent || 0;
    changeEl.textContent = `${change >= 0 ? '+' : ''}${change.toFixed(2)}%`;
    changeEl.className = `text-sm font-mono ${change >= 0 ? 'text-emerald-400' : 'text-red-400'}`;

    assetInfo.classList.remove('hidden');
    searchDropdown.classList.add('hidden');

    // Pre-fill current price as purchase price if empty
    if (!priceInput.value) {
      priceInput.value = (asset.price || 0).toFixed(2);
      updateTotalCost();
    }

    quantityInput.focus();
  }

  // Select manual asset
  function selectManualAsset(symbol) {
    selectedAsset = { symbol, name: symbol };
    currentPrice = 0;

    symbolInput.value = symbol;
    document.getElementById('assetName').value = symbol;
    document.getElementById('assetType').value = 'stock';

    assetInfo.classList.add('hidden');
    searchDropdown.classList.add('hidden');

    priceInput.focus();
  }

  // Event listeners
  symbolInput.addEventListener('input', (e) => {
    clearTimeout(searchTimeout);
    const query = e.target.value.trim();

    if (query.length >= 1) {
      searchTimeout = setTimeout(() => searchStocks(query), 300);
    } else {
      searchDropdown.classList.add('hidden');
    }
  });

  symbolInput.addEventListener('focus', () => {
    if (symbolInput.value.length >= 1) {
      searchStocks(symbolInput.value);
    }
  });

  // Close dropdown on outside click
  document.addEventListener('click', (e) => {
    if (!symbolInput.contains(e.target) && !searchDropdown.contains(e.target)) {
      searchDropdown.classList.add('hidden');
    }
  });

  // Update total on input changes
  quantityInput.addEventListener('input', updateTotalCost);
  priceInput.addEventListener('input', updateTotalCost);

  // Form submission
  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    const data = {
      portfolio_id: formData.get('portfolio_id'),
      symbol: formData.get('symbol').toUpperCase(),
      name: formData.get('name') || formData.get('symbol').toUpperCase(),
      asset_type: formData.get('asset_type') || 'stock',
      quantity: parseFloat(formData.get('quantity')),
      purchase_price: parseFloat(formData.get('purchase_price')),
      purchase_date: formData.get('purchase_date'),
      notes: formData.get('notes') || ''
    };

    // Validation
    if (!data.portfolio_id) {
      showToast?.('Please select a portfolio', 'error') || alert('Please select a portfolio');
      return;
    }
    if (!data.symbol) {
      showToast?.('Please enter a symbol', 'error') || alert('Please enter a symbol');
      return;
    }
    if (!data.quantity || data.quantity <= 0) {
      showToast?.('Please enter a valid quantity', 'error') || alert('Please enter a valid quantity');
      return;
    }
    if (!data.purchase_price || data.purchase_price <= 0) {
      showToast?.('Please enter a valid purchase price', 'error') || alert('Please enter a valid purchase price');
      return;
    }

    // Disable button
    submitBtn.disabled = true;
    submitBtn.innerHTML = `
      <svg class="w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      Adding...
    `;

    try {
      const token = localStorage.getItem('wealthpilot_token');
      const response = await fetch('/api/holdings', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': token ? `Bearer ${token}` : ''
        },
        body: JSON.stringify(data),
        credentials: 'include'
      });

      const result = await response.json();

      if (response.ok) {
        showToast?.('Holding added successfully!', 'success');
        window.location.href = `/portfolios?id=${data.portfolio_id}`;
      } else {
        throw new Error(result.error || 'Failed to add holding');
      }
    } catch (error) {
      console.error('Error:', error);
      showToast?.(error.message, 'error') || alert(error.message);

      submitBtn.disabled = false;
      submitBtn.innerHTML = `
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Add Holding
      `;
    }
  });

  // Keyboard shortcuts
  symbolInput.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      searchDropdown.classList.add('hidden');
    }
  });
</script>

<%- include('../partials/footer') %>
