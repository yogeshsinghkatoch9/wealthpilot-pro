<script>
// Mobile Bottom Navigation JavaScript
(function() {
  'use strict';

  let quickActionsOpen = false;
  let moreMenuOpen = false;

  // Toggle Quick Actions (FAB button)
  window.toggleQuickActions = function() {
    const sheet = document.getElementById('quick-actions-sheet');
    const backdrop = document.getElementById('quick-actions-backdrop');
    const fabButton = document.getElementById('fabButton');

    if (!sheet || !backdrop) return;

    quickActionsOpen = !quickActionsOpen;

    if (quickActionsOpen) {
      // Close more menu if open
      if (moreMenuOpen) closeMoreMenu();

      sheet.classList.add('open');
      backdrop.classList.add('open');
      fabButton.classList.add('active');
      document.body.style.overflow = 'hidden';

      // Haptic feedback
      if (navigator.vibrate) navigator.vibrate(15);
    } else {
      closeQuickActions();
    }
  };

  window.closeQuickActions = function() {
    const sheet = document.getElementById('quick-actions-sheet');
    const backdrop = document.getElementById('quick-actions-backdrop');
    const fabButton = document.getElementById('fabButton');

    if (sheet) sheet.classList.remove('open');
    if (backdrop) backdrop.classList.remove('open');
    if (fabButton) fabButton.classList.remove('active');
    document.body.style.overflow = '';
    quickActionsOpen = false;
  };

  // Toggle More Menu
  window.toggleMoreMenu = function() {
    const menu = document.getElementById('mobile-more-menu');
    const backdrop = document.getElementById('mobile-nav-backdrop');

    if (!menu || !backdrop) return;

    moreMenuOpen = !moreMenuOpen;

    if (moreMenuOpen) {
      // Close quick actions if open
      if (quickActionsOpen) closeQuickActions();

      menu.classList.add('open');
      backdrop.classList.add('open');
      document.body.style.overflow = 'hidden';

      if (navigator.vibrate) navigator.vibrate(10);
    } else {
      closeMoreMenu();
    }
  };

  window.closeMoreMenu = function() {
    const menu = document.getElementById('mobile-more-menu');
    const backdrop = document.getElementById('mobile-nav-backdrop');

    if (menu) menu.classList.remove('open');
    if (backdrop) backdrop.classList.remove('open');
    document.body.style.overflow = '';
    moreMenuOpen = false;
  };

  // Refresh all prices
  window.refreshAllPrices = function() {
    closeQuickActions();

    // Show loading toast
    if (typeof showToast === 'function') {
      showToast('Refreshing prices...', 'info');
    }

    fetch('/api/refresh-prices', {
      method: 'POST',
      credentials: 'include',
      headers: { 'Content-Type': 'application/json' }
    })
    .then(res => res.json())
    .then(data => {
      if (data.error) {
        if (typeof showToast === 'function') showToast(data.error, 'error');
      } else {
        if (typeof showToast === 'function') showToast('Prices refreshed!', 'success');
        setTimeout(() => location.reload(), 500);
      }
    })
    .catch(() => {
      if (typeof showToast === 'function') showToast('Failed to refresh', 'error');
    });
  };

  // Active state management
  const currentPath = window.location.pathname;
  document.querySelectorAll('.mobile-bottom-nav-item[data-page]').forEach(item => {
    const page = item.getAttribute('data-page');
    if (currentPath.includes(page)) {
      item.classList.add('active');
    }
  });

  // Haptic feedback on all nav items
  document.querySelectorAll('.mobile-bottom-nav-item, .mobile-fab-button').forEach(item => {
    item.addEventListener('click', function() {
      if (navigator.vibrate) navigator.vibrate(10);
      this.classList.add('haptic');
      setTimeout(() => this.classList.remove('haptic'), 100);
    });
  });

  // Close menus on navigation
  document.querySelectorAll('.mobile-bottom-nav-more-item, .quick-action-item').forEach(item => {
    item.addEventListener('click', function() {
      setTimeout(() => {
        closeMoreMenu();
        closeQuickActions();
      }, 100);
    });
  });

  // Handle swipe down to close
  function setupSwipeClose(elementId, closeFunction) {
    const element = document.getElementById(elementId);
    if (!element) return;

    let touchStartY = 0;
    let touchCurrentY = 0;

    element.addEventListener('touchstart', (e) => {
      touchStartY = e.touches[0].clientY;
    }, { passive: true });

    element.addEventListener('touchmove', (e) => {
      touchCurrentY = e.touches[0].clientY;
      const deltaY = touchCurrentY - touchStartY;

      if (deltaY > 0) {
        element.style.transform = `translateY(${Math.min(deltaY, 100)}px)`;
        element.style.opacity = 1 - (deltaY / 200);
      }
    }, { passive: true });

    element.addEventListener('touchend', () => {
      const deltaY = touchCurrentY - touchStartY;

      if (deltaY > 80) {
        closeFunction();
      }

      element.style.transform = '';
      element.style.opacity = '';
      touchStartY = 0;
      touchCurrentY = 0;
    });
  }

  setupSwipeClose('quick-actions-sheet', closeQuickActions);
  setupSwipeClose('mobile-more-menu', closeMoreMenu);

  // Close on escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      if (quickActionsOpen) closeQuickActions();
      if (moreMenuOpen) closeMoreMenu();
    }
  });
})();
</script>

