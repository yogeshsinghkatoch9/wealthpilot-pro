<style>
.step-indicator {
  @apply w-12 h-12 rounded-xl flex items-center justify-center transition-all duration-300;
  @apply bg-slate-700 text-slate-400 border-2 border-slate-600;
}
.step-indicator.active {
  @apply bg-gradient-to-br from-amber-500 to-orange-500 text-white border-amber-400 shadow-lg shadow-amber-500/25;
}
.step-indicator.completed {
  @apply bg-gradient-to-br from-emerald-500 to-green-500 text-white border-emerald-400;
}

.source-card {
  @apply p-5 rounded-xl border-2 border-slate-700 bg-slate-800/50 cursor-pointer transition-all duration-300 text-center;
  @apply hover:border-amber-500/50 hover:bg-amber-500/5 hover:shadow-lg hover:shadow-amber-500/10 hover:-translate-y-1;
}
.source-card.selected {
  @apply border-amber-500 bg-amber-500/10;
}
.source-icon {
  @apply w-14 h-14 rounded-xl flex items-center justify-center mx-auto mb-3;
}

.column-mapping-row {
  @apply flex items-center justify-between p-4 rounded-xl bg-slate-800/50 border border-slate-700/50;
}
.mapping-select {
  @apply px-4 py-2 rounded-lg bg-slate-700 border border-slate-600 text-white text-sm focus:border-amber-500 focus:ring-1 focus:ring-amber-500 focus:outline-none min-w-[180px];
}

@keyframes bounce-once {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10px); }
}
.animate-bounce-once {
  animation: bounce-once 0.5s ease-in-out;
}
</style>

<script>
let currentStep = 1;
let selectedSource = null;
let uploadedFile = null;
let parsedData = [];

// Initialize
document.addEventListener('DOMContentLoaded', () => {
  // Drag and drop handlers
  const dropzone = document.getElementById('dropzone');
  if (dropzone) {
    ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
      dropzone.addEventListener(eventName, preventDefaults, false);
    });
    ['dragenter', 'dragover'].forEach(eventName => {
      dropzone.addEventListener(eventName, () => dropzone.classList.add('border-amber-500', 'bg-amber-500/5'), false);
    });
    ['dragleave', 'drop'].forEach(eventName => {
      dropzone.addEventListener(eventName, () => dropzone.classList.remove('border-amber-500', 'bg-amber-500/5'), false);
    });
    dropzone.addEventListener('drop', handleDrop, false);
  }
});

function preventDefaults(e) {
  e.preventDefault();
  e.stopPropagation();
}

function handleDrop(e) {
  const dt = e.dataTransfer;
  const files = dt.files;
  if (files.length > 0) {
    processFile(files[0]);
  }
}

function selectSource(source) {
  selectedSource = source;
  document.querySelectorAll('.source-card').forEach(el => el.classList.remove('selected'));
  event.currentTarget.classList.add('selected');

  // Update source hint
  const hints = {
    csv: 'Upload your CSV spreadsheet file',
    excel: 'Upload your Excel (.xlsx or .xls) file',
    schwab: 'Export positions from Schwab and upload the CSV file',
    fidelity: 'Export from Fidelity Positions page and upload CSV',
    vanguard: 'Download your holdings from Vanguard and upload',
    robinhood: 'Export your Robinhood statement and upload',
    etrade: 'Export positions from E*TRADE and upload',
    coinbase: 'Export your Coinbase transaction history',
    manual: 'Enter your holdings manually'
  };

  setTimeout(() => {
    if (source === 'manual') {
      goToStep(3); // Skip upload for manual entry
    } else {
      goToStep(2);
    }
    document.getElementById('sourceHint').textContent = hints[source] || 'Upload your file';
  }, 300);
}

function handleFile(event) {
  const file = event?.target?.files?.[0];
  if (file) processFile(file);
}

function processFile(file) {
  uploadedFile = file;

  // Show file info
  document.querySelector('.dropzone-content').classList.add('hidden');
  document.getElementById('fileInfo').classList.remove('hidden');
  document.getElementById('fileName').textContent = file.name;
  document.getElementById('fileSize').textContent = formatFileSize(file.size);
  document.getElementById('continueBtn').disabled = false;

  // Parse file (simplified - would use Papa Parse or similar in production)
  parseFile(file);
}

function parseFile(file) {
  const reader = new FileReader();
  reader.onload = function(e) {
    const text = e.target.result;
    const lines = text.split('\\n');
    const headers = lines[0].split(',').map(h => h.trim().replace(/"/g, ''));

    // Update column mapping dropdowns
    const selects = ['mapSymbol', 'mapQuantity', 'mapCostBasis', 'mapDate'];
    selects.forEach(selectId => {
      const select = document.getElementById(selectId);
      if (select) {
        select.innerHTML = '<option value="auto">Auto-detect</option>';
        headers.forEach((header, idx) => {
          select.innerHTML += `<option value="${idx}">${header}</option>`;
        });
        if (selectId !== 'mapDate') {
          select.innerHTML += '<option value="none">Not Available</option>';
        }
      }
    });

    // Parse data rows
    parsedData = [];
    for (let i = 1; i < Math.min(lines.length, 50); i++) {
      if (lines[i].trim()) {
        const values = lines[i].split(',').map(v => v.trim().replace(/"/g, ''));
        if (values.length >= 2) {
          parsedData.push({
            symbol: values[0] || '',
            quantity: parseFloat(values[1]) || 0,
            costBasis: parseFloat(values[2]) || 0,
            date: values[3] || ''
          });
        }
      }
    }

    updatePreview();
  };
  reader.readAsText(file);
}

function updatePreview() {
  const tbody = document.getElementById('previewBody');
  if (tbody && parsedData.length > 0) {
    tbody.innerHTML = parsedData.slice(0, 5).map(row => `
      <tr class="border-b border-slate-700/50">
        <td class="py-2 px-3 font-medium text-white">${row.symbol}</td>
        <td class="py-2 px-3">${row.quantity}</td>
        <td class="py-2 px-3">$${row.costBasis.toFixed(2)}</td>
        <td class="py-2 px-3">${row.date || '-'}</td>
      </tr>
    `).join('');
  }
}

function removeFile(event) {
  if (event) event.stopPropagation();
  uploadedFile = null;
  parsedData = [];
  document.querySelector('.dropzone-content').classList.remove('hidden');
  document.getElementById('fileInfo').classList.add('hidden');
  document.getElementById('fileInput').value = '';
  document.getElementById('continueBtn').disabled = true;
}

function formatFileSize(bytes) {
  if (bytes === 0) return '0 Bytes';
  const k = 1024;
  const sizes = ['Bytes', 'KB', 'MB', 'GB'];
  const i = Math.floor(Math.log(bytes) / Math.log(k));
  return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
}

function goToStep(step) {
  // Update step indicators
  document.querySelectorAll('.step-indicator').forEach((el, idx) => {
    el.classList.remove('active', 'completed');
    if (idx + 1 < step) el.classList.add('completed');
    if (idx + 1 === step) el.classList.add('active');
  });

  // Update progress lines
  for (let i = 1; i < 4; i++) {
    const progress = document.querySelector(`[data-progress="${i}-${i+1}"]`);
    if (progress) {
      progress.style.width = (i < step) ? '100%' : '0%';
    }
  }

  // Update step labels
  document.querySelectorAll('.step-indicator').forEach((el, idx) => {
    const label = el.parentElement.querySelector('span:last-child');
    if (label) {
      label.classList.remove('text-amber-400', 'text-emerald-400', 'text-slate-500');
      if (idx + 1 < step) label.classList.add('text-emerald-400');
      else if (idx + 1 === step) label.classList.add('text-amber-400');
      else label.classList.add('text-slate-500');
    }
  });

  // Show/hide content
  document.querySelectorAll('.step-content').forEach(el => el.classList.add('hidden'));
  document.getElementById(`step${step}`).classList.remove('hidden');

  // If going to step 4, populate import table
  if (step === 4) {
    populateImportTable();
  }

  currentStep = step;
}

async function populateImportTable() {
  const tbody = document.getElementById('importBody');
  if (!tbody) return;

  // Show loading
  tbody.innerHTML = '<tr><td colspan="7" class="py-8 text-center text-slate-400">Loading prices...</td></tr>';

  // Fetch real prices for each symbol
  const holdings = [];
  let totalValue = 0;
  let totalGain = 0;

  for (const row of parsedData) {
    if (!row.symbol) continue;

    try {
      // Fetch current price from API
      const response = await fetch(`/api/market/quote/${row.symbol}`);
      const data = await response.json();
      const currentPrice = data.price || data.c || row.costBasis || 0;
      const value = row.quantity * currentPrice;
      const gain = (currentPrice - row.costBasis) * row.quantity;

      holdings.push({
        ...row,
        currentPrice,
        value,
        gain,
        gainPct: row.costBasis > 0 ? ((currentPrice - row.costBasis) / row.costBasis * 100) : 0
      });

      totalValue += value;
      totalGain += gain;
    } catch (err) {
      holdings.push({
        ...row,
        currentPrice: row.costBasis,
        value: row.quantity * row.costBasis,
        gain: 0,
        gainPct: 0,
        error: true
      });
    }
  }

  // Update summary
  document.getElementById('importCount').textContent = holdings.length;
  document.getElementById('importValue').textContent = '$' + totalValue.toLocaleString(undefined, {maximumFractionDigits: 0});
  document.getElementById('importGain').textContent = (totalGain >= 0 ? '+' : '') + '$' + Math.abs(totalGain).toLocaleString(undefined, {maximumFractionDigits: 0});
  document.getElementById('importGain').className = totalGain >= 0 ? 'text-emerald-400 text-2xl font-bold' : 'text-red-400 text-2xl font-bold';

  // Populate table
  tbody.innerHTML = holdings.map(h => `
    <tr class="hover:bg-slate-700/20">
      <td class="px-4 py-3 font-semibold text-white">${h.symbol}</td>
      <td class="px-4 py-3 text-right font-mono">${h.quantity}</td>
      <td class="px-4 py-3 text-right font-mono text-slate-400">$${h.costBasis.toFixed(2)}</td>
      <td class="px-4 py-3 text-right font-mono">$${h.currentPrice.toFixed(2)}</td>
      <td class="px-4 py-3 text-right font-mono font-semibold">$${h.value.toLocaleString(undefined, {maximumFractionDigits: 0})}</td>
      <td class="px-4 py-3 text-right font-mono ${h.gain >= 0 ? 'text-emerald-400' : 'text-red-400'}">
        ${h.gain >= 0 ? '+' : ''}$${h.gain.toFixed(0)} (${h.gainPct >= 0 ? '+' : ''}${h.gainPct.toFixed(1)}%)
      </td>
      <td class="px-4 py-3 text-center">
        ${h.error ? '<span class="text-amber-400">‚ö†Ô∏è</span>' : '<span class="text-emerald-400">‚úì</span>'}
      </td>
    </tr>
  `).join('');
}

async function completeImport() {
  const btn = document.getElementById('importBtn');
  btn.disabled = true;
  btn.innerHTML = '<svg class="w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg> Importing...';

  try {
    // Get selected portfolio or create new
    const portfolioSelect = document.getElementById('targetPortfolio');
    const newName = document.getElementById('newPortfolioName').value;
    let portfolioId = portfolioSelect.value;

    // If creating new portfolio
    if (portfolioId === 'new') {
      const createRes = await fetch('/api/portfolios', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ name: newName || 'Imported Portfolio', description: 'Imported via wizard' })
      });
      const newPortfolio = await createRes.json();
      portfolioId = newPortfolio.id;
    }

    // Import holdings
    for (const row of parsedData) {
      if (!row.symbol) continue;
      await fetch(`/api/portfolios/${portfolioId}/holdings`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          symbol: row.symbol.toUpperCase(),
          quantity: row.quantity,
          cost_basis: row.costBasis
        })
      });
    }

    // Show success modal
    showSuccessModal();
  } catch (err) {
    console.error('Import failed:', err);
    btn.disabled = false;
    btn.innerHTML = '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg> Complete Import';
    alert('Import failed. Please try again.');
  }
}

function showSuccessModal() {
  const modal = document.getElementById('successModal');
  const content = document.getElementById('successContent');
  modal.classList.remove('hidden');
  modal.classList.add('flex');
  setTimeout(() => {
    content.classList.remove('scale-95', 'opacity-0');
    content.classList.add('scale-100', 'opacity-100');
  }, 50);
}

function closeSuccessModal() {
  const modal = document.getElementById('successModal');
  const content = document.getElementById('successContent');
  content.classList.remove('scale-100', 'opacity-100');
  content.classList.add('scale-95', 'opacity-0');
  setTimeout(() => {
    modal.classList.add('hidden');
    modal.classList.remove('flex');
    // Reset wizard
    goToStep(1);
    removeFile();
    parsedData = [];
  }, 200);
}
</script>

