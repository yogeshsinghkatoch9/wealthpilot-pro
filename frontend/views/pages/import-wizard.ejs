<%- include('../partials/header', { pageTitle: 'Import Wizard' }) %>

<%
const safeTheme = typeof theme !== 'undefined' ? theme : 'dark';
const safeFmt = typeof fmt !== 'undefined' ? fmt : {
  money: (v) => '$' + (v || 0).toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }),
  compact: (v) => '$' + (v >= 1000000 ? (v / 1000000).toFixed(1) + 'M' : v >= 1000 ? (v / 1000).toFixed(0) + 'K' : (v || 0).toFixed(2))
};
%>

<div class="max-w-5xl mx-auto">
  <!-- Header -->
  <div class="text-center mb-10">
    <div class="inline-flex items-center justify-center w-16 h-16 rounded-2xl bg-gradient-to-br from-amber-500 to-orange-600 mb-4 shadow-lg shadow-amber-500/25">
      <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"/>
      </svg>
    </div>
    <h1 class="text-3xl font-bold text-white mb-2">Import Your Portfolio</h1>
    <p class="text-slate-400 text-lg">Seamlessly import from any brokerage or spreadsheet</p>
  </div>

  <!-- Progress Steps - Enhanced -->
  <div class="relative mb-12">
    <div class="flex items-center justify-between">
      <!-- Step 1 -->
      <div class="flex flex-col items-center relative z-10">
        <div class="step-indicator active" data-step="1">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
          </svg>
        </div>
        <span class="text-xs font-medium mt-2 text-amber-400">Select Source</span>
      </div>

      <!-- Progress Line 1-2 -->
      <div class="flex-1 h-1 mx-2 rounded-full bg-slate-700 relative">
        <div class="progress-fill absolute inset-y-0 left-0 bg-gradient-to-r from-amber-500 to-amber-400 rounded-full" data-progress="1-2" style="width: 0%"></div>
      </div>

      <!-- Step 2 -->
      <div class="flex flex-col items-center relative z-10">
        <div class="step-indicator" data-step="2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
          </svg>
        </div>
        <span class="text-xs font-medium mt-2 text-slate-500">Upload File</span>
      </div>

      <!-- Progress Line 2-3 -->
      <div class="flex-1 h-1 mx-2 rounded-full bg-slate-700 relative">
        <div class="progress-fill absolute inset-y-0 left-0 bg-gradient-to-r from-amber-500 to-amber-400 rounded-full" data-progress="2-3" style="width: 0%"></div>
      </div>

      <!-- Step 3 -->
      <div class="flex flex-col items-center relative z-10">
        <div class="step-indicator" data-step="3">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
          </svg>
        </div>
        <span class="text-xs font-medium mt-2 text-slate-500">Map Columns</span>
      </div>

      <!-- Progress Line 3-4 -->
      <div class="flex-1 h-1 mx-2 rounded-full bg-slate-700 relative">
        <div class="progress-fill absolute inset-y-0 left-0 bg-gradient-to-r from-amber-500 to-amber-400 rounded-full" data-progress="3-4" style="width: 0%"></div>
      </div>

      <!-- Step 4 -->
      <div class="flex flex-col items-center relative z-10">
        <div class="step-indicator" data-step="4">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
        </div>
        <span class="text-xs font-medium mt-2 text-slate-500">Import</span>
      </div>
    </div>
  </div>

  <!-- Step 1: Select Source -->
  <div id="step1" class="step-content">
    <div class="bg-gradient-to-br from-slate-800 to-slate-900 rounded-2xl border border-slate-700/50 p-8 shadow-xl">
      <div class="flex items-center justify-between mb-6">
        <div>
          <h2 class="text-xl font-semibold text-white">Choose Your Import Source</h2>
          <p class="text-slate-400 text-sm mt-1">Select your brokerage or file type</p>
        </div>
        <div class="px-3 py-1 rounded-full bg-amber-500/10 border border-amber-500/20">
          <span class="text-amber-400 text-xs font-medium">Step 1 of 4</span>
        </div>
      </div>

      <!-- Popular Brokerages -->
      <h3 class="text-sm font-semibold text-slate-400 uppercase tracking-wider mb-4">Popular Brokerages</h3>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
        <div onclick="selectSource('schwab')" class="source-card group">
          <div class="source-icon bg-gradient-to-br from-sky-500 to-blue-600">
            <span class="text-2xl font-bold text-white">CS</span>
          </div>
          <p class="font-semibold text-white group-hover:text-amber-400 transition-colors">Schwab</p>
          <p class="text-xs text-slate-500">Export CSV</p>
        </div>

        <div onclick="selectSource('fidelity')" class="source-card group">
          <div class="source-icon bg-gradient-to-br from-emerald-500 to-green-600">
            <span class="text-2xl">üü¢</span>
          </div>
          <p class="font-semibold text-white group-hover:text-amber-400 transition-colors">Fidelity</p>
          <p class="text-xs text-slate-500">Export CSV</p>
        </div>

        <div onclick="selectSource('vanguard')" class="source-card group">
          <div class="source-icon bg-gradient-to-br from-red-500 to-rose-600">
            <span class="text-xl font-bold text-white">VG</span>
          </div>
          <p class="font-semibold text-white group-hover:text-amber-400 transition-colors">Vanguard</p>
          <p class="text-xs text-slate-500">Export CSV</p>
        </div>

        <div onclick="selectSource('robinhood')" class="source-card group">
          <div class="source-icon bg-gradient-to-br from-lime-400 to-green-500">
            <span class="text-2xl">ü™∂</span>
          </div>
          <p class="font-semibold text-white group-hover:text-amber-400 transition-colors">Robinhood</p>
          <p class="text-xs text-slate-500">Export CSV</p>
        </div>

        <div onclick="selectSource('etrade')" class="source-card group">
          <div class="source-icon bg-gradient-to-br from-purple-500 to-indigo-600">
            <span class="text-xl">‚≠ê</span>
          </div>
          <p class="font-semibold text-white group-hover:text-amber-400 transition-colors">E*TRADE</p>
          <p class="text-xs text-slate-500">Export CSV</p>
        </div>

        <div onclick="selectSource('tdameritrade')" class="source-card group">
          <div class="source-icon bg-gradient-to-br from-green-600 to-emerald-700">
            <span class="text-xl font-bold text-white">TD</span>
          </div>
          <p class="font-semibold text-white group-hover:text-amber-400 transition-colors">TD Ameritrade</p>
          <p class="text-xs text-slate-500">Export CSV</p>
        </div>

        <div onclick="selectSource('interactivebrokers')" class="source-card group">
          <div class="source-icon bg-gradient-to-br from-red-600 to-red-700">
            <span class="text-xl font-bold text-white">IB</span>
          </div>
          <p class="font-semibold text-white group-hover:text-amber-400 transition-colors">Interactive Brokers</p>
          <p class="text-xs text-slate-500">Flex Query</p>
        </div>

        <div onclick="selectSource('coinbase')" class="source-card group">
          <div class="source-icon bg-gradient-to-br from-blue-500 to-blue-600">
            <span class="text-xl">ü™ô</span>
          </div>
          <p class="font-semibold text-white group-hover:text-amber-400 transition-colors">Coinbase</p>
          <p class="text-xs text-slate-500">Crypto</p>
        </div>
      </div>

      <!-- File Types -->
      <h3 class="text-sm font-semibold text-slate-400 uppercase tracking-wider mb-4">File Types</h3>
      <div class="grid grid-cols-2 md:grid-cols-3 gap-4 mb-8">
        <div onclick="selectSource('csv')" class="source-card group">
          <div class="source-icon bg-gradient-to-br from-slate-600 to-slate-700">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
          </div>
          <p class="font-semibold text-white group-hover:text-amber-400 transition-colors">CSV File</p>
          <p class="text-xs text-slate-500">Comma-separated</p>
        </div>

        <div onclick="selectSource('excel')" class="source-card group">
          <div class="source-icon bg-gradient-to-br from-green-600 to-green-700">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M3 14h18m-9-4v8m-7 0h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
            </svg>
          </div>
          <p class="font-semibold text-white group-hover:text-amber-400 transition-colors">Excel</p>
          <p class="text-xs text-slate-500">.xlsx or .xls</p>
        </div>

        <div onclick="selectSource('manual')" class="source-card group">
          <div class="source-icon bg-gradient-to-br from-amber-500 to-orange-600">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
          </div>
          <p class="font-semibold text-white group-hover:text-amber-400 transition-colors">Manual Entry</p>
          <p class="text-xs text-slate-500">Type holdings</p>
        </div>
      </div>

      <!-- Help Text -->
      <div class="p-4 rounded-xl bg-slate-700/30 border border-slate-600/30">
        <div class="flex items-start gap-3">
          <div class="w-8 h-8 rounded-lg bg-sky-500/20 flex items-center justify-center flex-shrink-0">
            <svg class="w-4 h-4 text-sky-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div>
            <p class="text-sm text-slate-300 font-medium">Need help exporting from your brokerage?</p>
            <p class="text-xs text-slate-400 mt-1">Select your brokerage above and we'll show you step-by-step instructions.</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Step 2: Upload File -->
  <div id="step2" class="step-content hidden">
    <div class="bg-gradient-to-br from-slate-800 to-slate-900 rounded-2xl border border-slate-700/50 p-8 shadow-xl">
      <div class="flex items-center justify-between mb-6">
        <div>
          <h2 class="text-xl font-semibold text-white">Upload Your File</h2>
          <p class="text-slate-400 text-sm mt-1" id="sourceHint">Upload your exported file</p>
        </div>
        <div class="px-3 py-1 rounded-full bg-amber-500/10 border border-amber-500/20">
          <span class="text-amber-400 text-xs font-medium">Step 2 of 4</span>
        </div>
      </div>

      <!-- Dropzone -->
      <div id="dropzone" class="relative border-2 border-dashed border-slate-600 rounded-2xl p-12 text-center cursor-pointer hover:border-amber-500/50 hover:bg-amber-500/5 transition-all duration-300 group">
        <input type="file" id="fileInput" class="absolute inset-0 w-full h-full opacity-0 cursor-pointer" accept=".csv,.xlsx,.xls" onchange="handleFile(event)">

        <div class="dropzone-content">
          <div class="w-20 h-20 mx-auto mb-4 rounded-2xl bg-gradient-to-br from-slate-700 to-slate-800 flex items-center justify-center group-hover:from-amber-500/20 group-hover:to-orange-500/20 transition-all">
            <svg class="w-10 h-10 text-slate-400 group-hover:text-amber-400 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
            </svg>
          </div>
          <p class="text-white font-medium text-lg mb-1">Drag & drop your file here</p>
          <p class="text-slate-400 text-sm">or click to browse</p>
          <p class="text-slate-500 text-xs mt-4">Supports CSV, Excel (.xlsx, .xls)</p>
        </div>

        <!-- File Info (shown after upload) -->
        <div id="fileInfo" class="hidden">
          <div class="w-16 h-16 mx-auto mb-4 rounded-xl bg-emerald-500/20 flex items-center justify-center">
            <svg class="w-8 h-8 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <p class="text-white font-semibold text-lg" id="fileName">portfolio_export.csv</p>
          <p class="text-slate-400 text-sm mt-1" id="fileSize">24 KB</p>
          <button onclick="removeFile(event)" class="mt-4 px-4 py-2 rounded-lg bg-red-500/10 border border-red-500/20 text-red-400 text-sm font-medium hover:bg-red-500/20 transition-colors">
            Remove File
          </button>
        </div>
      </div>

      <!-- Sample Format -->
      <div class="mt-6 p-4 rounded-xl bg-slate-700/30 border border-slate-600/30">
        <p class="text-sm font-medium text-slate-300 mb-2">Expected Format</p>
        <div class="bg-slate-900 rounded-lg p-3 font-mono text-xs text-slate-400 overflow-x-auto">
          <table class="w-full">
            <thead>
              <tr class="text-amber-400">
                <th class="text-left pr-4">Symbol</th>
                <th class="text-left pr-4">Quantity</th>
                <th class="text-left pr-4">Cost Basis</th>
                <th class="text-left">Date</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td class="pr-4">AAPL</td>
                <td class="pr-4">50</td>
                <td class="pr-4">145.00</td>
                <td>2024-01-15</td>
              </tr>
              <tr>
                <td class="pr-4">MSFT</td>
                <td class="pr-4">30</td>
                <td class="pr-4">380.00</td>
                <td>2024-02-20</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Navigation -->
      <div class="flex gap-4 mt-8">
        <button onclick="goToStep(1)" class="flex-1 px-6 py-3 rounded-xl border border-slate-600 text-slate-300 font-medium hover:bg-slate-700/50 transition-colors">
          Back
        </button>
        <button onclick="goToStep(3)" id="continueBtn" class="flex-1 px-6 py-3 rounded-xl bg-gradient-to-r from-amber-500 to-orange-500 text-white font-semibold hover:from-amber-600 hover:to-orange-600 transition-all shadow-lg shadow-amber-500/25 disabled:opacity-50 disabled:cursor-not-allowed" disabled>
          Continue
        </button>
      </div>
    </div>
  </div>

  <!-- Step 3: Map Columns -->
  <div id="step3" class="step-content hidden">
    <div class="bg-gradient-to-br from-slate-800 to-slate-900 rounded-2xl border border-slate-700/50 p-8 shadow-xl">
      <div class="flex items-center justify-between mb-6">
        <div>
          <h2 class="text-xl font-semibold text-white">Map Your Columns</h2>
          <p class="text-slate-400 text-sm mt-1">Match your file columns to WealthPilot fields</p>
        </div>
        <div class="px-3 py-1 rounded-full bg-amber-500/10 border border-amber-500/20">
          <span class="text-amber-400 text-xs font-medium">Step 3 of 4</span>
        </div>
      </div>

      <!-- Column Mapping -->
      <div class="space-y-4">
        <div class="column-mapping-row">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-lg bg-emerald-500/20 flex items-center justify-center">
              <span class="text-emerald-400 font-bold">A</span>
            </div>
            <div>
              <p class="text-white font-medium">Symbol / Ticker <span class="text-red-400">*</span></p>
              <p class="text-slate-500 text-xs">Stock ticker symbol (e.g., AAPL)</p>
            </div>
          </div>
          <select id="mapSymbol" class="mapping-select">
            <option value="auto">Auto-detect</option>
          </select>
        </div>

        <div class="column-mapping-row">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-lg bg-sky-500/20 flex items-center justify-center">
              <span class="text-sky-400 font-bold">B</span>
            </div>
            <div>
              <p class="text-white font-medium">Quantity / Shares <span class="text-red-400">*</span></p>
              <p class="text-slate-500 text-xs">Number of shares owned</p>
            </div>
          </div>
          <select id="mapQuantity" class="mapping-select">
            <option value="auto">Auto-detect</option>
          </select>
        </div>

        <div class="column-mapping-row">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-lg bg-purple-500/20 flex items-center justify-center">
              <span class="text-purple-400 font-bold">C</span>
            </div>
            <div>
              <p class="text-white font-medium">Cost Basis</p>
              <p class="text-slate-500 text-xs">Average price per share</p>
            </div>
          </div>
          <select id="mapCostBasis" class="mapping-select">
            <option value="auto">Auto-detect</option>
            <option value="none">Not Available</option>
          </select>
        </div>

        <div class="column-mapping-row">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-lg bg-amber-500/20 flex items-center justify-center">
              <span class="text-amber-400 font-bold">D</span>
            </div>
            <div>
              <p class="text-white font-medium">Purchase Date</p>
              <p class="text-slate-500 text-xs">Date acquired</p>
            </div>
          </div>
          <select id="mapDate" class="mapping-select">
            <option value="auto">Auto-detect</option>
            <option value="none">Not Available</option>
          </select>
        </div>
      </div>

      <!-- Preview -->
      <div class="mt-6 p-4 rounded-xl bg-slate-700/30 border border-slate-600/30">
        <p class="text-sm font-medium text-slate-300 mb-3">Data Preview</p>
        <div class="overflow-x-auto">
          <table class="w-full text-sm" id="previewTable">
            <thead>
              <tr class="text-slate-400 border-b border-slate-600">
                <th class="text-left py-2 px-3">Symbol</th>
                <th class="text-left py-2 px-3">Quantity</th>
                <th class="text-left py-2 px-3">Cost Basis</th>
                <th class="text-left py-2 px-3">Date</th>
              </tr>
            </thead>
            <tbody class="text-slate-300" id="previewBody">
              <tr class="border-b border-slate-700/50">
                <td class="py-2 px-3 font-medium text-white">AAPL</td>
                <td class="py-2 px-3">50</td>
                <td class="py-2 px-3">$145.00</td>
                <td class="py-2 px-3">2024-01-15</td>
              </tr>
              <tr class="border-b border-slate-700/50">
                <td class="py-2 px-3 font-medium text-white">MSFT</td>
                <td class="py-2 px-3">30</td>
                <td class="py-2 px-3">$380.00</td>
                <td class="py-2 px-3">2024-02-20</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Tip -->
      <div class="mt-4 p-3 rounded-lg bg-amber-500/10 border border-amber-500/20">
        <p class="text-sm text-amber-400">
          <strong>Tip:</strong> Current prices will be fetched automatically. Cost basis is optional but helps track gains/losses accurately.
        </p>
      </div>

      <!-- Navigation -->
      <div class="flex gap-4 mt-8">
        <button onclick="goToStep(2)" class="flex-1 px-6 py-3 rounded-xl border border-slate-600 text-slate-300 font-medium hover:bg-slate-700/50 transition-colors">
          Back
        </button>
        <button onclick="goToStep(4)" class="flex-1 px-6 py-3 rounded-xl bg-gradient-to-r from-amber-500 to-orange-500 text-white font-semibold hover:from-amber-600 hover:to-orange-600 transition-all shadow-lg shadow-amber-500/25">
          Preview Import
        </button>
      </div>
    </div>
  </div>

  <!-- Step 4: Review & Import -->
  <div id="step4" class="step-content hidden">
    <div class="bg-gradient-to-br from-slate-800 to-slate-900 rounded-2xl border border-slate-700/50 p-8 shadow-xl">
      <div class="flex items-center justify-between mb-6">
        <div>
          <h2 class="text-xl font-semibold text-white">Review & Import</h2>
          <p class="text-slate-400 text-sm mt-1">Verify your holdings before importing</p>
        </div>
        <div class="px-3 py-1 rounded-full bg-emerald-500/10 border border-emerald-500/20">
          <span class="text-emerald-400 text-xs font-medium">Final Step</span>
        </div>
      </div>

      <!-- Summary Cards -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
        <div class="bg-gradient-to-br from-emerald-500/10 to-emerald-600/10 rounded-xl p-4 border border-emerald-500/20">
          <p class="text-emerald-400 text-2xl font-bold" id="importCount">12</p>
          <p class="text-slate-400 text-sm">Holdings</p>
        </div>
        <div class="bg-gradient-to-br from-sky-500/10 to-blue-600/10 rounded-xl p-4 border border-sky-500/20">
