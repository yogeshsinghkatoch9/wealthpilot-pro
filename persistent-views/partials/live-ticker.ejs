<!-- Live Market Ticker Bar - Single Container with 2 Rows -->
<style>
/* Live Ticker Container - Fixed below navbar */
.live-ticker-wrapper {
  position: fixed;
  top: 56px;
  left: 0;
  right: 0;
  z-index: 40;
  background: #0a0e14;
  border-bottom: 1px solid rgba(41, 42, 56, 0.5);
}

/* News Row */
.ticker-news-row {
  display: flex;
  align-items: center;
  height: 28px;
  background: rgba(15, 17, 21, 0.98);
  border-bottom: 1px solid rgba(41, 42, 56, 0.3);
  overflow: hidden;
}

.ticker-live-badge {
  display: flex;
  align-items: center;
  gap: 6px;
  padding: 0 12px;
  background: linear-gradient(90deg, #dc2626, #b91c1c);
  color: white;
  font-size: 10px;
  font-weight: 700;
  letter-spacing: 0.5px;
  text-transform: uppercase;
  height: 100%;
  flex-shrink: 0;
}

.ticker-live-badge .pulse {
  width: 6px;
  height: 6px;
  background: #fff;
  border-radius: 50%;
  animation: tickerPulse 1.5s ease-in-out infinite;
}

@keyframes tickerPulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.4; }
}

.ticker-news-scroll-area {
  flex: 1;
  overflow: hidden;
  mask-image: linear-gradient(to right, transparent, black 2%, black 98%, transparent);
  -webkit-mask-image: linear-gradient(to right, transparent, black 2%, black 98%, transparent);
}

.ticker-news-track {
  display: inline-flex;
  align-items: center;
  animation: tickerScrollNews 80s linear infinite;
  white-space: nowrap;
}

.ticker-news-track:hover {
  animation-play-state: paused;
}

@keyframes tickerScrollNews {
  0% { transform: translateX(0); }
  100% { transform: translateX(-50%); }
}

.ticker-news-item {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 0 20px;
  font-size: 11px;
  color: #9e9fb7;
}

.ticker-news-item a {
  color: #e5e7eb;
  text-decoration: none;
  transition: color 0.2s;
}

.ticker-news-item a:hover {
  color: #6366f1;
}

.ticker-news-source {
  padding: 2px 6px;
  background: rgba(99, 102, 241, 0.15);
  border-radius: 3px;
  font-size: 9px;
  font-weight: 600;
  color: #6366f1;
  text-transform: uppercase;
}

/* Stock Row */
.ticker-stock-row {
  display: flex;
  align-items: center;
  height: 32px;
  background: rgba(10, 14, 20, 0.98);
  overflow: hidden;
}

.ticker-stock-scroll-area {
  flex: 1;
  overflow: hidden;
  mask-image: linear-gradient(to right, transparent, black 1%, black 99%, transparent);
  -webkit-mask-image: linear-gradient(to right, transparent, black 1%, black 99%, transparent);
}

.ticker-stock-track {
  display: inline-flex;
  align-items: center;
  animation: tickerScrollStocks 60s linear infinite;
  white-space: nowrap;
}

.ticker-stock-track:hover {
  animation-play-state: paused;
}

@keyframes tickerScrollStocks {
  0% { transform: translateX(0); }
  100% { transform: translateX(-50%); }
}

.ticker-stock-item {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 0 16px;
  border-right: 1px solid rgba(41, 42, 56, 0.3);
  cursor: pointer;
  transition: background 0.15s;
}

.ticker-stock-item:hover {
  background: rgba(99, 102, 241, 0.1);
}

.ticker-stock-symbol {
  font-size: 12px;
  font-weight: 600;
  color: #e5e7eb;
}

.ticker-stock-price {
  font-size: 12px;
  font-weight: 500;
  color: #9e9fb7;
  font-family: 'JetBrains Mono', monospace;
}

.ticker-stock-change {
  font-size: 11px;
  font-weight: 600;
  font-family: 'JetBrains Mono', monospace;
  padding: 2px 6px;
  border-radius: 3px;
}

.ticker-stock-change.up {
  color: #10b981;
  background: rgba(16, 185, 129, 0.12);
}

.ticker-stock-change.down {
  color: #ef4444;
  background: rgba(239, 68, 68, 0.12);
}

/* Hide on mobile */
@media (max-width: 768px) {
  .live-ticker-wrapper {
    display: none;
  }
}
</style>

<div class="live-ticker-wrapper">
  <!-- Row 1: News Headlines -->
  <div class="ticker-news-row">
    <div class="ticker-live-badge">
      <span class="pulse"></span>
      <span>LIVE</span>
    </div>
    <div class="ticker-news-scroll-area">
      <div class="ticker-news-track" id="tickerNewsTrack">
        <span class="ticker-news-item"><span class="ticker-news-source">Loading</span> <a href="#">Fetching market news...</a></span>
      </div>
    </div>
  </div>

  <!-- Row 2: Stock Prices -->
  <div class="ticker-stock-row">
    <div class="ticker-stock-scroll-area">
      <div class="ticker-stock-track" id="tickerStockTrack">
        <span class="ticker-stock-item"><span class="ticker-stock-symbol">Loading...</span></span>
      </div>
    </div>
  </div>
</div>

<script>
(function() {
  const STOCK_SYMBOLS = [
    'AAPL', 'MSFT', 'GOOGL', 'AMZN', 'NVDA', 'META', 'TSLA', 'AMD',
    'BTC-USD', 'ETH-USD', 'SPY', 'QQQ', 'NFLX', 'CRM', 'AVGO', 'ORCL'
  ];

  function formatPrice(p) {
    if (!p) return '0.00';
    return p >= 1000 ? p.toLocaleString('en-US', {maximumFractionDigits: 0}) : p.toFixed(2);
  }

  function formatPct(p) {
    const arrow = p >= 0 ? '▲' : '▼';
    return `${arrow}${Math.abs(p).toFixed(2)}%`;
  }

  function renderStocks(data) {
    const track = document.getElementById('tickerStockTrack');
    if (!track || !data || !data.length) return;

    const html = data.map(q => {
      const sym = (q.symbol || '').replace('-USD', '');
      const pct = q.changePercent || 0;
      const cls = pct >= 0 ? 'up' : 'down';
      return `<div class="ticker-stock-item" onclick="location.href='/charts?symbol=${q.symbol}'">
        <span class="ticker-stock-symbol">${sym}</span>
        <span class="ticker-stock-price">$${formatPrice(q.price)}</span>
        <span class="ticker-stock-change ${cls}">${formatPct(pct)}</span>
      </div>`;
    }).join('');

    track.innerHTML = html + html; // Duplicate for seamless loop
  }

  function renderNews(data) {
    const track = document.getElementById('tickerNewsTrack');
    if (!track || !data || !data.length) return;

    const html = data.slice(0, 12).map(n => {
      const url = (n.link || n.url || '#').replace(/'/g, "\\'");
      return `<div class="ticker-news-item">
        <span class="ticker-news-source">${(n.source || 'News').split(' ')[0]}</span>
        <a href="${url}" target="_blank">${n.title}</a>
      </div>`;
    }).join('');

    track.innerHTML = html + html; // Duplicate for seamless loop
  }

  async function fetchStocks() {
    try {
      const token = localStorage.getItem('wealthpilot_token') || '';
      const res = await fetch(`/api/market/quotes?symbols=${STOCK_SYMBOLS.join(',')}`, {
        headers: token ? {'Authorization': `Bearer ${token}`} : {}
      });
      const data = await res.json();
      if (Array.isArray(data) && data.length) renderStocks(data);
    } catch (e) {
      console.warn('[Ticker] Stock error:', e.message);
    }
  }

  async function fetchNews() {
    try {
      const token = localStorage.getItem('wealthpilot_token') || '';
      const res = await fetch('/api/news/rss?limit=12', {
        headers: token ? {'Authorization': `Bearer ${token}`} : {}
      });
      const data = await res.json();
      if (data.success && data.news) renderNews(data.news);
    } catch (e) {
      console.warn('[Ticker] News error:', e.message);
    }
  }

  function init() {
    fetchStocks();
    fetchNews();
    setInterval(fetchStocks, 30000);
    setInterval(fetchNews, 60000);
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
})();
</script>
