// Update Performance Chart based on timeframe
function updatePerformanceChart(timeframe) {
  const sectors = <%- JSON.stringify(sectors) %>;

  // Get data for selected timeframe
  const timeframeData = sectors.map(s => {
    switch(timeframe) {
      case 'day': return s.dayChange || 0;
      case 'week': return s.weekChange || 0;
      case 'month': return s.monthChange || 0;
      case 'ytd': return s.ytdChange || 0;
      default: return s.dayChange || 0;
    }
  });

  // Sort by performance
  const sortedIndices = timeframeData
    .map((val, idx) => ({ val, idx }))
    .sort((a, b) => b.val - a.val)
    .map(item => item.idx);

  const sortedData = sortedIndices.map(idx => timeframeData[idx]);
  const sortedLabels = sortedIndices.map(idx => sectors[idx].name.split(' ')[0]);
  const sortedColors = sortedData.map(val =>
    val >= 0 ? 'rgba(16, 185, 129, 0.8)' : 'rgba(239, 68, 68, 0.8)'
  );

  // Update chart
  window.performanceChartInstance.data.labels = sortedLabels;
  window.performanceChartInstance.data.datasets[0].data = sortedData;
  window.performanceChartInstance.data.datasets[0].backgroundColor = sortedColors;
  window.performanceChartInstance.update();
}

// Update Top & Bottom Movers Chart based on timeframe
function updateMoversChart(timeframe) {
  const sectors = <%- JSON.stringify(sectors) %>;

  // Get data for selected timeframe
  const timeframeData = sectors.map((s, idx) => ({
    name: s.name,
    symbol: s.symbol,
    change: (() => {
      switch(timeframe) {
        case 'day': return s.dayChange || 0;
        case 'week': return s.weekChange || 0;
        case 'month': return s.monthChange || 0;
        case 'ytd': return s.ytdChange || 0;
        default: return s.dayChange || 0;
      }
    })()
  }));

  // Sort by performance
  const sorted = timeframeData.sort((a, b) => b.change - a.change);

  // Get top 5 and bottom 5
  const topMovers = sorted.slice(0, 5);
  const bottomMovers = sorted.slice(-5).reverse();
  const moversData = [...topMovers, ...bottomMovers];

  const moversLabels = moversData.map(s => s.symbol);
  const moversValues = moversData.map(s => s.change);
  const moversColors = moversValues.map(val =>
    val >= 0 ? 'rgba(16, 185, 129, 0.8)' : 'rgba(239, 68, 68, 0.8)'
  );

  // Update chart
  window.moversChartInstance.data.labels = moversLabels;
  window.moversChartInstance.data.datasets[0].data = moversValues;
  window.moversChartInstance.data.datasets[0].backgroundColor = moversColors;
  window.moversChartInstance.update();
}
