<!-- Attribution Tab - 4 Analytics -->

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
  
  <!-- 10. Regional Attribution (Stacked Bar) -->
  <div class="chart-container">
    <div class="chart-header">
      <h3 class="chart-title">Regional Attribution</h3>
      <div class="chart-controls">
        <span class="text-sm text-gray-400">Allocation & Selection Effects</span>
      </div>
    </div>
    <canvas id="chart-regional"></canvas>
    <div id="export-regional" class="export-controls"></div>
  </div>

  <!-- 11. Sector Rotation (Stacked Area) -->
  <div class="chart-container">
    <div class="chart-header">
      <h3 class="chart-title">Sector Rotation</h3>
      <div class="chart-controls">
        <select id="sector-period" class="chart-control-btn">
          <option value="3M">3 Months</option>
          <option value="6M">6 Months</option>
          <option value="1Y" selected>1 Year</option>
        </select>
      </div>
    </div>
    <canvas id="chart-sector-rotation"></canvas>
    <div id="export-sector-rotation" class="export-controls"></div>
  </div>

  <!-- 12. Peer Benchmarking (Quadrant Scatter) -->
  <div class="chart-container lg:col-span-2">
    <div class="chart-header">
      <h3 class="chart-title">Peer Benchmarking</h3>
      <div class="chart-controls">
        <select id="peer-universe" class="chart-control-btn">
          <option value="balanced" selected>Balanced Funds</option>
          <option value="growth">Growth Funds</option>
          <option value="value">Value Funds</option>
          <option value="income">Income Funds</option>
        </select>
      </div>
    </div>
    <canvas id="chart-peer-benchmarking" height="100"></canvas>
    <div id="export-peer-benchmarking" class="export-controls"></div>
    <div class="mt-3 grid grid-cols-4 gap-4 text-sm">
      <div><span class="text-gray-400">Percentile:</span> <span class="font-mono text-green-500" id="peer-percentile">--</span></div>
      <div><span class="text-gray-400">Rank:</span> <span class="font-mono text-amber-500" id="peer-rank">--</span></div>
      <div><span class="text-gray-400">Avg Return:</span> <span class="font-mono text-blue-500" id="peer-avg-return">--</span></div>
      <div><span class="text-gray-400">Avg Risk:</span> <span class="font-mono text-purple-500" id="peer-avg-risk">--</span></div>
    </div>
  </div>

  <!-- 13. Alpha Decay / Factor Crowding (Heatmap) -->
  <div class="chart-container lg:col-span-2">
    <div class="chart-header">
      <h3 class="chart-title">Alpha Decay Analysis</h3>
      <div class="chart-controls">
        <span class="text-sm text-gray-400">Factor Persistence Over Time</span>
      </div>
    </div>
    <canvas id="chart-alpha-decay" height="80"></canvas>
    <div id="export-alpha-decay" class="export-controls"></div>
  </div>

</div>

<!-- Attribution Metrics Summary -->
<div class="grid grid-cols-2 md:grid-cols-4 gap-4 mt-6">
  <div class="bg-gray-800 border border-gray-700 rounded-lg p-4">
    <div class="text-sm text-gray-400 mb-1">Allocation Effect</div>
    <div class="text-2xl font-mono font-bold text-green-500" id="metric-allocation">--</div>
  </div>
  <div class="bg-gray-800 border border-gray-700 rounded-lg p-4">
    <div class="text-sm text-gray-400 mb-1">Selection Effect</div>
    <div class="text-2xl font-mono font-bold text-blue-500" id="metric-selection">--</div>
  </div>
  <div class="bg-gray-800 border border-gray-700 rounded-lg p-4">
    <div class="text-sm text-gray-400 mb-1">Interaction</div>
    <div class="text-2xl font-mono font-bold text-amber-500" id="metric-interaction">--</div>
  </div>
  <div class="bg-gray-800 border border-gray-700 rounded-lg p-4">
    <div class="text-sm text-gray-400 mb-1">Total Attribution</div>
    <div class="text-2xl font-mono font-bold text-purple-500" id="metric-total-attribution">--</div>
  </div>
</div>
