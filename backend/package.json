{
  "name": "wealthpilot-backend",
  "version": "1.0.0",
  "description": "WealthPilot Pro Backend API",
  "main": "src/server.js",
  "scripts": {
    "dev": "NODE_ENV=development node src/server.js",
    "start": "npx prisma generate && (npx prisma db push --accept-data-loss || echo 'DB push skipped') && NODE_ENV=production node src/server.js",
    "seed": "node seed-simple.js",
    "test": "NODE_ENV=test jest --runInBand --forceExit",
    "test:watch": "NODE_ENV=test jest --watch --runInBand",
    "test:coverage": "NODE_ENV=test jest --coverage --runInBand --forceExit",
    "test:ci": "NODE_ENV=test jest --ci --coverage --runInBand --forceExit",
    "lint": "eslint src/ tests/ --ext .js",
    "lint:fix": "eslint src/ tests/ --ext .js --fix",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:seed": "node prisma/seed.js",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force && npm run db:seed",
    "build": "prisma generate && prisma db push --accept-data-loss",
    "health": "curl -f http://localhost:4000/api/health || exit 1"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "@sendgrid/mail": "^8.1.0",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.0.0",
    "chart.js": "^4.5.1",
    "cheerio": "^1.1.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.3.1",
    "helmet": "^7.2.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.10.1",
    "openai": "^4.104.0",
    "password-validator": "^5.3.0",
    "pdfkit": "^0.17.2",
    "pg": "^8.16.3",
    "prom-client": "^15.1.0",
    "qrcode": "^1.5.4",
    "speakeasy": "^2.0.0",
    "sql.js": "^1.13.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "validator": "^13.15.23",
    "winston": "^3.11.0",
    "ws": "^8.15.0",
    "xlsx": "^0.18.5",
    "xss": "^1.0.15",
    "yahoo-finance2": "^3.10.2"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prisma": "^5.7.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
