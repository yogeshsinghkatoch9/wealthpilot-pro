<script>
// Mobile Bottom Navigation JavaScript
(function() {
  'use strict';

  // Toggle more menu
  window.toggleMoreMenu = function() {
    const menu = document.getElementById('mobile-more-menu');
    const backdrop = document.getElementById('mobile-nav-backdrop');

    if (menu && backdrop) {
      const isOpen = menu.classList.contains('open');

      if (isOpen) {
        closeMoreMenu();
      } else {
        menu.classList.add('open');
        backdrop.classList.add('open');
      }
    }
  };

  window.closeMoreMenu = function() {
    const menu = document.getElementById('mobile-more-menu');
    const backdrop = document.getElementById('mobile-nav-backdrop');

    if (menu) menu.classList.remove('open');
    if (backdrop) backdrop.classList.remove('open');
  };

  // Quick actions menu
  window.openQuickActions = function() {
    // Open command palette or show quick action sheet
    if (window.commandPalette) {
      window.commandPalette.open();
    } else {
      // Fallback: show simple menu
      const actions = [
        { label: 'Add Holding', url: '/holdings?action=add' },
        { label: 'Add Transaction', url: '/transactions?action=add' },
        { label: 'Search Stock', action: () => window.commandPalette?.open() },
        { label: 'Refresh Prices', action: () => window.refreshPrices?.() }
      ];

      // Show action sheet (you can implement a custom modal here)
      console.log('Quick actions:', actions);
    }
  };

  // Active state management
  const currentPath = window.location.pathname;
  document.querySelectorAll('.mobile-bottom-nav-item[data-page]').forEach(item => {
    const page = item.getAttribute('data-page');
    if (currentPath.includes(page)) {
      item.classList.add('active');
    }
  });

  // Haptic feedback (if supported)
  document.querySelectorAll('.mobile-bottom-nav-item').forEach(item => {
    item.addEventListener('click', function() {
      // Vibrate on mobile devices
      if (navigator.vibrate) {
        navigator.vibrate(10);
      }

      // Add haptic class for visual feedback
      this.classList.add('haptic');
      setTimeout(() => this.classList.remove('haptic'), 100);
    });
  });

  // Close more menu on navigation
  document.querySelectorAll('.mobile-bottom-nav-more-item').forEach(item => {
    item.addEventListener('click', closeMoreMenu);
  });

  // Handle swipe gestures to close more menu
  let touchStartY = 0;
  const moreMenu = document.getElementById('mobile-more-menu');

  if (moreMenu) {
    moreMenu.addEventListener('touchstart', (e) => {
      touchStartY = e.touches[0].clientY;
    });

    moreMenu.addEventListener('touchmove', (e) => {
      const touchY = e.touches[0].clientY;
      const deltaY = touchY - touchStartY;

      if (deltaY > 50) {
        closeMoreMenu();
      }
    });
  }
})();
</script>
