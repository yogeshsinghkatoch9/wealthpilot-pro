.edu-tab:not(.active) {
  background-color: transparent;
  border-color: #1a1a1a;
  color: #94a3b8;
}
.edu-tab:not(.active):hover {
  background-color: rgba(247, 147, 30, 0.1);
  border-color: #f7931e;
  color: #f7931e;
}
.edu-tab.active {
