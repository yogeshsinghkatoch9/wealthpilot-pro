  border-color: #f7931e;
  color: #000;
}
</style>

<script>
function showCategory(cat) {
  document.querySelectorAll('.edu-tab').forEach(t => t.classList.remove('active'));
  document.querySelector(`[data-cat="${cat}"]`).classList.add('active');

  if (cat === 'glossary') {
    document.getElementById('courses-section').classList.add('hidden');
    document.getElementById('glossary-section').classList.remove('hidden');
  } else {
    document.getElementById('courses-section').classList.remove('hidden');
    document.getElementById('glossary-section').classList.add('hidden');

    document.querySelectorAll('.course-card').forEach(card => {
      if (cat === 'all' || card.dataset.level === cat) {
        card.style.display = 'block';
      } else {
        card.style.display = 'none';
      }
    });
  }
}

function filterGlossary() {
  const query = document.getElementById('glossarySearch').value.toLowerCase();
  document.querySelectorAll('.glossary-item').forEach(item => {
    const text = item.textContent.toLowerCase();
    item.style.display = text.includes(query) ? 'block' : 'none';
  });
}
</script>

