  function addToCalendar() {
    if (!currentEvent) return;

    const eventDate = new Date(currentEvent.date);

    // Format date for ICS file
    function formatDateForICS(date) {
      const year = date.getFullYear();
      const month = String(date.getMonth() + 1).padStart(2, '0');
      const day = String(date.getDate()).padStart(2, '0');
      const hours = String(date.getHours()).padStart(2, '0');
      const minutes = String(date.getMinutes()).padStart(2, '0');
      const seconds = String(date.getSeconds()).padStart(2, '0');
      return `${year}${month}${day}T${hours}${minutes}${seconds}`;
    }

    const startDate = formatDateForICS(eventDate);
    const endDate = formatDateForICS(new Date(eventDate.getTime() + 30 * 60000)); // 30 min duration

    // Build description
    let description = `${currentEvent.event_name}\\n\\n`;
    description += `Country: ${currentEvent.country}\\n`;
    description += `Impact: ${currentEvent.impact}\\n`;
    description += `Category: ${currentEvent.category}\\n\\n`;

    if (currentEvent.estimate) description += `Forecast: ${currentEvent.estimate}\\n`;
    if (currentEvent.previous) description += `Previous: ${currentEvent.previous}\\n`;
    if (currentEvent.actual) description += `Actual: ${currentEvent.actual}\\n`;

    // Create ICS content
    const icsContent = [
      'BEGIN:VCALENDAR',
      'VERSION:2.0',
      'PRODID:-//WealthPilot Pro//Economic Calendar//EN',
      'CALSCALE:GREGORIAN',
      'METHOD:PUBLISH',
      'BEGIN:VEVENT',
      `UID:${currentEvent.event_id}@wealthpilot.com`,
      `DTSTAMP:${formatDateForICS(new Date())}`,
      `DTSTART:${startDate}`,
      `DTEND:${endDate}`,
      `SUMMARY:ğŸ“Š ${currentEvent.event_name} (${currentEvent.country_code})`,
      `DESCRIPTION:${description}`,
      `LOCATION:${currentEvent.country}`,
      `STATUS:CONFIRMED`,
      `CATEGORIES:Economics,Finance,${currentEvent.category}`,
      `PRIORITY:${currentEvent.impact === 'High' ? '1' : currentEvent.impact === 'Medium' ? '5' : '9'}`,
      'BEGIN:VALARM',
      'TRIGGER:-PT15M',
      'ACTION:DISPLAY',
      'DESCRIPTION:Economic Event in 15 minutes',
      'END:VALARM',
      'END:VEVENT',
      'END:VCALENDAR'
    ].join('\\r\\n');

    // Download ICS file
    const blob = new Blob([icsContent], { type: 'text/calendar;charset=utf-8' });
    const link = document.createElement('a');
    link.href = URL.createObjectURL(blob);
    link.download = `${currentEvent.event_name.replace(/[^a-z0-9]/gi, '_')}.ics`;
    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);

    // Show success message
    showToast('Event added to calendar!', 'success');
  }

  function shareEvent() {
    if (!currentEvent) return;

    const eventDate = new Date(currentEvent.date);
    const shareText = `ğŸ“Š Economic Event: ${currentEvent.event_name}\\n` +
      `ğŸ“… ${eventDate.toLocaleDateString()} at ${eventDate.toLocaleTimeString()}\\n` +
      `ğŸŒ ${currentEvent.country}\\n` +
      `âš¡ ${currentEvent.impact} Impact\\n` +
      (currentEvent.estimate ? `ğŸ“ˆ Forecast: ${currentEvent.estimate}\\n` : '') +
      (currentEvent.previous ? `ğŸ“‰ Previous: ${currentEvent.previous}` : '');

    if (navigator.share) {
      navigator.share({
        title: currentEvent.event_name,
        text: shareText
      }).then(() => {
        showToast('Event shared successfully!', 'success');
      }).catch((err) => {
        console.log('Share cancelled');
      });
    } else {
      // Fallback: Copy to clipboard
      navigator.clipboard.writeText(shareText).then(() => {
        showToast('Event details copied to clipboard!', 'success');
      }).catch(() => {
        showToast('Failed to copy event details', 'error');
      });
    }
  }

  function showToast(message, type = 'info') {
    const toast = document.createElement('div');
    toast.className = `fixed bottom-4 right-4 px-6 py-3 rounded-xl font-semibold text-white z-50 transition-all transform translate-y-0 ${
      type === 'success' ? 'bg-green-600' : type === 'error' ? 'bg-red-600' : 'bg-blue-600'
    }`;
    toast.innerHTML = `<i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : 'info-circle'} mr-2"></i>${message}`;
    document.body.appendChild(toast);

    setTimeout(() => {
      toast.style.transform = 'translateY(100px)';
      toast.style.opacity = '0';
      setTimeout(() => toast.remove(), 300);
    }, 3000);
  }
