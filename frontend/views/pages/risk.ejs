<%
// Safe defaults for undefined variables
const safeData = data || {};
const safeTheme = theme || 'dark';
const safeFmt = fmt || { compact: (n) => n?.toLocaleString() || '0' };
const safePortfolios = portfolios || [];
const safeSelectedPortfolioId = selectedPortfolioId || '';
const riskScore = safeData.riskScore || 50;
const beta = safeData.beta || 1.0;
const sharpeRatio = safeData.sharpeRatio || 0;
const volatility = safeData.volatility || 15;
const maxDrawdown = safeData.maxDrawdown || 0;
const var95Value = safeData.var95Value || 0;
const var90Value = safeData.var90Value || var95Value * 0.7;
const var99Value = safeData.var99Value || var95Value * 1.4;
const portfolioValue = safeData.portfolioValue || 100000;
const hhi = safeData.hhi || 0;
const topPositions = safeData.topPositions || [];
const sortinoRatio = safeData.sortinoRatio || 0;
const alpha = safeData.alpha || 0;
const informationRatio = safeData.informationRatio || 0;
const drawdownHistory = safeData.drawdownHistory || [];
const riskContribution = safeData.riskContribution || topPositions;
const alerts = safeData.alerts || [];
const stressTests = safeData.stressTests || [
  { name: '2008 Crisis', impact: -38.2 },
  { name: 'COVID Crash', impact: -28.5 },
  { name: 'Tech Bubble', impact: -45.8 },
  { name: 'Rate Hike', impact: -18.2 }
];
%>
<%- include('../partials/header', { pageTitle: 'Risk Dashboard' }) %>

<!-- Bloomberg Header Bar -->
<div class="bloomberg-header-bar">
  <div class="flex items-center justify-between flex-wrap gap-3">
    <div class="flex items-center gap-3">
      <div class="w-1 h-8 bg-bloomberg-orange"></div>
      <h1 class="text-xl font-bold text-white tracking-tight">RISK DASHBOARD</h1>
      <span class="text-xs text-slate-400 font-mono hidden sm:inline">ADVANCED METRICS & STRESS TESTING</span>
    </div>
    <div class="flex items-center gap-3">
      <!-- Portfolio Selector -->
      <% if (safePortfolios.length > 0) { %>
      <select id="portfolioSelector" onchange="selectPortfolio(this.value)"
              class="bg-slate-800 border border-slate-700 text-white text-sm rounded px-3 py-2 font-mono focus:ring-bloomberg-orange focus:border-bloomberg-orange">
        <option value="">All Portfolios</option>
        <% safePortfolios.forEach(p => { %>
        <option value="<%= p.id %>" <%= safeSelectedPortfolioId === p.id ? 'selected' : '' %>>
          <%= p.name %> (<%= p._count?.holdings || p.holdingsCount || 0 %> holdings)
        </option>
        <% }) %>
      </select>
      <% } %>
      <button onclick="refreshRisk()" class="bloomberg-btn bloomberg-btn-sm">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
        </svg>
        <span class="hidden sm:inline">REFRESH</span>
      </button>
    </div>
  </div>
</div>

<main class="p-4 lg:p-6 bg-slate-950">
  <div class="max-w-7xl mx-auto space-y-4">

    <% if (data) { %>
    <!-- KPI Bar for Key Risk Metrics -->
    <div class="kpi-bar">
      <div class="kpi-item">
        <div class="kpi-label">BETA</div>
        <div class="kpi-value <%= beta > 1.3 ? 'text-red-400' : beta > 1 ? 'text-amber-400' : 'text-emerald-400' %>">
          <span class="font-mono"><%= beta.toFixed(2) %></span>
        </div>
        <div class="kpi-change <%= beta > 1 ? 'negative' : 'positive' %>">
          <%= beta > 1.3 ? 'AGGRESSIVE' : beta > 1 ? 'MODERATE' : 'CONSERVATIVE' %>
        </div>
      </div>

      <div class="kpi-item">
        <div class="kpi-label">SHARPE RATIO</div>
        <div class="kpi-value <%= sharpeRatio >= 1 ? 'text-emerald-400' : sharpeRatio >= 0.5 ? 'text-amber-400' : 'text-red-400' %>">
          <span class="font-mono"><%= sharpeRatio.toFixed(2) %></span>
        </div>
        <div class="kpi-change <%= sharpeRatio >= 1 ? 'positive' : 'negative' %>">
          <%= sharpeRatio >= 1 ? 'GOOD' : sharpeRatio >= 0.5 ? 'FAIR' : 'POOR' %>
        </div>
      </div>

      <div class="kpi-item">
        <div class="kpi-label">VOLATILITY (ANN)</div>
        <div class="kpi-value text-sky-400">
          <span class="font-mono"><%= volatility.toFixed(1) %>%</span>
        </div>
        <div class="kpi-change neutral">
          <%= volatility > 25 ? 'HIGH' : volatility > 15 ? 'MODERATE' : 'LOW' %>
        </div>
      </div>

      <div class="kpi-item">
        <div class="kpi-label">MAX DRAWDOWN</div>
        <div class="kpi-value text-red-400">
          <span class="font-mono"><%= maxDrawdown.toFixed(1) %>%</span>
        </div>
        <div class="kpi-change negative">
          SINCE INCEPTION
        </div>
      </div>
    </div>

    <!-- Risk Score Overview -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <div class="bloomberg-card">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-xs text-slate-500 font-mono mb-1">RISK SCORE</p>
            <p class="text-3xl font-bold font-mono <%= riskScore > 70 ? 'text-red-400' : riskScore > 40 ? 'text-amber-400' : 'text-emerald-400' %>">
              <%= Math.round(riskScore) %><span class="text-lg text-slate-500">/100</span>
            </p>
          </div>
          <div class="w-12 h-12 rounded-sm <%= riskScore > 70 ? 'bg-red-500/20' : riskScore > 40 ? 'bg-amber-500/20' : 'bg-emerald-500/20' %> flex items-center justify-center">
            <span class="text-xl <%= riskScore > 70 ? 'text-red-400' : riskScore > 40 ? 'text-amber-400' : 'text-emerald-400' %>">
              <%= riskScore > 70 ? '!' : riskScore > 40 ? '~' : '+' %>
            </span>
          </div>
        </div>
        <div class="mt-3 pt-3 border-t border-slate-800">
          <p class="text-xs text-slate-400 font-mono uppercase">
            <%= riskScore > 70 ? 'High Risk' : riskScore > 40 ? 'Moderate Risk' : 'Low Risk' %>
          </p>
        </div>
      </div>

      <div class="bloomberg-card">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-xs text-slate-500 font-mono mb-1">VAR (95%)</p>
            <p class="text-3xl font-bold font-mono text-red-400">
              <%= safeFmt.compact(Math.abs(var95Value)) %>
            </p>
          </div>
          <div class="w-12 h-12 rounded-sm bg-red-500/20 flex items-center justify-center">
            <svg class="w-6 h-6 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 17h8m0 0V9m0 8l-8-8-4 4-6-6"/>
            </svg>
          </div>
        </div>
        <div class="mt-3 pt-3 border-t border-slate-800">
          <p class="text-xs text-slate-400 font-mono uppercase">DAILY 95% VAR</p>
        </div>
      </div>

      <div class="bloomberg-card">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-xs text-slate-500 font-mono mb-1">ALPHA (ANN)</p>
            <p class="text-3xl font-bold font-mono <%= alpha >= 0 ? 'text-emerald-400' : 'text-red-400' %>">
              <%= alpha >= 0 ? '+' : '' %><%= alpha.toFixed(1) %>%
            </p>
          </div>
          <div class="w-12 h-12 rounded-sm <%= alpha >= 0 ? 'bg-emerald-500/20' : 'bg-red-500/20' %> flex items-center justify-center">
            <svg class="w-6 h-6 <%= alpha >= 0 ? 'text-emerald-400' : 'text-red-400' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
            </svg>
          </div>
        </div>
        <div class="mt-3 pt-3 border-t border-slate-800">
          <p class="text-xs text-slate-400 font-mono uppercase">
            <%= alpha >= 0 ? 'OUTPERFORMING' : 'UNDERPERFORMING' %>
          </p>
        </div>
      </div>

      <div class="bloomberg-card">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-xs text-slate-500 font-mono mb-1">SORTINO RATIO</p>
            <p class="text-3xl font-bold font-mono <%= sortinoRatio >= 1 ? 'text-emerald-400' : sortinoRatio >= 0.5 ? 'text-amber-400' : 'text-red-400' %>">
              <%= sortinoRatio.toFixed(2) %>
            </p>
          </div>
          <div class="w-12 h-12 rounded-sm <%= sortinoRatio >= 1 ? 'bg-emerald-500/20' : 'bg-amber-500/20' %> flex items-center justify-center">
            <span class="text-xl <%= sortinoRatio >= 1 ? 'text-emerald-400' : 'text-amber-400' %>">
              <%= sortinoRatio >= 1 ? '+' : '~' %>
            </span>
          </div>
        </div>
        <div class="mt-3 pt-3 border-t border-slate-800">
          <p class="text-xs text-slate-400 font-mono uppercase">
            <%= sortinoRatio >= 1 ? 'GOOD' : sortinoRatio >= 0.5 ? 'FAIR' : 'POOR' %>
          </p>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
      <!-- VaR Analysis -->
      <div class="bloomberg-card">
        <div class="mb-4">
          <h3 class="text-sm font-bold text-white uppercase tracking-wider font-mono">VALUE AT RISK (VAR) DISTRIBUTION</h3>
          <p class="text-xs text-slate-500 mt-1 font-mono">RETURN PROBABILITY DENSITY</p>
        </div>
        <div class="h-64"><canvas id="varChart"></canvas></div>
        <div class="grid grid-cols-3 gap-4 mt-4 pt-4 border-t border-slate-800">
          <div class="text-center">
            <p class="text-xs text-slate-500 font-mono mb-1">90% VAR</p>
            <p class="font-bold font-mono text-amber-400"><%= safeFmt.compact(Math.abs(var90Value)) %></p>
          </div>
          <div class="text-center">
            <p class="text-xs text-slate-500 font-mono mb-1">95% VAR</p>
            <p class="font-bold font-mono text-red-400"><%= safeFmt.compact(Math.abs(var95Value)) %></p>
          </div>
          <div class="text-center">
            <p class="text-xs text-slate-500 font-mono mb-1">99% VAR</p>
            <p class="font-bold font-mono text-red-500"><%= safeFmt.compact(Math.abs(var99Value)) %></p>
          </div>
        </div>
      </div>

      <!-- Concentration Analysis -->
      <div class="bloomberg-card">
        <div class="mb-4">
          <h3 class="text-sm font-bold text-white uppercase tracking-wider font-mono">CONCENTRATION RISK</h3>
          <p class="text-xs text-slate-500 mt-1 font-mono">PORTFOLIO DIVERSIFICATION METRICS</p>
        </div>
        <div class="space-y-4">
          <div>
            <div class="flex justify-between mb-2">
              <span class="text-slate-400 text-sm font-mono">HHI SCORE</span>
              <span class="font-bold font-mono <%= hhi > 2500 ? 'text-red-400' : hhi > 1500 ? 'text-amber-400' : 'text-emerald-400' %>">
                <%= Math.round(hhi) %>
              </span>
            </div>
            <div class="h-2 rounded-sm bg-slate-900">
              <div class="h-2 rounded-sm <%= hhi > 2500 ? 'bg-red-400' : hhi > 1500 ? 'bg-amber-400' : 'bg-emerald-400' %>"
                   style="width: <%= Math.min(hhi / 100, 100) %>%"></div>
            </div>
            <p class="text-xs text-slate-500 mt-2 font-mono">
              <%= hhi > 2500 ? 'HIGHLY CONCENTRATED - DIVERSIFY' : hhi > 1500 ? 'MODERATELY CONCENTRATED' : 'WELL DIVERSIFIED' %>
            </p>
          </div>
          <div class="pt-4 border-t border-slate-800">
            <p class="text-xs font-bold text-white mb-3 font-mono uppercase">TOP POSITION WEIGHTS</p>
            <% if (topPositions && topPositions.length > 0) { %>
            <% topPositions.slice(0, 5).forEach((pos, idx) => { %>
            <div class="mb-3">
              <div class="flex justify-between mb-1">
                <span class="text-slate-300 text-sm font-mono"><%= pos.symbol %></span>
                <span class="<%= pos.weight > 20 ? 'text-red-400' : pos.weight > 10 ? 'text-amber-400' : 'text-emerald-400' %> text-sm font-mono font-bold">
                  <%= pos.weight?.toFixed(1) || 0 %>%
                </span>
              </div>
              <div class="h-1.5 rounded-sm bg-slate-900">
                <div class="h-1.5 rounded-sm <%= pos.weight > 20 ? 'bg-red-400' : pos.weight > 10 ? 'bg-amber-400' : 'bg-emerald-400' %>"
                     style="width: <%= pos.weight || 0 %>%"></div>
              </div>
            </div>
            <% }) %>
            <% } else { %>
            <p class="text-sm text-slate-500 font-mono">NO POSITION DATA AVAILABLE</p>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <!-- Stress Testing -->
    <div class="bloomberg-card">
      <div class="mb-4">
        <h3 class="text-sm font-bold text-white uppercase tracking-wider font-mono">STRESS TEST SCENARIOS</h3>
        <p class="text-xs text-slate-500 mt-1 font-mono">PORTFOLIO IMPACT UNDER EXTREME CONDITIONS</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <% stressTests.forEach(scenario => { %>
        <div class="p-4 rounded-sm bg-slate-900 border border-slate-800 hover:border-slate-700 transition-colors">
          <div class="flex items-center gap-2 mb-2">
            <span class="text-red-400 text-lg">!</span>
            <p class="font-medium text-white text-sm font-mono"><%= scenario.name %></p>
          </div>
          <p class="text-2xl font-bold text-red-400 font-mono"><%= scenario.impact?.toFixed(1) || 0 %>%</p>
          <p class="text-xs text-slate-500 mt-2 font-mono">
            <%= safeFmt.compact((portfolioValue * (scenario.impact || 0) / 100)) %>
          </p>
        </div>
        <% }) %>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
      <!-- Drawdown Chart -->
      <div class="bloomberg-card">
        <div class="mb-4">
          <h3 class="text-sm font-bold text-white uppercase tracking-wider font-mono">HISTORICAL DRAWDOWNS</h3>
          <p class="text-xs text-slate-500 mt-1 font-mono">PEAK-TO-TROUGH DECLINE</p>
        </div>
        <div class="h-64"><canvas id="drawdownChart"></canvas></div>
      </div>

      <!-- Risk Contribution -->
      <div class="bloomberg-card">
        <div class="mb-4">
          <h3 class="text-sm font-bold text-white uppercase tracking-wider font-mono">RISK CONTRIBUTION BY HOLDING</h3>
          <p class="text-xs text-slate-500 mt-1 font-mono">MARGINAL RISK CONTRIBUTION %</p>
        </div>
        <div class="h-64"><canvas id="riskContributionChart"></canvas></div>
      </div>
    </div>

    <!-- Risk Alerts -->
    <div class="bloomberg-card">
      <div class="mb-4">
        <h3 class="text-sm font-bold text-white uppercase tracking-wider font-mono">RISK ALERTS</h3>
        <p class="text-xs text-slate-500 mt-1 font-mono">ACTIVE MONITORING NOTIFICATIONS</p>
      </div>
      <div class="space-y-3">
        <% if (alerts.length > 0) { %>
        <% alerts.forEach(alert => { %>
        <div class="flex items-start gap-3 p-3 rounded-sm <%= alert.severity === 'high' ? 'bg-red-500/10 border border-red-500/30' : alert.severity === 'medium' ? 'bg-amber-500/10 border border-amber-500/30' : 'bg-emerald-500/10 border border-emerald-500/30' %>">
          <span class="text-xl <%= alert.severity === 'high' ? 'text-red-400' : alert.severity === 'medium' ? 'text-amber-400' : 'text-emerald-400' %>">
            <%= alert.severity === 'high' ? '!' : alert.severity === 'medium' ? '~' : '+' %>
          </span>
          <div>
            <p class="font-medium text-white text-sm font-mono"><%= alert.title %></p>
            <p class="text-sm text-slate-400 mt-1"><%= alert.message %></p>
          </div>
        </div>
        <% }) %>
        <% } else { %>
        <div class="flex items-start gap-3 p-3 rounded-sm bg-emerald-500/10 border border-emerald-500/30">
          <span class="text-emerald-400 text-xl">+</span>
          <div>
            <p class="font-medium text-white text-sm font-mono">NO RISK ALERTS</p>
            <p class="text-sm text-slate-400 mt-1">Your portfolio risk metrics are within acceptable limits</p>
          </div>
        </div>
        <% } %>
      </div>
    </div>

    <!-- Detailed Risk Metrics Table -->
    <div class="bloomberg-card">
      <div class="mb-4">
        <h3 class="text-sm font-bold text-white uppercase tracking-wider font-mono">DETAILED RISK METRICS</h3>
        <p class="text-xs text-slate-500 mt-1 font-mono">COMPREHENSIVE RISK-ADJUSTED PERFORMANCE</p>
      </div>
      <div class="overflow-x-auto">
        <table class="w-full text-sm">
          <thead>
            <tr class="border-b border-slate-800">
              <th class="pb-3 text-left text-slate-500 font-mono text-xs uppercase">METRIC</th>
              <th class="pb-3 text-left text-slate-500 font-mono text-xs uppercase">VALUE</th>
              <th class="pb-3 text-left text-slate-500 font-mono text-xs uppercase">BENCHMARK</th>
              <th class="pb-3 text-left text-slate-500 font-mono text-xs uppercase">STATUS</th>
            </tr>
          </thead>
          <tbody class="font-mono">
            <tr class="border-b border-slate-800/50">
              <td class="py-3 text-white">Sharpe Ratio</td>
              <td class="py-3 text-slate-300 font-bold"><%= sharpeRatio.toFixed(2) %></td>
              <td class="py-3 text-slate-500">&gt;1.0</td>
              <td class="py-3">
                <span class="px-2 py-1 rounded-sm text-xs font-bold <%= sharpeRatio >= 1 ? 'bg-emerald-500/20 text-emerald-400' : sharpeRatio >= 0.5 ? 'bg-amber-500/20 text-amber-400' : 'bg-red-500/20 text-red-400' %>">
                  <%= sharpeRatio >= 1 ? 'GOOD' : sharpeRatio >= 0.5 ? 'FAIR' : 'POOR' %>
                </span>
              </td>
            </tr>
            <tr class="border-b border-slate-800/50">
              <td class="py-3 text-white">Sortino Ratio</td>
              <td class="py-3 text-slate-300 font-bold"><%= sortinoRatio.toFixed(2) %></td>
              <td class="py-3 text-slate-500">&gt;1.0</td>
              <td class="py-3">
                <span class="px-2 py-1 rounded-sm text-xs font-bold <%= sortinoRatio >= 1 ? 'bg-emerald-500/20 text-emerald-400' : sortinoRatio >= 0.5 ? 'bg-amber-500/20 text-amber-400' : 'bg-red-500/20 text-red-400' %>">
                  <%= sortinoRatio >= 1 ? 'GOOD' : sortinoRatio >= 0.5 ? 'FAIR' : 'POOR' %>
                </span>
              </td>
            </tr>
            <tr class="border-b border-slate-800/50">
              <td class="py-3 text-white">Beta</td>
              <td class="py-3 text-slate-300 font-bold"><%= beta.toFixed(2) %></td>
              <td class="py-3 text-slate-500">1.0</td>
              <td class="py-3">
                <span class="px-2 py-1 rounded-sm text-xs font-bold <%= beta > 1.3 ? 'bg-red-500/20 text-red-400' : beta > 1 ? 'bg-amber-500/20 text-amber-400' : 'bg-emerald-500/20 text-emerald-400' %>">
                  <%= beta > 1.3 ? 'AGGRESSIVE' : beta > 1 ? 'MODERATE' : 'CONSERVATIVE' %>
                </span>
              </td>
            </tr>
            <tr class="border-b border-slate-800/50">
              <td class="py-3 text-white">Alpha (Annual)</td>
              <td class="py-3 text-slate-300 font-bold"><%= alpha >= 0 ? '+' : '' %><%= alpha.toFixed(1) %>%</td>
              <td class="py-3 text-slate-500">&gt;0%</td>
              <td class="py-3">
                <span class="px-2 py-1 rounded-sm text-xs font-bold <%= alpha > 0 ? 'bg-emerald-500/20 text-emerald-400' : 'bg-red-500/20 text-red-400' %>">
                  <%= alpha > 0 ? 'OUTPERFORMING' : 'UNDERPERFORMING' %>
                </span>
              </td>
            </tr>
            <tr>
              <td class="py-3 text-white">Information Ratio</td>
              <td class="py-3 text-slate-300 font-bold"><%= informationRatio.toFixed(2) %></td>
              <td class="py-3 text-slate-500">&gt;0.5</td>
              <td class="py-3">
                <span class="px-2 py-1 rounded-sm text-xs font-bold <%= informationRatio >= 0.5 ? 'bg-emerald-500/20 text-emerald-400' : 'bg-amber-500/20 text-amber-400' %>">
                  <%= informationRatio >= 0.5 ? 'GOOD' : 'FAIR' %>
                </span>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <% } else { %>
    <!-- No Data State - Show Portfolio Selector -->
    <div class="bloomberg-card p-8">
      <div class="text-center mb-6">
        <div class="w-16 h-16 mx-auto mb-4 rounded-sm bg-slate-900 flex items-center justify-center">
          <svg class="w-8 h-8 text-bloomberg-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
        </div>
        <h3 class="text-lg font-bold text-white mb-2 font-mono uppercase">SELECT PORTFOLIO FOR RISK ANALYSIS</h3>
        <p class="text-slate-400 font-mono text-sm">Choose a portfolio below to calculate risk metrics</p>
      </div>

      <% if (safePortfolios.length > 0) { %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mt-6">
        <% safePortfolios.forEach(p => { %>
        <div onclick="selectPortfolio('<%= p.id %>')"
             class="p-4 rounded-sm bg-slate-900 border border-slate-800 hover:border-bloomberg-orange cursor-pointer transition-all hover:bg-slate-800/50 group">
          <div class="flex items-center justify-between mb-3">
            <h4 class="font-bold text-white font-mono"><%= p.name %></h4>
            <span class="text-xs bg-slate-800 text-slate-400 px-2 py-1 rounded font-mono group-hover:bg-bloomberg-orange/20 group-hover:text-bloomberg-orange">
              <%= p._count?.holdings || p.holdingsCount || 0 %> HOLDINGS
            </span>
          </div>
          <div class="flex items-center justify-between text-sm">
            <span class="text-slate-500 font-mono">Total Value</span>
            <span class="text-emerald-400 font-mono font-bold">
              $<%= (p.totalValue || 0).toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %>
            </span>
          </div>
          <% if (p.holdings && p.holdings.length > 0) { %>
          <div class="mt-3 pt-3 border-t border-slate-800">
            <p class="text-xs text-slate-500 font-mono mb-2">TOP HOLDINGS:</p>
            <div class="flex flex-wrap gap-1">
              <% p.holdings.slice(0, 5).forEach(h => { %>
              <span class="text-xs bg-slate-800 text-slate-300 px-2 py-0.5 rounded font-mono"><%= h.symbol %></span>
              <% }) %>
              <% if (p.holdings.length > 5) { %>
              <span class="text-xs text-slate-500 font-mono">+<%= p.holdings.length - 5 %> more</span>
              <% } %>
            </div>
          </div>
          <% } %>
          <div class="mt-4">
            <button class="w-full py-2 px-4 bg-bloomberg-orange/10 text-bloomberg-orange border border-bloomberg-orange/30 rounded-sm font-mono text-sm hover:bg-bloomberg-orange hover:text-white transition-colors">
              ANALYZE RISK
            </button>
          </div>
        </div>
        <% }) %>
      </div>
      <% } else { %>
      <div class="text-center py-8">
        <p class="text-slate-400 mb-4 font-mono text-sm">No portfolios found. Create a portfolio with holdings first.</p>
        <a href="/portfolio" class="bloomberg-btn">
          <span>CREATE PORTFOLIO</span>
        </a>
      </div>
      <% } %>
    </div>
    <% } %>

  </div>
</main>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
function refreshRisk() {
  showToast('Refreshing risk analysis...', 'info');
  setTimeout(() => location.reload(), 500);
}

function selectPortfolio(portfolioId) {
  if (portfolioId) {
    showToast('Loading risk analysis...', 'info');
    window.location.href = '/risk?portfolioId=' + portfolioId;
  } else {
    window.location.href = '/risk';
  }
}

<% if (data) { %>
const volatilityData = <%= volatility %>;
const drawdownData = <%- JSON.stringify(drawdownHistory) %>;
const riskContributionData = <%- JSON.stringify(riskContribution.length > 0 ? riskContribution : topPositions) %>;

// Bloomberg chart colors
const bloombergColors = {
  primary: '#FF6B00',
  positive: '#10b981',
  negative: '#ef4444',
  neutral: '#0ea5e9',
  grid: '#1e293b',
  text: '#94a3b8'
};

// VaR Distribution Chart
new Chart(document.getElementById('varChart'), {
  type: 'line',
  data: {
    labels: Array.from({length: 50}, (_, i) => ((i - 25) * 0.5).toFixed(1) + '%'),
    datasets: [{
      label: 'Return Distribution',
      data: Array.from({length: 50}, (_, i) => Math.exp(-Math.pow((i - 25) * 0.5, 2) / (2 * Math.pow(volatilityData/100 * 16, 2))) * 100),
      borderColor: bloombergColors.neutral,
      backgroundColor: 'rgba(14, 165, 233, 0.1)',
      fill: true,
      tension: 0.4,
      borderWidth: 2
    }]
  },
  options: {
    responsive: true,
    maintainAspectRatio: false,
    plugins: {
      legend: { display: false },
      tooltip: {
        backgroundColor: '#0f172a',
        titleColor: '#fff',
        bodyColor: '#94a3b8',
        borderColor: '#334155',
        borderWidth: 1,
        padding: 10,
        displayColors: false,
        titleFont: { family: 'monospace', size: 11 },
        bodyFont: { family: 'monospace', size: 11 }
      }
    },
    scales: {
      y: {
        display: false,
        grid: { display: false }
      },
      x: {
        grid: { color: bloombergColors.grid, drawBorder: false },
        ticks: {
          color: bloombergColors.text,
          font: { family: 'monospace', size: 9 }
        },
        border: { display: false }
      }
    }
  }
});

// Drawdown Chart
const months = ['JAN', 'FEB', 'MAR', 'APR', 'MAY', 'JUN', 'JUL', 'AUG', 'SEP', 'OCT', 'NOV', 'DEC'];
new Chart(document.getElementById('drawdownChart'), {
  type: 'line',
  data: {
    labels: drawdownData.length > 0 ? drawdownData.map(d => d.date) : months,
    datasets: [{
      label: 'Drawdown %',
      data: drawdownData.length > 0 ? drawdownData.map(d => d.value) : [0, -2, -5, -8, -12, -8, -4, -6, -10, -<%= maxDrawdown %>, -8, -3],
      borderColor: bloombergColors.negative,
      backgroundColor: 'rgba(239, 68, 68, 0.1)',
      fill: true,
      tension: 0.3,
      borderWidth: 2
    }]
  },
  options: {
    responsive: true,
    maintainAspectRatio: false,
    plugins: {
      legend: { display: false },
      tooltip: {
        backgroundColor: '#0f172a',
        titleColor: '#fff',
        bodyColor: '#94a3b8',
        borderColor: '#334155',
        borderWidth: 1,
        padding: 10,
        displayColors: false,
        titleFont: { family: 'monospace', size: 11 },
        bodyFont: { family: 'monospace', size: 11 },
        callbacks: {
          label: (context) => context.parsed.y.toFixed(1) + '%'
        }
      }
    },
    scales: {
      y: {
        grid: { color: bloombergColors.grid, drawBorder: false },
        ticks: {
          color: bloombergColors.text,
          font: { family: 'monospace', size: 10 },
          callback: v => v + '%'
        },
        border: { display: false }
      },
      x: {
        grid: { display: false },
        ticks: {
          color: bloombergColors.text,
          font: { family: 'monospace', size: 9 }
        },
        border: { display: false }
      }
    }
  }
});

// Risk Contribution Chart
new Chart(document.getElementById('riskContributionChart'), {
  type: 'bar',
  data: {
    labels: riskContributionData.slice(0, 8).map(r => r.symbol || r.name || 'UNKNOWN'),
    datasets: [{
      label: 'Risk Contribution %',
      data: riskContributionData.slice(0, 8).map(r => r.riskContribution || r.weight || 0),
      backgroundColor: riskContributionData.slice(0, 8).map(r => {
        const val = r.riskContribution || r.weight || 0;
        return val > 25 ? 'rgba(239, 68, 68, 0.8)' : val > 15 ? 'rgba(245, 158, 11, 0.8)' : 'rgba(16, 185, 129, 0.8)';
      }),
      borderRadius: 2,
      borderSkipped: false
    }]
  },
  options: {
    responsive: true,
    maintainAspectRatio: false,
    indexAxis: 'y',
    plugins: {
      legend: { display: false },
      tooltip: {
        backgroundColor: '#0f172a',
        titleColor: '#fff',
        bodyColor: '#94a3b8',
        borderColor: '#334155',
        borderWidth: 1,
        padding: 10,
        displayColors: false,
        titleFont: { family: 'monospace', size: 11 },
        bodyFont: { family: 'monospace', size: 11 },
        callbacks: {
          label: (context) => context.parsed.x.toFixed(1) + '%'
        }
      }
    },
    scales: {
      x: {
        grid: { color: bloombergColors.grid, drawBorder: false },
        ticks: {
          color: bloombergColors.text,
          font: { family: 'monospace', size: 10 },
          callback: v => v + '%'
        },
        border: { display: false }
      },
      y: {
        grid: { display: false },
        ticks: {
          color: bloombergColors.text,
          font: { family: 'monospace', size: 10 }
        },
        border: { display: false }
      }
    }
  }
});
<% } %>
</script>
