        <span class="text-xs text-gray-400">Top Losers</span>
        <span class="flex items-center gap-1.5">
          <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-red-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-red-500"></span>
          </span>
          <span class="text-xs font-medium text-red-400">LIVE</span>
        </span>
      </div>

      <div class="space-y-2" id="topLosers">
        <%
          const losers = safeMovers.losers || [];
          losers.slice(0, 5).forEach(function(stock) {
            const chg = stock.changePercent || stock.change_percent || 0;
        %>
        <a href="/stock/<%= stock.symbol %>" class="flex items-center justify-between p-2 rounded-lg hover:bg-red-900/20 transition-colors cursor-pointer block">
          <div class="flex items-center gap-2">
            <div class="w-8 h-8 rounded-lg bg-red-500/20 flex items-center justify-center">
              <span class="text-xs font-bold text-red-400"><%= stock.symbol.substring(0, 2) %></span>
            </div>
            <div>
              <div class="text-sm font-medium text-white"><%= stock.symbol %></div>
              <div class="text-xs text-gray-500">$<%= (stock.price || 0).toFixed(2) %></div>
            </div>
          </div>
          <span class="text-sm font-medium text-red-400 tabular-nums"><%= chg.toFixed(2) %>%</span>
        </a>
        <% });
        if (losers.length === 0) { %>
        <div class="text-center py-4 text-gray-500 text-xs">Loading losers...</div>
        <% } %>
      </div>
    </div>

    <!-- View Full Market -->
    <a href="/market" class="block w-full py-3 text-center rounded-xl bg-gradient-to-r from-green-600 to-green-700 hover:from-green-500 hover:to-green-600 text-white text-sm font-bold transition-all shadow-lg shadow-green-900/30">
      View Full Market
    </a>
  </div>
</aside>

<script>
  // Market Sidebar Toggle
  function toggleMarketSidebar() {
    const sidebar = document.getElementById('marketSidebar');
    const toggle = document.getElementById('marketSidebarToggle');
    sidebar.classList.toggle('open');
    if (sidebar.classList.contains('open')) {
      toggle.style.right = '320px';
    } else {
      toggle.style.right = '0';
    }
  }

  // Quote Lookup
  async function lookupQuote() {
    const input = document.getElementById('quoteLookupInput');
    const result = document.getElementById('quoteLookupResult');
    const symbol = input.value.trim().toUpperCase();
    if (!symbol) return;

    result.classList.remove('hidden');
    result.innerHTML = '<div class="text-center py-2 text-gray-400 text-xs">Loading...</div>';

    try {
      const res = await fetch('/api/market/quote/' + symbol);
      if (res.ok) {
        const data = await res.json();
        const chg = data.changePercent || 0;
        result.innerHTML = `
          <div class="p-3 rounded-lg bg-green-900/20 border border-green-500/20">
            <div class="flex items-center justify-between mb-2">
              <span class="font-bold text-white">${data.symbol}</span>
              <span class="text-xs ${chg >= 0 ? 'text-green-400' : 'text-red-400'}">${chg >= 0 ? '+' : ''}${chg.toFixed(2)}%</span>
            </div>
            <div class="text-xl font-bold text-white">$${(data.price || 0).toFixed(2)}</div>
            <a href="/stock/${data.symbol}" class="text-xs text-green-400 hover:underline mt-2 inline-block">View Details â†’</a>
          </div>
        `;
      } else {
        result.innerHTML = '<div class="text-center py-2 text-red-400 text-xs">Symbol not found</div>';
      }
    } catch (e) {
      result.innerHTML = '<div class="text-center py-2 text-red-400 text-xs">Error loading quote</div>';
    }
  }

  // Enter key for quote lookup
  document.getElementById('quoteLookupInput')?.addEventListener('keypress', function(e) {
    if (e.key === 'Enter') lookupQuote();
  });

  let portfolioChart = null;
  let currentTimeframe = '1M';
  let selectedPortfolioId = 'all';
  let selectedBenchmarks = ['SPY'];

  // Benchmark configurations with colors
  const benchmarkConfig = {
    'SPY': { label: 'S&P 500', color: '#6b7280', dashStyle: [4, 4] },
    'QQQ': { label: 'NASDAQ 100', color: '#8b5cf6', dashStyle: [6, 3] },
    'DIA': { label: 'Dow Jones', color: '#f59e0b', dashStyle: [2, 2] },
    'IWM': { label: 'Russell 2000', color: '#06b6d4', dashStyle: [8, 4] },
    'VTI': { label: 'Total Market', color: '#ec4899', dashStyle: [3, 3] },
    'BTC-USD': { label: 'Bitcoin', color: '#f97316', dashStyle: [5, 5] }
  };

  // Chart
  const ctx = document.getElementById('portfolioChart');
  if (ctx) {
    portfolioChart = new Chart(ctx, {
      type: 'line',
      data: {
        labels: [],
        datasets: [{
          label: 'Portfolio',
          data: [],
          borderColor: '#22c55e',
          backgroundColor: 'rgba(34, 197, 94, 0.1)',
          borderWidth: 2.5,
          fill: true,
          tension: 0.4,
          pointRadius: 0,
          pointHoverRadius: 6,
          pointHoverBackgroundColor: '#22c55e',
          pointHoverBorderColor: '#fff',
          pointHoverBorderWidth: 2,
          order: 0
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            display: true,
            position: 'top',
            align: 'end',
            labels: {
              color: '#9ca3af',
              usePointStyle: true,
              pointStyle: 'line',
              font: { size: 11 },
              padding: 15
            }
          },
          tooltip: {
            backgroundColor: 'rgba(17, 24, 39, 0.95)',
            titleColor: '#9ca3af',
            bodyColor: '#fff',
            borderColor: 'rgba(34, 197, 94, 0.3)',
            borderWidth: 1,
            padding: 12,
            displayColors: true,
            callbacks: {
              label: function(ctx) {
                const value = ctx.raw;
                if (typeof value === 'number') {
                  return ctx.dataset.label + ': $' + value.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
                }
                return ctx.dataset.label + ': ' + value;
              }
            }
          }
        },
        scales: {
          x: { grid: { color: 'rgba(75, 85, 99, 0.2)', drawBorder: false }, ticks: { color: '#6b7280', maxTicksLimit: 6, font: { size: 10 } } },
          y: {
            grid: { color: 'rgba(75, 85, 99, 0.2)', drawBorder: false },
            ticks: {
              color: '#6b7280',
              font: { size: 10 },
              callback: v => v >= 1000000 ? '$' + (v/1000000).toFixed(1) + 'M' : v >= 1000 ? '$' + (v/1000).toFixed(0) + 'k' : '$' + v
            }
          }
        },
        interaction: { intersect: false, mode: 'index' }
      }
    });
  }

  // Create benchmark dataset
  function createBenchmarkDataset(symbol, data) {
    const config = benchmarkConfig[symbol] || { label: symbol, color: '#6b7280', dashStyle: [4, 4] };
    return {
      label: config.label,
      data: data,
      borderColor: config.color,
      backgroundColor: 'transparent',
      borderWidth: 1.5,
      borderDash: config.dashStyle,
      fill: false,
      tension: 0.4,
      pointRadius: 0,
      pointHoverRadius: 4,
      pointHoverBackgroundColor: config.color,
      order: 1
    };
  }

  // Update benchmark label
  function updateBenchmarkLabel() {
    const label = document.getElementById('benchmarkLabel');
    if (label) {
      const count = selectedBenchmarks.length;
      if (count === 0) {
        label.textContent = 'No Benchmarks';
      } else if (count === 1) {
        label.textContent = benchmarkConfig[selectedBenchmarks[0]]?.label || selectedBenchmarks[0];
      } else {
        label.textContent = `${count} Benchmarks`;
      }
    }
  }

  async function loadPerformanceData(timeframe = '1M', portfolioId = 'all') {
    if (!portfolioChart) return;
    try {
      const benchmarks = selectedBenchmarks.join(',');
      let url = `/api/analytics/performance-history?timeframe=${timeframe}&benchmarks=${benchmarks}`;
      if (portfolioId && portfolioId !== 'all') url += `&portfolioId=${portfolioId}`;
      const res = await fetch(url, { credentials: 'include' });
      if (res.ok) {
        const data = await res.json();
        portfolioChart.data.labels = data.labels || [];

        // Reset datasets to just portfolio
        portfolioChart.data.datasets = [{
          label: 'Portfolio',
          data: data.portfolio || [],
          borderColor: '#22c55e',
          backgroundColor: 'rgba(34, 197, 94, 0.1)',
          borderWidth: 2.5,
          fill: true,
          tension: 0.4,
          pointRadius: 0,
          pointHoverRadius: 6,
          pointHoverBackgroundColor: '#22c55e',
          pointHoverBorderColor: '#fff',
          pointHoverBorderWidth: 2,
          order: 0
        }];

        // Add benchmark datasets
        if (data.benchmarks && typeof data.benchmarks === 'object') {
          Object.keys(data.benchmarks).forEach(symbol => {
            if (data.benchmarks[symbol] && data.benchmarks[symbol].length > 0) {
              portfolioChart.data.datasets.push(createBenchmarkDataset(symbol, data.benchmarks[symbol]));
            }
          });
        } else if (data.benchmark && selectedBenchmarks.includes('SPY')) {
          // Fallback for old API format
          portfolioChart.data.datasets.push(createBenchmarkDataset('SPY', data.benchmark));
        }

        portfolioChart.update('none');

        if (data.stats) {
          const info = document.getElementById('portfolioChartInfo');
          if (info) {
            const count = data.stats.portfolioCount || 0;
            const holdings = data.stats.holdingsCount || 0;
            info.textContent = portfolioId === 'all'
              ? `${count} portfolio${count !== 1 ? 's' : ''} Â· ${holdings} holdings`
              : `${data.stats.portfolioNames?.[0] || 'Portfolio'} Â· ${holdings} holdings`;
          }
        }
      }
    } catch (e) { console.error('Chart error:', e); }
  }

  // Benchmark dropdown toggle
  document.getElementById('benchmarkToggle')?.addEventListener('click', function(e) {
    e.stopPropagation();
    const menu = document.getElementById('benchmarkMenu');
    menu.classList.toggle('hidden');
  });

  // Close dropdown when clicking outside
  document.addEventListener('click', function(e) {
    const dropdown = document.getElementById('benchmarkDropdown');
    const menu = document.getElementById('benchmarkMenu');
    if (dropdown && menu && !dropdown.contains(e.target)) {
      menu.classList.add('hidden');
    }
  });

  // Benchmark checkbox handlers
  document.querySelectorAll('.benchmark-checkbox').forEach(checkbox => {
    checkbox.addEventListener('change', function() {
      if (this.checked) {
        if (!selectedBenchmarks.includes(this.value)) {
          selectedBenchmarks.push(this.value);
        }
      } else {
        selectedBenchmarks = selectedBenchmarks.filter(b => b !== this.value);
      }
      updateBenchmarkLabel();
      loadPerformanceData(currentTimeframe, selectedPortfolioId);
    });
  });

  async function loadMarketData() {
    const container = document.getElementById('marketOverview');
    try {
      const res = await fetch('/api/market/indices');
      if (res.ok) {
        const data = await res.json();
        const indices = data.indices || data || [];
        if (indices.length > 0) {
          container.innerHTML = indices.slice(0, 5).map(idx => `
            <div class="market-item">
              <div>
                <p class="text-white font-semibold text-sm">${idx.name || idx.symbol}</p>
                <p class="text-gray-500 text-xs font-mono">$${(idx.price || idx.value || 0).toLocaleString()}</p>
              </div>
              <div class="text-right">
                <span class="${(idx.changePercent || idx.change || 0) >= 0 ? 'gain-bg' : 'loss-bg'} px-2 py-1 rounded-lg text-xs font-bold font-mono">
                  ${(idx.changePercent || idx.change || 0) >= 0 ? '+' : ''}${(idx.changePercent || idx.change || 0).toFixed(2)}%
                </span>
              </div>
            </div>
          `).join('');
        }
      }
    } catch (e) { console.error('Market error:', e); }
  }

  // Init
  loadMarketData();
  loadPerformanceData('1M');

  // Timeframe buttons
  document.querySelectorAll('.tf-btn').forEach(btn => {
    btn.addEventListener('click', function() {
      document.querySelectorAll('.tf-btn').forEach(b => b.classList.remove('active'));
      this.classList.add('active');
      currentTimeframe = this.dataset.period;
      loadPerformanceData(currentTimeframe, selectedPortfolioId);
    });
  });

  // Portfolio selector
  document.getElementById('portfolioSelector')?.addEventListener('change', function() {
    selectedPortfolioId = this.value;
    loadPerformanceData(currentTimeframe, selectedPortfolioId);
  });
</script>

