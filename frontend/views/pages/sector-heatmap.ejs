// Add to watchlist
async function addToWatchlist(event) {
  event.preventDefault();
  const symbol = event.currentTarget.dataset.symbol;

  try {
    const response = await fetch('/api/watchlists/default/items', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'Authorization': `Bearer ${localStorage.getItem('token')}`
      },
      body: JSON.stringify({ symbol })
    });

    if (response.ok) {
      // Show success toast if available
      if (window.showToast) {
        window.showToast(`${symbol} added to watchlist`, 'success');
      } else {
        alert(`${symbol} added to watchlist!`);
      }
      closeSectorModal();
    } else {
      const data = await response.json();
      if (window.showToast) {
        window.showToast(data.error || 'Failed to add to watchlist', 'error');
      } else {
        alert(data.error || 'Failed to add to watchlist');
      }
    }
  } catch (error) {
    if (window.showToast) {
      window.showToast('Failed to add to watchlist', 'error');
    } else {
      alert('Failed to add to watchlist');
    }
  }
}

