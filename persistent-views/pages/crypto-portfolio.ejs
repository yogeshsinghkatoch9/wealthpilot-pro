  const changeEl = document.getElementById('assetChange');
  changeEl.textContent = (change >= 0 ? '+' : '') + change.toFixed(2) + '%';
  changeEl.className = 'font-bold font-mono ' + (change >= 0 ? 'text-accent-green' : 'text-accent-red');

