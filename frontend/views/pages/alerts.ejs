      </button>
    </div>

    <form id="create-alert-form" class="space-y-4">

      <!-- Stock Search with Autocomplete -->
      <div>
        <label class="block text-sm font-semibold text-gray-300 mb-2">Search Stock</label>
        <div class="relative">
          <input type="text" id="alert-search"
                 placeholder="Search by symbol or company name..."
                 autocomplete="off"
                 class="w-full bg-gray-800 border border-gray-700 rounded px-4 py-3 text-white focus:border-green-500 focus:outline-none">
          <div id="alert-search-results" class="absolute z-50 w-full mt-1 bg-gray-800 border border-gray-600 rounded-lg shadow-xl max-h-60 overflow-y-auto hidden">
            <!-- Search results will appear here -->
          </div>
        </div>
      </div>

      <!-- Symbol Input (now readonly) -->
      <div>
        <label class="block text-sm font-semibold text-gray-300 mb-2">Symbol</label>
        <input type="text" id="alert-symbol" name="symbol" required readonly
               placeholder="Select from search above"
               class="w-full bg-gray-800 border border-gray-700 rounded px-4 py-3 text-white focus:border-green-500 focus:outline-none uppercase"
               pattern="[A-Z]{1,10}"
               title="Enter a valid stock symbol">
      </div>

      <!-- Condition Select -->
      <div>
        <label class="block text-sm font-semibold text-gray-300 mb-2">Condition</label>
        <select id="alert-condition" name="condition" required
                class="w-full bg-gray-800 border border-gray-700 rounded px-4 py-3 text-white focus:border-green-500 focus:outline-none">
          <option value="">Select condition...</option>
          <option value="above">Price goes above</option>
          <option value="below">Price goes below</option>
          <option value="equals">Price equals (±$0.01)</option>
        </select>
      </div>

      <!-- Target Price Input -->
      <div>
        <label class="block text-sm font-semibold text-gray-300 mb-2">Target Price</label>
        <div class="relative">
          <span class="absolute left-3 top-3 text-gray-500">$</span>
          <input type="number" id="alert-price" name="targetPrice" required
                 placeholder="0.00"
                 step="0.01"
                 min="0"
                 class="w-full bg-gray-800 border border-gray-700 rounded px-4 py-3 pl-7 text-white font-mono focus:border-green-500 focus:outline-none">
        </div>
      </div>

      <!-- Message Input (Optional) -->
      <div>
        <label class="block text-sm font-semibold text-gray-300 mb-2">Message (Optional)</label>
        <textarea id="alert-message" name="message" rows="2"
                  placeholder="e.g., Time to sell, Buy opportunity, etc."
                  class="w-full bg-gray-800 border border-gray-700 rounded px-4 py-3 text-white focus:border-green-500 focus:outline-none resize-none"></textarea>
      </div>

      <!-- Current Price Display -->
      <div id="current-price-display" class="hidden bg-gray-800 border border-gray-700 rounded p-3">
        <div class="flex items-center justify-between">
          <span class="text-sm text-gray-400">Current Price:</span>
          <span class="font-mono font-bold text-white" id="current-price-value">--</span>
        </div>
      </div>

      <!-- Action Buttons -->
