    }

    const allocation = parseFloat(document.getElementById('allocationInput').value) || 0;
    if (allocation <= 0 || allocation > 100) {
      alert('Allocation must be between 0.1% and 100%');
      return;
    }

    const existingIdx = portfolio.findIndex(p => p.symbol === selectedInvestment.symbol);
    if (existingIdx >= 0) {
      if (confirm(`${selectedInvestment.symbol} is already in portfolio. Update allocation?`)) {
        portfolio[existingIdx].allocation = allocation;
      } else {
        return;
      }
    } else {
      const currentTotal = portfolio.reduce((sum, p) => sum + p.allocation, 0);
      if (currentTotal + allocation > 100) {
        alert(`Cannot add ${allocation}% - would exceed 100% total. Current: ${currentTotal.toFixed(2)}%`);
        return;
      }

      portfolio.push({
        symbol: selectedInvestment.symbol,
        name: selectedInvestment.name,
        sector: selectedInvestment.sector || selectedInvestment.industry || 'Unknown',
        assetClass: selectedInvestment.assetClass || 'Stocks',
        allocation: allocation,
        price: selectedInvestment.price,
        dividendYield: selectedInvestment.dividendYield || 0,
        beta: selectedInvestment.beta || 1,
        pe: selectedInvestment.pe,
        marketCap: selectedInvestment.marketCap
