<script>
  // State
  let portfolio = [];
  let selectedInvestment = null;
  let searchTimeout = null;
  let analysisData = null;

  // Charts
  let allocationDonutChart = null;
  let riskReturnChart = null;
  let growthSimulationChart = null;
  let incomeContributionChart = null;
  let holdingsBreakdownChart = null;

  const serverToken = `<%= token || "" %>`;

  function getToken() {
    return serverToken || '';
  }

  async function authFetch(url, options = {}) {
    const token = getToken();
    const headers = {
      'Content-Type': 'application/json',
      ...options.headers
    };
    if (token) {
      headers['Authorization'] = `Bearer ${token}`;
    }
    return fetch(url, { ...options, headers });
  }

  // Format helpers
  function formatMoney(value, decimals = 0) {
    if (value === null || value === undefined) return '--';
    return '$' + Number(value).toLocaleString('en-US', { minimumFractionDigits: decimals, maximumFractionDigits: decimals });
  }

  function formatPercent(value, decimals = 2) {
    if (value === null || value === undefined) return '--';
    const num = Number(value);
    const sign = num >= 0 ? '+' : '';
    return sign + num.toFixed(decimals) + '%';
  }

  function formatMarketCap(value) {
    if (!value) return '--';
    if (value >= 1e12) return '$' + (value / 1e12).toFixed(2) + 'T';
    if (value >= 1e9) return '$' + (value / 1e9).toFixed(2) + 'B';
    if (value >= 1e6) return '$' + (value / 1e6).toFixed(2) + 'M';
    return '$' + value.toLocaleString();
  }

  // Search functionality
  function debounceSearch(query) {
    clearTimeout(searchTimeout);
    if (query.length < 1) {
      document.getElementById('searchResults').classList.add('hidden');
      return;
    }
    searchTimeout = setTimeout(() => searchInvestments(query), 300);
  }

  async function searchInvestments(query) {
    try {
      const response = await authFetch(`/api/investment-selector/search?q=${encodeURIComponent(query)}`);
      const data = await response.json();

      const resultsDiv = document.getElementById('searchResults');
      if (!data.success || !data.results || data.results.length === 0) {
        resultsDiv.innerHTML = '<div class="p-4 text-slate-400 text-center">No results found</div>';
        resultsDiv.classList.remove('hidden');
        return;
      }

      resultsDiv.innerHTML = data.results.map(r => `
        <div class="p-3 hover:bg-slate-700 cursor-pointer border-b border-slate-700 last:border-0"
             onclick="selectInvestment('${r.symbol}')">
          <div class="flex items-center justify-between">
            <div>
              <span class="font-bold text-amber-400">${r.symbol}</span>
              <span class="text-slate-400 ml-2">${r.name || r.description || ''}</span>
            </div>
            <span class="text-xs text-slate-500">${r.type || 'Stock'}</span>
          </div>
        </div>
      `).join('');
      resultsDiv.classList.remove('hidden');
    } catch (err) {
      console.error('Search error:', err);
    }
  }

  async function selectInvestment(symbol) {
    document.getElementById('searchResults').classList.add('hidden');
    document.getElementById('searchInput').value = symbol;

    try {
      const response = await authFetch(`/api/investment-selector/details/${symbol}`);
      const data = await response.json();

      if (!data.success) {
        alert('Failed to get details: ' + (data.error || 'Unknown error'));
        return;
      }

      selectedInvestment = data.data;
      displayInvestmentDetails(data.data);
    } catch (err) {
      console.error('Error getting details:', err);
      alert('Failed to get investment details');
    }
  }

  function displayInvestmentDetails(inv) {
    document.getElementById('detailSymbol').textContent = inv.symbol;
    document.getElementById('detailName').textContent = inv.name || inv.symbol;
    document.getElementById('detailSector').textContent = inv.sector || inv.industry || '--';
    document.getElementById('detailPrice').textContent = formatMoney(inv.price, 2);

    const changeEl = document.getElementById('detailChange');
    const changeVal = inv.change || 0;
    const changePct = inv.changePercent || 0;
    changeEl.textContent = `${changeVal >= 0 ? '+' : ''}${changeVal.toFixed(2)} (${changePct >= 0 ? '+' : ''}${changePct.toFixed(2)}%)`;
    changeEl.className = `text-sm font-mono ${changeVal >= 0 ? 'text-emerald-400' : 'text-red-400'}`;

    document.getElementById('detailPE').textContent = inv.pe ? inv.pe.toFixed(2) : '--';
    document.getElementById('detailDividend').textContent = inv.dividendYield ? inv.dividendYield.toFixed(2) + '%' : '0%';
    document.getElementById('detailMarketCap').textContent = formatMarketCap(inv.marketCap);
    document.getElementById('detailBeta').textContent = inv.beta ? inv.beta.toFixed(2) : '--';
    document.getElementById('detail52High').textContent = inv.week52High ? formatMoney(inv.week52High, 2) : '--';
