<!-- Risk Tab - 5 Analytics -->

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
  
  <!-- 5. Risk Decomposition / Factor Exposures (Horizontal Bar) -->
  <div class="chart-container">
    <div class="chart-header">
      <h3 class="chart-title">Factor Exposures</h3>
      <div class="chart-controls">
        <span class="text-sm text-gray-400">Fama-French 5-Factor Model</span>
      </div>
    </div>
    <canvas id="chart-factor-exposures"></canvas>
    <div id="export-factor-exposures" class="export-controls"></div>
  </div>

  <!-- 6. VaR & Stress Scenarios (Histogram) -->
  <div class="chart-container">
    <div class="chart-header">
      <h3 class="chart-title">Value at Risk</h3>
      <div class="chart-controls">
        <select id="var-confidence" class="chart-control-btn">
          <option value="90">90% Confidence</option>
          <option value="95" selected>95% Confidence</option>
          <option value="99">99% Confidence</option>
        </select>
      </div>
    </div>
    <canvas id="chart-var"></canvas>
    <div id="export-var" class="export-controls"></div>
    <div class="mt-3 flex gap-4 text-sm">
      <div><span class="text-gray-400">VaR 95%:</span> <span class="font-mono text-red-500" id="var-95">--</span></div>
      <div><span class="text-gray-400">VaR 99%:</span> <span class="font-mono text-red-500" id="var-99">--</span></div>
      <div><span class="text-gray-400">CVaR:</span> <span class="font-mono text-red-500" id="cvar">--</span></div>
    </div>
  </div>

  <!-- 7. Correlation Matrix (Heatmap) -->
  <div class="chart-container lg:col-span-2">
    <div class="chart-header">
      <h3 class="chart-title">Correlation Matrix</h3>
      <div class="chart-controls">
        <span class="text-sm text-gray-400">Top Holdings Correlation</span>
      </div>
    </div>
    <canvas id="chart-correlation" height="100"></canvas>
    <div id="export-correlation" class="export-controls"></div>
  </div>

  <!-- 8. Stress Scenarios (Stacked Bar) -->
  <div class="chart-container">
    <div class="chart-header">
      <h3 class="chart-title">Stress Test Scenarios</h3>
      <div class="chart-controls">
        <span class="text-sm text-gray-400">Historical Events</span>
      </div>
    </div>
    <canvas id="chart-stress"></canvas>
    <div id="export-stress" class="export-controls"></div>
  </div>

  <!-- 9. Holdings Concentration (Treemap + Pareto) -->
  <div class="chart-container">
    <div class="chart-header">
      <h3 class="chart-title">Holdings Concentration</h3>
      <div class="chart-controls">
        <button class="chart-control-btn" id="toggle-concentration" data-view="treemap">
          Switch to Pareto
        </button>
      </div>
    </div>
    <canvas id="chart-concentration-treemap"></canvas>
    <canvas id="chart-concentration-pareto" class="hidden"></canvas>
    <div id="export-concentration" class="export-controls"></div>
    <div class="mt-3 text-sm">
      <span class="text-gray-400">HHI Index:</span> 
      <span class="font-mono text-amber-500" id="hhi-index">--</span>
      <span class="text-gray-400 ml-4">Top 10 Weight:</span> 
      <span class="font-mono text-amber-500" id="top10-weight">--</span>
    </div>
  </div>

</div>

<!-- Risk Metrics Summary -->
<div class="grid grid-cols-2 md:grid-cols-4 gap-4 mt-6">
  <div class="bg-gray-800 border border-gray-700 rounded-lg p-4">
    <div class="text-sm text-gray-400 mb-1">Volatility</div>
    <div class="text-2xl font-mono font-bold text-red-500" id="metric-volatility">--</div>
  </div>
  <div class="bg-gray-800 border border-gray-700 rounded-lg p-4">
    <div class="text-sm text-gray-400 mb-1">Downside Dev</div>
    <div class="text-2xl font-mono font-bold text-red-500" id="metric-downside">--</div>
  </div>
  <div class="bg-gray-800 border border-gray-700 rounded-lg p-4">
    <div class="text-sm text-gray-400 mb-1">Max Drawdown</div>
    <div class="text-2xl font-mono font-bold text-red-500" id="metric-max-dd">--</div>
  </div>
  <div class="bg-gray-800 border border-gray-700 rounded-lg p-4">
    <div class="text-sm text-gray-400 mb-1">Sortino Ratio</div>
    <div class="text-2xl font-mono font-bold text-blue-500" id="metric-sortino">--</div>
  </div>
</div>
