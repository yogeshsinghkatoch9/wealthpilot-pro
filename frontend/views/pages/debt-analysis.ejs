              <!-- Bar 5 -->
              <div class="flex-1 flex flex-col justify-end group cursor-pointer">
                <div class="w-full bg-primary/30 group-hover:bg-primary rounded-t-sm transition-all relative" style="height: 40%;">
                  <div class="absolute -top-6 left-1/2 -translate-x-1/2 text-[10px] text-white opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap">$9.8B</div>
                </div>
                <span class="text-[10px] text-text-secondary text-center mt-2">2028</span>
              </div>
              <!-- Bar 6 -->
              <div class="flex-1 flex flex-col justify-end group cursor-pointer">
                <div class="w-full bg-primary/30 group-hover:bg-primary rounded-t-sm transition-all relative" style="height: 25%;">
                  <div class="absolute -top-6 left-1/2 -translate-x-1/2 text-[10px] text-white opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap">$6.0B</div>
                </div>
                <span class="text-[10px] text-text-secondary text-center mt-2">2029+</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Right Column: Stats & Breakdown (1/3 width) -->
