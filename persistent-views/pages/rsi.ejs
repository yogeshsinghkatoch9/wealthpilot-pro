<!DOCTYPE html>
<html class="dark" lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>RSI Indicator Analysis | WealthPilot Pro</title>
  <!-- Google Fonts: Manrope -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&display=swap" rel="stylesheet">
  <!-- Material Symbols -->
  <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet">
  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
  <!-- TradingView Lightweight Charts -->
  <script src="https://unpkg.com/lightweight-charts@4.1.0/dist/lightweight-charts.standalone.production.js"></script>
  <!-- Theme Configuration -->
  <script>
    tailwind.config = {
      darkMode: "class",
      theme: {
        extend: {
          colors: {
            "primary": "#4850e5",
            "background-light": "#f6f6f8",
            "background-dark": "#111221",
            "surface-dark": "#1a1c2e",
            "surface-dark-highlight": "#24273e",
            "text-secondary": "#9e9fb7",
          },
          fontFamily: {
            "display": ["Manrope", "sans-serif"]
          },
        },
      },
    }
  </script>
  <style>
    ::-webkit-scrollbar {
      width: 8px;
      height: 8px;
    }
    ::-webkit-scrollbar-track {
      background: #111221;
    }
    ::-webkit-scrollbar-thumb {
      background: #2a2d3d;
      border-radius: 4px;
    }
    ::-webkit-scrollbar-thumb:hover {
      background: #4850e5;
    }

    .material-symbols-outlined {
      font-variation-settings:
      'FILL' 0,
      'wght' 400,
      'GRAD' 0,
      'opsz' 24
    }

    .chart-grid {
      background-image: linear-gradient(#2a2d3d 1px, transparent 1px), linear-gradient(90deg, #2a2d3d 1px, transparent 1px);
      background-size: 40px 40px;
      background-position: -1px -1px;
    }
  </style>
</head>
<body class="bg-background-light dark:bg-background-dark font-display text-gray-900 dark:text-white h-screen overflow-hidden flex flex-col md:flex-row">
  <%
    // Safe defaults
    const rsiData = typeof technicals !== 'undefined' && technicals ? technicals : {};
    const rsiObj = rsiData.rsi || {};
    const currentRsi = typeof rsiObj === 'object' ? (rsiObj.value || 50) : (rsiObj || 50);
    const rsiHistory = rsiObj.series || rsiData.history || [];
    const price = rsiData.price?.current || rsiData.price || 0;
    const priceChange = rsiData.price?.changePercent || 0;

    function formatPrice(v) { return '$' + (v || 0).toFixed(2); }
    function formatPct(v) { return (v >= 0 ? '+' : '') + (v || 0).toFixed(2) + '%'; }

    let rsiSignal = 'Neutral';
    let signalColor = 'yellow';
    if (currentRsi >= 70) {
      rsiSignal = 'Overbought';
      signalColor = 'red';
    } else if (currentRsi >= 60) {
      rsiSignal = 'Bullish';
      signalColor = 'green';
    } else if (currentRsi <= 30) {
      rsiSignal = 'Oversold';
      signalColor = 'green';
    } else if (currentRsi <= 40) {
      rsiSignal = 'Bearish';
      signalColor = 'red';
    }
  %>

  <%- include('../partials/sidebar') %>

  <!-- Main Content -->
  <main class="flex-1 flex flex-col h-full overflow-hidden bg-background-dark">
    <%- include('../partials/header') %>

    <!-- Scrollable Area -->
    <div class="flex-1 overflow-y-auto overflow-x-hidden">
      <div class="p-6 md:p-8 max-w-[1600px] mx-auto w-full flex flex-col gap-6">
        <!-- Breadcrumbs & Actions -->
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
          <div class="flex items-center gap-2 text-sm">
            <a class="text-gray-400 hover:text-primary transition-colors" href="/market-overview">Markets</a>
            <span class="text-gray-600">/</span>
            <a class="text-gray-400 hover:text-primary transition-colors" href="/technical-summary">Technical Analysis</a>
            <span class="text-gray-600">/</span>
            <span class="text-white font-medium">RSI Analysis</span>
          </div>
          <div class="flex items-center gap-3">
            <button class="flex items-center justify-center h-9 px-4 rounded-lg bg-surface-dark hover:bg-surface-dark-highlight text-white text-sm font-medium transition-colors border border-gray-700/50">
              <span class="material-symbols-outlined text-[18px] mr-2">share</span>
              Share
            </button>
            <button class="flex items-center justify-center h-9 px-4 rounded-lg bg-primary hover:bg-primary/90 text-white text-sm font-medium transition-colors shadow-lg shadow-primary/20">
              <span class="material-symbols-outlined text-[18px] mr-2">download</span>
              Export Data
            </button>
          </div>
        </div>

        <!-- Page Header & Stats -->
        <div class="flex flex-col lg:flex-row gap-6 items-start lg:items-center justify-between">
          <div>
            <div class="flex items-baseline gap-3 mb-1">
              <h1 class="text-3xl font-bold text-white tracking-tight"><%= symbol || 'AAPL' %></h1>
              <span class="px-2 py-0.5 rounded text-xs font-bold bg-green-500/10 text-green-500 border border-green-500/20">MARKET OPEN</span>
            </div>
            <p class="text-gray-400 text-sm">Relative Strength Index (14) • 1D Interval</p>
          </div>

          <!-- Symbol Search & Timeframe Selector -->
          <div class="flex items-center gap-4">
            <form method="GET" action="/rsi" class="flex gap-2">
              <input type="text" name="symbol" value="<%= symbol || 'AAPL' %>" placeholder="Symbol"
                class="w-24 px-3 py-2 bg-surface-dark border border-gray-700 rounded-lg text-white text-sm font-mono uppercase focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary">
              <button type="submit" class="px-4 py-2 bg-primary hover:bg-primary/90 text-white text-sm font-medium rounded-lg transition-colors">
                Analyze
              </button>
            </form>
            <div class="bg-surface-dark p-1 rounded-lg border border-gray-700/50 flex">
              <button class="px-3 py-1.5 text-sm font-medium text-gray-400 hover:text-white rounded-md transition-colors">1H</button>
              <button class="px-3 py-1.5 text-sm font-medium text-gray-400 hover:text-white rounded-md transition-colors">4H</button>
              <button class="px-3 py-1.5 text-sm font-medium text-white bg-background-dark shadow-sm rounded-md border border-gray-700">1D</button>
              <button class="px-3 py-1.5 text-sm font-medium text-gray-400 hover:text-white rounded-md transition-colors">1W</button>
              <button class="px-3 py-1.5 text-sm font-medium text-gray-400 hover:text-white rounded-md transition-colors">1M</button>
            </div>
          </div>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
          <div class="bg-surface-dark p-4 rounded-xl border border-gray-800/50 hover:border-gray-700 transition-colors">
            <p class="text-gray-400 text-xs font-medium uppercase tracking-wider mb-1">Current Price</p>
            <div class="flex items-baseline gap-2">
              <span class="text-2xl font-bold text-white"><%= formatPrice(price) %></span>
              <span class="<%= priceChange >= 0 ? 'text-green-500' : 'text-red-500' %> text-sm font-medium flex items-center">
                <span class="material-symbols-outlined text-[16px]"><%= priceChange >= 0 ? 'arrow_upward' : 'arrow_downward' %></span> <%= formatPct(priceChange) %>
              </span>
            </div>
          </div>
          <div class="bg-surface-dark p-4 rounded-xl border border-gray-800/50 hover:border-gray-700 transition-colors">
            <p class="text-gray-400 text-xs font-medium uppercase tracking-wider mb-1">24h Volume</p>
            <div class="flex items-baseline gap-2">
              <span class="text-2xl font-bold text-white">$<%= typeof rsiData.volume !== 'undefined' ? (rsiData.volume / 1e9).toFixed(1) + 'B' : '28.4B' %></span>
              <span class="text-gray-500 text-sm font-medium">USD</span>
            </div>
          </div>
          <div class="bg-surface-dark p-4 rounded-xl border border-gray-800/50 hover:border-gray-700 transition-colors">
            <p class="text-gray-400 text-xs font-medium uppercase tracking-wider mb-1">RSI Value (14)</p>
            <div class="flex items-baseline gap-2">
              <span class="text-2xl font-bold text-white"><%= currentRsi.toFixed(2) %></span>
              <span class="text-<%= signalColor %>-500 text-sm font-medium"><%= rsiSignal %></span>
            </div>
          </div>
          <div class="bg-surface-dark p-4 rounded-xl border border-gray-800/50 hover:border-gray-700 transition-colors">
            <p class="text-gray-400 text-xs font-medium uppercase tracking-wider mb-1">Signal Strength</p>
            <div class="flex items-baseline gap-2">
              <span class="text-2xl font-bold text-white"><%= currentRsi > 50 ? 'Buy' : currentRsi < 50 ? 'Sell' : 'Hold' %></span>
              <span class="<%= Math.abs(currentRsi - 50) > 20 ? 'text-green-500' : 'text-yellow-500' %> text-sm font-medium"><%= Math.abs(currentRsi - 50) > 20 ? 'Strong' : 'Weak' %></span>
            </div>
          </div>
        </div>

        <!-- Main Analysis Area -->
        <div class="flex flex-col xl:flex-row gap-6">
          <!-- Chart Container -->
          <div class="flex-1 flex flex-col bg-surface-dark rounded-xl border border-gray-800/50 overflow-hidden shadow-2xl">
            <!-- Chart Toolbar -->
            <div class="flex items-center justify-between px-4 py-2 border-b border-gray-800">
              <div class="flex items-center gap-4">
                <div class="flex items-center gap-1">
                  <button class="p-1.5 rounded hover:bg-white/10 text-gray-400 hover:text-white transition-colors">
                    <span class="material-symbols-outlined text-[20px]">crossword</span>
                  </button>
                  <button class="p-1.5 rounded hover:bg-white/10 text-primary transition-colors bg-white/5">
                    <span class="material-symbols-outlined text-[20px]">timeline</span>
                  </button>
                  <button class="p-1.5 rounded hover:bg-white/10 text-gray-400 hover:text-white transition-colors">
                    <span class="material-symbols-outlined text-[20px]">candlestick_chart</span>
                  </button>
                </div>
                <div class="w-px h-4 bg-gray-700"></div>
                <span class="text-xs text-gray-400">RSI Period: <strong class="text-white">14</strong></span>
              </div>
              <button class="p-1.5 rounded hover:bg-white/10 text-gray-400 hover:text-white transition-colors">
                <span class="material-symbols-outlined text-[20px]">fullscreen</span>
              </button>
            </div>

            <!-- RSI Chart -->
            <div class="flex-1 min-h-[400px]" id="tvRsiChart"></div>
          </div>

          <!-- Right Sidebar: Controls & Analysis -->
          <div class="w-full xl:w-[360px] flex flex-col gap-4 flex-shrink-0">
            <!-- Configuration Panel -->
            <div class="bg-surface-dark rounded-xl border border-gray-800/50 p-5">
              <div class="flex items-center justify-between mb-4">
                <h3 class="text-white font-bold text-base flex items-center gap-2">
                  <span class="material-symbols-outlined text-primary text-[20px]">tune</span>
                  Configuration
                </h3>
                <button class="text-xs text-primary hover:text-white transition-colors">Reset Default</button>
              </div>
              <div class="flex flex-col gap-4">
                <div class="grid grid-cols-2 gap-4">
                  <div class="flex flex-col gap-1.5">
                    <label class="text-xs text-gray-400 font-medium">Period Length</label>
                    <input type="number" value="14" class="w-full bg-background-dark border border-gray-700 rounded-lg px-3 py-2 text-white text-sm focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all">
                  </div>
                  <div class="flex flex-col gap-1.5">
                    <label class="text-xs text-gray-400 font-medium">Source</label>
                    <select class="w-full bg-background-dark border border-gray-700 rounded-lg px-3 py-2 text-white text-sm focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all appearance-none">
                      <option>Close</option>
                      <option>Open</option>
                      <option>High</option>
                      <option>Low</option>
                    </select>
                  </div>
                </div>
                <div class="grid grid-cols-2 gap-4">
                  <div class="flex flex-col gap-1.5">
                    <label class="text-xs text-gray-400 font-medium">Overbought</label>
                    <div class="relative">
                      <input type="number" value="70" class="w-full bg-background-dark border-b-2 border-red-500/50 border-t border-l border-r border-gray-700 rounded-lg px-3 py-2 text-white text-sm focus:outline-none focus:border-primary transition-all">
                    </div>
                  </div>
                  <div class="flex flex-col gap-1.5">
                    <label class="text-xs text-gray-400 font-medium">Oversold</label>
                    <div class="relative">
                      <input type="number" value="30" class="w-full bg-background-dark border-b-2 border-green-500/50 border-t border-l border-r border-gray-700 rounded-lg px-3 py-2 text-white text-sm focus:outline-none focus:border-primary transition-all">
                    </div>
                  </div>
                </div>
                <button class="w-full mt-2 py-2.5 rounded-lg bg-white/5 hover:bg-white/10 text-white text-sm font-semibold transition-colors border border-gray-700">
                  Apply Settings
                </button>
              </div>
            </div>

            <!-- Technical Interpretation -->
            <div class="flex-1 bg-surface-dark rounded-xl border border-gray-800/50 p-5 flex flex-col">
              <div class="flex items-center justify-between mb-4">
                <h3 class="text-white font-bold text-base flex items-center gap-2">
                  <span class="material-symbols-outlined text-purple-400 text-[20px]">analytics</span>
                  AI Interpretation
                </h3>
              </div>
              <div class="p-3 bg-<%= signalColor === 'green' ? 'green' : signalColor === 'red' ? 'red' : 'blue' %>-500/10 border border-<%= signalColor === 'green' ? 'green' : signalColor === 'red' ? 'red' : 'blue' %>-500/20 rounded-lg mb-4">
                <div class="flex gap-3">
                  <span class="material-symbols-outlined text-<%= signalColor === 'green' ? 'green' : signalColor === 'red' ? 'red' : 'blue' %>-400 text-[24px]">info</span>
                  <div>
                    <p class="text-sm text-gray-200 leading-relaxed">
                      <span class="font-bold text-white"><%= rsiSignal %> Trend:</span> RSI is currently at <span class="text-white font-mono"><%= currentRsi.toFixed(1) %></span>,
                      <% if (currentRsi >= 70) { %>
                        indicating the asset is in overbought territory. Consider taking profits or watching for reversal signals.
                      <% } else if (currentRsi <= 30) { %>
                        indicating the asset is in oversold territory. This may present a buying opportunity.
                      <% } else { %>
                        indicating the asset is neither overbought nor oversold.
                      <% } %>
                    </p>
                  </div>
                </div>
              </div>
              <div class="flex flex-col gap-3">
                <div class="flex items-center justify-between p-3 rounded-lg bg-background-dark border border-gray-800">
                  <div class="flex items-center gap-3">
                    <div class="w-2 h-2 rounded-full <%= currentRsi > 50 ? 'bg-green-500' : 'bg-red-500' %> animate-pulse"></div>
                    <span class="text-sm font-medium text-gray-300">Trend Momentum</span>
                  </div>
                  <span class="text-xs font-bold <%= currentRsi > 50 ? 'text-green-400' : 'text-red-400' %> uppercase"><%= currentRsi > 50 ? 'Bullish' : 'Bearish' %></span>
                </div>
                <div class="flex items-center justify-between p-3 rounded-lg bg-background-dark border border-gray-800">
                  <div class="flex items-center gap-3">
                    <div class="w-2 h-2 rounded-full bg-gray-500"></div>
                    <span class="text-sm font-medium text-gray-300">Divergence</span>
                  </div>
                  <span class="text-xs font-bold text-gray-500 uppercase">None</span>
                </div>
                <div class="flex items-center justify-between p-3 rounded-lg bg-background-dark border border-gray-800">
                  <div class="flex items-center gap-3">
                    <div class="w-2 h-2 rounded-full bg-yellow-500"></div>
                    <span class="text-sm font-medium text-gray-300">Volatility</span>
                  </div>
                  <span class="text-xs font-bold text-yellow-500 uppercase">Moderate</span>
                </div>
              </div>
              <div class="mt-auto pt-4 border-t border-gray-800">
                <p class="text-xs text-gray-500 italic">
                  Last signal: RSI crossed <% if (currentRsi > 50) { %>above<% } else { %>below<% } %> 50 SMA recently.
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- RSI Zones Explanation -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="bg-surface-dark rounded-xl border border-gray-800/50 p-5 <%= currentRsi <= 30 ? 'border-l-4 border-l-green-500' : '' %>">
            <div class="flex items-center gap-2 mb-2">
              <span class="material-symbols-outlined text-green-500">trending_up</span>
              <h4 class="text-white font-bold">Oversold Zone</h4>
            </div>
            <p class="text-gray-400 text-sm">RSI below 30 indicates oversold conditions. The asset may be undervalued and due for a bounce.</p>
            <p class="mt-3 text-lg font-mono <%= currentRsi <= 30 ? 'text-green-400' : 'text-gray-600' %>">RSI &lt; 30</p>
          </div>

          <div class="bg-surface-dark rounded-xl border border-gray-800/50 p-5 <%= currentRsi > 30 && currentRsi < 70 ? 'border-l-4 border-l-gray-500' : '' %>">
            <div class="flex items-center gap-2 mb-2">
              <span class="material-symbols-outlined text-gray-400">remove</span>
              <h4 class="text-white font-bold">Neutral Zone</h4>
            </div>
            <p class="text-gray-400 text-sm">RSI between 30-70 indicates neutral momentum. Watch for breakouts above 70 or below 30.</p>
            <p class="mt-3 text-lg font-mono <%= currentRsi > 30 && currentRsi < 70 ? 'text-white' : 'text-gray-600' %>">30 &lt; RSI &lt; 70</p>
          </div>

          <div class="bg-surface-dark rounded-xl border border-gray-800/50 p-5 <%= currentRsi >= 70 ? 'border-l-4 border-l-red-500' : '' %>">
            <div class="flex items-center gap-2 mb-2">
              <span class="material-symbols-outlined text-red-500">trending_down</span>
              <h4 class="text-white font-bold">Overbought Zone</h4>
            </div>
            <p class="text-gray-400 text-sm">RSI above 70 indicates overbought conditions. The asset may be overvalued and due for a pullback.</p>
            <p class="mt-3 text-lg font-mono <%= currentRsi >= 70 ? 'text-red-400' : 'text-gray-600' %>">RSI &gt; 70</p>
          </div>
        </div>

        <!-- Footer -->
        <footer class="mt-4 border-t border-gray-800 pt-6 pb-2">
          <div class="flex flex-col md:flex-row justify-between items-center text-xs text-gray-600">
            <p>© 2024 WealthPilot Pro. All rights reserved.</p>
            <div class="flex gap-4 mt-2 md:mt-0">
              <a class="hover:text-gray-400" href="#">Privacy Policy</a>
              <a class="hover:text-gray-400" href="#">Terms of Service</a>
              <a class="hover:text-gray-400" href="#">Support</a>
            </div>
          </div>
        </footer>
      </div>
    </div>
  </main>

  <script>
    // RSI Chart with TradingView Lightweight Charts
    const symbol = '<%= symbol || "AAPL" %>';
    const container = document.getElementById('tvRsiChart');

    async function loadRsiChart() {
      if (!container) return;

      container.innerHTML = '<p class="text-gray-400 text-center py-8">Loading chart...</p>';

      try {
        const token = localStorage.getItem('wealthpilot_token');
        const response = await fetch(`/api/technicals/${symbol}`, {
          headers: token ? { 'Authorization': `Bearer ${token}` } : {}
        });

        if (!response.ok) throw new Error('Failed to fetch data');

        const data = await response.json();
        const rsiSeries = data.rsi?.series || [];
        const dates = data.dates || [];

        if (rsiSeries.length === 0) throw new Error('No RSI data');

        container.innerHTML = '';

        const chart = LightweightCharts.createChart(container, {
          width: container.clientWidth,
          height: 400,
          layout: {
            background: { type: 'solid', color: '#1a1c2e' },
            textColor: '#9e9fb7',
          },
          grid: {
            vertLines: { color: '#2a2d3d' },
            horzLines: { color: '#2a2d3d' },
          },
          rightPriceScale: {
            borderColor: '#2a2d3d',
            scaleMargins: { top: 0.05, bottom: 0.05 },
          },
          timeScale: {
            borderColor: '#2a2d3d',
            timeVisible: true,
          },
        });

        const rsiLine = chart.addLineSeries({
          color: '#4850e5',
          lineWidth: 2,
          priceScaleId: 'right',
        });

        const rsiData = rsiSeries.map((value, i) => ({
          time: dates[i] || new Date(Date.now() - (rsiSeries.length - i) * 86400000).toISOString().split('T')[0],
          value: Math.max(0, Math.min(100, value))
        }));
        rsiLine.setData(rsiData);

        rsiLine.createPriceLine({
          price: 70,
          color: '#ef4444',
          lineWidth: 1,
          lineStyle: LightweightCharts.LineStyle.Dashed,
          axisLabelVisible: true,
          title: 'Overbought',
        });

        rsiLine.createPriceLine({
          price: 30,
          color: '#10b981',
          lineWidth: 1,
          lineStyle: LightweightCharts.LineStyle.Dashed,
          axisLabelVisible: true,
          title: 'Oversold',
        });

        rsiLine.createPriceLine({
          price: 50,
          color: '#64748b',
          lineWidth: 1,
          lineStyle: LightweightCharts.LineStyle.Dotted,
          axisLabelVisible: false,
        });

        chart.timeScale().fitContent();

        new ResizeObserver(entries => {
          chart.applyOptions({ width: entries[0].contentRect.width });
        }).observe(container);

      } catch (error) {
        console.error('TradingView RSI chart error:', error);
        container.innerHTML = '<p class="text-gray-400 text-center py-8">Chart unavailable - Please try again later</p>';
      }
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', loadRsiChart);
    } else {
      loadRsiChart();
    }
  </script>
</body>
</html>
