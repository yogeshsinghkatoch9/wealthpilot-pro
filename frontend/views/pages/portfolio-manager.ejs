      const response = await authFetch('/api/portfolios');
      const portfolios = await response.json();

      if (!portfolios || portfolios.length === 0) {
        listDiv.innerHTML = '<p class="text-center text-slate-400">No portfolios found. Create one first.</p>';
        return;
      }

      listDiv.innerHTML = portfolios.map(p => `
        <div class="p-4 border border-slate-700 rounded-lg mb-3 hover:border-amber-400/50 transition-colors cursor-pointer" onclick="selectPortfolio('${p.id}')">
          <div class="flex justify-between items-start">
            <div>
              <h4 class="font-bold text-white">${p.name}</h4>
              <p class="text-sm text-slate-400">${p.holdings?.length || 0} holdings</p>
            </div>
            <span class="text-emerald-400 font-mono">${formatMoney(p.totalValue || 0)}</span>
          </div>
        </div>
      `).join('');
    } catch (err) {
      console.error('Load error:', err);
      listDiv.innerHTML = '<p class="text-center text-red-400">Failed to load portfolios</p>';
    }
  }

  async function selectPortfolio(portfolioId) {
    try {
      const response = await authFetch(`/api/portfolios/${portfolioId}`);
      const data = await response.json();

      if (!data || !data.holdings) {
        alert('Failed to load portfolio holdings');
        return;
      }

      // Convert holdings to our format
      portfolio = data.holdings.map(h => ({
        symbol: h.symbol,
        name: h.name || h.symbol,
        sector: h.sector || 'Unknown',
        assetClass: 'Stocks',
        allocation: h.allocation || ((h.quantity * h.currentPrice) / (data.totalValue || 1)) * 100,
        price: h.currentPrice || h.avgCost || 0,
        dividendYield: h.dividendYield || 0,
        beta: h.beta || 1
      }));

      document.getElementById('totalInvestment').value = data.totalValue || 100000;

      updatePortfolioTable();
      updateAllocationStatus();
      updateQuickMetrics();
      document.getElementById('analyzeBtn').disabled = portfolio.length === 0;
      document.getElementById('rebalanceBtn').disabled = portfolio.length === 0;

      closeLoadModal();
    } catch (err) {
      console.error('Select portfolio error:', err);
      alert('Failed to load portfolio');
    }
  }

  function closeLoadModal() {
    document.getElementById('loadPortfolioModal').classList.add('hidden');
  }

  // Rebalance
  async function rebalancePortfolio() {
    if (portfolio.length === 0) {
      alert('Please add holdings first');
      return;
    }

    document.getElementById('rebalanceModal').classList.remove('hidden');
    const content = document.getElementById('rebalanceContent');
    content.innerHTML = '<p class="text-center text-slate-400">Calculating rebalancing trades...</p>';

    const totalInvestment = parseFloat(document.getElementById('totalInvestment').value) || 100000;

    // Create equal-weight targets for simplicity
    const targetAllocations = {};
    const equalWeight = 100 / portfolio.length;
    portfolio.forEach(p => {
      targetAllocations[p.symbol] = equalWeight;
    });

    try {
      const response = await authFetch('/api/portfolio-manager/rebalance', {
        method: 'POST',
        body: JSON.stringify({
          holdings: portfolio,
          targetAllocations,
          totalValue: totalInvestment
        })
      });

      const data = await response.json();

      if (!data.success) {
        content.innerHTML = '<p class="text-center text-red-400">Failed to calculate rebalancing</p>';
        return;
      }

      const trades = data.data.trades || [];

      if (trades.length === 0) {
        content.innerHTML = '<p class="text-center text-emerald-400">Portfolio is already balanced! No trades needed.</p>';
        return;
      }

      content.innerHTML = `
        <div class="space-y-4">
          <p class="text-slate-400 text-sm">To achieve equal-weight allocation (${equalWeight.toFixed(1)}% each):</p>
          <div class="space-y-2">
            ${trades.map(t => `
              <div class="flex items-center justify-between p-3 bg-slate-800 rounded-lg">
                <div class="flex items-center gap-3">
                  <span class="w-16 font-mono text-amber-400">${t.symbol}</span>
                  <span class="px-2 py-1 rounded text-xs ${t.action === 'BUY' ? 'bg-emerald-500/20 text-emerald-400' : 'bg-red-500/20 text-red-400'}">
                    ${t.action}
                  </span>
                </div>
                <div class="text-right">
                  <p class="font-mono text-white">${formatMoney(Math.abs(t.amount))}</p>
                  <p class="text-xs text-slate-400">${t.currentAllocation.toFixed(1)}% → ${t.targetAllocation.toFixed(1)}%</p>
                </div>
              </div>
            `).join('')}
          </div>
          <div class="pt-4 border-t border-slate-700">
            <p class="text-sm text-slate-400">Total Drift: <span class="font-mono text-amber-400">${data.data.totalDrift?.toFixed(2) || 0}%</span></p>
          </div>
        </div>
      `;
    } catch (err) {
      console.error('Rebalance error:', err);
      content.innerHTML = '<p class="text-center text-red-400">Failed to calculate rebalancing</p>';
    }
  }

  function closeRebalanceModal() {
    document.getElementById('rebalanceModal').classList.add('hidden');
  }

  // Close search results when clicking outside
  document.addEventListener('click', (e) => {
    const searchResults = document.getElementById('searchResults');
    const searchInput = document.getElementById('searchInput');
    if (!searchResults.contains(e.target) && e.target !== searchInput) {
      searchResults.classList.add('hidden');
    }
  });
</script>
