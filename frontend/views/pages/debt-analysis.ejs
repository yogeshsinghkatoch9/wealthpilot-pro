          <div>
            <p class="text-white text-2xl font-bold tracking-tight"><%= safeTotalDebt %></p>
            <p class="text-success text-xs font-medium mt-1 flex items-center gap-1">
              <span class="material-symbols-outlined text-[14px]">trending_down</span>
              <%= safeDebtChange %> YoY
            </p>
          </div>
        </div>
        <!-- Card 2: Debt-to-Equity -->
        <div class="flex flex-col gap-2 rounded-xl p-5 bg-card-dark border border-card-border hover:border-primary/50 transition-colors group">
          <div class="flex justify-between items-start">
            <p class="text-text-secondary text-sm font-medium">Debt-to-Equity</p>
            <span class="material-symbols-outlined text-text-secondary group-hover:text-primary text-[20px]">balance</span>
          </div>
          <div>
            <p class="text-white text-2xl font-bold tracking-tight"><%= safeDebtEquity %></p>
            <p class="text-warning text-xs font-medium mt-1 flex items-center gap-1">
