<style>
.nav-link {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.5rem 0.75rem;
  border-radius: 0.5rem;
  font-size: 0.875rem;
  font-weight: 500;
  transition: all 0.15s ease;
  color: <%= theme === 'light' ? '#4b5563' : '#94a3b8' %>;
}

.nav-link:hover {
  background: <%= theme === 'light' ? '#f3f4f6' : '#1e293b' %>;
  color: <%= theme === 'light' ? '#111827' : '#fff' %>;
}

.nav-link.active {
  background: <%= theme === 'light' ? '#e0f2fe' : 'rgba(14, 165, 233, 0.1)' %>;
  color: <%= theme === 'light' ? '#0284c7' : '#38bdf8' %>;
}

/* Mobile sidebar styles */
@media (max-width: 1023px) {
  .sidebar-container {
    transform: translateX(-100%);
    transition: transform 0.3s ease;
  }

  .sidebar-container.open {
    transform: translateX(0);
  }
}
</style>

<script>
// Theme Toggle
document.getElementById('theme-toggle')?.addEventListener('click', async function() {
  const currentTheme = document.documentElement.getAttribute('data-theme') || '<%= theme %>';
  const newTheme = currentTheme === 'light' ? 'dark' : 'light';

  try {
    // Save to server via API
    await fetch('/api/theme', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ theme: newTheme })
    });

    // Also save to localStorage as backup
    localStorage.setItem('theme', newTheme);

    // Reload to apply theme
    window.location.reload();
  } catch (err) {
    console.error('Failed to save theme:', err);
    // Fallback: just reload with localStorage
    localStorage.setItem('theme', newTheme);
    window.location.reload();
  }
});

// Mobile menu toggle
document.getElementById('mobile-menu-toggle')?.addEventListener('click', function() {
  document.querySelector('.sidebar-container').classList.toggle('open');
});

// Close mobile menu when clicking outside
document.addEventListener('click', function(e) {
  const sidebar = document.querySelector('.sidebar-container');
  const toggle = document.getElementById('mobile-menu-toggle');

  if (sidebar && toggle &&
      !sidebar.contains(e.target) &&
      !toggle.contains(e.target) &&
      sidebar.classList.contains('open')) {
    sidebar.classList.remove('open');
  }
});
</script>
