<%
  const safeData = data || {};
  const sectors = safeData.sectors || [];
  const topInflows = safeData.topInflows || [];
  const topOutflows = safeData.topOutflows || [];
  const rotationPairs = safeData.rotationPairs || [];
  const economicCycle = safeData.economicCycle || { phaseName: 'Unknown', confidence: 'low', favoredSectors: [] };
  const safeFmt = fmt || {
    compact: (val) => typeof val === 'number' ? val.toLocaleString() : val,
    pct: (val) => typeof val === 'number' ? val.toFixed(2) + '%' : val,
    number: (val) => typeof val === 'number' ? val.toFixed(2) : val
  };
%>
<%- include('../partials/header', { pageTitle: 'Sector Rotation' }) %>

<style>
  /* Modern Gradient Backgrounds */
  .gradient-hero {
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #0f172a 100%);
    border-bottom: 1px solid rgba(96, 165, 250, 0.2);
  }

  .glass-card {
    background: rgba(30, 41, 59, 0.6);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(148, 163, 184, 0.1);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .glass-card:hover {
    background: rgba(30, 41, 59, 0.8);
    border-color: rgba(148, 163, 184, 0.2);
  }

  .metric-card {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(30, 41, 59, 0.5) 100%);
    border: 1px solid rgba(59, 130, 246, 0.2);
    transition: all 0.3s ease;
  }

  .metric-card:hover {
    border-color: rgba(59, 130, 246, 0.4);
    box-shadow: 0 0 20px rgba(59, 130, 246, 0.2);
  }

  .tab-button {
    padding: 0.75rem 1.5rem;
    border-bottom: 2px solid transparent;
    transition: all 0.3s ease;
    cursor: pointer;
    color: #94a3b8;
    font-weight: 500;
  }

  .tab-button:hover {
    color: #e2e8f0;
    background: rgba(59, 130, 246, 0.1);
  }

  .tab-button.active {
    color: #60a5fa;
    border-bottom-color: #60a5fa;
    background: rgba(59, 130, 246, 0.1);
  }

  .tab-content {
    display: none;
    animation: fadeIn 0.3s ease-in;
  }

  .tab-content.active {
    display: block;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .sector-row {
    transition: all 0.2s ease;
    cursor: pointer;
  }

  .sector-row:hover {
    background: rgba(59, 130, 246, 0.05);
    transform: translateX(4px);
  }

  .signal-badge {
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .progress-bar {
    height: 6px;
    border-radius: 9999px;
    background: rgba(148, 163, 184, 0.2);
    overflow: hidden;
  }

  .progress-fill {
    height: 100%;
    border-radius: 9999px;
    transition: width 0.5s ease;
    background: linear-gradient(90deg, #10b981, #34d399);
  }

  .trend-indicator {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.125rem 0.5rem;
    border-radius: 0.375rem;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .trend-up {
    background: rgba(16, 185, 129, 0.1);
    color: #10b981;
  }

  .trend-down {
    background: rgba(239, 68, 68, 0.1);
    color: #ef4444;
  }

  .compact-card {
    padding: 1rem;
  }
</style>

<!-- Compact Header -->
<div class="gradient-hero">
  <div class="max-w-7xl mx-auto px-4 lg:px-6 py-6">
    <div class="flex items-center justify-between mb-4">
      <div>
        <h1 class="text-2xl font-bold text-white mb-1">Sector Rotation Analysis</h1>
        <p class="text-sm text-slate-400">Real-time money flow tracking across 11 market sectors</p>
      </div>
      <button onclick="location.reload()" class="flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 text-white rounded-lg shadow-lg transition-all duration-200 hover:shadow-blue-500/50">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
        </svg>
        <span class="font-semibold text-sm">Refresh</span>
      </button>
    </div>

    <!-- Quick Stats - More Compact -->
    <% if (sectors.length > 0) { %>
    <div class="grid grid-cols-4 gap-3">
      <div class="metric-card rounded-lg p-3">
        <div class="text-xs text-slate-400 mb-1">Total Sectors</div>
        <div class="text-2xl font-bold text-white"><%= sectors.length %></div>
      </div>
      <div class="metric-card rounded-lg p-3">
        <div class="text-xs text-slate-400 mb-1">Active Rotations</div>
        <div class="text-2xl font-bold text-green-400"><%= rotationPairs.length %></div>
      </div>
      <div class="metric-card rounded-lg p-3">
        <div class="text-xs text-slate-400 mb-1">Strong Buy</div>
        <div class="text-2xl font-bold text-emerald-400"><%= sectors.filter(s => s.signal === 'Strong Buy').length %></div>
      </div>
      <div class="metric-card rounded-lg p-3">
        <div class="text-xs text-slate-400 mb-1">Cycle: <%= economicCycle.phaseName %></div>
        <div class="text-sm font-semibold text-sky-400"><%= economicCycle.confidence.toUpperCase() %></div>
      </div>
    </div>
    <% } %>
  </div>
</div>

<main class="p-4 lg:p-6 bg-gradient-to-b from-slate-900 to-slate-950 min-h-screen">
  <div class="max-w-7xl mx-auto">
    <% if (sectors.length > 0) { %>

      <!-- Tabbed Navigation -->
      <div class="glass-card rounded-t-2xl border-b-0">
        <div class="flex overflow-x-auto">
          <button class="tab-button active" onclick="switchTab('overview')">
            <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
            Overview
          </button>
          <button class="tab-button" onclick="switchTab('sectors')">
            <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M3 14h18m-9-4v8m-7 0h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
            </svg>
            All Sectors
          </button>
          <button class="tab-button" onclick="switchTab('charts')">
            <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
            Charts
          </button>
          <button class="tab-button" onclick="switchTab('rotations')">
            <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/>
            </svg>
            Rotations
          </button>
        </div>
      </div>

      <!-- Tab Content Container -->
      <div class="glass-card rounded-b-2xl rounded-t-none p-6">

        <!-- Overview Tab -->
        <div id="tab-overview" class="tab-content active">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
            <!-- Economic Cycle - Compact -->
            <div class="bg-slate-800/30 rounded-xl p-4">
              <h3 class="text-sm font-bold text-sky-400 mb-3">ECONOMIC CYCLE</h3>
              <div class="text-2xl font-bold text-white mb-2"><%= economicCycle.phaseName %></div>
              <p class="text-sm text-slate-300 mb-3"><%= economicCycle.description %></p>
              <div class="flex flex-wrap gap-2">
                <% economicCycle.favoredSectors.forEach(sector => { %>
                  <span class="px-2 py-1 bg-slate-700/50 text-slate-300 rounded text-xs"><%= sector %></span>
                <% }) %>
              </div>
            </div>

            <!-- Top Inflows - Compact -->
            <div class="bg-slate-800/30 rounded-xl p-4">
              <h3 class="text-sm font-bold text-emerald-400 mb-3">TOP INFLOWS</h3>
              <% if (topInflows.length > 0) { %>
                <div class="space-y-2">
                  <% topInflows.forEach((sector, idx) => { %>
                  <div class="flex items-center justify-between p-2 bg-emerald-500/10 rounded">
                    <div class="flex items-center gap-2">
                      <span class="text-sm font-bold text-emerald-400"><%= idx + 1 %></span>
                      <div>
                        <div class="text-sm font-semibold text-white"><%= sector.sectorName %></div>
                        <div class="text-xs text-slate-400"><%= sector.sectorCode %></div>
                      </div>
                    </div>
                    <div class="text-right">
                      <div class="text-sm font-mono font-bold text-emerald-400">+<%= safeFmt.number(sector.moneyFlow) %></div>
                    </div>
                  </div>
                  <% }) %>
                </div>
              <% } %>
            </div>

            <!-- Top Outflows - Compact -->
            <div class="bg-slate-800/30 rounded-xl p-4">
              <h3 class="text-sm font-bold text-rose-400 mb-3">TOP OUTFLOWS</h3>
              <% if (topOutflows.length > 0) { %>
                <div class="space-y-2">
                  <% topOutflows.forEach((sector, idx) => { %>
                  <div class="flex items-center justify-between p-2 bg-rose-500/10 rounded">
                    <div class="flex items-center gap-2">
                      <span class="text-sm font-bold text-rose-400"><%= idx + 1 %></span>
                      <div>
                        <div class="text-sm font-semibold text-white"><%= sector.sectorName %></div>
                        <div class="text-xs text-slate-400"><%= sector.sectorCode %></div>
                      </div>
                    </div>
                    <div class="text-right">
                      <div class="text-sm font-mono font-bold text-rose-400"><%= safeFmt.number(sector.moneyFlow) %></div>
                    </div>
                  </div>
                  <% }) %>
                </div>
              <% } %>
            </div>

            <!-- Metrics Legend - Compact -->
            <div class="bg-slate-800/30 rounded-xl p-4">
              <h3 class="text-sm font-bold text-white mb-3">METRICS GUIDE</h3>
              <div class="space-y-2 text-xs">
                <div>
                  <span class="font-bold text-green-400">ROC:</span>
                  <span class="text-slate-400">Rate of Change - momentum indicator</span>
                </div>
                <div>
                  <span class="font-bold text-green-400">RSI:</span>
                  <span class="text-slate-400">Relative Strength Index (0-100)</span>
                </div>
                <div>
                  <span class="font-bold text-green-400">Rel Str:</span>
                  <span class="text-slate-400">Performance vs S&P 500</span>
                </div>
                <div>
                  <span class="font-bold text-green-400">Money Flow:</span>
                  <span class="text-slate-400">Volume-weighted momentum</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- All Sectors Tab -->
        <div id="tab-sectors" class="tab-content">
          <div class="overflow-x-auto">
            <table class="w-full">
              <thead>
                <tr class="border-b border-slate-700">
                  <th class="text-left py-2 px-3 text-xs font-semibold text-slate-400 uppercase">Sector</th>
                  <th class="text-right py-2 px-3 text-xs font-semibold text-slate-400 uppercase">Price</th>
                  <th class="text-right py-2 px-3 text-xs font-semibold text-slate-400 uppercase">Change</th>
                  <th class="text-right py-2 px-3 text-xs font-semibold text-slate-400 uppercase">ROC 5D</th>
                  <th class="text-right py-2 px-3 text-xs font-semibold text-slate-400 uppercase">ROC 20D</th>
                  <th class="text-right py-2 px-3 text-xs font-semibold text-slate-400 uppercase">RSI</th>
                  <th class="text-right py-2 px-3 text-xs font-semibold text-slate-400 uppercase">Rel Str</th>
                  <th class="text-right py-2 px-3 text-xs font-semibold text-slate-400 uppercase">Money Flow</th>
                  <th class="text-center py-2 px-3 text-xs font-semibold text-slate-400 uppercase">Signal</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-slate-800">
                <% sectors.forEach(sector => {
                  const currentPrice = sector.currentPrice || 0;
                  const changePercent = sector.changePercent || 0;
                  const roc5 = sector.roc5 || 0;
                  const roc20 = sector.roc20 || 0;
                  const rsi = sector.rsi || 50;
                  const relativeStrength = sector.relativeStrength || 0;
                  const moneyFlow = sector.moneyFlow || 0;

                  const changeColor = changePercent >= 0 ? 'text-emerald-400' : 'text-rose-400';
                  const roc5Color = roc5 >= 0 ? 'text-emerald-400' : 'text-rose-400';
                  const roc20Color = roc20 >= 0 ? 'text-emerald-400' : 'text-rose-400';
                  const rsiColor = rsi > 70 ? 'text-rose-400' : rsi < 30 ? 'text-emerald-400' : 'text-slate-300';
                  const rsColor = relativeStrength >= 0 ? 'text-emerald-400' : 'text-rose-400';
                  const mfColor = moneyFlow >= 0 ? 'text-emerald-400' : 'text-rose-400';

                  let signalClass = 'bg-slate-700 text-slate-300';
                  if (sector.signal === 'Strong Buy') signalClass = 'bg-emerald-500 text-white';
                  else if (sector.signal === 'Buy') signalClass = 'bg-emerald-600/70 text-white';
                  else if (sector.signal === 'Hold') signalClass = 'bg-green-500 text-white';
                  else if (sector.signal === 'Sell') signalClass = 'bg-rose-600/70 text-white';
                  else if (sector.signal === 'Strong Sell') signalClass = 'bg-rose-500 text-white';
                %>
                <tr class="sector-row">
                  <td class="py-3 px-3">
                    <div class="font-semibold text-white text-sm"><%= sector.sectorName %></div>
                    <div class="text-xs text-slate-500 font-mono"><%= sector.sectorCode %></div>
                  </td>
                  <td class="py-3 px-3 text-right font-mono text-sm text-white">$<%= currentPrice.toFixed(2) %></td>
                  <td class="py-3 px-3 text-right font-mono text-sm font-semibold <%= changeColor %>"><%= changePercent.toFixed(2) %>%</td>
                  <td class="py-3 px-3 text-right font-mono text-sm <%= roc5Color %>"><%= roc5.toFixed(2) %>%</td>
                  <td class="py-3 px-3 text-right font-mono text-sm <%= roc20Color %>"><%= roc20.toFixed(2) %>%</td>
                  <td class="py-3 px-3 text-right font-mono text-sm <%= rsiColor %>"><%= rsi.toFixed(1) %></td>
                  <td class="py-3 px-3 text-right font-mono text-sm <%= rsColor %>"><%= relativeStrength.toFixed(2) %>%</td>
                  <td class="py-3 px-3 text-right font-mono text-sm <%= mfColor %>"><%= moneyFlow.toFixed(2) %></td>
                  <td class="py-3 px-3 text-center">
                    <span class="signal-badge <%= signalClass %>"><%= sector.signal || 'Hold' %></span>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>

        <!-- Charts Tab -->
        <div id="tab-charts" class="tab-content">

          <!-- Charts Section Header -->
          <div class="mb-6 pb-4 border-b border-slate-700">
            <h2 class="text-xl font-bold text-white mb-2">Technical Analysis Dashboard</h2>
            <p class="text-sm text-slate-400">Visual analysis of sector performance metrics and technical indicators</p>
          </div>

          <!-- SECTION 1: MOMENTUM & STRENGTH ANALYSIS -->
          <div class="mb-6">
            <div class="flex items-center gap-2 mb-4">
              <div class="w-1 h-6 bg-green-500 rounded"></div>
              <h3 class="text-base font-bold text-green-400 uppercase tracking-wide">Momentum & Strength Analysis</h3>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
              <!-- Relative Strength Chart -->
              <div class="bg-gradient-to-br from-slate-800/40 to-slate-800/20 rounded-xl p-5 border border-slate-700/50 hover:border-green-500/30 transition-all duration-300">
                <div class="flex items-start justify-between mb-3">
                  <div>
                    <h4 class="text-sm font-bold text-green-400 mb-1">RELATIVE STRENGTH vs SPY</h4>
                    <p class="text-xs text-slate-500">Performance comparison to market benchmark</p>
                  </div>
                  <div class="px-2 py-1 bg-green-500/10 rounded text-xs font-semibold text-green-400">% Diff</div>
                </div>
                <div class="bg-slate-900/50 rounded-lg p-3">
                  <canvas id="relativeStrengthChart" height="220"></canvas>
                </div>
                <div class="mt-3 flex items-center justify-between text-xs">
                  <span class="text-slate-500">Higher is stronger</span>
                  <div class="flex gap-3">
                    <span class="flex items-center gap-1">
                      <div class="w-3 h-3 bg-emerald-500 rounded"></div>
                      <span class="text-slate-400">Outperform</span>
                    </span>
                    <span class="flex items-center gap-1">
                      <div class="w-3 h-3 bg-rose-500 rounded"></div>
                      <span class="text-slate-400">Underperform</span>
                    </span>
                  </div>
                </div>
              </div>

              <!-- Momentum Chart -->
              <div class="bg-gradient-to-br from-slate-800/40 to-slate-800/20 rounded-xl p-5 border border-slate-700/50 hover:border-green-500/30 transition-all duration-300">
                <div class="flex items-start justify-between mb-3">
                  <div>
                    <h4 class="text-sm font-bold text-green-400 mb-1">20-DAY MOMENTUM (ROC)</h4>
                    <p class="text-xs text-slate-500">Rate of change over 20 trading days</p>
                  </div>
                  <div class="px-2 py-1 bg-green-500/10 rounded text-xs font-semibold text-green-400">20D %</div>
                </div>
                <div class="bg-slate-900/50 rounded-lg p-3">
                  <canvas id="momentumChart" height="220"></canvas>
                </div>
                <div class="mt-3 flex items-center justify-between text-xs">
                  <span class="text-slate-500">Positive momentum indicates uptrend</span>
                  <div class="flex gap-3">
                    <span class="flex items-center gap-1">
                      <div class="w-3 h-3 bg-green-500 rounded"></div>
                      <span class="text-slate-400">Positive</span>
                    </span>
                    <span class="flex items-center gap-1">
                      <div class="w-3 h-3 bg-rose-500 rounded"></div>
                      <span class="text-slate-400">Negative</span>
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- SECTION 2: SENTIMENT & FLOW INDICATORS -->
          <div>
            <div class="flex items-center gap-2 mb-4">
              <div class="w-1 h-6 bg-emerald-500 rounded"></div>
              <h3 class="text-base font-bold text-emerald-400 uppercase tracking-wide">Sentiment & Flow Indicators</h3>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
              <!-- RSI Chart -->
              <div class="bg-gradient-to-br from-slate-800/40 to-slate-800/20 rounded-xl p-5 border border-slate-700/50 hover:border-purple-500/30 transition-all duration-300">
                <div class="flex items-start justify-between mb-3">
                  <div>
                    <h4 class="text-sm font-bold text-purple-400 mb-1">RELATIVE STRENGTH INDEX (RSI)</h4>
                    <p class="text-xs text-slate-500">Overbought/oversold momentum indicator</p>
                  </div>
                  <div class="px-2 py-1 bg-purple-500/10 rounded text-xs font-semibold text-purple-400">0-100</div>
                </div>
                <div class="bg-slate-900/50 rounded-lg p-3">
                  <canvas id="rsiChart" height="220"></canvas>
                </div>
                <div class="mt-3 grid grid-cols-3 gap-2 text-xs">
                  <div class="flex items-center gap-1">
                    <div class="w-3 h-3 bg-emerald-500 rounded"></div>
                    <span class="text-slate-400">&lt;30 Oversold</span>
                  </div>
                  <div class="flex items-center gap-1">
                    <div class="w-3 h-3 bg-slate-500 rounded"></div>
                    <span class="text-slate-400">30-70 Neutral</span>
                  </div>
                  <div class="flex items-center gap-1">
                    <div class="w-3 h-3 bg-rose-500 rounded"></div>
                    <span class="text-slate-400">&gt;70 Overbought</span>
                  </div>
                </div>
              </div>

              <!-- Money Flow Chart -->
              <div class="bg-gradient-to-br from-slate-800/40 to-slate-800/20 rounded-xl p-5 border border-slate-700/50 hover:border-emerald-500/30 transition-all duration-300">
                <div class="flex items-start justify-between mb-3">
                  <div>
                    <h4 class="text-sm font-bold text-emerald-400 mb-1">MONEY FLOW INDEX</h4>
                    <p class="text-xs text-slate-500">Volume-weighted price momentum</p>
                  </div>
                  <div class="px-2 py-1 bg-emerald-500/10 rounded text-xs font-semibold text-emerald-400">Index</div>
                </div>
                <div class="bg-slate-900/50 rounded-lg p-3">
                  <canvas id="moneyFlowChart" height="220"></canvas>
                </div>
                <div class="mt-3 flex items-center justify-between text-xs">
                  <span class="text-slate-500">Capital inflow/outflow strength</span>
                  <div class="flex gap-3">
                    <span class="flex items-center gap-1">
                      <div class="w-3 h-3 bg-emerald-500 rounded"></div>
                      <span class="text-slate-400">Inflow</span>
                    </span>
                    <span class="flex items-center gap-1">
                      <div class="w-3 h-3 bg-rose-500 rounded"></div>
                      <span class="text-slate-400">Outflow</span>
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Analysis Tips -->
          <div class="mt-6 p-4 bg-green-500/5 border border-green-500/20 rounded-lg">
            <div class="flex items-start gap-3">
              <svg class="w-5 h-5 text-green-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
