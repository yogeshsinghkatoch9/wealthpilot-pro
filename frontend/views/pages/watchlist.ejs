<%- include('../partials/header', { pageTitle: 'Watchlist' }) %>
<%
  // Safe defaults for undefined variables
  const safeItems = typeof items !== 'undefined' && items ? items : [];
  const safeTheme = typeof theme !== 'undefined' ? theme : 'dark';
  const gainers = safeItems.filter(i => (i.change_pct || 0) > 0).length;
  const losers = safeItems.filter(i => (i.change_pct || 0) < 0).length;
  const atTarget = safeItems.filter(i => i.target_reached).length;
%>
<main class="p-4 lg:p-6 min-h-screen">
  <div class="max-w-full mx-auto space-y-4">

    <!-- Hero Header with Glassmorphism -->
    <div class="relative overflow-hidden glass-card p-5">
      <!-- Background Gradient Orbs -->
      <div class="absolute -top-16 -right-16 w-48 h-48 bg-gradient-to-br from-amber-500/20 to-orange-500/20 rounded-full blur-3xl"></div>
      <div class="absolute -bottom-16 -left-16 w-40 h-40 bg-gradient-to-br from-purple-500/10 to-pink-500/10 rounded-full blur-3xl"></div>

      <div class="relative flex flex-col lg:flex-row items-start lg:items-center justify-between gap-4">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-amber-500 to-orange-600 flex items-center justify-center shadow-lg shadow-amber-500/25">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
            </svg>
          </div>
          <div>
            <div class="flex items-center gap-3">
              <h1 class="text-2xl lg:text-3xl font-bold text-white">Watchlist</h1>
              <span class="badge badge-live">LIVE</span>
            </div>
            <p class="text-slate-400 text-sm mt-1">Track stocks you're interested in with real-time prices</p>
          </div>
        </div>
        <div class="flex items-center gap-3">
          <button onclick="location.reload()" class="btn-glass flex items-center gap-2 px-4 py-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
            </svg>
            Refresh
          </button>
          <button onclick="openModal('addWatchModal')" class="btn-gradient flex items-center gap-2 px-5 py-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Add Stock
          </button>
        </div>
      </div>
    </div>

    <!-- KPI Stats Grid - Tufte Style -->
    <% if (safeItems.length > 0) { %>
    <div class="grid grid-cols-2 md:grid-cols-5 gap-4">
      <div class="tufte-stat-card">
        <div class="stat-label">Watching</div>
        <div class="stat-value-row">
          <span class="stat-value tabular-nums"><%= safeItems.length %></span>
        </div>
      </div>
      <div class="tufte-stat-card">
        <div class="stat-label">Gainers Today</div>
        <div class="stat-value-row">
          <span class="stat-value tabular-nums positive"><%= gainers %></span>
        </div>
      </div>
      <div class="tufte-stat-card">
        <div class="stat-label">Losers Today</div>
        <div class="stat-value-row">
          <span class="stat-value tabular-nums negative"><%= losers %></span>
        </div>
      </div>
      <div class="tufte-stat-card">
        <div class="stat-label">At Target</div>
        <div class="stat-value-row">
          <span class="stat-value tabular-nums"><%= atTarget %></span>
        </div>
      </div>
      <div class="tufte-stat-card">
        <div class="stat-label">Neutral</div>
        <div class="stat-value-row">
          <span class="stat-value tabular-nums"><%= safeItems.length - gainers - losers %></span>
        </div>
      </div>
    </div>
    <% } %>

    <!-- Empty State - Glassmorphism -->
    <% if (safeItems.length === 0) { %>
    <div class="glass-card-elevated p-12 text-center">
      <div class="w-20 h-20 mx-auto mb-6 rounded-2xl bg-gradient-to-br from-amber-500/20 to-orange-500/20 flex items-center justify-center">
        <svg class="w-10 h-10 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
        </svg>
      </div>
      <h3 class="text-xl font-bold text-white mb-2">Your watchlist is empty</h3>
      <p class="text-slate-400 mb-6 max-w-md mx-auto">Add stocks to track their prices in real-time and set target alerts to never miss an opportunity</p>
      <button onclick="openModal('addWatchModal')" class="btn-gradient px-6 py-3 flex items-center gap-2 mx-auto">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Add Your First Stock
      </button>
    </div>
    <% } else { %>

    <!-- Watchlist Table - Glassmorphism -->
    <div class="glass-card overflow-hidden">
      <div class="flex items-center justify-between p-4 border-b border-white/10">
        <div class="flex items-center gap-3">
          <span class="text-white font-semibold">Tracked Securities</span>
          <span class="badge badge-primary text-xs"><%= safeItems.length %> symbols</span>
        </div>
        <span class="text-xs text-slate-400 font-mono">Auto-refreshes every 30s</span>
      </div>

      <div class="overflow-x-auto">
        <table class="bloomberg-table">
          <thead>
            <tr>
              <th>Symbol</th>
              <th class="text-right">Price</th>
              <th class="text-right">Change</th>
              <th class="text-right">Day Range</th>
              <th class="text-right">Volume</th>
              <th class="text-right">Target</th>
              <th class="text-right">Distance</th>
              <th class="text-right">Signal</th>
              <th class="text-center">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% const colors = ['#0ea5e9', '#8b5cf6', '#10b981', '#f59e0b', '#ef4444', '#06b6d4', '#ec4899', '#84cc16'];
               safeItems.forEach((item, i) => {
               const changePct = item.change_pct || 0;
               const distanceToTarget = item.distance_to_target || 0;
               const currentPrice = item.current_price || 0;
               const low = item.low || 0;
               const high = item.high || 0;
               const range = high - low;
               const position = range > 0 ? ((currentPrice - low) / range) * 100 : 50;
            %>
            <tr data-symbol="<%= item.symbol %>" class="<%= item.target_reached ? 'bg-emerald-500/5' : '' %>">
              <td>
                <div class="flex items-center gap-3">
                  <div class="w-8 h-8 rounded flex items-center justify-center text-white font-bold text-xs" style="background: linear-gradient(135deg, <%= colors[i % colors.length] %>, <%= colors[(i + 3) % colors.length] %>)">
                    <%= item.symbol ? item.symbol.slice(0, 2) : '??' %>
                  </div>
                  <div>
                    <div class="flex items-center gap-2">
                      <span class="text-white font-medium"><%= item.symbol %></span>
                      <% if (item.target_reached) { %>
                      <span class="text-xs px-1.5 py-0.5 rounded bg-emerald-500/20 text-emerald-400 font-mono">TARGET</span>
                      <% } %>
                    </div>
                    <% if (item.technicalSignal) { %>
                    <span class="text-xs <%= item.technicalSignal === 'bullish' ? 'text-emerald-400' : item.technicalSignal === 'bearish' ? 'text-red-400' : 'text-slate-400' %>">
                      <%= item.technicalSignal.charAt(0).toUpperCase() + item.technicalSignal.slice(1) %>
                    </span>
                    <% } %>
                  </div>
                </div>
              </td>
              <td class="text-right text-white font-medium font-mono tabular-nums price">$<%= currentPrice.toFixed(2) %></td>
              <td class="text-right change">
                <span class="font-mono font-bold tabular-nums <%= changePct >= 0 ? 'positive' : 'negative' %>"><%= changePct >= 0 ? '+' : '' %><%= changePct.toFixed(2) %>%</span>
              </td>
              <td class="text-right">
                <% if (high && low) { %>
                <div class="flex items-center justify-end gap-2">
                  <span class="text-xs text-slate-500 font-mono"><%= fmt.money(low) %></span>
                  <div class="relative w-16 h-1.5 bg-slate-700 rounded-full overflow-hidden">
                    <div class="absolute h-full bg-gradient-to-r from-red-400 via-yellow-400 to-emerald-400 rounded-full" style="width: 100%"></div>
                    <div class="absolute w-1.5 h-1.5 bg-white rounded-full shadow-lg" style="left: calc(<%= Math.min(100, Math.max(0, position)) %>% - 3px)"></div>
                  </div>
                  <span class="text-xs text-slate-500 font-mono"><%= fmt.money(high) %></span>
                </div>
                <% } else { %>
                <span class="text-slate-600">-</span>
                <% } %>
              </td>
              <td class="text-right text-slate-400 font-mono">
                <%= item.volume ? fmt.compact(item.volume) : '-' %>
              </td>
              <td class="text-right">
                <% if (item.target_price) { %>
                <span class="text-white font-mono"><%= fmt.money(item.target_price) %></span>
                <% } else { %>
                <span class="text-slate-600">-</span>
                <% } %>
              </td>
              <td class="text-right">
                <% if (item.target_price) { %>
                <div class="flex items-center justify-end gap-2">
                  <span class="font-mono font-bold tabular-nums <%= distanceToTarget > 0 ? 'positive' : 'negative' %>">
                    <%= distanceToTarget > 0 ? '+' : '' %><%= distanceToTarget.toFixed(2) %>%
                  </span>
                  <% const progress = item.target_price > 0 ? Math.min(100, (currentPrice / item.target_price) * 100) : 0; %>
                  <div class="w-12 h-1.5 bg-slate-700 rounded-full overflow-hidden">
                    <div class="h-full <%= progress >= 100 ? 'bg-emerald-500' : 'bg-sky-500' %>" style="width: <%= progress %>%"></div>
                  </div>
                </div>
                <% } else { %>
                <span class="text-slate-600">-</span>
                <% } %>
              </td>
              <td class="text-right">
                <% if (item.technicalSignal) { %>
                <span class="text-xs px-2 py-1 rounded font-mono <%= item.technicalSignal === 'bullish' ? 'bg-emerald-500/20 text-emerald-400' : item.technicalSignal === 'bearish' ? 'bg-red-500/20 text-red-400' : 'bg-slate-500/20 text-slate-400' %>">
                  <%= item.technicalSignal.toUpperCase() %>
                </span>
                <% } else { %>
                <span class="text-slate-600">-</span>
                <% } %>
              </td>
              <td class="text-center">
                <div class="flex items-center justify-center gap-1">
                  <button onclick="openEditWatchModal('<%= item.id %>', '<%= item.symbol %>', <%= item.current_price || 0 %>, <%= item.target_price || 'null' %>)"
                    class="p-2 rounded hover:bg-amber-500/20 text-slate-400 hover:text-amber-400 transition-colors" title="Edit target price">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                    </svg>
                  </button>
                  <button onclick="confirmDeleteWatch('<%= item.id %>', '<%= item.symbol %>')" class="p-2 rounded hover:bg-red-500/20 text-slate-400 hover:text-red-400 transition-colors" title="Remove from watchlist">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                    </svg>
                  </button>
                </div>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Detailed Cards View (Alternative/Supplementary) -->
    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4">
      <% safeItems.forEach((item, i) => {
         const changePct = item.change_pct || 0;
         const distanceToTarget = item.distance_to_target || 0;
         const currentPrice = item.current_price || 0;
      %>
      <div class="bloomberg-card <%= item.target_reached ? 'ring-1 ring-emerald-500/50' : '' %>" data-symbol="<%= item.symbol %>">
        <!-- Header -->
        <div class="flex items-center justify-between px-4 py-3 border-b border-bloomberg-border-secondary">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded flex items-center justify-center text-white font-bold text-sm" style="background: linear-gradient(135deg, <%= colors[i % colors.length] %>, <%= colors[(i + 3) % colors.length] %>)">
              <%= item.symbol ? item.symbol.slice(0, 2) : '??' %>
            </div>
            <div>
              <div class="flex items-center gap-2">
                <span class="text-white font-bold text-sm"><%= item.symbol %></span>
                <% if (item.target_reached) { %>
                <span class="text-xs px-1.5 py-0.5 rounded bg-emerald-500/20 text-emerald-400 font-mono">TARGET</span>
                <% } %>
              </div>
              <% if (item.technicalSignal) { %>
              <span class="text-xs px-1.5 py-0.5 rounded font-mono <%= item.technicalSignal === 'bullish' ? 'bg-emerald-500/20 text-emerald-400' : item.technicalSignal === 'bearish' ? 'bg-red-500/20 text-red-400' : 'bg-slate-500/20 text-slate-400' %>">
                <%= item.technicalSignal.toUpperCase() %>
              </span>
              <% } %>
            </div>
          </div>
          <div class="flex items-center gap-1">
            <button onclick="openEditWatchModal('<%= item.id %>', '<%= item.symbol %>', <%= item.current_price || 0 %>, <%= item.target_price || 'null' %>)"
              class="p-1.5 rounded hover:bg-amber-500/20 text-slate-400 hover:text-amber-400 transition-colors" title="Edit">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
              </svg>
            </button>
            <button onclick="confirmDeleteWatch('<%= item.id %>', '<%= item.symbol %>')" class="p-1.5 rounded hover:bg-red-500/20 text-slate-400 hover:text-red-400 transition-colors" title="Remove">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
              </svg>
            </button>
          </div>
        </div>

        <!-- Price Section -->
        <div class="p-4 space-y-3">
          <div class="grid grid-cols-2 gap-3">
            <div>
              <div class="text-xs text-slate-500 mb-1">Current Price</div>
              <div class="text-white text-lg font-bold font-mono"><%= fmt.money(currentPrice) %></div>
            </div>
            <div class="text-right">
              <div class="text-xs text-slate-500 mb-1">Day Change</div>
              <div class="text-lg font-bold font-mono <%= changePct >= 0 ? 'text-emerald-400' : 'text-red-400' %>">
                <%= changePct >= 0 ? '+' : '' %><%= changePct.toFixed(2) %>%
              </div>
            </div>
          </div>

          <!-- High/Low Bar -->
          <% if (item.high && item.low) {
              const range = item.high - item.low;
              const position = range > 0 ? ((currentPrice - item.low) / range) * 100 : 50;
          %>
          <div>
            <div class="flex justify-between text-xs text-slate-500 mb-1 font-mono">
              <span>L: <%= fmt.money(item.low) %></span>
              <span>Day Range</span>
              <span>H: <%= fmt.money(item.high) %></span>
            </div>
            <div class="relative h-1.5 bg-slate-700 rounded-full">
              <div class="absolute h-1.5 bg-gradient-to-r from-red-400 via-yellow-400 to-emerald-400 rounded-full" style="width: 100%"></div>
              <div class="absolute w-2.5 h-2.5 bg-white rounded-full shadow-lg border border-sky-500 -top-0.5" style="left: calc(<%= Math.min(100, Math.max(0, position)) %>% - 5px)"></div>
            </div>
          </div>
          <% } %>

          <!-- Target Section -->
          <% if (item.target_price) { %>
          <div class="bg-bloomberg-elevated rounded p-3">
            <div class="flex justify-between items-center mb-2">
              <div>
                <div class="text-xs text-slate-500">Target Price</div>
                <div class="text-white font-semibold font-mono"><%= fmt.money(item.target_price) %></div>
              </div>
              <div class="text-right">
                <div class="text-xs text-slate-500">Distance</div>
                <div class="font-semibold font-mono tabular-nums <%= distanceToTarget > 0 ? 'positive' : 'negative' %>">
                  <%= distanceToTarget > 0 ? '+' : '' %><%= distanceToTarget.toFixed(2) %>%
                </div>
              </div>
            </div>
            <!-- Progress to target -->
            <div class="h-1.5 bg-slate-700 rounded-full overflow-hidden">
              <% const progress = item.target_price > 0 ? Math.min(100, (currentPrice / item.target_price) * 100) : 0; %>
              <div class="h-full <%= progress >= 100 ? 'bg-emerald-500' : 'bg-sky-500' %> transition-all" style="width: <%= progress %>%"></div>
            </div>
          </div>
          <% } %>

          <!-- Volume -->
          <% if (item.volume) { %>
          <div class="flex justify-between items-center text-xs">
            <span class="text-slate-500">Volume</span>
            <span class="text-slate-300 font-medium font-mono"><%= fmt.compact(item.volume) %></span>
          </div>
          <% } %>
        </div>
      </div>
      <% }) %>
    </div>
    <% } %>

  </div>
</main>

<!-- Add to Watchlist Modal -->
<div id="addWatchModal" class="modal">
  <div class="modal-content">
    <div class="modal-header">
      <h3>Add to Watchlist</h3>
      <button onclick="closeModal('addWatchModal')" class="modal-close">&times;</button>
    </div>
    <form onsubmit="return handleAddWatch(event)">
      <div class="space-y-4">
        <!-- Stock Search with Autocomplete -->
        <div>
          <label class="block text-sm font-medium <%= safeTheme === 'light' ? 'text-gray-700' : 'text-slate-300' %> mb-1.5">Search Stock</label>
          <div class="relative">
            <input type="text" id="watchStockSearch" class="form-input" placeholder="Search by symbol or company name..."
              autocomplete="off" oninput="debounceWatchSearch(this.value)">
            <div id="watchSearchResults" class="absolute z-50 w-full mt-1 bg-slate-800 border border-slate-600 rounded-lg shadow-xl max-h-60 overflow-y-auto hidden">
              <!-- Search results will appear here -->
            </div>
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium <%= safeTheme === 'light' ? 'text-gray-700' : 'text-slate-300' %> mb-1.5">Stock Symbol</label>
          <input type="text" name="symbol" id="watchSymbol" required class="form-input" placeholder="e.g., AAPL" autocomplete="off" readonly>
        </div>

        <!-- Live Price Preview -->
        <div id="watchPricePreview" class="hidden bg-slate-800/50 border border-slate-600 rounded-lg p-4">
          <div class="flex items-center justify-between">
            <div>
              <span class="text-xs text-slate-400">Current Price</span>
              <p class="text-xl font-bold font-mono text-white" id="watchCurrentPrice">--</p>
            </div>
            <div class="text-right">
              <span class="text-xs text-slate-400">Change</span>
              <p class="text-lg font-bold font-mono" id="watchPriceChange">--</p>
            </div>
          </div>
          <p class="text-sm text-slate-400 mt-2" id="watchCompanyName">--</p>
        </div>

        <div>
          <label class="block text-sm font-medium <%= safeTheme === 'light' ? 'text-gray-700' : 'text-slate-300' %> mb-1.5">Target Price (Optional)</label>
          <input type="number" name="target_price" class="form-input" placeholder="150.00" step="0.01" min="0">
          <p class="text-xs <%= safeTheme === 'light' ? 'text-gray-500' : 'text-slate-400' %> mt-1">Get notified when stock reaches this price</p>
        </div>
        <button type="submit" class="bloomberg-btn bloomberg-btn-primary w-full">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Add to Watchlist
        </button>
      </div>
    </form>
  </div>
</div>

<!-- Edit Watchlist Item Modal -->
<div id="editWatchModal" class="modal">
  <div class="modal-content">
    <div class="modal-header">
      <h3>Edit Watchlist Item</h3>
      <button onclick="closeModal('editWatchModal')" class="modal-close">&times;</button>
    </div>
    <form onsubmit="return handleEditWatch(event)">
      <input type="hidden" id="editWatchId" name="id">
      <div class="space-y-4">
        <div class="bg-slate-800/50 border border-amber-400/30 p-4 rounded-lg">
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 rounded bg-amber-500 flex items-center justify-center text-white text-lg font-bold" id="editWatchIcon">
              --
            </div>
            <div>
              <h4 class="text-white font-bold text-lg" id="editWatchSymbol">--</h4>
              <p class="text-slate-400 text-sm" id="editWatchPrice">Current: --</p>
            </div>
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium <%= safeTheme === 'light' ? 'text-gray-700' : 'text-slate-300' %> mb-1.5">Target Price</label>
          <input type="number" id="editTargetPrice" name="target_price" class="form-input" placeholder="150.00" step="0.01" min="0">
          <p class="text-xs <%= safeTheme === 'light' ? 'text-gray-500' : 'text-slate-400' %> mt-1">Leave empty to remove target price</p>
        </div>

        <div class="flex gap-3">
          <button type="button" onclick="closeModal('editWatchModal')" class="bloomberg-btn bloomberg-btn-secondary flex-1">Cancel</button>
          <button type="submit" class="bloomberg-btn bloomberg-btn-primary flex-1">Save Changes</button>
        </div>
      </div>
    </form>
  </div>
</div>

<script>
const FINNHUB_TOKEN = 'd4tm751r01qnn6llpesgd4tm751r01qnn6llpet0';
let watchSearchTimeout = null;

// Stock search with debounce
function debounceWatchSearch(query) {
    clearTimeout(watchSearchTimeout);
    const resultsDiv = document.getElementById('watchSearchResults');

    if (!query || query.length < 1) {
        resultsDiv.classList.add('hidden');
        return;
    }

    watchSearchTimeout = setTimeout(() => searchWatchStocks(query), 300);
}

async function searchWatchStocks(query) {
    const resultsDiv = document.getElementById('watchSearchResults');

    try {
        resultsDiv.innerHTML = '<div class="p-3 text-slate-400 text-sm">Searching...</div>';
        resultsDiv.classList.remove('hidden');

        const response = await fetch(`https://finnhub.io/api/v1/search?q=${encodeURIComponent(query)}&token=${FINNHUB_TOKEN}`);
        const data = await response.json();

        if (!data.result || data.result.length === 0) {
            resultsDiv.innerHTML = '<div class="p-3 text-slate-400 text-sm">No results found</div>';
            return;
        }

        const stocks = data.result.filter(item =>
            item.type === 'Common Stock' || item.type === 'ETF' || item.type === 'ADR'
        ).slice(0, 8);

        if (stocks.length === 0) {
            resultsDiv.innerHTML = '<div class="p-3 text-slate-400 text-sm">No stocks found</div>';
            return;
        }

        resultsDiv.innerHTML = stocks.map(stock => `
            <div class="p-3 hover:bg-slate-700 cursor-pointer border-b border-slate-700 last:border-0 transition-colors"
                 onclick="selectWatchStock('${stock.symbol}', '${stock.description.replace(/'/g, "\\'")}')">
                <div class="flex items-center justify-between">
                    <div>
                        <span class="text-amber-400 font-bold">${stock.symbol}</span>
                        <span class="text-slate-500 text-xs ml-2">${stock.type}</span>
                    </div>
                </div>
                <p class="text-slate-300 text-sm truncate">${stock.description}</p>
            </div>
        `).join('');

    } catch (error) {
        console.error('Search error:', error);
        resultsDiv.innerHTML = '<div class="p-3 text-red-400 text-sm">Search failed. Try again.</div>';
    }
}

async function selectWatchStock(symbol, name) {
    document.getElementById('watchSymbol').value = symbol;
    document.getElementById('watchStockSearch').value = `${symbol} - ${name}`;
    document.getElementById('watchSearchResults').classList.add('hidden');

    // Fetch and show current price
    try {
        const response = await fetch(`https://finnhub.io/api/v1/quote?symbol=${symbol}&token=${FINNHUB_TOKEN}`);
        const data = await response.json();

        if (data.c && data.c > 0) {
            const pricePreview = document.getElementById('watchPricePreview');
            pricePreview.classList.remove('hidden');

            document.getElementById('watchCurrentPrice').textContent = `$${data.c.toFixed(2)}`;
            const changePercent = data.dp || 0;
            const changeEl = document.getElementById('watchPriceChange');
            changeEl.textContent = `${changePercent >= 0 ? '+' : ''}${changePercent.toFixed(2)}%`;
            changeEl.className = `text-lg font-bold font-mono ${changePercent >= 0 ? 'text-emerald-400' : 'text-red-400'}`;
            document.getElementById('watchCompanyName').textContent = name;
        }
    } catch (error) {
        console.error('Failed to fetch price:', error);
    }
}

// Close search results when clicking outside
document.addEventListener('click', function(e) {
    const searchResults = document.getElementById('watchSearchResults');
    const searchInput = document.getElementById('watchStockSearch');
    if (searchResults && !searchResults.contains(e.target) && e.target !== searchInput) {
        searchResults.classList.add('hidden');
    }
});

async function handleAddWatch(e) {
    e.preventDefault();
    const form = e.target;
    const symbol = document.getElementById('watchSymbol').value.toUpperCase().trim();
    const targetPrice = form.target_price.value;

    if (!symbol) {
        showToast('Please search and select a stock', 'error');
        return false;
    }

    try {
        const res = await fetch('/api/watchlist', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
                symbol: symbol,
                target_price: targetPrice ? parseFloat(targetPrice) : null
            })
        });

        if (res.ok) {
            showToast(`${symbol} added to watchlist`, 'success');
            closeModal('addWatchModal');
            setTimeout(() => location.reload(), 500);
        } else {
            const data = await res.json();
            showToast(data.error || 'Failed to add stock', 'error');
        }
    } catch (err) {
        showToast('Error adding to watchlist', 'error');
    }
    return false;
}

// Edit watchlist item
function openEditWatchModal(id, symbol, currentPrice, targetPrice) {
    document.getElementById('editWatchId').value = id;
    document.getElementById('editWatchIcon').textContent = symbol.slice(0, 2);
    document.getElementById('editWatchSymbol').textContent = symbol;
    document.getElementById('editWatchPrice').textContent = `Current: $${currentPrice.toFixed(2)}`;
    document.getElementById('editTargetPrice').value = targetPrice || '';

    openModal('editWatchModal');
}

async function handleEditWatch(e) {
    e.preventDefault();
    const id = document.getElementById('editWatchId').value;
    const targetPrice = document.getElementById('editTargetPrice').value;

    try {
        const res = await fetch('/api/watchlist/' + id, {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
                target_price: targetPrice ? parseFloat(targetPrice) : null
            })
        });

        if (res.ok) {
            showToast('Watchlist item updated', 'success');
            closeModal('editWatchModal');
            setTimeout(() => location.reload(), 500);
        } else {
            const data = await res.json();
            showToast(data.error || 'Failed to update', 'error');
        }
    } catch (err) {
        showToast('Error updating watchlist item', 'error');
    }
    return false;
}

function confirmDeleteWatch(id, symbol) {
    if (confirm(`Remove ${symbol} from your watchlist?`)) {
        deleteWatch(id);
    }
}

async function deleteWatch(id) {
    try {
        const res = await fetch('/api/watchlist/' + id, { method: 'DELETE' });
        if (res.ok) {
            showToast('Removed from watchlist', 'success');
            setTimeout(() => location.reload(), 300);
        } else {
            showToast('Failed to remove', 'error');
        }
    } catch (err) {
        showToast('Error removing from watchlist', 'error');
    }
}

// Auto-refresh prices every 30 seconds
let refreshInterval = null;

async function refreshWatchlistPrices() {
    const rows = document.querySelectorAll('tr[data-symbol]');
    const cards = document.querySelectorAll('.bloomberg-card[data-symbol]');

    for (const row of rows) {
        const symbol = row.dataset.symbol;
        if (!symbol) continue;

        try {
            const response = await fetch(`https://finnhub.io/api/v1/quote?symbol=${symbol}&token=${FINNHUB_TOKEN}`);
            const data = await response.json();

            if (data.c && data.c > 0) {
                // Update table row
                const priceEl = row.querySelector('.price');
                const changeEl = row.querySelector('.change');

                if (priceEl) {
                    priceEl.textContent = `$${data.c.toFixed(2)}`;
                    priceEl.classList.add('bg-sky-500/20');
                    setTimeout(() => priceEl.classList.remove('bg-sky-500/20'), 1000);
                }

                if (changeEl) {
                    const changePct = data.dp || 0;
                    changeEl.innerHTML = `<span class="font-mono font-bold">${changePct >= 0 ? '+' : ''}${changePct.toFixed(2)}%</span>`;
                    changeEl.className = `text-right change ${changePct >= 0 ? 'text-emerald-400' : 'text-red-400'}`;
                }
            }
        } catch (error) {
            console.error(`Failed to refresh ${symbol}:`, error);
        }

        // Small delay between API calls
        await new Promise(resolve => setTimeout(resolve, 100));
    }
}

// Start auto-refresh when page loads
document.addEventListener('DOMContentLoaded', function() {
    // Initial refresh after 5 seconds
    setTimeout(refreshWatchlistPrices, 5000);

    // Then refresh every 30 seconds
    refreshInterval = setInterval(refreshWatchlistPrices, 30000);
});

// Stop refresh when page is hidden
document.addEventListener('visibilitychange', function() {
    if (document.hidden) {
        clearInterval(refreshInterval);
    } else {
        refreshInterval = setInterval(refreshWatchlistPrices, 30000);
    }
});
</script>

