<!-- Performance Tab - 4 Analytics -->

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
  
  <!-- 1. Performance Attribution (Waterfall) -->
  <div class="chart-container lg:col-span-2">
    <div class="chart-header">
      <h3 class="chart-title">Performance Attribution</h3>
      <div class="chart-controls">
        <select id="attribution-period" class="chart-control-btn">
          <option value="1M">1 Month</option>
          <option value="3M">3 Months</option>
          <option value="6M">6 Months</option>
          <option value="1Y" selected>1 Year</option>
        </select>
      </div>
    </div>
    <canvas id="chart-attribution" height="80"></canvas>
    <div id="export-attribution" class="export-controls"></div>
  </div>

  <!-- 2. Excess Return vs Benchmark (Dual-Axis Line) -->
  <div class="chart-container">
    <div class="chart-header">
      <h3 class="chart-title">Excess Return vs Benchmark</h3>
      <div class="chart-controls">
        <select id="excess-benchmark" class="chart-control-btn">
          <option value="SPY" selected>S&P 500 (SPY)</option>
          <option value="QQQ">NASDAQ (QQQ)</option>
          <option value="DIA">Dow Jones (DIA)</option>
        </select>
      </div>
    </div>
    <canvas id="chart-excess-return"></canvas>
    <div id="export-excess-return" class="export-controls"></div>
  </div>

  <!-- 3. Drawdown Analysis (Area) -->
  <div class="chart-container">
    <div class="chart-header">
      <h3 class="chart-title">Drawdown Analysis</h3>
      <div class="chart-controls">
        <span class="text-sm text-gray-400">Max Drawdown: <span id="max-drawdown" class="font-mono text-red-500">--</span></span>
      </div>
    </div>
    <canvas id="chart-drawdown"></canvas>
    <div id="export-drawdown" class="export-controls"></div>
  </div>

  <!-- 4. Rolling Statistics (Multi-Line) -->
  <div class="chart-container lg:col-span-2">
    <div class="chart-header">
      <h3 class="chart-title">Rolling Statistics</h3>
      <div class="chart-controls">
        <select id="rolling-window" class="chart-control-btn">
          <option value="30">30 Days</option>
          <option value="60">60 Days</option>
          <option value="90" selected>90 Days</option>
          <option value="180">180 Days</option>
        </select>
      </div>
    </div>
    <canvas id="chart-rolling-stats" height="80"></canvas>
    <div id="export-rolling-stats" class="export-controls"></div>
  </div>

</div>

<!-- Performance Metrics Summary -->
<div class="grid grid-cols-2 md:grid-cols-4 gap-4 mt-6">
  <div class="bg-gray-800 border border-gray-700 rounded-lg p-4">
    <div class="text-sm text-gray-400 mb-1">Total Return</div>
    <div class="text-2xl font-mono font-bold text-green-500" id="metric-total-return">--</div>
  </div>
  <div class="bg-gray-800 border border-gray-700 rounded-lg p-4">
    <div class="text-sm text-gray-400 mb-1">Sharpe Ratio</div>
    <div class="text-2xl font-mono font-bold text-blue-500" id="metric-sharpe">--</div>
  </div>
  <div class="bg-gray-800 border border-gray-700 rounded-lg p-4">
    <div class="text-sm text-gray-400 mb-1">Alpha</div>
    <div class="text-2xl font-mono font-bold text-amber-500" id="metric-alpha">--</div>
  </div>
  <div class="bg-gray-800 border border-gray-700 rounded-lg p-4">
    <div class="text-sm text-gray-400 mb-1">Beta</div>
    <div class="text-2xl font-mono font-bold text-purple-500" id="metric-beta">--</div>
  </div>
</div>
