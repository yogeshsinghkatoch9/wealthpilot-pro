<script>
  // Chart.js Configuration
  Chart.defaults.color = '#9ca3af';
  Chart.defaults.borderColor = 'rgba(75, 85, 99, 0.3)';

  const statistics = <%- JSON.stringify(statistics) %>;

  // Impact Distribution Chart
  const impactCtx = document.getElementById('impactChart').getContext('2d');
  new Chart(impactCtx, {
    type: 'doughnut',
    data: {
      labels: ['High Impact', 'Medium Impact', 'Low Impact'],
      datasets: [{
        data: [
          statistics.byImpact?.High || 0,
          statistics.byImpact?.Medium || 0,
          statistics.byImpact?.Low || 0
        ],
        backgroundColor: [
          'rgba(220, 38, 38, 0.8)',
          'rgba(245, 158, 11, 0.8)',
          'rgba(16, 185, 129, 0.8)'
        ],
        borderColor: [
          'rgba(220, 38, 38, 1)',
          'rgba(245, 158, 11, 1)',
