<%- include('../partials/header', { pageTitle: 'Investment Selector' }) %>

<!-- Bloomberg Header Bar -->
<div class="bloomberg-header-bar">
  <div class="max-w-7xl mx-auto flex items-center justify-between">
    <h1 class="text-amber-400 text-lg font-bold tracking-wide">INVESTMENT SELECTOR & PORTFOLIO BUILDER</h1>
    <div class="flex gap-3">
      <button onclick="clearAll()" class="bloomberg-btn bloomberg-btn-secondary">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
        </svg>
        CLEAR ALL
      </button>
      <button onclick="analyzePortfolio()" class="bloomberg-btn bloomberg-btn-primary" id="analyzeBtn" disabled>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
        </svg>
        ANALYZE PORTFOLIO
      </button>
    </div>
  </div>
</div>

<div class="max-w-7xl mx-auto p-6 space-y-6">
  <!-- Top Section: Amount & Allocation -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Amount Invested -->
    <div class="bloomberg-card">
      <h2 class="text-amber-400 text-sm font-bold uppercase tracking-wider mb-4">Amount Invested</h2>
      <div class="flex items-center gap-3">
        <span class="text-slate-400 text-2xl">$</span>
        <input type="number" id="totalInvestment" value="100000" min="0" step="1000"
               class="form-input text-3xl font-mono font-bold text-white bg-transparent border-b-2 border-amber-400/50 focus:border-amber-400 w-full"
               onchange="updatePortfolioValues()">
      </div>
      <p class="text-slate-500 text-xs mt-2">Enter total amount to invest</p>
    </div>

    <!-- Allocation Breakdown -->
    <div class="bloomberg-card">
      <h2 class="text-amber-400 text-sm font-bold uppercase tracking-wider mb-4">Asset Allocation</h2>
      <div class="space-y-3">
        <div class="flex items-center justify-between">
          <span class="text-slate-300">Equity</span>
          <div class="flex items-center gap-2">
            <div class="w-32 bg-slate-700 rounded-full h-2">
              <div id="equityBar" class="bg-emerald-500 h-2 rounded-full transition-all" style="width: 0%"></div>
            </div>
            <span id="equityPct" class="text-emerald-400 font-mono text-sm w-16 text-right">0%</span>
          </div>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-slate-300">Fixed Income</span>
          <div class="flex items-center gap-2">
            <div class="w-32 bg-slate-700 rounded-full h-2">
              <div id="fixedIncomeBar" class="bg-blue-500 h-2 rounded-full transition-all" style="width: 0%"></div>
            </div>
            <span id="fixedIncomePct" class="text-blue-400 font-mono text-sm w-16 text-right">0%</span>
          </div>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-slate-300">Other</span>
          <div class="flex items-center gap-2">
            <div class="w-32 bg-slate-700 rounded-full h-2">
              <div id="otherBar" class="bg-purple-500 h-2 rounded-full transition-all" style="width: 0%"></div>
            </div>
            <span id="otherPct" class="text-purple-400 font-mono text-sm w-16 text-right">0%</span>
          </div>
        </div>
        <div class="border-t border-slate-700 pt-2 flex items-center justify-between">
          <span class="text-white font-semibold">Total</span>
          <span id="totalPct" class="text-amber-400 font-mono font-bold">0%</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Investment Selector Section -->
  <div class="bloomberg-card">
    <h2 class="text-amber-400 text-sm font-bold uppercase tracking-wider mb-4">Investment Selector</h2>

    <!-- Search Input -->
    <div class="relative mb-6">
      <input type="text" id="searchInput" placeholder="Search by ticker symbol or company name (e.g., AAPL, Microsoft)..."
             class="form-input w-full text-lg" autocomplete="off" oninput="debounceSearch(this.value)">
      <div id="searchResults" class="absolute z-50 w-full mt-1 bg-slate-800 border border-slate-600 rounded-lg shadow-xl max-h-80 overflow-y-auto hidden">
        <!-- Search results will appear here -->
      </div>
    </div>

    <!-- Selected Investment Details -->
    <div id="investmentDetails" class="hidden">
      <div class="bg-slate-800/50 border border-slate-700 rounded-lg p-4 mb-4">
        <div class="flex items-start justify-between">
          <div class="flex items-center gap-4">
            <div class="w-16 h-16 rounded-lg bg-amber-500/20 flex items-center justify-center">
              <span id="detailSymbol" class="text-2xl font-bold text-amber-400">--</span>
            </div>
            <div>
              <h3 id="detailName" class="text-xl font-bold text-white">--</h3>
              <div class="flex items-center gap-3 mt-1">
                <span id="detailCategory" class="px-2 py-0.5 bg-slate-700 rounded text-xs text-slate-300">--</span>
                <span id="detailAssetClass" class="px-2 py-0.5 bg-blue-900/50 rounded text-xs text-blue-400">--</span>
                <span id="detailSector" class="text-slate-400 text-sm">--</span>
              </div>
            </div>
          </div>
          <div class="text-right">
            <p id="detailPrice" class="text-2xl font-mono font-bold text-white">$--</p>
            <p id="detailChange" class="text-sm font-mono">--</p>
          </div>
        </div>

        <!-- Metrics Grid -->
        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4 mt-4 pt-4 border-t border-slate-700">
          <div>
            <p class="text-xs text-slate-500 uppercase">P/E Ratio</p>
            <p id="detailPE" class="text-lg font-mono text-white">--</p>
          </div>
          <div>
            <p class="text-xs text-slate-500 uppercase">Dividend Yield</p>
            <p id="detailDividend" class="text-lg font-mono text-purple-400">--</p>
          </div>
          <div>
            <p class="text-xs text-slate-500 uppercase">Market Cap</p>
            <p id="detailMarketCap" class="text-lg font-mono text-white">--</p>
          </div>
          <div>
            <p class="text-xs text-slate-500 uppercase">Beta</p>
            <p id="detailBeta" class="text-lg font-mono text-cyan-400">--</p>
          </div>
          <div>
            <p class="text-xs text-slate-500 uppercase">52W High</p>
            <p id="detail52High" class="text-lg font-mono text-emerald-400">--</p>
          </div>
          <div>
            <p class="text-xs text-slate-500 uppercase">52W Low</p>
            <p id="detail52Low" class="text-lg font-mono text-red-400">--</p>
          </div>
        </div>

        <!-- Description -->
        <div id="detailDescriptionBox" class="mt-4 pt-4 border-t border-slate-700 hidden">
          <p class="text-xs text-slate-500 uppercase mb-1">Description</p>
          <p id="detailDescription" class="text-sm text-slate-300 line-clamp-2">--</p>
        </div>

        <!-- Add to Portfolio Button -->
        <div class="mt-4 flex items-center gap-4">
          <div class="flex-1">
            <label class="text-xs text-slate-500 uppercase">Allocation %</label>
            <input type="number" id="allocationInput" value="10" min="0.1" max="100" step="0.1"
                   class="form-input w-full mt-1" placeholder="Enter allocation %">
          </div>
          <button onclick="addToPortfolio()" class="bloomberg-btn bloomberg-btn-primary mt-5">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            ADD TO PORTFOLIO
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Portfolio Builder Section -->
  <div class="bloomberg-card">
    <h2 class="text-amber-400 text-sm font-bold uppercase tracking-wider mb-4">Portfolio</h2>

    <!-- Portfolio Table -->
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead>
          <tr class="text-slate-400 text-xs uppercase tracking-wider border-b border-slate-700">
            <th class="py-3 text-left">Name</th>
            <th class="py-3 text-left">Ticker</th>
            <th class="py-3 text-right">% of Portfolio</th>
            <th class="py-3 text-right">Total Invested</th>
            <th class="py-3 text-right">Projected Income</th>
            <th class="py-3 text-center">Actions</th>
          </tr>
        </thead>
        <tbody id="portfolioTableBody">
          <!-- Portfolio items will be added here -->
