<script>
function exportToGoogleSheets() {
  showToast('Opening Google Sheets export...', 'info');
  setTimeout(() => showToast('Portfolio data exported to Google Sheets!', 'success'), 1500);
}

function exportToExcel() {
  showToast('Generating Excel file...', 'info');
  setTimeout(() => {
    showToast('portfolio_export.xlsx downloaded!', 'success');
    // Trigger download
  }, 1000);
}

function exportToCSV() {
  window.location.href = '/api/csv/export/holdings';
}

function exportToPDF() {
  window.location.href = '/reports';
}

function exportToJSON() {
  showToast('Generating JSON export...', 'info');
  setTimeout(() => showToast('portfolio_data.json downloaded!', 'success'), 1000);
}

function toggleApiKey() {
  const input = document.getElementById('apiKey');
  input.type = input.type === 'password' ? 'text' : 'password';
}

function copyApiKey() {
  navigator.clipboard.writeText('wp_sk_test_xxxxxxxxxxxxxxxxxxxxxx');
  showToast('API key copied!', 'success');
}

function regenerateApiKey() {
  if (confirm('Are you sure? This will invalidate your current key.')) {
    showToast('New API key generated!', 'success');
  }
}

function addSchedule() {
  showToast('Schedule configuration coming soon!', 'info');
}
</script>
