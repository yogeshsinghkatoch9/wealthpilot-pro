<%
  const safeTheme = typeof theme !== 'undefined' ? theme : 'dark';
  const safeUser = typeof user !== 'undefined' ? user : { firstName: 'User', lastName: '', email: '' };
  const safePortfolios = typeof portfolios !== 'undefined' ? portfolios : [];
  const safeActiveShares = typeof activeShares !== 'undefined' ? activeShares : [];
  const safeShareableLink = typeof shareableLink !== 'undefined' ? shareableLink : 'wealthpilot.pro/share/x89s-22...';

  // Get user initials
  const userInitials = (safeUser.firstName?.charAt(0) || '') + (safeUser.lastName?.charAt(0) || '');
%>
<%- include('../partials/header', { pageTitle: 'Portfolio Sharing' }) %>

<!-- Main Content Area -->
<main class="flex-1 flex flex-col min-h-[calc(100vh-3.5rem)] bg-background-dark relative w-full">
  <!-- Top Bar / Header -->
  <header class="px-6 py-5 md:px-10 border-b border-border-dark bg-background-dark sticky top-14 z-10 bg-opacity-95 backdrop-blur-sm">
    <div class="max-w-[1200px] mx-auto flex flex-col md:flex-row md:items-end justify-between gap-4">
      <div class="flex flex-col gap-2">
        <h1 class="text-white text-3xl font-black leading-tight tracking-[-0.033em]">Portfolio Sharing</h1>
        <p class="text-text-secondary text-base font-normal">Securely manage access to your investment portfolios.</p>
      </div>
      <!-- Portfolio Context Selector -->
      <div class="flex flex-col min-w-[280px]">
        <label class="text-text-secondary text-xs font-medium uppercase tracking-wider mb-2">Select Portfolio</label>
        <div class="relative">
          <select id="portfolioSelector" class="appearance-none w-full bg-[#1c1d26] border border-border-dark hover:border-primary/50 text-white rounded-lg pl-4 pr-10 py-2.5 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all cursor-pointer font-medium">
            <% if (safePortfolios.length === 0) { %>
              <option value="">No portfolios available</option>
            <% } else { %>
              <% safePortfolios.forEach((portfolio, index) => { %>
                <option value="<%= portfolio.id %>"><%= portfolio.name %></option>
              <% }) %>
            <% } %>
          </select>
          <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-text-secondary">
            <span class="material-symbols-outlined">expand_more</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Scrollable Content -->
  <div class="px-6 py-8 md:px-10 flex-1">
    <div class="max-w-[1200px] mx-auto flex flex-col gap-8">
      <!-- Action Cards Grid -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">

        <!-- Invite via Email -->
        <div class="bg-[#1c1d26] rounded-xl border border-border-dark p-6 flex flex-col h-full shadow-lg shadow-black/20">
          <div class="flex items-center gap-3 mb-6">
            <div class="p-2 bg-primary/10 rounded-lg text-primary">
              <span class="material-symbols-outlined">mail</span>
            </div>
            <h2 class="text-white text-lg font-bold">Invite People</h2>
          </div>
          <form id="inviteForm" class="flex flex-col gap-5 flex-1" onsubmit="event.preventDefault(); sendInvitation();">
            <div class="space-y-1">
              <label class="text-white text-sm font-medium">Recipient Email</label>
              <input id="recipientEmail" type="email" class="w-full bg-background-dark border border-border-dark text-white rounded-lg px-4 py-3 placeholder-text-secondary/50 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all" placeholder="client@example.com, advisor@firm.com" />
            </div>
            <div class="space-y-1">
              <label class="text-white text-sm font-medium">Access Level</label>
              <div class="relative">
                <select id="accessLevel" class="appearance-none w-full bg-background-dark border border-border-dark text-white rounded-lg px-4 py-3 pr-10 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all">
                  <option value="view">View Only (Read-only access)</option>
                  <option value="comment">View & Comment</option>
                  <option value="edit">Limited Edit (Rebalance only)</option>
                </select>
                <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-3 text-text-secondary">
                  <span class="material-symbols-outlined text-sm">unfold_more</span>
                </div>
              </div>
            </div>
            <div class="mt-auto pt-4">
              <button type="submit" class="w-full bg-primary hover:bg-primary/90 text-white font-bold py-3 rounded-lg flex items-center justify-center gap-2 transition-colors shadow-lg shadow-primary/25">
                <span class="material-symbols-outlined text-[20px]">send</span>
                Send Invitation
              </button>
            </div>
          </form>
        </div>

        <!-- Get Shareable Link -->
        <div class="bg-[#1c1d26] rounded-xl border border-border-dark p-6 flex flex-col h-full shadow-lg shadow-black/20">
          <div class="flex items-center justify-between mb-6">
            <div class="flex items-center gap-3">
              <div class="p-2 bg-purple-500/10 rounded-lg text-purple-400">
                <span class="material-symbols-outlined">link</span>
              </div>
              <h2 class="text-white text-lg font-bold">Shareable Link</h2>
            </div>
            <!-- Toggle Switch -->
            <label class="inline-flex items-center cursor-pointer">
              <input id="linkEnabled" type="checkbox" checked class="sr-only peer" />
              <div class="relative w-11 h-6 bg-border-dark peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary"></div>
            </label>
          </div>
          <div class="flex flex-col gap-5 flex-1">
            <div class="grid grid-cols-2 gap-4">
              <div class="space-y-1">
                <label class="text-white text-sm font-medium">Expiration</label>
                <div class="relative">
                  <select id="linkExpiration" class="appearance-none w-full bg-background-dark border border-border-dark text-white rounded-lg px-3 py-3 pr-8 text-sm focus:outline-none focus:border-primary transition-all">
                    <option value="7">7 Days</option>
                    <option value="30">30 Days</option>
                    <option value="1">1 Hour</option>
                    <option value="0">Never</option>
                  </select>
                  <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-text-secondary">
                    <span class="material-symbols-outlined text-sm">expand_more</span>
                  </div>
                </div>
              </div>
              <div class="space-y-1">
                <label class="text-white text-sm font-medium">Password (Optional)</label>
                <input id="linkPassword" type="password" class="w-full bg-background-dark border border-border-dark text-white rounded-lg px-3 py-3 text-sm placeholder-text-secondary/50 focus:outline-none focus:border-primary transition-all" placeholder="••••••" />
              </div>
            </div>
            <div class="space-y-1 mt-auto">
              <label class="text-white text-sm font-medium">Link</label>
              <div class="flex rounded-lg overflow-hidden border border-border-dark bg-background-dark">
                <input id="shareableLinkInput" type="text" readonly class="flex-1 bg-transparent border-none text-text-secondary px-4 py-3 text-sm focus:ring-0" value="<%= safeShareableLink %>" />
                <button onclick="copyShareableLink()" class="bg-[#1c1d26] hover:bg-[#252733] border-l border-border-dark px-4 flex items-center justify-center text-white transition-colors" title="Copy to clipboard">
                  <span class="material-symbols-outlined text-[20px]">content_copy</span>
                </button>
              </div>
              <p id="linkProtectionStatus" class="text-xs text-text-secondary mt-2 flex items-center gap-1">
                <span class="material-symbols-outlined text-[14px]">lock</span> Link is password protected
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Active Shares Table -->
      <div class="flex flex-col gap-4">
        <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4">
          <h3 class="text-white text-xl font-bold">Active Permissions</h3>
          <div class="flex gap-2">
            <div class="relative">
              <input id="searchUsers" type="text" class="bg-[#1c1d26] border border-border-dark text-white text-sm rounded-lg pl-9 pr-4 py-2 focus:outline-none focus:border-primary w-full sm:w-64" placeholder="Search users..." />
              <span class="material-symbols-outlined absolute left-2.5 top-2 text-text-secondary text-[18px]">search</span>
            </div>
            <button onclick="toggleFilter()" class="flex items-center gap-2 px-3 py-2 rounded-lg bg-[#1c1d26] border border-border-dark text-white text-sm hover:bg-[#252733] transition-colors">
              <span class="material-symbols-outlined text-[18px]">filter_list</span>
              Filter
            </button>
          </div>
        </div>

        <div class="w-full overflow-hidden rounded-xl border border-border-dark bg-[#1c1d26] shadow-sm">
          <div class="overflow-x-auto">
            <table class="w-full text-left text-sm">
              <thead class="border-b border-border-dark bg-[#23242f]">
                <tr>
                  <th class="px-6 py-4 font-medium text-text-secondary">Recipient / Link</th>
                  <th class="px-6 py-4 font-medium text-text-secondary">Access Level</th>
                  <th class="px-6 py-4 font-medium text-text-secondary">Shared On</th>
                  <th class="px-6 py-4 font-medium text-text-secondary">Status</th>
                  <th class="px-6 py-4 font-medium text-text-secondary text-right">Actions</th>
                </tr>
              </thead>
              <tbody id="permissionsTableBody" class="divide-y divide-border-dark/50">
                <% if (safeActiveShares.length === 0) { %>
                  <!-- Sample Data Rows -->
                  <!-- Row 1 -->
                  <tr class="group hover:bg-[#252733] transition-colors">
                    <td class="px-6 py-4">
                      <div class="flex items-center gap-3">
                        <div class="size-9 rounded-full bg-gradient-to-tr from-green-500 to-cyan-400 flex items-center justify-center text-white font-bold text-xs shadow-md">
                          SM
                        </div>
                        <div class="flex flex-col">
                          <span class="text-white font-medium">Sarah Miller</span>
                          <span class="text-text-secondary text-xs">sarah.m@advisors.com</span>
                        </div>
                      </div>
                    </td>
                    <td class="px-6 py-4">
                      <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-green-500/10 text-green-400 border border-green-500/20">
                        <span class="material-symbols-outlined text-[14px]">edit_note</span>
                        Limited Edit
                      </span>
                    </td>
                    <td class="px-6 py-4 text-text-secondary">Oct 24, 2023</td>
                    <td class="px-6 py-4">
                      <div class="flex items-center gap-2">
                        <div class="size-2 rounded-full bg-emerald-500 shadow-[0_0_8px_rgba(16,185,129,0.4)]"></div>
                        <span class="text-white text-sm">Active</span>
                      </div>
                    </td>
                    <td class="px-6 py-4 text-right">
                      <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                        <button onclick="editAccess('1')" class="p-2 text-text-secondary hover:text-white hover:bg-white/10 rounded-lg transition-colors" title="Edit Access">
                          <span class="material-symbols-outlined text-[20px]">edit</span>
                        </button>
                        <button onclick="revokeAccess('1')" class="p-2 text-red-400 hover:text-red-300 hover:bg-red-500/10 rounded-lg transition-colors" title="Revoke Access">
                          <span class="material-symbols-outlined text-[20px]">block</span>
                        </button>
                      </div>
                    </td>
                  </tr>
                  <!-- Row 2 -->
                  <tr class="group hover:bg-[#252733] transition-colors">
                    <td class="px-6 py-4">
                      <div class="flex items-center gap-3">
                        <div class="size-9 rounded-full bg-[#2d2e3b] flex items-center justify-center text-text-secondary font-bold text-xs border border-border-dark">
                          <span class="material-symbols-outlined text-[18px]">link</span>
                        </div>
                        <div class="flex flex-col">
                          <span class="text-white font-medium">Public Link #882</span>
                          <span class="text-text-secondary text-xs">Generated via Link Module</span>
                        </div>
                      </div>
                    </td>
                    <td class="px-6 py-4">
                      <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-purple-500/10 text-purple-400 border border-purple-500/20">
                        <span class="material-symbols-outlined text-[14px]">visibility</span>
                        View Only
                      </span>
                    </td>
                    <td class="px-6 py-4 text-text-secondary">Oct 22, 2023</td>
                    <td class="px-6 py-4">
                      <div class="flex items-center gap-2">
                        <div class="size-2 rounded-full bg-green-500"></div>
                        <span class="text-white text-sm">Expiring Soon</span>
                      </div>
                    </td>
                    <td class="px-6 py-4 text-right">
                      <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                        <button onclick="editAccess('2')" class="p-2 text-text-secondary hover:text-white hover:bg-white/10 rounded-lg transition-colors">
                          <span class="material-symbols-outlined text-[20px]">edit</span>
                        </button>
                        <button onclick="revokeAccess('2')" class="p-2 text-red-400 hover:text-red-300 hover:bg-red-500/10 rounded-lg transition-colors">
                          <span class="material-symbols-outlined text-[20px]">block</span>
                        </button>
                      </div>
                    </td>
                  </tr>
                  <!-- Row 3 -->
                  <tr class="group hover:bg-[#252733] transition-colors">
                    <td class="px-6 py-4">
                      <div class="flex items-center gap-3">
                        <div class="size-9 rounded-full bg-gradient-to-br from-orange-500 to-red-500 flex items-center justify-center text-white font-bold text-xs shadow-md">
                          DK
                        </div>
                        <div class="flex flex-col">
                          <span class="text-white font-medium">David Klein</span>
                          <span class="text-text-secondary text-xs">david.k@lawfirm.com</span>
                        </div>
                      </div>
                    </td>
                    <td class="px-6 py-4">
                      <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-purple-500/10 text-purple-400 border border-purple-500/20">
                        <span class="material-symbols-outlined text-[14px]">visibility</span>
                        View Only
                      </span>
                    </td>
                    <td class="px-6 py-4 text-text-secondary">Sep 15, 2023</td>
                    <td class="px-6 py-4">
                      <div class="flex items-center gap-2">
                        <div class="size-2 rounded-full bg-border-dark"></div>
                        <span class="text-text-secondary text-sm">Expired</span>
                      </div>
                    </td>
                    <td class="px-6 py-4 text-right">
                      <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                        <button onclick="renewAccess('3')" class="p-2 text-primary hover:text-white hover:bg-primary rounded-lg transition-colors flex items-center gap-1 text-xs font-medium border border-primary/30">
                          <span class="material-symbols-outlined text-[16px]">refresh</span>
                          Renew
                        </button>
                      </div>
                    </td>
                  </tr>
                <% } else { %>
                  <% safeActiveShares.forEach((share, index) => { %>
                    <tr class="group hover:bg-[#252733] transition-colors">
                      <td class="px-6 py-4">
                        <div class="flex items-center gap-3">
                          <% if (share.type === 'link') { %>
                            <div class="size-9 rounded-full bg-[#2d2e3b] flex items-center justify-center text-text-secondary font-bold text-xs border border-border-dark">
                              <span class="material-symbols-outlined text-[18px]">link</span>
                            </div>
                            <div class="flex flex-col">
                              <span class="text-white font-medium"><%= share.name || 'Public Link' %></span>
                              <span class="text-text-secondary text-xs">Generated via Link Module</span>
                            </div>
                          <% } else { %>
                            <div class="size-9 rounded-full bg-gradient-to-tr from-green-500 to-cyan-400 flex items-center justify-center text-white font-bold text-xs shadow-md">
                              <%= share.initials || share.name?.substring(0, 2).toUpperCase() || 'U' %>
                            </div>
                            <div class="flex flex-col">
                              <span class="text-white font-medium"><%= share.name %></span>
                              <span class="text-text-secondary text-xs"><%= share.email %></span>
                            </div>
                          <% } %>
                        </div>
                      </td>
                      <td class="px-6 py-4">
                        <% if (share.accessLevel === 'edit') { %>
                          <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-green-500/10 text-green-400 border border-green-500/20">
                            <span class="material-symbols-outlined text-[14px]">edit_note</span>
                            Limited Edit
                          </span>
                        <% } else if (share.accessLevel === 'comment') { %>
                          <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-emerald-500/10 text-emerald-400 border border-emerald-500/20">
                            <span class="material-symbols-outlined text-[14px]">chat</span>
                            View & Comment
                          </span>
                        <% } else { %>
                          <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-purple-500/10 text-purple-400 border border-purple-500/20">
                            <span class="material-symbols-outlined text-[14px]">visibility</span>
                            View Only
                          </span>
                        <% } %>
                      </td>
                      <td class="px-6 py-4 text-text-secondary"><%= share.sharedOn || 'N/A' %></td>
                      <td class="px-6 py-4">
                        <% if (share.status === 'active') { %>
                          <div class="flex items-center gap-2">
                            <div class="size-2 rounded-full bg-emerald-500 shadow-[0_0_8px_rgba(16,185,129,0.4)]"></div>
                            <span class="text-white text-sm">Active</span>
                          </div>
                        <% } else if (share.status === 'expiring') { %>
                          <div class="flex items-center gap-2">
                            <div class="size-2 rounded-full bg-green-500"></div>
                            <span class="text-white text-sm">Expiring Soon</span>
                          </div>
                        <% } else { %>
                          <div class="flex items-center gap-2">
                            <div class="size-2 rounded-full bg-border-dark"></div>
                            <span class="text-text-secondary text-sm">Expired</span>
                          </div>
                        <% } %>
                      </td>
                      <td class="px-6 py-4 text-right">
                        <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                          <% if (share.status === 'expired') { %>
                            <button onclick="renewAccess('<%= share.id %>')" class="p-2 text-primary hover:text-white hover:bg-primary rounded-lg transition-colors flex items-center gap-1 text-xs font-medium border border-primary/30">
                              <span class="material-symbols-outlined text-[16px]">refresh</span>
                              Renew
                            </button>
                          <% } else { %>
                            <button onclick="editAccess('<%= share.id %>')" class="p-2 text-text-secondary hover:text-white hover:bg-white/10 rounded-lg transition-colors" title="Edit Access">
                              <span class="material-symbols-outlined text-[20px]">edit</span>
                            </button>
                            <button onclick="revokeAccess('<%= share.id %>')" class="p-2 text-red-400 hover:text-red-300 hover:bg-red-500/10 rounded-lg transition-colors" title="Revoke Access">
                              <span class="material-symbols-outlined text-[20px]">block</span>
                            </button>
                          <% } %>
                        </div>
                      </td>
                    </tr>
                  <% }) %>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>

        <!-- Pagination -->
        <div class="flex flex-col sm:flex-row justify-between items-center gap-4 px-2">
          <p class="text-text-secondary text-sm">Showing <span id="showingCount"><%= safeActiveShares.length || 3 %></span> of <span id="totalCount"><%= safeActiveShares.length || 12 %></span> shares</p>
          <div class="flex gap-2">
            <button id="prevPageBtn" onclick="prevPage()" class="px-3 py-1 rounded bg-[#1c1d26] border border-border-dark text-text-secondary text-sm hover:text-white disabled:opacity-50">Prev</button>
            <button id="nextPageBtn" onclick="nextPage()" class="px-3 py-1 rounded bg-[#1c1d26] border border-border-dark text-text-secondary text-sm hover:text-white">Next</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<!-- Edit Access Modal -->
<div id="editAccessModal" class="fixed inset-0 bg-black/50 hidden items-center justify-center z-50">
  <div class="bg-[#1c1d26] rounded-xl border border-border-dark max-w-md w-full mx-4 p-6 shadow-xl">
    <div class="flex items-center justify-between mb-6">
      <h3 class="text-white text-lg font-bold">Edit Access</h3>
      <button onclick="closeEditModal()" class="text-text-secondary hover:text-white transition-colors">
        <span class="material-symbols-outlined">close</span>
      </button>
    </div>
    <form id="editAccessForm" onsubmit="event.preventDefault(); saveAccessChanges();">
      <input type="hidden" id="editShareId" value="" />
      <div class="space-y-4">
        <div class="space-y-1">
          <label class="text-white text-sm font-medium">Access Level</label>
          <div class="relative">
            <select id="editAccessLevel" class="appearance-none w-full bg-background-dark border border-border-dark text-white rounded-lg px-4 py-3 pr-10 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all">
              <option value="view">View Only (Read-only access)</option>
              <option value="comment">View & Comment</option>
              <option value="edit">Limited Edit (Rebalance only)</option>
            </select>
            <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-3 text-text-secondary">
              <span class="material-symbols-outlined text-sm">unfold_more</span>
            </div>
          </div>
        </div>
        <div class="space-y-1">
          <label class="text-white text-sm font-medium">Expiration</label>
          <div class="relative">
            <select id="editExpiration" class="appearance-none w-full bg-background-dark border border-border-dark text-white rounded-lg px-4 py-3 pr-10 focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all">
              <option value="7">7 Days</option>
              <option value="30">30 Days</option>
              <option value="90">90 Days</option>
              <option value="0">Never</option>
            </select>
            <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-3 text-text-secondary">
              <span class="material-symbols-outlined text-sm">unfold_more</span>
            </div>
          </div>
        </div>
      </div>
      <div class="flex gap-3 mt-6">
        <button type="button" onclick="closeEditModal()" class="flex-1 bg-border-dark hover:bg-[#4a4b5e] text-white font-medium py-3 rounded-lg transition-colors">
          Cancel
        </button>
        <button type="submit" class="flex-1 bg-primary hover:bg-primary/90 text-white font-bold py-3 rounded-lg transition-colors">
          Save Changes
        </button>
      </div>
    </form>
  </div>
</div>

<!-- Revoke Access Confirmation Modal -->
<div id="revokeModal" class="fixed inset-0 bg-black/50 hidden items-center justify-center z-50">
  <div class="bg-[#1c1d26] rounded-xl border border-border-dark max-w-sm w-full mx-4 p-6 shadow-xl">
    <div class="flex items-center gap-3 mb-4">
      <div class="p-2 bg-red-500/10 rounded-lg text-red-400">
        <span class="material-symbols-outlined">warning</span>
      </div>
      <h3 class="text-white text-lg font-bold">Revoke Access</h3>
    </div>
    <p class="text-text-secondary mb-6">Are you sure you want to revoke this access? This action cannot be undone.</p>
    <input type="hidden" id="revokeShareId" value="" />
    <div class="flex gap-3">
      <button onclick="closeRevokeModal()" class="flex-1 bg-border-dark hover:bg-[#4a4b5e] text-white font-medium py-3 rounded-lg transition-colors">
        Cancel
      </button>
      <button onclick="confirmRevoke()" class="flex-1 bg-red-500 hover:bg-red-600 text-white font-bold py-3 rounded-lg transition-colors">
        Revoke
      </button>
    </div>
  </div>
</div>

<script>
// Portfolio Sharing Page Scripts
let currentPage = 1;
const itemsPerPage = 10;

// Send invitation via email
async function sendInvitation() {
  const portfolioId = document.getElementById('portfolioSelector').value;
  const email = document.getElementById('recipientEmail').value;
  const accessLevel = document.getElementById('accessLevel').value;

  if (!portfolioId) {
    showToast('Please select a portfolio first', 'error');
    return;
  }

  if (!email) {
    showToast('Please enter a recipient email', 'error');
    return;
  }

  try {
    const response = await fetch('/api/sharing/invite', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ portfolioId, email, accessLevel })
    });

    const data = await response.json();

    if (data.success) {
      showToast('Invitation sent successfully!', 'success');
      document.getElementById('recipientEmail').value = '';
      // Optionally refresh the permissions table
      location.reload();
    } else {
      showToast(data.error || 'Failed to send invitation', 'error');
    }
  } catch (error) {
    console.error('Invitation error:', error);
    showToast('Failed to send invitation', 'error');
  }
}

// Copy shareable link to clipboard
function copyShareableLink() {
  const input = document.getElementById('shareableLinkInput');
  navigator.clipboard.writeText(input.value).then(() => {
    showToast('Link copied to clipboard!', 'success');
  }).catch(() => {
    // Fallback for older browsers
    input.select();
    document.execCommand('copy');
    showToast('Link copied to clipboard!', 'success');
  });
}

// Update link protection status
document.getElementById('linkPassword')?.addEventListener('input', function() {
  const statusEl = document.getElementById('linkProtectionStatus');
  if (this.value.length > 0) {
    statusEl.innerHTML = '<span class="material-symbols-outlined text-[14px]">lock</span> Link is password protected';
  } else {
    statusEl.innerHTML = '<span class="material-symbols-outlined text-[14px]">lock_open</span> Link is not password protected';
  }
});

// Toggle link enabled/disabled
document.getElementById('linkEnabled')?.addEventListener('change', async function() {
  const portfolioId = document.getElementById('portfolioSelector').value;
  const enabled = this.checked;

  try {
    await fetch('/api/sharing/link/toggle', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ portfolioId, enabled })
    });

    showToast(enabled ? 'Shareable link enabled' : 'Shareable link disabled', 'info');
  } catch (error) {
    console.error('Toggle link error:', error);
  }
});

// Edit access modal
function editAccess(shareId) {
  document.getElementById('editShareId').value = shareId;
  const modal = document.getElementById('editAccessModal');
  modal.classList.remove('hidden');
  modal.classList.add('flex');
}

function closeEditModal() {
  const modal = document.getElementById('editAccessModal');
  modal.classList.add('hidden');
  modal.classList.remove('flex');
}

async function saveAccessChanges() {
  const shareId = document.getElementById('editShareId').value;
  const accessLevel = document.getElementById('editAccessLevel').value;
  const expiration = document.getElementById('editExpiration').value;

  try {
    const response = await fetch(`/api/sharing/${shareId}/update`, {
      method: 'PUT',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ accessLevel, expiration })
    });

    const data = await response.json();

    if (data.success) {
      showToast('Access updated successfully', 'success');
      closeEditModal();
      location.reload();
    } else {
      showToast(data.error || 'Failed to update access', 'error');
    }
  } catch (error) {
    console.error('Update access error:', error);
    showToast('Failed to update access', 'error');
  }
}

// Revoke access modal
function revokeAccess(shareId) {
  document.getElementById('revokeShareId').value = shareId;
  const modal = document.getElementById('revokeModal');
  modal.classList.remove('hidden');
  modal.classList.add('flex');
}

function closeRevokeModal() {
  const modal = document.getElementById('revokeModal');
  modal.classList.add('hidden');
  modal.classList.remove('flex');
}

async function confirmRevoke() {
  const shareId = document.getElementById('revokeShareId').value;

  try {
    const response = await fetch(`/api/sharing/${shareId}/revoke`, {
      method: 'DELETE'
    });

    const data = await response.json();

    if (data.success) {
      showToast('Access revoked successfully', 'success');
      closeRevokeModal();
      location.reload();
    } else {
      showToast(data.error || 'Failed to revoke access', 'error');
    }
  } catch (error) {
    console.error('Revoke access error:', error);
    showToast('Failed to revoke access', 'error');
  }
}

// Renew expired access
async function renewAccess(shareId) {
  try {
    const response = await fetch(`/api/sharing/${shareId}/renew`, {
      method: 'POST'
    });

    const data = await response.json();

    if (data.success) {
      showToast('Access renewed successfully', 'success');
      location.reload();
    } else {
      showToast(data.error || 'Failed to renew access', 'error');
    }
  } catch (error) {
    console.error('Renew access error:', error);
    showToast('Failed to renew access', 'error');
  }
}

// Filter toggle (placeholder)
function toggleFilter() {
  showToast('Filter options coming soon', 'info');
}

// Search users
document.getElementById('searchUsers')?.addEventListener('input', function() {
  const searchTerm = this.value.toLowerCase();
  const rows = document.querySelectorAll('#permissionsTableBody tr');

  rows.forEach(row => {
    const name = row.querySelector('.text-white.font-medium')?.textContent.toLowerCase() || '';
    const email = row.querySelector('.text-text-secondary.text-xs')?.textContent.toLowerCase() || '';

    if (name.includes(searchTerm) || email.includes(searchTerm)) {
      row.style.display = '';
    } else {
      row.style.display = 'none';
    }
  });
});

// Pagination
function prevPage() {
  if (currentPage > 1) {
    currentPage--;
    loadPage(currentPage);
  }
}

function nextPage() {
  currentPage++;
  loadPage(currentPage);
}

function loadPage(page) {
  // This would typically make an API call to load paginated data
  showToast(`Loading page ${page}...`, 'info');
}

// Close modals when clicking outside
document.addEventListener('click', function(e) {
  const editModal = document.getElementById('editAccessModal');
  const revokeModal = document.getElementById('revokeModal');

  if (e.target === editModal) {
    closeEditModal();
  }
  if (e.target === revokeModal) {
    closeRevokeModal();
  }
});

// Generate shareable link when settings change
async function generateShareableLink() {
  const portfolioId = document.getElementById('portfolioSelector').value;
  const expiration = document.getElementById('linkExpiration').value;
  const password = document.getElementById('linkPassword').value;

  if (!portfolioId) return;

  try {
    const response = await fetch('/api/sharing/link/generate', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ portfolioId, expiration, password })
    });

    const data = await response.json();

    if (data.success && data.shareUrl) {
      document.getElementById('shareableLinkInput').value = data.shareUrl;
    }
  } catch (error) {
    console.error('Generate link error:', error);
  }
}

// Listen for expiration/password changes
document.getElementById('linkExpiration')?.addEventListener('change', generateShareableLink);

// Initialize
document.addEventListener('DOMContentLoaded', function() {
  // Set initial link protection status
  const password = document.getElementById('linkPassword')?.value;
  const statusEl = document.getElementById('linkProtectionStatus');
  if (statusEl) {
    if (password && password.length > 0) {
      statusEl.innerHTML = '<span class="material-symbols-outlined text-[14px]">lock</span> Link is password protected';
    } else {
      statusEl.innerHTML = '<span class="material-symbols-outlined text-[14px]">lock_open</span> Link is not password protected';
    }
  }
});
</script>

