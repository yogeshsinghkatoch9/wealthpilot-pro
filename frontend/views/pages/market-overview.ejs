<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Market Dashboard | WealthPilot Pro</title>
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    body {
      background: #0a0e17;
      color: #c9d1d9;
      margin: 0;
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif;
    }

    .dashboard-container {
      max-width: 1600px;
      margin: 0 auto;
      padding: 20px;
    }

    .dashboard-header {
      margin-bottom: 30px;
      padding-bottom: 20px;
      border-bottom: 2px solid #f59e0b;
    }

    .dashboard-title {
      font-size: 32px;
      font-weight: 600;
      color: #f59e0b;
      margin: 0 0 8px 0;
    }

    .dashboard-subtitle {
      font-size: 14px;
      color: #8b949e;
      margin: 0;
    }

    .sections-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
      gap: 20px;
      margin-bottom: 20px;
    }

    .section-card {
      background: #161b22;
      border: 1px solid #30363d;
      border-radius: 8px;
      padding: 20px;
      transition: all 0.3s;
      box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    }

    .section-card:hover {
      border-color: #f59e0b;
    }

    .section-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 16px;
      padding-bottom: 12px;
      border-bottom: 1px solid #30363d;
    }

    .section-title {
      font-size: 16px;
      font-weight: 600;
      color: #f59e0b;
      margin: 0;
    }

    .section-link {
      font-size: 12px;
      color: #8b949e;
      text-decoration: none;
      transition: color 0.2s;
    }

    .section-link:hover {
      color: #f59e0b;
    }

    .section-content {
      font-size: 14px;
    }

    .stat-row {
      display: flex;
      justify-content: space-between;
      padding: 10px 0;
      border-bottom: 1px solid #21262d;
    }

    .stat-row:last-child {
      border-bottom: none;
    }

    .stat-label {
      color: #8b949e;
    }

    .stat-value {
      color: #f0f6fc;
      font-weight: 500;
    }

    .positive {
      color: #3fb950;
    }

    .negative {
      color: #f85149;
    }

    .tabular-nums {
      font-variant-numeric: tabular-nums;
      font-feature-settings: 'tnum';
    }

    .loading {
      text-align: center;
      padding: 40px;
      color: #8b949e;
    }

    .search-section {
      background: #161b22;
      border: 1px solid #30363d;
      border-radius: 8px;
      padding: 24px;
      margin-bottom: 20px;
    }

    .search-input {
      width: 100%;
      max-width: 500px;
      background: #0d1117;
      border: 1px solid #30363d;
      color: #f0f6fc;
      padding: 12px 16px;
      border-radius: 6px;
      font-size: 16px;
      transition: all 0.2s;
    }

    .search-input:focus {
      outline: none;
      border-color: #f59e0b;
      box-shadow: 0 0 0 3px rgba(245, 158, 11, 0.1);
    }

    .search-input::placeholder {
      color: #6e7681;
    }

    @media (max-width: 768px) {
      .sections-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
<body>
  <%- include('../partials/header') %>

  <div class="dashboard-container">
    <!-- Header -->
    <div class="dashboard-header">
      <h1 class="dashboard-title">Market Dashboard</h1>
      <p class="dashboard-subtitle">Comprehensive overview of all market sections</p>
    </div>

    <!-- Stock Search -->
    <div class="search-section">
      <input
        type="text"
        class="search-input"
        placeholder="Search for any stock (e.g., AAPL, MSFT, GOOGL)..."
        onkeypress="if(event.key === 'Enter' && this.value.trim()) window.location.href = '/stock/' + this.value.trim().toUpperCase()"
      />
    </div>

    <!-- Overview Section -->
    <h2 style="color: #f0f6fc; font-size: 20px; margin: 30px 0 16px 0;">Overview</h2>
    <div class="sections-grid">
      <!-- Market Breadth -->
      <div class="section-card">
        <div class="section-header">
          <h3 class="section-title">Market Breadth</h3>
          <a href="/market-breadth" class="section-link">View Details →</a>
        </div>
        <div class="section-content">
          <div class="stat-row">
            <span class="stat-label">Advancing</span>
            <span class="stat-value tabular-nums positive"><%= breadth?.indicators?.advanceDecline?.advancing || '-' %></span>
          </div>
          <div class="stat-row">
            <span class="stat-label">Declining</span>
            <span class="stat-value tabular-nums negative"><%= breadth?.indicators?.advanceDecline?.declining || '-' %></span>
          </div>
          <div class="stat-row">
            <span class="stat-label">Market Health</span>
            <span class="stat-value tabular-nums"><%= breadth?.healthScore ? breadth.healthScore + '/100' : '-' %></span>
          </div>
        </div>
      </div>

      <!-- Top Movers -->
      <div class="section-card">
        <div class="section-header">
          <h3 class="section-title">Top Movers</h3>
          <a href="/top-movers" class="section-link">View Details →</a>
        </div>
        <div class="section-content">
          <div class="stat-row">
            <span class="stat-label">Top Gainer</span>
            <span class="stat-value tabular-nums positive"><%= topMovers?.gainers?.[0]?.symbol || '-' %></span>
          </div>
          <div class="stat-row">
            <span class="stat-label">Top Loser</span>
            <span class="stat-value tabular-nums negative"><%= topMovers?.losers?.[0]?.symbol || '-' %></span>
          </div>
          <div class="stat-row">
            <span class="stat-label">Most Active</span>
            <span class="stat-value tabular-nums"><%= topMovers?.active?.[0]?.symbol || '-' %></span>
          </div>
        </div>
      </div>

      <!-- Market Sentiment -->
      <div class="section-card">
        <div class="section-header">
          <h3 class="section-title">Market Sentiment</h3>
          <a href="/sentiment" class="section-link">View Details →</a>
        </div>
        <div class="section-content">
          <div class="stat-row">
            <span class="stat-label">Overall Score</span>
            <span class="stat-value tabular-nums"><%= sentiment?.overall?.score ? sentiment.overall.score.toFixed(1) + '/100' : '-' %></span>
          </div>
          <div class="stat-row">
            <span class="stat-label">Sentiment</span>
            <span class="stat-value tabular-nums"><%= sentiment?.overall?.sentiment || 'NEUTRAL' %></span>
          </div>
          <div class="stat-row">
            <span class="stat-label">News Articles</span>
            <span class="stat-value tabular-nums"><%= sentiment?.news?.articles?.length || 0 %></span>
          </div>
        </div>
      </div>
    </div>

    <!-- Sectors Section -->
    <h2 style="color: #f0f6fc; font-size: 20px; margin: 30px 0 16px 0;">Sectors</h2>
    <div class="sections-grid">
      <!-- Sector Overview -->
      <div class="section-card">
        <div class="section-header">
          <h3 class="section-title">Sector Overview</h3>
          <a href="/sector-analysis" class="section-link">View Details →</a>
        </div>
        <div class="section-content">
          <div class="stat-row">
            <span class="stat-label">Best Performer</span>
            <span class="stat-value tabular-nums positive"><%= sectors?.bestPerformer?.name || '-' %></span>
          </div>
          <div class="stat-row">
            <span class="stat-label">Worst Performer</span>
            <span class="stat-value tabular-nums negative"><%= sectors?.worstPerformer?.name || '-' %></span>
          </div>
          <div class="stat-row">
            <span class="stat-label">Sectors Tracked</span>
            <span class="stat-value tabular-nums">11</span>
          </div>
        </div>
      </div>

      <!-- Sector Rotation -->
      <div class="section-card">
        <div class="section-header">
          <h3 class="section-title">Sector Rotation</h3>
          <a href="/sector-rotation" class="section-link">View Details →</a>
        </div>
        <div class="section-content">
          <div class="stat-row">
            <span class="stat-label">Rotation Signal</span>
            <span class="stat-value tabular-nums" id="rotation-signal">-</span>
          </div>
          <div class="stat-row">
            <span class="stat-label">Status</span>
            <span class="stat-value tabular-nums positive">Operational</span>
          </div>
        </div>
      </div>

      <!-- Sector Heatmap -->
      <div class="section-card">
        <div class="section-header">
          <h3 class="section-title">Sector Heatmap</h3>
          <a href="/sector-heatmap" class="section-link">View Details →</a>
        </div>
        <div class="section-content">
          <div class="stat-row">
            <span class="stat-label">Data Source</span>
            <span class="stat-value">Live</span>
          </div>
          <div class="stat-row">
            <span class="stat-label">Status</span>
            <span class="stat-value tabular-nums positive">Operational</span>
          </div>
        </div>
      </div>

      <!-- ETF Analyzer -->
      <div class="section-card">
        <div class="section-header">
          <h3 class="section-title">ETF Analyzer</h3>
          <a href="/etf-analyzer" class="section-link">View Details →</a>
        </div>
        <div class="section-content">
          <div class="stat-row">
            <span class="stat-label">Top ETF</span>
            <span class="stat-value" id="etf-top">SPY</span>
          </div>
          <div class="stat-row">
            <span class="stat-label">Status</span>
            <span class="stat-value tabular-nums positive">Operational</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Calendar Section -->
    <h2 style="color: #f0f6fc; font-size: 20px; margin: 30px 0 16px 0;">Calendars</h2>
    <div class="sections-grid">
      <!-- Economic Calendar -->
      <div class="section-card">
        <div class="section-header">
          <h3 class="section-title">Economic Calendar</h3>
          <a href="/economic-calendar" class="section-link">View Details →</a>
        </div>
        <div class="section-content">
          <div class="stat-row">
            <span class="stat-label">Upcoming Events</span>
            <span class="stat-value tabular-nums"><%=economic?.upcoming || 0 %></span>
          </div>
          <div class="stat-row">
            <span class="stat-label">Status</span>
            <span class="stat-value tabular-nums positive">Operational</span>
          </div>
        </div>
      </div>

      <!-- Earnings Calendar -->
      <div class="section-card">
        <div class="section-header">
          <h3 class="section-title">Earnings Calendar</h3>
          <a href="/earnings-calendar" class="section-link">View Details →</a>
        </div>
        <div class="section-content">
          <div class="stat-row">
            <span class="stat-label">Upcoming Earnings</span>
            <span class="stat-value tabular-nums"><%=earnings?.upcoming || 0 %></span>
          </div>
          <div class="stat-row">
            <span class="stat-label">Status</span>
            <span class="stat-value tabular-nums positive">Operational</span>
          </div>
        </div>
      </div>

      <!-- Dividend Calendar -->
      <div class="section-card">
        <div class="section-header">
          <h3 class="section-title">Dividend Calendar</h3>
          <a href="/dividend-calendar" class="section-link">View Details →</a>
        </div>
        <div class="section-content">
          <div class="stat-row">
            <span class="stat-label">Upcoming Dividends</span>
            <span class="stat-value tabular-nums"><%=dividend?.upcoming || 0 %></span>
          </div>
          <div class="stat-row">
            <span class="stat-label">Status</span>
            <span class="stat-value tabular-nums positive">Operational</span>
          </div>
        </div>
      </div>

      <!-- IPO Tracker -->
      <div class="section-card">
        <div class="section-header">
          <h3 class="section-title">IPO Tracker</h3>
          <a href="/ipo-tracker" class="section-link">View Details →</a>
        </div>
        <div class="section-content">
          <div class="stat-row">
            <span class="stat-label">Upcoming IPOs</span>
            <span class="stat-value tabular-nums"><%=ipo?.thisWeek || 0 %></span>
          </div>
          <div class="stat-row">
            <span class="stat-label">Status</span>
            <span class="stat-value tabular-nums positive">Operational</span>
          </div>
        </div>
      </div>

      <!-- SPAC Tracker -->
      <div class="section-card">
        <div class="section-header">
          <h3 class="section-title">SPAC Tracker</h3>
          <a href="/spac-tracker" class="section-link">View Details →</a>
        </div>
        <div class="section-content">
          <div class="stat-row">
            <span class="stat-label">Active SPACs</span>
            <span class="stat-value tabular-nums"><%=spac?.active || 0 %></span>
          </div>
          <div class="stat-row">
            <span class="stat-label">Status</span>
            <span class="stat-value tabular-nums positive">Operational</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Data is now loaded server-side and rendered directly in the template
    // No need for client-side API calls
    console.log('Market Dashboard loaded with server-side data');
  </script>
</body>
</html>
