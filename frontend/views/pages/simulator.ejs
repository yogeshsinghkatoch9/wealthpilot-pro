  const scenarios = {
    conservative: { return: 0.05, volatility: 0.10 },
    moderate: { return: 0.08, volatility: 0.15 },
    aggressive: { return: 0.12, volatility: 0.22 },
    crash: { return: 0.02, volatility: 0.30 }
  };

  currentScenario = scenarios[type];

  // Highlight selected card
  document.querySelectorAll('.scenario-card').forEach(card => card.classList.remove('active'));
  event.currentTarget.classList.add('active');

  if (typeof showToast === 'function') {
    showToast(`Applied ${type} scenario`, 'info');
  }
}

function formatMoney(val) {
  return '$' + Math.round(val).toLocaleString();
}
