  }

  .export-btn {
    background: #30363d;
    color: #e5e7eb;
    padding: 0.5rem 1rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
    cursor: pointer;
    transition: all 0.2s;
    border: 1px solid transparent;
  }

  .export-btn:hover {
