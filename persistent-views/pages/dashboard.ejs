<script>
(function() {
  const token = localStorage.getItem('wealthpilot_token') || '';
  const headers = token ? { 'Authorization': `Bearer ${token}` } : {};
  const portfolioSymbols = <%= JSON.stringify(portfolioSymbols) %>;
  let portfolioChart = null;
  let currentPeriod = '1M';
  let newsIndex = 0;
  let allNews = [];

  // Format helpers
  function formatCurrency(val) {
    if (!val || isNaN(val)) return '$0.00';
    return new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' }).format(val);
  }

  function formatPercent(val) {
    if (!val || isNaN(val)) return '0.00%';
    return (val >= 0 ? '+' : '') + val.toFixed(2) + '%';
  }

  // Load Portfolio Performance Chart
  async function loadPortfolioChart(period = '1M') {
    const canvas = document.getElementById('portfolioChart');
    const loading = document.getElementById('chartLoading');
    if (!canvas) return;

    loading.style.display = 'block';

    try {
      const response = await fetch(`/api/portfolios/performance?period=${period}`, { headers });
      let chartData;

      if (response.ok) {
        const data = await response.json();
        chartData = data.history || data.performance || data;
      }

      // If no data or error, generate sample data
      if (!chartData || !Array.isArray(chartData) || chartData.length === 0) {
        chartData = generateSampleChartData(period);
      }

      renderChart(canvas, chartData, period);
    } catch (error) {
      console.warn('Chart data error, using sample:', error);
      renderChart(canvas, generateSampleChartData(period), period);
    } finally {
      loading.style.display = 'none';
    }
  }

  function generateSampleChartData(period) {
    const days = { '1D': 1, '1W': 7, '1M': 30, '3M': 90, 'YTD': 180, 'ALL': 365 }[period] || 30;
    const data = [];
    const baseValue = parseFloat('<%= safeTotals.value || 100000 %>') || 100000;
    const today = new Date();

    for (let i = days; i >= 0; i--) {
      const date = new Date(today);
      date.setDate(date.getDate() - i);
      const variation = (Math.random() - 0.48) * 0.015;
      const trendFactor = 1 + (days - i) * 0.0008;
      data.push({
        date: date.toISOString().split('T')[0],
        value: baseValue * trendFactor * (1 + variation * (days - i) / days)
      });
    }
    data[data.length - 1].value = baseValue;
    return data;
  }

  function renderChart(canvas, data, period) {
    if (portfolioChart) portfolioChart.destroy();

    const ctx = canvas.getContext('2d');
    const gradient = ctx.createLinearGradient(0, 0, 0, 300);
    gradient.addColorStop(0, 'rgba(99, 102, 241, 0.2)');
    gradient.addColorStop(1, 'rgba(99, 102, 241, 0)');

    const labels = data.map(d => {
      const date = new Date(d.date);
      if (period === '1D') return date.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit' });
      if (period === '1W') return date.toLocaleDateString('en-US', { weekday: 'short' });
      return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
    });
    const values = data.map(d => d.value);

    portfolioChart = new Chart(canvas, {
      type: 'line',
      data: {
        labels: labels,
        datasets: [{
          label: 'Portfolio Value',
          data: values,
          borderColor: '#6366f1',
          backgroundColor: gradient,
          borderWidth: 2,
          fill: true,
          tension: 0.4,
          pointRadius: 0,
          pointHoverRadius: 6,
          pointHoverBackgroundColor: '#6366f1',
          pointHoverBorderColor: '#fff',
          pointHoverBorderWidth: 2
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: { display: false },
          tooltip: {
            backgroundColor: 'rgba(15, 17, 21, 0.95)',
            titleColor: '#9e9fb7',
            bodyColor: '#fff',
            borderColor: '#292a38',
            borderWidth: 1,
            padding: 12,
            displayColors: false,
            callbacks: {
              label: ctx => formatCurrency(ctx.raw)
            }
          }
        },
        scales: {
          x: {
            grid: { color: 'rgba(41, 42, 56, 0.5)', drawBorder: false },
            ticks: { color: '#9e9fb7', maxTicksLimit: 8 }
          },
          y: {
            grid: { color: 'rgba(41, 42, 56, 0.5)', drawBorder: false },
            ticks: {
              color: '#9e9fb7',
              callback: val => '$' + (val / 1000).toFixed(0) + 'k'
            }
          }
        },
        interaction: { intersect: false, mode: 'index' }
      }
    });
  }

  // Load Market Overview
  async function loadMarketData() {
    const container = document.getElementById('marketOverview');
    if (!container) return;

    try {
      const response = await fetch('/api/market/indices', { headers });
      if (!response.ok) throw new Error('Failed to fetch');

      const data = await response.json();
      const indices = data.indices || data || [];

      if (indices.length > 0) {
        container.innerHTML = indices.slice(0, 6).map(idx => {
          const change = idx.changePercent || idx.change || 0;
          const isPositive = change >= 0;
          return `
            <div class="market-item" onclick="window.location.href='/market/quote/${idx.symbol}'">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <div class="d-flex align-items-center gap-2">
                    <span class="fw-bold">${idx.name || idx.symbol}</span>
                    <span class="badge bg-secondary small">${idx.symbol}</span>
                  </div>
                  <p class="text-muted small mb-0 mt-1">$${(idx.price || idx.value || 0).toLocaleString()}</p>
                </div>
                <span class="fw-bold ${isPositive ? 'text-success' : 'text-danger'}">
                  ${isPositive ? '+' : ''}${change.toFixed(2)}%
                </span>
              </div>
            </div>
          `;
        }).join('');
      } else {
        throw new Error('No data');
      }
    } catch (error) {
      // Show sample market data
      const sampleIndices = [
        { symbol: 'SPY', name: 'S&P 500', price: 590.80, changePercent: 1.12 },
        { symbol: 'QQQ', name: 'NASDAQ 100', price: 522.07, changePercent: 1.46 },
        { symbol: 'DIA', name: 'Dow Jones', price: 494.08, changePercent: 0.85 },
        { symbol: 'IWM', name: 'Russell 2000', price: 253.79, changePercent: 2.02 },
        { symbol: 'VTI', name: 'Total Market', price: 340.42, changePercent: 1.22 }
      ];
      container.innerHTML = sampleIndices.map(idx => `
        <div class="market-item" onclick="window.location.href='/market/quote/${idx.symbol}'">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <div class="d-flex align-items-center gap-2">
                <span class="fw-bold">${idx.name}</span>
                <span class="badge bg-secondary small">${idx.symbol}</span>
              </div>
              <p class="text-muted small mb-0 mt-1">$${idx.price.toLocaleString()}</p>
            </div>
            <span class="fw-bold ${idx.changePercent >= 0 ? 'text-success' : 'text-danger'}">
              ${idx.changePercent >= 0 ? '+' : ''}${idx.changePercent.toFixed(2)}%
            </span>
          </div>
        </div>
      `).join('');
    }
  }

  // Load Personalized News (portfolio stocks only)
  async function loadPersonalizedNews() {
    const container = document.getElementById('newsFeed');
    if (!container) return;

    try {
      // Try to fetch news for portfolio symbols
      let newsUrl = '/api/news/rss?limit=20';
      if (portfolioSymbols.length > 0) {
        newsUrl += '&symbols=' + portfolioSymbols.join(',');
      }

      const response = await fetch(newsUrl, { headers });
      if (!response.ok) throw new Error('Failed to fetch');

      const data = await response.json();
      allNews = (data.news || data || []).slice(0, 15);

      if (allNews.length > 0) {
        renderNewsItems();
        // Auto-rotate news every 3 seconds
        setInterval(rotateNews, 3000);
      } else {
        throw new Error('No news');
      }
    } catch (error) {
      container.innerHTML = `
        <div class="col-12 text-center py-5">
          <i class="fas fa-newspaper text-muted mb-3" style="font-size: 2rem;"></i>
          <p class="text-muted mb-0">Add stocks to your portfolio to see personalized news.</p>
        </div>
      `;
    }
  }

  function renderNewsItems() {
    const container = document.getElementById('newsFeed');
    if (!container || allNews.length === 0) return;

    // Show 3 news items at a time
    const displayNews = [];
    for (let i = 0; i < 3; i++) {
      displayNews.push(allNews[(newsIndex + i) % allNews.length]);
    }

    container.innerHTML = displayNews.map((article, idx) => `
      <div class="col-12 col-md-4 ${idx < 2 ? 'border-end' : ''} news-ticker-item" style="border-color: var(--border-color) !important;">
        <a href="${article.link || article.url || '#'}" target="_blank" class="d-block p-4 text-decoration-none h-100" style="transition: background 0.2s;" onmouseover="this.style.background='rgba(255,255,255,0.03)'" onmouseout="this.style.background='transparent'">
          <div class="d-flex justify-content-between align-items-start mb-2">
            <div class="d-flex align-items-center gap-2">
              ${article.symbol ? `<span class="badge bg-secondary small">${article.symbol}</span>` : ''}
              <span class="text-muted small">${article.source || 'News'}</span>
            </div>
            <i class="fas fa-external-link-alt text-muted small"></i>
          </div>
          <h6 class="mb-2 text-white" style="line-height: 1.4;">${article.title}</h6>
          <p class="text-muted small mb-0" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
            ${article.summary || article.description || ''}
          </p>
        </a>
      </div>
    `).join('');
  }

  function rotateNews() {
    if (allNews.length > 3) {
      newsIndex = (newsIndex + 1) % allNews.length;
      renderNewsItems();
    }
  }

  // Load Top Holdings
  async function loadHoldings() {
    const tbody = document.getElementById('holdingsTableBody');
    if (!tbody) return;

    try {
      const response = await fetch('/api/portfolios/holdings', { headers });
      if (!response.ok) throw new Error('Failed to fetch');

      const data = await response.json();
      const holdings = (data.holdings || data || [])
        .map(h => ({
          ...h,
          value: (h.shares || 0) * (h.currentPrice || h.price || 0),
          change: h.changePercent || h.change_percent || 0
        }))
        .sort((a, b) => b.value - a.value)
        .slice(0, 5);

      if (holdings.length > 0) {
        tbody.innerHTML = holdings.map(h => {
          const price = h.currentPrice || h.price || 0;
          const isPositive = h.change >= 0;
          return `
            <tr onclick="window.location.href='/market/quote/${h.symbol}'" style="cursor: pointer;">
              <td class="px-4 py-3">
                <div class="d-flex align-items-center gap-3">
                  <div class="rounded-circle d-flex align-items-center justify-content-center text-white fw-bold" style="width: 36px; height: 36px; background: linear-gradient(135deg, #6366f1, #8b5cf6);">
                    ${(h.symbol || '?').substring(0, 2)}
                  </div>
                  <div>
                    <p class="fw-bold mb-0">${h.symbol}</p>
                    <p class="text-muted small mb-0" style="max-width: 120px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">${h.name || h.symbol}</p>
                  </div>
                </div>
              </td>
              <td class="px-4 py-3 text-end">${formatCurrency(price)}</td>
              <td class="px-4 py-3 text-end d-none d-sm-table-cell">${(h.shares || 0).toFixed(2)}</td>
              <td class="px-4 py-3 text-end fw-medium">${formatCurrency(h.value)}</td>
              <td class="px-4 py-3 text-end">
                <span class="stat-badge ${isPositive ? 'positive' : 'negative'}">
                  ${formatPercent(h.change)}
                </span>
              </td>
            </tr>
          `;
        }).join('');
      } else {
        throw new Error('No holdings');
      }
    } catch (error) {
      tbody.innerHTML = `
        <tr>
          <td colspan="5" class="text-center py-5">
            <i class="fas fa-folder-open text-muted mb-3" style="font-size: 2rem;"></i>
            <p class="text-muted mb-2">No holdings yet.</p>
            <a href="/add-holding" class="btn btn-sm btn-primary">Add Your First Position</a>
          </td>
        </tr>
      `;
    }
  }

  // Load AI Insights
  async function loadAIInsights() {
    const container = document.getElementById('aiInsights');
    if (!container) return;

    try {
      const response = await fetch('/api/ai/portfolio-insights', { headers });
      let insights = [];

      if (response.ok) {
        const data = await response.json();
        insights = data.insights || [];
      }

      // Generate insights based on portfolio data
      const portfolioValue = parseFloat('<%= safeTotals.value || 0 %>');
      const holdingsCount = parseInt('<%= safeTotals.holdingsCount || 0 %>');
      const sharpe = parseFloat('<%= safeRisk.sharpe || 0 %>');
      const dayChange = parseFloat('<%= safeTotals.dayChange || 0 %>');

      const generatedInsights = [];

      // Portfolio tip
      if (holdingsCount > 0) {
        generatedInsights.push({
          type: 'PORTFOLIO TIP',
          typeClass: 'primary',
          title: `Your portfolio has ${holdingsCount} holdings.`,
          description: holdingsCount < 10
            ? 'Consider diversifying across more sectors for better risk management.'
            : 'Good diversification! Keep monitoring sector allocation.',
          time: 'Just now'
        });
      } else {
        generatedInsights.push({
          type: 'GET STARTED',
          typeClass: 'warning',
          title: 'Start building your portfolio!',
          description: 'Add your first position to track performance and get personalized insights.',
          time: 'Just now'
        });
      }

      // Performance insight
      if (sharpe > 1.5) {
        generatedInsights.push({
          type: 'PERFORMANCE',
          typeClass: 'success',
          title: 'Strong risk-adjusted returns!',
          description: `Your Sharpe ratio of ${sharpe.toFixed(2)} indicates excellent performance.`,
          time: 'Today'
        });
      } else if (dayChange > 0) {
        generatedInsights.push({
          type: 'TODAY',
          typeClass: 'success',
          title: 'Positive day for your portfolio!',
          description: `Your portfolio is up ${formatCurrency(dayChange)} today.`,
          time: 'Today'
        });
      } else if (dayChange < 0) {
        generatedInsights.push({
          type: 'TODAY',
          typeClass: 'danger',
          title: 'Market headwinds today',
          description: 'Consider reviewing your positions during market volatility.',
          time: 'Today'
        });
      }

      container.innerHTML = generatedInsights.map(insight => `
        <div class="insight-card mb-3">
          <div class="d-flex justify-content-between align-items-start mb-2">
            <span class="badge bg-${insight.typeClass} small">${insight.type}</span>
            <span class="text-muted" style="font-size: 10px;">${insight.time}</span>
          </div>
          <p class="fw-medium mb-1">${insight.title}</p>
          <p class="text-muted small mb-0">${insight.description}</p>
        </div>
      `).join('');

    } catch (error) {
      container.innerHTML = `
        <div class="insight-card">
          <div class="d-flex justify-content-between align-items-start mb-2">
            <span class="badge bg-primary small">PORTFOLIO TIP</span>
            <span class="text-muted" style="font-size: 10px;">Just now</span>
          </div>
          <p class="fw-medium mb-1">Add holdings to get AI insights</p>
          <p class="text-muted small mb-0">Our AI will analyze your portfolio and provide personalized recommendations.</p>
        </div>
      `;
    }
  }

  // Timeframe button handlers
  document.querySelectorAll('.timeframe-btn').forEach(btn => {
    btn.addEventListener('click', function() {
      document.querySelectorAll('.timeframe-btn').forEach(b => b.classList.remove('active'));
      this.classList.add('active');
      currentPeriod = this.dataset.period;
      loadPortfolioChart(currentPeriod);
    });
  });

  // Initialize all sections
  function init() {
    loadPortfolioChart('1M');
    loadMarketData();
    loadPersonalizedNews();
    loadHoldings();
    loadAIInsights();

    // Refresh market data every 30 seconds
    setInterval(loadMarketData, 30000);
  }

  // Start when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
})();
</script>

