# Database
DATABASE_URL=file:./data/wealthpilot.db

# JWT - Generate: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Server
PORT=4000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Market Data APIs (get keys from respective providers)
ALPHA_VANTAGE_API_KEY=your_key_here
FMP_API_KEY=your_key_here
POLYGON_API_KEY=your_key_here
NASDAQ_API_KEY=your_key_here
STOCKDATA_API_KEY=your_key_here
FINNHUB_API_KEY=your_key_here
IEX_CLOUD_API_KEY=your_key_here

# AI APIs
OPENAI_API_KEY=your_key_here

# News API
NEWS_API_KEY=your_key_here

# Redis (optional)
REDIS_URL=

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache TTL (seconds)
CACHE_TTL_DEFAULT=300
CACHE_TTL_MARKET_DATA=60

# Feature Flags
ENABLE_REAL_TIME_UPDATES=true
ENABLE_AI_ANALYSIS=true
